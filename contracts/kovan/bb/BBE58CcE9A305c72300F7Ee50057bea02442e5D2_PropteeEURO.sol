pragma solidity ^0.8.0;

import "./ERC20.sol";
import "./Pausable.sol";
import "./Ownable.sol";
import "./AccessControlKYC.sol";

contract PropteeEURO is ERC20, Pausable, Ownable, AccessControlKYC {
    string public constant override name = "Proptee EURO";
    string public constant override symbol = "EURp";
    uint8 public constant override decimals = 2;

    function pause() public onlyOwner {
        _pause();
    }

    function unpause() public onlyOwner {
        _unpause();
    }

    function mint(address to, uint256 amount) public onlyOwner {
        _mint(to, amount);
    }

    function burn(address from, uint256 amount) public onlyOwner {
        _burn(from, amount);
    }

    function grantKYC(address[] memory accounts) public onlyOwner {
        _grantKYC(accounts);
    }

    function revokeKYC(address[] memory accounts) public onlyOwner {
        _revokeKYC(accounts);
    }

    function transfer(address recipient, uint256 amount)
        public
        override
        whenNotPaused
        onlyKYC
        returns (bool)
    {
        _transfer(msg.sender, recipient, amount);
        return true;
    }

    function transferFrom(
        address sender,
        address recipient,
        uint256 amount
    ) public override whenNotPaused returns (bool) {
        return _transferFrom(sender, recipient, amount);
    }

    function increaseAllowance(address spender, uint256 addedValue)
        public
        whenNotPaused
        returns (bool)
    {
        return _increaseAllowance(spender, addedValue);
    }

    function decreaseAllowance(address spender, uint256 subtractedValue)
        public
        whenNotPaused
        returns (bool)
    {
        return _decreaseAllowance(spender, subtractedValue);
    }

    function approve(address spender, uint256 amount)
        public
        override
        whenNotPaused
        returns (bool)
    {
        _approve(msg.sender, spender, amount);
        return true;
    }
}

