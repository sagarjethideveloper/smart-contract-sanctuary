pragma solidity ^0.8.4;

contract Deployer {
    function getAddress() public view returns (address) {
        bytes memory _byteCode = bytes("");
        uint _salt = 100;
        bytes32 hash = keccak256(
            abi.encodePacked(
                bytes1(0xff),
                address(this),
                _salt,
                keccak256(_byteCode)
            )
        );

        // NOTE: cast last 20 bytes of hash to address
        return address(uint160(uint256(hash)));
    }
    /**
     * @dev during deployment creates a new contract of Example.sol
     *
     * the create2 function takes in 4 params.
     * 1 - the number of ETH to be send.
     */
    function deploy(uint _salt) public returns(address _addr) {
        address addr;
        bytes memory _byteCode = bytes("");

        assembly {
        addr := create2(0, add(_byteCode, 0x20), mload(_byteCode), _salt)
        }

        return addr;
    }

}

