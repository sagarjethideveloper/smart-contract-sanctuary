pragma solidity ^0.8.0;

import { SeasonRewards } from './SeasonRewards.sol';
import { MerkleProof } from '@openzeppelin/contracts/utils/cryptography/MerkleProof.sol';

abstract contract SeasonScores is SeasonRewards {
    // ipfs hash => merkle root
    mapping(bytes32 => bytes32) public merkleRoots;

    // todo: write a better ds
    // token id - task id claimed
    mapping(uint256 => mapping(uint16 => bool)) public claimed;

    event Description(bytes32 ipfsHash);
    event Submission(bytes32 ipfsHash);
    event Prove(uint256 tokenId, uint16 taskId);
    event Batch(bytes32 merkleRoot, bytes32 ipfsHash);

    function updateDescription(bytes32 ipfsHash) external onlyOwner {
        emit Description(ipfsHash);
    }

    function submit(bytes32 ipfsHash) external {
        emit Submission(ipfsHash);
    }

    function addMerkleRoot(bytes32 _ipfsHash, bytes32 _merkleRoot) public onlyOwner {
        merkleRoots[_ipfsHash] = _merkleRoot;
        emit Batch(_merkleRoot, _ipfsHash);
    }

    struct ProveArgs {
        address season;
        uint16 taskId;
        bool isIndividual;
        uint16 score;
        uint48 tokenId;
    }

    function prove(
        ProveArgs memory args,
        bytes32 ipfs,
        bytes32[] memory proof,
        address[] memory claimPools,
        address beneficiary
    ) public {
        if (claimPools.length > 0) {
            _requireApprovedOrOwner(args.tokenId);
        }

        bytes32 root = merkleRoots[ipfs];
        require(root != bytes32(0), 'ZR');
        require(!claimed[args.tokenId][args.taskId], 'CM');

        require(
            MerkleProof.verify(
                proof,
                root,
                keccak256(abi.encodePacked(args.season, args.taskId, args.isIndividual, args.score, args.tokenId))
            ),
            'MP'
        );

        claimed[args.tokenId][args.taskId] = true;

        if (args.isIndividual) {
            nfts[args.tokenId].individualScore += args.score;
        } else {
            categoryScores[nfts[args.tokenId].category] += args.score;
        }

        for (uint256 i; i < claimPools.length; i++) {
            _claim(args.tokenId, claimPools[i], beneficiary);
        }
    }

    // TODO remove
    function reportCategoryScore(uint8 categoryId, uint16 score) public {
        categoryScores[categoryId] += score;
    }

    // TODO remove
    function reportIndividualScore(uint256 tokenId, uint16 score) public {
        nfts[tokenId].individualScore += score;
    }
}

