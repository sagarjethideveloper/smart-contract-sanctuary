import { Ownable } from './Ownable.sol';
import { Math } from '@openzeppelin/contracts/utils/math/Math.sol';
import { CastingMath } from './libraries/CastingMath.sol';
import { SeasonState } from './SeasonState.sol';
import { SeasonNFT } from './SeasonNFT.sol';

// TODO bring ERC721.sol in this project to allow initializing with name and symbol
abstract contract SeasonRewards is SeasonState, SeasonNFT, Ownable {
    using CastingMath for uint256;

    uint256 private constant PRECISION_FACTOR = 10**12; // type(uint40).max;

    event PoolParamsUpdated(address poolToken, uint16 weight);
    event Deposit(uint256 indexed tokenId, address poolToken, uint256 amount);
    event Claim(uint256 indexed tokenId, uint256 amount);
    event Withdraw(uint256 indexed tokenId, address poolToken, uint256 amount);

    function updatePoolParams(
        address poolToken,
        uint16 weight,
        uint8 compressionFactor
    ) external onlyOwner {
        _updatePoolParams(poolToken, weight, compressionFactor);
    }

    function _updatePoolParams(
        address poolToken,
        uint16 weight,
        uint8 compressionFactor
    ) internal {
        Pool memory pool = pools[poolToken];
        totalPoolWeight = totalPoolWeight + weight - pool.weight;
        pool.weight = weight;
        if (pool.isInitialized) {
            require(pool.compressionFactor == compressionFactor, 'Season:CF');
        } else {
            pool.isInitialized = true;
        }
        pool.compressionFactor = compressionFactor;
        pools[poolToken] = pool;
        emit PoolParamsUpdated(poolToken, weight);
    }

    function mintAndDeposit(
        address poolToken,
        uint8 playerCategory,
        uint256 amount
    ) external {
        Pool memory pool = _updatePool(poolToken);

        amount -= amount % (10**pool.compressionFactor); // do not collect dust
        _collect(poolToken, amount);

        uint256 tokenId = ++lastTokenId;
        _mint(msg.sender, tokenId);

        nfts[tokenId] = NFT({
            category: playerCategory,
            individualScore: 0,
            existingCategoryScore: categoryScores[playerCategory]
        });
        nftAssets[tokenId][poolToken] = NFTAsset({
            depositsCompressed: (amount / (10**pool.compressionFactor)).toU48(),
            accRewardPerPoolTokenLast: pool.accRewardPerPoolToken,
            farmed: 0,
            claimed: 0
        });

        pool.totalDepositsCompressed += (amount / (10**pool.compressionFactor)).toU96();
        pools[poolToken] = pool;

        emit Deposit(tokenId, poolToken, amount);
    }

    function depositFor(
        uint256 tokenId,
        address poolToken,
        uint256 amount
    ) public {
        require(_exists(tokenId), 'Season:D');

        (Pool memory pool, NFTAsset memory nftAsset) = _updateNFTAsset(tokenId, poolToken);
        _collect(poolToken, amount);

        pool.totalDepositsCompressed += (amount / (10**pool.compressionFactor)).toU96();
        pools[poolToken] = pool;

        nftAsset.depositsCompressed += (amount / (10**pool.compressionFactor)).toU48();
        nftAssets[tokenId][poolToken] = nftAsset;

        emit Deposit(tokenId, poolToken, amount);
    }

    function claim(
        uint256 tokenId,
        address poolToken,
        address beneficiary
    ) public onlyApprovedOrOwner(tokenId) {
        _claim(tokenId, poolToken, beneficiary);
    }

    function withdraw(
        uint256 tokenId,
        address poolToken,
        address beneficiary
    ) public onlyApprovedOrOwner(tokenId) {
        (Pool memory pool, NFTAsset memory nftAsset, uint48 unclaimedRewards) = _claim(tokenId, poolToken, beneficiary);
        uint256 amount = nftAsset.depositsCompressed * (10**pool.compressionFactor);
        pool.totalDepositsCompressed -= nftAsset.depositsCompressed;
        nftAsset.depositsCompressed = 0;
        pools[poolToken] = pool;
        nftAssets[tokenId][poolToken] = nftAsset;
        emit Withdraw(tokenId, poolToken, amount);
        IERC20(poolToken).transfer(beneficiary, amount);

        if (unclaimedRewards > 0) {
            ERC20Burnable(rewardToken).burn(unclaimedRewards);
        }
    }

    function close(
        uint256 tokenId,
        address[] calldata poolToken,
        address beneficiary
    ) external {
        for (uint256 i; i < poolToken.length; i++) {
            withdraw(tokenId, poolToken[i], beneficiary);
        }
    }

    function _collect(address token, uint256 amount) private {
        require(amount > 0, 'Season:T1');
        IERC20(token).transferFrom(msg.sender, address(this), amount);
    }

    function _claim(
        uint256 tokenId,
        address poolToken,
        address beneficiary
    )
        internal
        returns (
            Pool memory pool,
            NFTAsset memory nftAsset,
            uint48 unclaimedRewards
        )
    {
        require(beneficiary != address(0), 'Season:BN');
        NFT memory nft = nfts[tokenId];
        (pool, nftAsset) = _updateNFTAsset(tokenId, poolToken);
        uint16 score = categoryScores[nft.category] + nft.individualScore - nft.existingCategoryScore;
        // require(score > 0, 'Season:C1');
        uint48 amount = ((nftAsset.farmed * Math.min(score, 10000)) / 10000).toU48() - nftAsset.claimed;
        if (amount > 0) {
            nftAsset.claimed += amount;
            emit Claim(tokenId, amount);
            IERC20(rewardToken).transfer(beneficiary, amount);
            nftAssets[tokenId][poolToken] = nftAsset;
        }
        unclaimedRewards = nftAsset.farmed - nftAsset.claimed;
    }

    function _updatePool(address poolAddr) private returns (Pool memory pool) {
        pool = pools[poolAddr]; // SLOAD

        uint256 fromBlock = Math.max(startBlock - 1, pool.lastUpdateBlock);
        uint256 toBlock = Math.min(endBlock, uint32(block.number));
        pool.lastUpdateBlock = uint32(toBlock);
        uint256 totalPoolTokenDepositsCompressed =
            IERC20(poolAddr).balanceOf(address(this)) / (10**pool.compressionFactor);
        if (totalPoolTokenDepositsCompressed > 0) {
            pool.accRewardPerPoolToken += ((((toBlock - fromBlock) * rewardPerBlock * pool.weight * PRECISION_FACTOR) /
                totalPoolWeight) / totalPoolTokenDepositsCompressed)
                .toU96();
        } else {
            uint256 unrewardableTokens = ((toBlock - fromBlock) * rewardPerBlock * pool.weight) / totalPoolWeight;
            ERC20Burnable(rewardToken).burn(unrewardableTokens);
        }

        pools[poolAddr] = pool; // SSTORE
    }

    function _updateNFTAsset(uint256 tokenId, address poolAddr)
        private
        returns (Pool memory pool, NFTAsset memory nftAsset)
    {
        nftAsset = nftAssets[tokenId][poolAddr]; // SLOAD
        pool = _updatePool(poolAddr);
        {
            nftAsset.farmed += (((pool.accRewardPerPoolToken - nftAsset.accRewardPerPoolTokenLast) *
                nftAsset.depositsCompressed) / PRECISION_FACTOR)
                .toU48();
            nftAsset.accRewardPerPoolTokenLast = pool.accRewardPerPoolToken;
        }
        nftAssets[tokenId][poolAddr] = nftAsset; // SSTORE
    }
}

