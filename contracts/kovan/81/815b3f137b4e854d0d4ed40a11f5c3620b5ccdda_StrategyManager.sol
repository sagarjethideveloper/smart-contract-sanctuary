import "./IToken.sol";

interface IStrategyManager {
    /// Strategy params that cannot be modified
    struct StrategyImmutableParams {
        /// Pool address
        address poolAddress;
        /// Token 0
        address token0;
        /// Token 1
        address token1;
        /// UniV3 fee size
        uint24 fee;
        /// LpToken contract that represents the stake in the strategy
        address lpToken;
    }

    /// Protocol params that could be updated externally
    struct ProtocolParams {
        /// Delay applied to update of protocol and strategy params
        uint32 paramsDelay;
        /// Protocol fee recipient
        address feeRecipient;
    }

    /// Strategy params that could be updated by admin
    struct StrategyParams {
        /// fee percentage taken on exit from Liquidity Vault (denominated using FEE_DENOMINATOR)
        uint24 exitFee;
        /// fee percentage taken UniV3 fees collected (denominated using FEE_DENOMINATOR)
        uint24 performanceFee;
        /// Max token0 for a contract
        uint256 maxToken0;
        /// Max token1 for a contract
        uint256 maxToken1;
        /// Max token0 for a contract per wallet
        uint256 maxToken0PerWallet;
        /// Max token1 for a contract per wallet
        uint256 maxToken1PerWallet;
        /// allowed to do manage position
        address strategist;
    }

    /// Pending update of the strategy params
    struct PendingStrategyParams {
        /// Params update
        StrategyParams params;
        /// When params can be updated
        uint256 unlockDate;
    }

    /// @notice Returns protocol params
    function protocolParams() external view returns (ProtocolParams memory);

    /// @notice Returns total strategies in the contract
    function strategyCount() external view returns (uint32);

    /// @notice Returns strategy params
    /// @param strategyId id of the strategy
    function strategyParams(uint32 strategyId) external view returns (StrategyParams memory);

    /// @notice Returns strategy params
    /// @param strategyId id of the strategy
    function strategyImmutableParams(uint32 strategyId) external view returns (StrategyImmutableParams memory);

    /// @notice Set strategy params for update
    /// @param strategyId id of the strategy
    /// @param params New strategy parameters
    function applyStrategyParams(uint32 strategyId, StrategyParams calldata params) external;

    /// @notice Do pool params update using pending strategy params
    /// @param strategyId id of the strategy
    function commitStrategyParams(uint32 strategyId) external;

    /// @notice Adds a new strategy to a strategy list
    /// @dev After the pool is added deposits are still disabled.
    /// To enable use startPool.
    /// @param poolAddress address of the UniV3 pool
    /// @param params strategy params
    function addStrategy(address poolAddress, StrategyParams calldata params) external;

    /// @notice Set protocol params for update
    /// @param params New protocol parameters
    function applyProtocolParams(ProtocolParams calldata params) external;

    /// @notice Do protocol params update using pending protocol params
    function commitProtocolParams() external;

    /// @notice Sets new lp token owner
    /// @param _lpTokenOwner new lpTokenOwner
    function setLpTokenOwner(address _lpTokenOwner) external;

    /// @notice Emitted when pool params are applied (i.e. will become pending)
    /// @param owner the operation origin address
    /// @param strategyId id of the strategy
    /// @param params applied params
    /// @param unlockDate date when params can be committed
    event StrategyParamsApplied(
        address indexed owner,
        uint32 indexed strategyId,
        StrategyParams params,
        uint256 unlockDate
    );

    /// @notice Emitted when pool params are commited (i.e. become permanent)
    /// @param owner the operation origin address
    /// @param strategyId id of the strategy
    /// @param params committed params
    event StrategyParamsCommitted(address indexed owner, uint32 indexed strategyId, StrategyParams params);

    /// @notice Emitted when new protocol params are applied (i.e. will become pending)
    /// @param owner the operation origin address
    /// @param params new protocol params
    /// @param unlockDate date when params can be committed
    event ProtocolParamsApplied(address indexed owner, ProtocolParams params, uint256 unlockDate);
    /// @notice Emitted when new protocol params are commited (i.e. will become permanent)
    /// @param owner the operation origin address
    /// @param params new params
    event ProtocolParamsCommitted(address indexed owner, ProtocolParams params);

    /// @notice Emitted when pool is added
    /// @param owner the operation origin address
    /// @param strategyId id of the strategy
    /// @param immutableParams pool params
    event StrategyAdded(address indexed owner, uint32 indexed strategyId, StrategyImmutableParams immutableParams);
}

