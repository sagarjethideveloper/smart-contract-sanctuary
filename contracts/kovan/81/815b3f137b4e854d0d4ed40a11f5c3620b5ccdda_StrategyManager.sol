import "@uniswap/v3-core/contracts/interfaces/IUniswapV3Pool.sol";

import "./interfaces/IToken.sol";
import "./interfaces/IStrategyManager.sol";
import "./VaultAccessControl.sol";
import "./LpToken.sol";

contract StrategyManager is IStrategyManager, VaultAccessControl {
    ProtocolParams private _protocolParams;
    ProtocolParams public pendingProtocolParams;
    uint256 public pendingProtocolParamsUnlock;
    address public lpTokenOwner;

    uint32 public override strategyCount;
    mapping(uint32 => StrategyImmutableParams) private _strategyImmutableParams;
    mapping(uint32 => StrategyParams) private _strategyParams;
    mapping(uint32 => PendingStrategyParams) public pendingStrategyParams;

    constructor(address _feeRecipient, uint32 _paramsDelay) {
        _protocolParams = ProtocolParams({paramsDelay: _paramsDelay, feeRecipient: _feeRecipient});
    }

    /// -------------------  PUBLIC, VIEW  -------------------

    /// @notice Returns protocol params
    function protocolParams() external view override returns (ProtocolParams memory) {
        return _protocolParams;
    }

    /// @notice Returns strategy params
    /// @param strategyId id of the strategy
    function strategyParams(uint32 strategyId) external view override returns (StrategyParams memory) {
        return _strategyParams[strategyId];
    }

    /// @notice Returns strategy params
    /// @param strategyId id of the strategy
    function strategyImmutableParams(uint32 strategyId)
        external
        view
        override
        returns (StrategyImmutableParams memory)
    {
        return _strategyImmutableParams[strategyId];
    }

    /// -------------------  EXTERNAL, MUTATING, ADMIN  -------------------

    function applyStrategyParams(uint32 strategyId, StrategyParams calldata params)
        external
        override
        onlyRole(ADMIN_ROLE)
    {
        require(_strategyExists(strategyId), "SE");
        pendingStrategyParams[strategyId] = PendingStrategyParams({
            params: params,
            unlockDate: block.timestamp + _protocolParams.paramsDelay
        });
        emit StrategyParamsApplied({
            owner: msg.sender,
            strategyId: strategyId,
            params: params,
            unlockDate: pendingStrategyParams[strategyId].unlockDate
        });
    }

    function commitStrategyParams(uint32 strategyId) external override onlyRole(ADMIN_ROLE) {
        require(
            (pendingStrategyParams[strategyId].unlockDate != 0) &&
                (pendingStrategyParams[strategyId].unlockDate < block.timestamp),
            "L"
        );
        _strategyParams[strategyId] = pendingStrategyParams[strategyId].params;
        delete pendingStrategyParams[strategyId];
        emit StrategyParamsCommitted({owner: msg.sender, strategyId: strategyId, params: _strategyParams[strategyId]});
    }

    function addStrategy(address poolAddress, StrategyParams calldata params) external override onlyRole(ADMIN_ROLE) {
        require(lpTokenOwner != address(0), "LPOWN");
        LpToken lpToken = new LpToken("MellowLpToken", "MLP");
        lpToken.transferOwnership(lpTokenOwner);
        IUniswapV3Pool pool = IUniswapV3Pool(poolAddress);
        StrategyImmutableParams memory immutableParams =
            StrategyImmutableParams({
                token0: pool.token0(),
                token1: pool.token1(),
                fee: pool.fee(),
                poolAddress: poolAddress,
                lpToken: address(lpToken)
            });
        _strategyImmutableParams[strategyCount] = immutableParams;
        _strategyParams[strategyCount] = params;

        strategyCount += 1;

        emit StrategyAdded({owner: msg.sender, strategyId: strategyCount - 1, immutableParams: immutableParams});
        emit StrategyParamsCommitted({owner: msg.sender, strategyId: strategyCount - 1, params: params});
    }

    function setLpTokenOwner(address _lpTokenOwner) external override onlyRole(ADMIN_ROLE) {
        lpTokenOwner = _lpTokenOwner;
    }

    /// -------------------  EXTERNAL, MUTATING, OWNER  -------------------

    function applyProtocolParams(ProtocolParams calldata params) external override onlyRole(OWNER_ROLE) {
        require(params.paramsDelay > 0, "PD");
        require(params.feeRecipient != address(0), "FR");
        pendingProtocolParamsUnlock = block.timestamp + _protocolParams.paramsDelay;
        pendingProtocolParams = params;
        emit ProtocolParamsApplied(msg.sender, params, pendingProtocolParamsUnlock);
    }

    function commitProtocolParams() external override onlyRole(OWNER_ROLE) {
        require(pendingProtocolParamsUnlock < block.timestamp, "L");
        _protocolParams = pendingProtocolParams;
        delete pendingProtocolParams;
        emit ProtocolParamsCommitted(msg.sender, _protocolParams);
    }

    /// -------------------  INTERNAL, VIEW  -------------------

    function _strategyExists(uint32 strategyId) internal view returns (bool) {
        return strategyId < strategyCount;
    }
}

