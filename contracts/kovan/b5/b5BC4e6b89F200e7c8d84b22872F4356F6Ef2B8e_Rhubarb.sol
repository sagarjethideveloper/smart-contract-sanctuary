import "@uniswap/v3-core/contracts/interfaces/callback/IUniswapV3SwapCallback.sol";
import "@uniswap/v3-periphery/contracts/interfaces/ISwapRouter.sol";

contract Rhubarb is IUniswapV3SwapCallback {
    
    ISwapRouter public swapRouter;

    event AmountReceived(uint256 amountOut);
    event UniswapCallback(int256 amount0Delta, int256 amount1Delta);

    constructor() {
        address _swapRouter = 0xE592427A0AEce92De3Edee1F18E0157C05861564;
        swapRouter = ISwapRouter(_swapRouter);
    }

    receive() external payable {}

    function custard() external {
        uint256 amountOut =
            swapRouter.exactInputSingle(
                ISwapRouter.ExactInputSingleParams({
                    tokenIn: 0x13512979ADE267AB5100878E2e0f485B568328a4,
                    tokenOut: 0xe22da380ee6B445bb8273C81944ADEB6E8450422,
                    fee: 500,
                    recipient: address(this),
                    deadline: block.timestamp + 200,
                    amountIn: 1000000,
                    amountOutMinimum: 1,
                    sqrtPriceLimitX96: 0
                })
            );

        emit AmountReceived(amountOut);
    }

    function uniswapV3SwapCallback(
        int256 amount0Delta,
        int256 amount1Delta,
        bytes calldata data
    ) external override {
        emit UniswapCallback(amount0Delta, amount1Delta);
    }
}

