import "@openzeppelin/contracts/math/Math.sol";
import "@openzeppelin/contracts/math/SafeMath.sol";
import "../token/erc20permit-upgradeable/ERC20PermitUpgradeable.sol";
import "./interfaces/IPooledStaking.sol";
