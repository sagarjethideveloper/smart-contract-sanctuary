contract dNXMToken is IdNXMToken, ERC20PermitUpgradeable {
    using Math for uint256;
    using SafeMath for uint256;

    uint256 constant MAX_INT = type(uint256).max;
    uint256 constant PRECISION = 10**25;
    uint256 constant PERCENTAGE_100 = 100 * PRECISION;

    address public contractAddress;

    IPooledStaking private _pooledStaking;
    INXMToken private _nxmToken;
    IWNXMToken private _wNXMToken;
    mapping(address => WithdrawalInfo) private _withdrawalsInfo;
    uint256 private _fee;
    uint256 private _withdrawnCumulativeRewards;

    address private _injector;

    modifier onlyInjector() {
        require(_injector == msg.sender, "dNXMToken: Not an injector");
        _;
    }

    function __dNXMToken_init(
        string calldata _description,
        string calldata _contractSymbol,
        address _contractAddress)
    external override initializer {
        string memory fullSymbol = string(abi.encodePacked("dNXM", _contractSymbol));
        __ERC20Permit_init(fullSymbol);
        __ERC20_init(_description, fullSymbol);
        contractAddress = _contractAddress;
        _injector = msg.sender;
    }

    function setDependencies(address _nxMaster, address _wNXMTokenAddress, uint _rewardsFee) external override onlyInjector {
        _pooledStaking = IPooledStaking(INXMaster(_nxMaster).getLatestAddress("PS"));
        _nxmToken = INXMToken(INXMaster(_nxMaster).tokenAddress());
        _nxmToken.approve(
            INXMaster(_nxMaster).getLatestAddress("TC"),
            MAX_INT
        );
        _wNXMToken = IWNXMToken(_wNXMTokenAddress);
        _fee = _rewardsFee * PRECISION;
    }

    /**
    * @dev wNXM must be approved before that
    **/
    function stake(uint _amount) public override{
        //TODO validate min amount
        //TODO check if KYCed
        _wNXMToken.transferFrom(_msgSender(), address(this), _amount);
        _wNXMToken.unwrap(_amount);
        address[] memory _contracts = new address[](1);
        _contracts[0] = contractAddress;
        uint[] memory _stake = new uint[](1);
        _stake[0] = _currentlyAtStake().add(_amount);
        uint _dNXMAmount = convertNXMToDNXM(_amount);
        _mint(_msgSender(), _dNXMAmount);
        _pooledStaking.depositAndStake(_amount, _contracts, _stake);
        emit Stake(_msgSender(), _amount, _dNXMAmount);
    }

    /**
    * @dev if there is a pending request for this user, the new one will overwrite it
    **/
    function callWithdrawal(uint _amountDNXM) public override {
        require(
            maxDNXMCallWithdrawal(_msgSender()) <= _amountDNXM,
            "dNXMToken: not enough dNXM to withdraw"
        );
        require(_amountDNXM > 0, "dNXMToken: can't withdraw 0 dNXM");
        uint _amountNXM = convertDNXMToNXM(_amountDNXM);
        require(
            _amountNXM >= minNXMAmount(),
            "dNXMToken: amount cannot be less than minimum withdrawal amount "
        );
        address[] memory _contracts = new address[](1);
        _contracts[0] = contractAddress;
        uint[] memory _amount = new uint[](1);
        _amount[0] = _amountNXM;
        uint _requestId;
        if (_pooledStaking.hasPendingUnstakeRequests()) {
            _requestId = _pooledStaking.lastUnstakeRequestId();
        }
        _pooledStaking.requestUnstake(_contracts, _amount, _requestId);

        //record (or overwrite, cumulative) the requested amount, per user
        _withdrawalsInfo[_msgSender()] = WithdrawalInfo(
            block.timestamp.add(_pooledStaking.UNSTAKE_LOCK_TIME()),
            _amountDNXM.add(_withdrawalsInfo[_msgSender()].amountDNXMRequested)
        );
        emit CallWithdraw(_msgSender(), _amountDNXM);
    }

    function withdraw() public override{
        address _sender = _msgSender();
        (uint256 _amountDNXMRequested, , uint256 _coolDownTimeEnd) = getWithdrawalInfo(_sender);
        require(_coolDownTimeEnd != 0, "dNXMToken: need to callWithdrawal first");
        require(_coolDownTimeEnd <= block.timestamp, "dNXMToken: too early to call withdraw yet");

        //rewards
        uint256 _outstandingRewards = _pooledStaking.stakerReward(address(this));
        if (_outstandingRewards > 0) {
            _pooledStaking.withdrawReward(address(this));
            _outstandingRewards = _outstandingRewards.sub(_outstandingRewards.mul(_fee).div(PERCENTAGE_100));
            _withdrawnCumulativeRewards = _withdrawnCumulativeRewards.add(_outstandingRewards);
        }
        uint256 _ownRewards = _withdrawnCumulativeRewards.mul(balanceOf(_sender).div(totalSupply()));
        _withdrawnCumulativeRewards = _withdrawnCumulativeRewards.sub(_withdrawnCumulativeRewards);

        //deposits
        uint _amountNXM = convertDNXMToNXM(_amountDNXMRequested);
        _pooledStaking.withdraw(_amountNXM);
        uint _totalAmount = _amountNXM.add(_ownRewards);
        _wNXMToken.wrap(_totalAmount);
        _wNXMToken.transfer(_sender, _totalAmount);
        _burn(_sender, _totalAmount);

        delete _withdrawalsInfo[_sender];
        emit Withdraw(_sender, _totalAmount);
    }

    function getWithdrawalInfo(address _userAddr) public view override
    returns (
        uint256 _amountDNXMRequested,
        uint256 _amountNXMSRequested,
        uint256 _unlockPeriod
    )
    {
        _unlockPeriod = _withdrawalsInfo[_userAddr].coolDownTimeEnd;
        _amountDNXMRequested = _withdrawalsInfo[_userAddr].amountDNXMRequested;
        _amountNXMSRequested = convertDNXMToNXM(_amountDNXMRequested);
    }

    function maxDNXMCallWithdrawal(address _address) public view override returns (uint256){
        return balanceOf(_address).sub(_withdrawalsInfo[_address].amountDNXMRequested);
    }

    function minNXMAmount() public view override returns (uint256) {
        return _pooledStaking.MIN_STAKE();
    }

    function minDNXMAmount() public view override returns (uint256) {
        return convertNXMToDNXM(_pooledStaking.MIN_STAKE());
    }

    function convertDNXMToNXM(uint256 _amount) public view override returns (uint256) {
        return _amount.mul(_getNXMtoDNXMRatio()).div(PERCENTAGE_100);
    }

    function convertNXMToDNXM(uint256 _amount) public view override returns (uint256) {
        return _amount.mul(PERCENTAGE_100).div(_getNXMtoDNXMRatio());
    }

    function _getNXMtoDNXMRatio() internal view returns (uint) {
        uint _currentTotalSupply = totalSupply();

        if (_currentTotalSupply == 0) {
            return PERCENTAGE_100;
        }
        //@dev 'this' side is: dNXM total supply
        //@dev 'that' side is: deposit + collected rewards there + already withdraws rewards here
        uint _stakesAndRewards = _currentlyDeposited().add(_pooledStaking.stakerReward(address(this))).add(_withdrawnCumulativeRewards);
        return _stakesAndRewards.mul(PERCENTAGE_100).div(_currentTotalSupply);
    }


    /**
    * @dev NXM currently earning rewards. Decreases after 'callWithdrawal' or after burning
    **/
    function _currentlyAtStake() internal view returns (uint) {
        return _pooledStaking.stakerContractStake(address(this), contractAddress);
    }

    /**
    * @dev NXM currently deposited, in total
    **/
    function _currentlyDeposited() internal view returns (uint) {
        return _pooledStaking.stakerDeposit(address(this));
    }

    function canStake() public view override returns (bool) {
        return !_pooledStaking.hasPendingActions();
    }
}

