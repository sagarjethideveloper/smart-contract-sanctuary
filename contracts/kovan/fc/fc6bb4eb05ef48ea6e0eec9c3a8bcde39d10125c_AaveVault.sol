contract AaveVault is
    Initializable,
    PausableUpgradeable,
    AccessControlUpgradeable
{
    using SafeMathUpgradeable for uint256;

    address private admin;
    address constant ETHER = address(0);
    uint256 protocolFees;
    uint16 referral;
    bytes32 PROXY_ROLE;
    address wrappedETH;
    WETHGateway weth;
    AaveProtocolDataProvider IdataProvider;
    string public symbol;
    ILendingPoolAddressesProvider provider;
    address lendingPoolAddr;
    address wethGatewayAddr;
    address dataProvider;

    

    /// @notice VAULTS RECORDS
    mapping(address => address) public collaterals;
    mapping(address => mapping(address => uint256)) public collateralBalances;
    mapping(address => mapping(address => uint256)) public underlyingBalances;
    mapping(address => mapping(address => uint256)) public avgIndex;

    /// @notice Initializer
    /// @dev Constructor for Upgradeable Contract
    /// @param _admin this vault's proxy
    /// @param _protocolFees uint the protocol fees in base 3
    /// @param _proxy address of IDXYS PROXY
    /// @param _addressProvider address of IDXYS PROXY

    function initialize(
        address _admin,
        uint256 _protocolFees,
        address _proxy,
        ILendingPoolAddressesProvider _addressProvider
    ) public initializer {
        PROXY_ROLE = keccak256("PROXY_ROLE");
        __Pausable_init();
        protocolFees = _protocolFees;
        admin = _admin;
        _setupRole(DEFAULT_ADMIN_ROLE, tx.origin);
        _setupRole(PROXY_ROLE, _proxy);
        // KOVAN WETH
        wrappedETH = 0xd0A1E359811322d97991E03f863a0C30C2cF029C;       // <----  KOVAN WETH
        wethGatewayAddr = 0xf8aC10E65F2073460aAD5f28E1EABE807DC287CF;  // <----  KOVAN
        // MAINET
        //wrappedETH = 0xC02aaA39b223FE8D0A0e5C4F27eAD9083C756Cc2;      
        //wethGatewayAddr = 0xcc9a0B7c43DC2a5F023Bb9b738E45B0Ef6B06E04; 

        weth = WETHGateway(wethGatewayAddr);
        provider = _addressProvider;
        lendingPoolAddr = provider.getLendingPool();
        dataProvider = 0x3c73A5E5785cAC854D468F727c606C07488a29D6;
        IdataProvider = AaveProtocolDataProvider(dataProvider);
        symbol = "iAAVE";
    }

    /// @notice AAVE DEPOSIT.
    /// @dev Can not be called directly. All request must be made to the IDXYS PROXY
    /// @param _asset adresse of ERC20 asset
    /// @param _amount The amount to deposit

    function deposit(address _asset, uint256 _amount)
        external
        payable
        whenNotPaused
    {
        require(hasRole(PROXY_ROLE, msg.sender), "Unauthorized?");
        
        uint256  index  = getLiquidityIndex(_asset);
        address _aToken = collaterals[_asset];

        collateralBalances[tx.origin][_aToken] = collateralBalances[tx.origin][_aToken].add(_amount);
        avgIndex[tx.origin][_asset] =avgIndex[tx.origin][_asset].add((_amount.mul(1e27)).div(index));
         
        IERC20Upgradeable aToken = IERC20Upgradeable(_aToken);
        ILendingPool lendingPool = ILendingPool(lendingPoolAddr);

        uint256 balanceB = aToken.balanceOf(address(this));

        if (_asset == ETHER) {
            weth.depositETH{value: msg.value}(address(this), referral);
        } else {
            IERC20Upgradeable underlying = IERC20Upgradeable(_asset);
            underlying.approve(address(lendingPool), _amount);
            lendingPool.deposit(_asset, _amount, address(this), referral);
        }
        // revert if the balance don't match  
        uint256 balanceA = aToken.balanceOf(address(this));
        require(_amount == balanceA.sub(balanceB), "Balance Mismatch!");

        
    }

    /// @notice AAVE WITHDRAW
    /// @dev Can not be called directly. All request must be made to the IDXYS PROXY
    /// @param _asset CToken address

    function withdraw(address _asset) external whenNotPaused {
        require(hasRole(PROXY_ROLE, msg.sender), "Unauthorized?");
        address _aToken = collaterals[_asset];
        ILendingPool lendingPool = ILendingPool(lendingPoolAddr);
        IERC20Upgradeable asset = IERC20Upgradeable(_asset);
        uint256 balanceB = asset.balanceOf(address(this));

        uint256[] memory TX = _Aaveputation(_asset);
        // We ajust the values here and revert later
        collateralBalances[address(this)][_aToken] = collateralBalances[address(this)][_aToken].add(TX[2]);
        collateralBalances[tx.origin][_aToken] = collateralBalances[tx.origin][_aToken].sub(TX[0]);

        if (_asset == ETHER) {
                IERC20Upgradeable collateral = IERC20Upgradeable(_aToken);
                collateral.approve(address(weth),TX[3]);
                weth.withdrawETH(TX[3], tx.origin);
        } else {
                IERC20Upgradeable collateral = IERC20Upgradeable(_aToken);
                collateral.approve(address(lendingPool),TX[3]);  
                lendingPool.withdraw(_asset, TX[3], tx.origin);
        }
            // revert if balance don't match
            uint256 balanceA = asset.balanceOf(address(this));
            require(TX[3] == balanceA.sub(balanceB), "Balance Mismatch!");
            
    }


    /// @notice Compute the gain and fees
    /// @dev We only need to store the index
    /// @param _asset the asset address

     function _Aaveputation(address _asset) internal view returns (uint256[] memory ){
       
        uint256[] memory txData  = new uint256[](4);
        address _aToken = collaterals[_asset]; 
        
        uint256 profit = balanceOf(tx.origin,_asset).sub(collateralBalances[tx.origin][_aToken]);
        uint256 fees = (profit.div(10000)).mul(protocolFees);
        
        txData[0] =  collateralBalances[tx.origin][_aToken];                                             
        txData[1] =  balanceOf(tx.origin,_asset);                                                              
        txData[2] =  fees;                                         
        txData[3] =  balanceOf(tx.origin,_asset).sub(fees);   
        
        return txData;
     }


    /// @notice returns the index required to keep track of gains
    /// @dev We only need to store the index
    /// @param _asset the asset address

    function getLiquidityIndex(address _asset) public view returns (uint256){
        uint256 liquidityIndex;
         (,,,,,,,liquidityIndex ,, ) = IdataProvider.getReserveData(_asset);
        return liquidityIndex;
    }

    /// @notice returns the balance of the pool
    /// @dev balance should be returned even if paused
    /// @param _asset the asset address

    function balance(address _asset) public view returns (uint256) {
 
        address _aToken = collaterals[_asset];
       if(_asset == ETHER){
            _asset == wrappedETH;
        }
        AToken aToken = AToken(_aToken);
        uint256 scaledBalance = aToken.scaledBalanceOf(address(this));
      
        if(scaledBalance > 0){
          return (aToken.scaledBalanceOf(address(this)).mul(getLiquidityIndex(_asset))).div(1e27);
        }
        else{
            return 0;
        }
        
    }

    /// @notice returns the balance of the user
    /// @dev balance should be returned even if paused
    /// @param _user the user address
    /// @param _asset the asset address

    function balanceOf(address _user, address _asset)
        public
        view
        returns (uint256)
    {

        if(avgIndex[_user][_asset] > 0){
            if(_asset == ETHER){
                return (avgIndex[_user][_asset].mul(getLiquidityIndex(wrappedETH))).div(1e27);
            }
            else{
                return (avgIndex[_user][_asset].mul(getLiquidityIndex(_asset))).div(1e27);
            }

        }else{
          
          return 0;

        }
      
        
    }

    /// @notice REDDEM FEES.
    /// @param _asset asset the feed are from

    function redeemFees(address _asset) public whenNotPaused {
         require(hasRole(DEFAULT_ADMIN_ROLE, msg.sender), "Unauthorized?");
         address _aToken = collaterals[_asset];
         ILendingPool lendingPool = ILendingPool(lendingPoolAddr);
          if (_asset == ETHER) {
                IERC20Upgradeable collateral = IERC20Upgradeable(_aToken);
                collateral.approve(address(weth), collateralBalances[address(this)][_aToken] );
                weth.withdrawETH(collateralBalances[address(this)][_aToken], address(this));
        } else {
                IERC20Upgradeable collateral = IERC20Upgradeable(_aToken);
                collateral.approve(address(lendingPool),collateralBalances[address(this)][_aToken]);  
                lendingPool.withdraw(_asset, collateralBalances[address(this)][_aToken], address(this));
        }

    }

    /// @notice SET VAULT FEES.
    /// @param fees the fees in %

    function setFees(uint256 fees) public {
        require(hasRole(PROXY_ROLE, msg.sender), "Unauthorized?");
        protocolFees = fees;
    }

    /// @notice SET VAULT COLLATERALS
    /// @param _asset the underlying address
    /// @param _collateral the collateral asset address

    function setCollaterals(address _asset, address _collateral) public {
        require(hasRole(DEFAULT_ADMIN_ROLE, msg.sender), "Unauthorized?");
        collaterals[_asset] = _collateral;
    }

    /// @notice SET AAVE REFERALL CODE
    /// @param _code The referall code

    function setReferralCode(uint16 _code) public {
        require(hasRole(DEFAULT_ADMIN_ROLE, msg.sender), "Unauthorized?");
        referral = _code;
    }


    /// @notice ALLOW EHTER RECEPTION

    receive() external payable {
        // nothing to do
    }

    /// @notice SECURITY.

    /// @notice pause or unpause.
    /// @dev Security feature to use with Defender

    function pause() public whenNotPaused {
        require(
            hasRole(DEFAULT_ADMIN_ROLE, msg.sender),
            "Unauthorized to pause"
        );
        _pause();
    }

    function unpause() public whenPaused {
        require(
            hasRole(DEFAULT_ADMIN_ROLE, msg.sender),
            "Unauthorized to unpause"
        );
        _unpause();
    }
}

