pragma solidity 0.7.5;
pragma experimental ABIEncoderV2;

import "@uniswap/v3-periphery/contracts/interfaces/ISwapRouter.sol";
import "@uniswap/v3-periphery/contracts/interfaces/IQuoterV2.sol";


contract DexCallerV3 {
    //0xE592427A0AEce92De3Edee1F18E0157C05861564
    ISwapRouter public immutable swapRouter;
    //0xDCF3A343746a6B38a54D3A17292aeB65aE2bA478
    IQuoterV2 public immutable quoter;
    constructor (ISwapRouter _swapRouter, IQuoterV2 _quoter) {
        swapRouter = _swapRouter;
        quoter = _quoter;
    }
    function flashSell(address buyToken, address sellToken, uint sellAmount, uint minBuyAmount, uint24 fee) external returns (uint buyAmount){
        ISwapRouter.ExactInputSingleParams memory params = ISwapRouter.ExactInputSingleParams({
        tokenIn : sellToken,
        tokenOut : buyToken,
        fee : fee,
        recipient : msg.sender,
        deadline : uint(- 1),
        amountIn : sellAmount,
        amountOutMinimum : minBuyAmount,
        sqrtPriceLimitX96 : 0
        });
        return swapRouter.exactInputSingle(params);
    }

    function flashBuy(address buyToken, address sellToken, uint buyAmount, uint maxSellAmount, uint24 fee) external returns (uint sellAmount){
        ISwapRouter.ExactOutputSingleParams memory params = ISwapRouter.ExactOutputSingleParams({
        tokenIn : sellToken,
        tokenOut : buyToken,
        fee : fee,
        recipient : msg.sender,
        deadline : uint(- 1),
        amountOut : buyAmount,
        amountInMaximum : maxSellAmount,
        sqrtPriceLimitX96 : 0
        });
        return swapRouter.exactOutputSingle(params);
    }


    function calBuyAmount(address buyToken, address sellToken, uint sellAmount, uint24 fee) public returns (uint) {
        IQuoterV2.QuoteExactInputSingleParams memory params = IQuoterV2.QuoteExactInputSingleParams({
        tokenIn : sellToken,
        tokenOut : buyToken,
        fee : fee,
        amountIn : sellAmount,
        sqrtPriceLimitX96 : 0
        });
        (uint256 amountOut,,,) = quoter.quoteExactInputSingle(params);
        return amountOut;
    }

}

