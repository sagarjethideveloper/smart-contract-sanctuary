import "./Sale.sol";
import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@openzeppelin/contracts/utils/math/SafeMath.sol";
import '@uniswap/v2-periphery/contracts/interfaces/IUniswapV2Router02.sol';
import "@uniswap/v2-core/contracts/interfaces/IUniswapV2Factory.sol";
import '@uniswap/v2-core/contracts/interfaces/IUniswapV2Pair.sol';

contract PostSaleLocker {

    IERC20 Stablecoin;
    IERC20 Token;

    address public token;
    address public stablecoin;

    IUniswapV2Router02 uniswapRouter;

    address public pair;
    
    address public owner;

    Sale Sale1;
    Sale Sale2;
    Sale Sale3;

    address public sale1;
    address public sale2;
    address public sale3;

    uint256 public forLiq;

    bool public unlocked = false;

    constructor(address _stablecoin, address _tokenFromSale, address _owner, address _sale1, address _sale2, address _sale3, uint256 _forLiq, address routerAddress) {
        token = _tokenFromSale;
        stablecoin = _stablecoin;

        Stablecoin = IERC20(_stablecoin);
        Token = IERC20(_tokenFromSale);
        
        owner = _owner;

        sale1 = _sale1;
        sale2 = _sale2;
        sale3 = _sale3;

        Sale1 = Sale(_sale1);
        Sale2 = Sale(_sale2);
        Sale3 = Sale(_sale3);

        forLiq = _forLiq;

        uniswapRouter = IUniswapV2Router02(routerAddress);

        pair = IUniswapV2Factory(uniswapRouter.factory()).createPair(token, stablecoin);
    }

    function unlock(uint256 failsafeLiq) public {
        require(msg.sender == owner);
        require((Sale1.finished() == true && Sale2.finished() == true && Sale3.finished() == true), "Sales are not finished.");

        uint256 lockerBalance = Stablecoin.balanceOf(address(this));
        uint256 totalFromSales = 0;

        if (Sale1.succeeded()) totalFromSales += Sale1.totalFromSales();
        if (Sale2.succeeded()) totalFromSales += Sale2.totalFromSales();
        if (Sale3.succeeded()) totalFromSales += Sale3.totalFromSales();

        uint256 lockerTokenBalance = Token.balanceOf(address(this));

        if (lockerTokenBalance == forLiq && lockerBalance >= totalFromSales) {
            if (!(lockerBalance >= forLiq / 2)) forLiq = failsafeLiq;

            uint256 tokenAmount = forLiq;
            uint256 stablecoinAmount = forLiq / 2;

            Stablecoin.approve(address(uniswapRouter), stablecoinAmount);
            Token.approve(address(uniswapRouter), tokenAmount);

            uniswapRouter.addLiquidity(token, stablecoin, tokenAmount, stablecoinAmount, 0, 0, owner, block.timestamp);

            unlocked = true;
        }
    }

    function releaseFunds() public {
        require(unlocked == true);

        uint256 lockerBalance = Stablecoin.balanceOf(address(this));

        Stablecoin.transferFrom(address(this), owner, lockerBalance);
    }
}

pragma solidity ^0.8.0;

import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "./PostSaleLocker.sol";

contract Sale {

    IERC20 Stablecoin;
    IERC20 Token;

    address public token;

    PostSaleLocker Locker;
    address public locker;

    uint256 public amountForSale;
    uint256 public amountSold = 0;

    uint256 public totalFromSales = 0;

    address public owner;

    bool public started = false;
    bool public finished = false;
    bool public succeeded = false;

    uint256 public startDate;
    uint256 public duration;

    uint256 public price;

    uint256 public softCap;
    uint256 public hardCap;

    mapping (address => uint256) public bought;
    mapping (address => uint256) public invested;

    constructor(address _stablecoin, address _tokenForSale, address _owner) {
        Stablecoin = IERC20(_stablecoin);
        Token = IERC20(_tokenForSale);
        token = _tokenForSale;
        owner = address(_owner);
    }

    modifier onlyOwner {
        require(msg.sender == owner, "Only owner can call this function.");
        _;
    }

    modifier didStart {
        require(started == true, "Sale didn't start yet.");
        _;
    }

    modifier didFinish {
        require(finished == true, "Sale is not finished.");
        _;
    }

    modifier notFinished {
        require(amountSold < amountForSale, "Sale is finished.");
        require(finished == false, "Sale is finished.");
        _;
    }

    modifier didSucceed {
        require (succeeded == true, "Sale did not succeed, you cannot invoke this function.");
        _;
    }

    modifier didntSucceed {
        require(succeeded == false, "Sale succeeded, you cannot invoke this function.");
        _;
    }

    modifier lockerUnlocked {
        require(Locker.unlocked() == true, "You cannot yet claim your tokens.");
        _;
    }

    function start(uint256 _price, uint256 _amountForSale, uint256 _softCap,uint256 _duration) public onlyOwner {
        require(Token.balanceOf(address(this)) == _amountForSale, "Insufficient amount of tokens deposited for sale.");

        started = true;
        price = uint256(_price);
        amountForSale = Token.balanceOf(address(this));
        startDate = block.timestamp;
        duration = _duration;
        softCap = _softCap;
    }

    function setLocker(address _locker) public onlyOwner {
        locker = _locker;
        Locker = PostSaleLocker(_locker);
    }

    function buy(uint256 amount) public didStart notFinished {
        require((amountSold + amount) <= amountForSale, "Order is too big.");

        uint256 stablecoinPriceTotal = amount * price;

        Stablecoin.transferFrom(msg.sender, address(this), stablecoinPriceTotal);

        bought[msg.sender] += amount;
        invested[msg.sender] += stablecoinPriceTotal;

        amountSold += amount;
        totalFromSales += stablecoinPriceTotal;
    }

    function finish() public didStart {
        if (amountSold == amountForSale) {
            succeeded = true;
            finished = true;
        } else if ((startDate + duration) < block.timestamp) {
            if (totalFromSales < softCap) {
                succeeded = false;
            } else succeeded = true;

            
            finished = true;
        }

        if (succeeded == true) {
            Stablecoin.transferFrom(address(this), locker, totalFromSales);
        }
    }

    function claimTokens() public didFinish didSucceed lockerUnlocked {
        Token.transferFrom(address(this), address(msg.sender), bought[msg.sender]);
    }

    function claimStablecoin() public didFinish didntSucceed {
        Stablecoin.transferFrom(address(this), address(msg.sender), invested[msg.sender]);
    }
}

