pragma solidity ^0.8.0;

import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@openzeppelin/contracts/token/ERC20/extensions/ERC20Burnable.sol";
import "@uniswap/v2-periphery/contracts/interfaces/IUniswapV2Router02.sol";
import "@uniswap/v2-core/contracts/interfaces/IUniswapV2Factory.sol";
import "@uniswap/v2-core/contracts/interfaces/IUniswapV2Pair.sol";
import "@openzeppelin/contracts/utils/math/SafeMath.sol";

contract Sale {

    IERC20 Stablecoin;
    ERC20Burnable Token;
    address public token;
    address public stablecoin;

    IUniswapV2Router02 uniswapRouter;
    address public pair;

    uint256 public amountForSale; // amount of coins available for sale
    uint256 public amountSold = 0; // amount of coins sold

    uint256 public totalFromSales = 0; // total stablecoins earned during the sale

    address public owner;

    bool public started = false;
    bool public finished = false;
    bool public succeeded = false;

    uint256 public startDate;
    uint256 public duration;

    uint256 public price = 2; // price of 10 ** 18 tokens on sale multiplied by 10

    uint256 public softCap; // goal in stablecoin

    uint256 public availableTokenAmountForLiquidity;
    uint256 public launchPrice = 22; // price of 10 ** 18 tokens on publi launch multiplied by 100

    mapping (address => uint256) public bought;
    mapping (address => uint256) public invested;

    mapping (address => bool) public withdrewInvestment;
    mapping (address => bool) public withdrewTokens;

    constructor(address _stablecoin, address _tokenForSale, address _owner, address _routerAddress) {
        Stablecoin = IERC20(_stablecoin);
        stablecoin = _stablecoin;
        Token = ERC20Burnable(_tokenForSale);
        token = _tokenForSale;
        owner = address(_owner);

        uniswapRouter = IUniswapV2Router02(_routerAddress);

        pair = IUniswapV2Factory(uniswapRouter.factory()).createPair(token, stablecoin);
    }

    modifier onlyOwner {
        require(msg.sender == owner, "Only owner can call this function.");
        _;
    }

    modifier didStart {
        require(started == true, "Sale didn't start yet.");
        _;
    }

    modifier didFinish {
        require(finished == true, "Sale is not finished.");
        _;
    }

    modifier notFinished {
        require(amountSold < amountForSale, "Sale is finished.");
        require(finished == false, "Sale is finished.");
        _;
    }

    modifier didSucceed {
        require (succeeded == true, "Sale did not succeed, you cannot invoke this function.");
        _;
    }

    modifier didntSucceed {
        require(succeeded == false, "Sale succeeded, you cannot invoke this function.");
        _;
    }

    function start(uint256 _amountForSale, uint256 _softCap, uint256 _duration, uint256 _availableTokenAmountForLiquidity) public onlyOwner {
        require(Token.balanceOf(address(this)) >= (_amountForSale + _availableTokenAmountForLiquidity), "Insufficient amount of tokens deposited for sale.");

        started = true;
        amountForSale = _amountForSale;
        startDate = block.timestamp;
        duration = _duration;
        softCap = _softCap;
        availableTokenAmountForLiquidity = _availableTokenAmountForLiquidity;
    }

    function buy(uint256 amount) public didStart notFinished {
        require((amountSold + amount) <= amountForSale, "Order is too big.");
        require(amount > uint256(10 ** 18), "Minimum of one token is available for sale.");

        uint256 stablecoinPriceTotal = SafeMath.mul(amount, price);
        stablecoinPriceTotal = SafeMath.div(stablecoinPriceTotal, 10);

        Stablecoin.transferFrom(msg.sender, address(this), stablecoinPriceTotal);

        bought[msg.sender] += amount;
        invested[msg.sender] += stablecoinPriceTotal;

        amountSold += amount;
        totalFromSales += stablecoinPriceTotal;
    }

    function finish(uint256 fallbackTokenAmount, uint256 fallbackStablecoinAmount) public didStart onlyOwner {
        if (amountSold == amountForSale) {
            succeeded = true;
            finished = true;
        } else if ((startDate + duration) < block.timestamp) {
            if (totalFromSales < softCap) {
                succeeded = false;
            } else succeeded = true;

            
            finished = true;
        }

        uint256 amountToBurn = SafeMath.sub(amountForSale, amountSold, "Error calculating 1st amount for burn.");

        Token.burn(amountToBurn);

        uint256 stablecoinForLiqudity = 0;
        uint256 tokensForLiquidity = 0;

        if (succeeded == true && (amountToBurn == 0)) {
            stablecoinForLiqudity = SafeMath.mul(availableTokenAmountForLiquidity, launchPrice);
            stablecoinForLiqudity = SafeMath.div(availableTokenAmountForLiquidity, 100);

            tokensForLiquidity = availableTokenAmountForLiquidity;            
        } else if (succeeded == true) {
            stablecoinForLiqudity = fallbackStablecoinAmount;
            tokensForLiquidity = fallbackTokenAmount;

            uint256 remainingAmountToBurn = SafeMath.sub(availableTokenAmountForLiquidity, fallbackTokenAmount, "Error calculating 2nd amount to burn.");

            Token.burn(remainingAmountToBurn);
        }

        Stablecoin.approve(address(uniswapRouter), stablecoinForLiqudity);
        Token.approve(address(uniswapRouter), tokensForLiquidity);

        uniswapRouter.addLiquidity(token, stablecoin, tokensForLiquidity, stablecoinForLiqudity, 0, 0, address(0), block.timestamp); 
    }

    function claimTokens() public didFinish didSucceed {
        require(withdrewTokens[msg.sender] == false, "This operation can only be performed once!");

        Token.transfer(address(msg.sender), bought[msg.sender]);

        withdrewTokens[msg.sender] = true;
    }

    function claimStablecoin() public didFinish didntSucceed {
        require(withdrewInvestment[msg.sender] == false, "This operation can only be performed once!");

        Stablecoin.transfer(address(msg.sender), invested[msg.sender]);
        
        withdrewInvestment[msg.sender] = true;
    }

    function withdrawFunds() public didntSucceed onlyOwner {
        uint256 amount = Stablecoin.balanceOf(address(this));

        Stablecoin.transfer(address(msg.sender), amount);
    }
}

