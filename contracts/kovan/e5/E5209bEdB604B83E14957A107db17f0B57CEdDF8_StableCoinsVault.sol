pragma solidity 0.6.12;

import "@openzeppelin/contracts/token/ERC20/ERC20.sol";
import "@openzeppelin/contracts/token/ERC20/SafeERC20.sol";
import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/utils/ReentrancyGuard.sol";

import "./interface/IStabilityPool.sol";
import "./interface/ILQTYStaking.sol";
import "./interface/IConverter.sol";


contract StableCoinsVault is ERC20, ReentrancyGuard, Ownable {
    using SafeMath for uint256;
    using SafeERC20 for IERC20;
   
    address public weth;
    address public feeTo;
    address public frontEndTag;
    address public converterAddress;
    
    IERC20 public LUSD;
    IERC20 public LQTY;
    IStabilityPool public SP;
    ILQTYStaking public LS;
    
    uint256 public feeRate = 500;
    uint256 public constant maxFeeRate = 2000;
    uint256 public constant feeBase = 10000;

    uint256 public min = 10000;
    uint256 public constant max = 10000;

    uint256 private totalRewardsDebt = 0;

    bool public enableWhiteList;

    address[] public stableCoinList;

    mapping (address => bool) public enableStableCoin;
    mapping (address => bool) public isHarvestWhiteList;
    mapping (address => uint256) private rewardsDebt;

    

    /* ========== EVENTS ========== */
    event LogSetMin(uint256 originValue, uint256 newValue);
    event LogSetConverter(address originValue, address newValue);
    event LogSetFeeRate(uint256 originValue, uint256 newValue);
    event LogSetWhiteList(address addr, bool enable);
    event LogAddStableCoin(address token);
    
    event LogDeposit(address indexed user, address indexed token, uint256 tokenIn, uint256 LUSDIn, uint256 shareOut);
    event LogWithdraw(address indexed user, address indexed token, uint256 shareIn, uint256 LUSDOut, uint256 tokenOut, uint256 rewardOut);
    event LogHarvest(address indexed executer, uint256 LQTYAmount, uint256 LUSDAmount, uint256 ETHAmount);

    /* ========== MODIFIERS ========== */

    modifier onlyHarvestWhiteList() {
        require(!enableWhiteList || isHarvestWhiteList[msg.sender], "ERR_NO_RIGHT");
        _;
    }

    /* ========== CONSTRUCTOR ========== */

    constructor(
        address _weth,
        address _lusdToken,
        address _lqtyToken,
        address _stabilityPool,
        address _stakingPool,
        address _converterAddress,
        address _feeTo,
        address _frontEndTag,
        bool _enableWhiteList
    ) ERC20(
        "liquity valut token for Stable Coin", 
        "lvSC"
    ) public {
        require(_converterAddress != address(0), "ERR_ZERO_ADDRESS");
        require(_feeTo != address(0), "ERR_ZERO_ADDRESS");

        weth = _weth;
        
        LUSD = IERC20(_lusdToken);
        LQTY = IERC20(_lqtyToken);
        SP = IStabilityPool(_stabilityPool);
        LS = ILQTYStaking(_stakingPool);
        
        converterAddress = _converterAddress;
        feeTo = _feeTo;
        frontEndTag = _frontEndTag;

        enableWhiteList = _enableWhiteList;
        isHarvestWhiteList[msg.sender] = true;

    }

    receive() external payable {}

    /* ========== GOV FUNCTIONS ========== */

    function setMin(uint256 _min) external onlyOwner {
        emit LogSetMin(min, _min);
        min = _min;
        
    }

    function setConverter(address _converterAddress) external onlyOwner {
        require(_converterAddress != address(0), "ERR_ZERO_ADDRESS");
        emit LogSetConverter(converterAddress, _converterAddress);
        converterAddress = _converterAddress;
    }

    function setFeeRate(uint256 _feeRate) external onlyOwner {
        require(_feeRate <= maxFeeRate, "ERR_INVALID_FEE_RATE");
        emit LogSetFeeRate(feeRate, _feeRate);
        feeRate = _feeRate;
    }

    function setHarvestWhiteList(address _addr, bool _in) external onlyOwner {
        isHarvestWhiteList[_addr] = _in;
        emit LogSetWhiteList(_addr, _in);
    }

    function addStableCoin(address _token) external onlyOwner {
        enableStableCoin[_token] = true;
        stableCoinList.push(_token);
        emit LogAddStableCoin(_token);
    }

    /* ========== VIEW FUNCTIONS ========== */

    // total LUSD and ETH amount of the pool
    function balance() public view returns (uint256) {
        return LUSD.balanceOf(address(this))
                .add(SP.getCompoundedLUSDDeposit(address(this)));
    }

    function ETHBalance() public view returns (uint256) {
        return SP.getDepositorETHGain(address(this));
    }

    // total LQTY amount of the pool
    function rewards() public view returns (uint256) {
        return LQTY.balanceOf(address(this))
                .add(LS.stakes(address(this)));
    }

    // LUSD amount per share
    function getLUSDPerFullShare() public view returns (uint256) {
        return balance().mul(1e18).div(totalSupply());
    }

    // ETH amount per share
    function getETHPerFullShare() public view returns (uint256) {
        return ETHBalance().mul(1e18).div(totalSupply());
    }

    // amount of LUSD user can withdraw
    function getUserWithdrawableLUSD(address _user) public view returns (uint) {
        if(totalSupply() == 0) {
            return 0;
        }
        return balance().mul(balanceOf(_user)).div(totalSupply());
    }

    // amount of ETH that can swap to LUSD when user withdraw
    function getUserWithdrawableETH(address _user) public view returns (uint) {
        if(totalSupply() == 0) {
            return 0;
        }
        return ETHBalance().mul(balanceOf(_user)).div(totalSupply());
    }

    function getUserWithdrawableLQTY(address _user) public view returns (uint) {
        if(totalSupply() == 0) {
            return 0;
        }
        return rewards().add(totalRewardsDebt)
            .mul(balanceOf(_user)).div(totalSupply())
            .sub(rewardsDebt[_user]);        
    }

    function getTotalPendingRewards() public view returns (uint256 LQTYAmount, uint256 ETHAmount, uint256 LUSDAmount) {
        LQTYAmount = SP.getDepositorLQTYGain(address(this));
        ETHAmount = LS.getPendingETHGain(address(this));
        LUSDAmount = LS.getPendingLUSDGain(address(this));
    }

    /* ========== MUTATIVE FUNCTIONS ========== */
    
    function deposit(address _token, uint256 _amount) external nonReentrant {
        require(_amount > 0, "ERR_ZERO_AMOUNT");
        require(enableStableCoin[_token], "ERR_INVALID_TOKEN");
        
        if (SP.getDepositorETHGain(address(this)) > 0) {
            SP.withdrawFromSP(0);
            _swapETHToLUSD();
        }
        
        uint256 LUSDPool = balance();
        
        uint256 LUSDBalanceBefore = LUSD.balanceOf(address(this));
        if (_token != address(LUSD)) {
            IERC20(_token).safeTransferFrom(msg.sender, converterAddress, _amount);
            IConverter(converterAddress).convert(_token, address(LUSD), _amount);
        } else {
            LUSD.safeTransferFrom(msg.sender, address(this), _amount);
        }
        uint256 LUSDBalanceAfter = LUSD.balanceOf(address(this));
        uint256 LUSDAmount = LUSDBalanceAfter.sub(LUSDBalanceBefore);
        
        uint256 shares = LUSDAmount;
        if (totalSupply() > 0) {
            shares = (LUSDAmount.mul(totalSupply())).div(LUSDPool);
        }

        if (rewards() > 0) {
            uint256 LQTYPerShare = rewards().add(totalRewardsDebt).mul(1e18).div(totalSupply());
            uint256 userRewardDebt = LQTYPerShare.mul(shares).div(1e18);
            rewardsDebt[msg.sender] = rewardsDebt[msg.sender].add(userRewardDebt);
            totalRewardsDebt = totalRewardsDebt.add(userRewardDebt);
        }

        _mint(msg.sender, shares);

        emit LogDeposit(msg.sender, _token, _amount, LUSDAmount, shares);
    }

    function withdraw(address _token, uint256 _shares, bool isHarvest, bool isSwapETH) external nonReentrant {
        require(_shares > 0, "ERR_ZERO_AMOUNT");
        require(enableStableCoin[_token], "ERR_INVALID_TOKEN");

        (uint256 LUSDAmount, uint256 LQTYAmount) = _withdraw(_shares, isHarvest, isSwapETH);
        LQTY.safeTransfer(msg.sender, LQTYAmount);
        
        uint256 stableCoinAmount = LUSDAmount;
        if (_token != address(LUSD)) {
            LUSD.safeTransfer(converterAddress, LUSDAmount);
            IConverter(converterAddress).convert(address(LUSD), _token, LUSDAmount);
            stableCoinAmount = IERC20(_token).balanceOf(address(this));
        }
        IERC20(_token).safeTransfer(msg.sender, stableCoinAmount);

        emit LogWithdraw(msg.sender, _token, _shares, LUSDAmount, stableCoinAmount, LQTYAmount);
    }

    function _withdraw(uint256 _shares, bool isHarvest, bool isSwapETH) internal returns(uint256 LUSDAmount, uint256 LQTYAmount) {
        
        if (isHarvest) {
            harvest(isSwapETH);
        }

        if (SP.getDepositorETHGain(address(this)) > 0) {
            SP.withdrawFromSP(0);
            _swapETHToLUSD();
        }

        LUSDAmount = (balance().mul(_shares)).div(totalSupply());
        uint256 LUSDBalanceBefore = LUSD.balanceOf(address(this));
        if (LUSDBalanceBefore < LUSDAmount) {
            SP.withdrawFromSP(LUSDAmount.sub(LUSDBalanceBefore));
            uint256 LUSDBalanceAfter = LUSD.balanceOf(address(this));
            if (LUSDBalanceAfter < LUSDAmount) {
                _swapETHToLUSD();
                LUSDBalanceAfter = LUSD.balanceOf(address(this));
                if (LUSDBalanceAfter < LUSDAmount) {
                    LUSDAmount = LUSDBalanceAfter;
                }
            }
        }

        uint256 userTotalLQTYAmount = getUserWithdrawableLQTY(msg.sender);
        LQTYAmount = userTotalLQTYAmount.mul(_shares).div(balanceOf(msg.sender));
        uint256 LQTYBalanceBefore = LQTY.balanceOf(address(this));
        if (LQTYBalanceBefore < LQTYAmount) {
            LS.unstake(LQTYAmount.sub(LQTYBalanceBefore));
            uint256 LQTYBalanceAfter = LQTY.balanceOf(address(this));
            if (LQTYBalanceAfter < LQTYAmount) {
                LQTYAmount = LQTYBalanceAfter;
            }
        }

        uint256 withdrawDebt = rewardsDebt[msg.sender].mul(_shares).div(balanceOf(msg.sender));
        rewardsDebt[msg.sender] = rewardsDebt[msg.sender].sub(withdrawDebt);
        totalRewardsDebt = totalRewardsDebt.sub(withdrawDebt);

        _burn(msg.sender, _shares);
    }

    function harvest(bool isSwapETH) public onlyHarvestWhiteList nonReentrant {
        
        (uint256 LQTYPendingAmount, uint256 ETHPendingAmount, uint256 LUSDPendingAmount) = getTotalPendingRewards();

        if (SP.getDepositorETHGain(address(this)) > 0) {
            isSwapETH = true;
        }
        
        if (SP.getCompoundedLUSDDeposit(address(this)) > 0 || SP.getDepositorETHGain(address(this)) > 0) {
            SP.withdrawFromSP(0);
        }

        if (LS.stakes(address(this)) > 0) {
            LS.unstake(0);
        }

        _deductFee(LQTYPendingAmount, ETHPendingAmount, LUSDPendingAmount);

        if (isSwapETH) {
            _swapETHToLUSD();
        }

        if (_availableLQTY() > 0) {
            LS.stake(_availableLQTY());
        }

        if (_availableLUSD() > 0) {
            SP.provideToSP(_availableLUSD(), frontEndTag);
        }
         
        emit LogHarvest(msg.sender, LQTYPendingAmount, LUSDPendingAmount, ETHPendingAmount);
    }

    /* ========== INTERNAL FUNCTIONS ========== */

    function _deductFee(uint256 _LQTYAmount, uint256 _ETHAmount, uint256 _LUSDAmount) internal {
        if (_LQTYAmount > 0) {
            LQTY.safeTransfer(feeTo, _LQTYAmount.mul(feeRate).div(feeBase));
        }
        if (_LUSDAmount > 0) {
            LUSD.safeTransfer(feeTo, _LUSDAmount.mul(feeRate).div(feeBase));
        }
        if (_ETHAmount > 0) {
            payable(feeTo).transfer(_ETHAmount.mul(feeRate).div(feeBase));
        }
    }

    function _swapETHToLUSD() internal {
        uint256 ethBalance = address(this).balance;
        if (ethBalance > 0) {
            IConverter(converterAddress).convert{value: ethBalance}(weth, address(LUSD), ethBalance);
        }
    }

    // available amount of LUSD for Liquity
    function _availableLUSD() internal view returns (uint) {
        return LUSD.balanceOf(address(this))
            .sub(balance().mul(max.sub(min)).div(max));
    }

    // available amount of LQTY for Liquity
    function _availableLQTY() internal view returns (uint) {
        return LQTY.balanceOf(address(this))
            .sub(rewards().mul(max.sub(min)).div(max));
    }
}

