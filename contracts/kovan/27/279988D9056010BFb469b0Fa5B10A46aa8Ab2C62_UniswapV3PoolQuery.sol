struct PopulatedTick {
    int24 tick;
    int128 liquidityNet;
    uint128 liquidityGross;
}    

struct Slot0 {
        // the current price
        uint160 sqrtPriceX96;
        // the current tick
        int24 tick;
        // the most-recently updated index of the observations array
        uint16 observationIndex;
        // the current maximum number of observations that are being stored
        uint16 observationCardinality;
        // the next maximum number of observations to store, triggered in observations.write
        uint16 observationCardinalityNext;
        // the current protocol fee as a percentage of the swap fee taken on withdrawal
        // represented as an integer denominator (1/x)%
        uint8 feeProtocol;
        // whether the pool is locked
        bool unlocked;
}

abstract contract UniswapV3Pool {
    uint128 public liquidity;
    address public token0;
    address public token1;
    mapping(int24 => Tick.Info) public ticks;
    mapping(int16 => uint256) public tickBitmap;
    Slot0 public slot0;
    int24 public tickSpacing;
}

contract UniswapV3PoolQuery {
    // given a  list of Uniswap V3 pool address, return tokens' real reserves (balances)
    function getPoolReserves(address[] calldata _pools) public view returns (uint256[2][] memory){
        uint num = _pools.length;
        uint256[2][] memory reserves = new uint256[2][](num);
        for (uint256 i = 0; i < num; i++) {
            address pool = _pools[i];
            reserves[i][0] = IERC20(UniswapV3Pool(pool).token0()).balanceOf(pool);
            reserves[i][1] = IERC20(UniswapV3Pool(pool).token1()).balanceOf(pool);
        }
        return reserves;
    }

    // given a list of Uniswap V3 pool address, return corresponding: tick|int24, liquidity|uint128, sqrtPrice|uint160
    function getPoolInfo(address[] calldata _pools) public view returns (int24[] memory, uint128[] memory, uint160[] memory) {
        uint num = _pools.length;
        int24[] memory ticks = new int24[](num);
        uint128[] memory lids = new uint128[](num);
        uint160[]  memory sqtPrices = new uint160[](num);
        for (uint256 i = 0; i < num; i++) {
            address pool = _pools[i];
            lids[i] = UniswapV3Pool(pool).liquidity();
            (uint160 _sqrtPriceX96, int24 _tick, , , , , ) = UniswapV3Pool(pool).slot0();
            ticks[i] = _tick;
            sqtPrices[i] = _sqrtPriceX96;
        }
        return (ticks, lids, sqtPrices);
    }

    // given a list of Uniswap V3 pool address, return corresponding tick|int24, liquidity|uint128, sqrtPrice|uint160, ticks
    function getPoolTicks(address[] calldata _pools) public view returns (int24[] memory, uint128[] memory, uint160[] memory, PopulatedTick[256][] memory) {
        uint num = _pools.length;
        PopulatedTick[256][] memory tickInfos = new PopulatedTick[256][](num);
        (int24[] memory ticks, uint128[] memory lids, uint160[]  memory sqtPrices) = getPoolInfo(_pools);
        for (uint256 i = 0; i < num; i++) {
            address pool = _pools[i];
            int24 tick = ticks[i];
            int24 tickSpacing = UniswapV3Pool(pool).tickSpacing();
            // 1. convert tick to the word
            int16 wordPos = int16(tick >> 8);
            // 2. fetch bitmap from the word
            uint256 bitmap = UniswapV3Pool(pool).tickBitmap(wordPos);
            // 3. calculate the number of populated ticks
            uint256 numberOfPopulatedTicks = 256;
            //for (uint256 i = 0; i < 256; i++) {
            //    if (bitmap & (1 << i) > 0) numberOfPopulatedTicks++;
            //}
            // 4. fetch populated tick data
            //PopulatedTick[] memory populatedTicks = new PopulatedTick[](numberOfPopulatedTicks);
            for (uint256 j = 0; j < 256; j++) {
                if (bitmap & (1 << j) > 0) {
                    int24 populatedTick = ((int24(wordPos) << 8) + int24(uint24(j))) * tickSpacing;
                    (uint128 liquidityGross, int128 liquidityNet, , , , , , ) = UniswapV3Pool(pool).ticks(populatedTick);
                    tickInfos[i][--numberOfPopulatedTicks] = PopulatedTick({
                        tick: populatedTick,
                        liquidityNet: liquidityNet,
                        liquidityGross: liquidityGross
                    });
                }
            }
        }
        return (ticks, lids, sqtPrices, tickInfos);
    }

}

