import { IERC20 } from "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@uniswap/lib/contracts/libraries/TransferHelper.sol";
import "../refs/CoreRef.sol";
import "./ISwapIncentive.sol";

/// @title Swap incentive contract
/// @author Ring Protocol
contract SwapIncentive is CoreRef, ISwapIncentive {

    uint256 public override rewardAmount;

    /// @notice SwapIncentive token constructor
    /// @param core core address
    /// @param _rewardAmount ring reward given for each transfer
    constructor(address core, uint256 _rewardAmount)
    CoreRef(core) {
        rewardAmount = _rewardAmount;
    }

    /// @notice SwapIncentive setRewardAmount
    /// @param _rewardAmount singleRewardAmount for each transfer
    function setRewardAmount(uint256 _rewardAmount) external override onlyGovernor {
        rewardAmount = _rewardAmount;
        emit RewardAmountUpdated(_rewardAmount);
    }

    /// @notice SwapIncentive applyIncentive give ring reward to address paid tx fee
    /// @param amount the amount that was transferred
    function incentivize(
        address,
        address,
        address,
        uint256 amount) external override onlyRusd {
        uint256 _rewardAmount = rewardAmount;
        IERC20 ringTokenAddress = ring();
        if (
            _rewardAmount > 0 &&
            amount > 0 &&
            ringTokenAddress.balanceOf(address(this)) >= _rewardAmount
        ) {
            // we can use tx.origin to determine who paid the gas fee
            // tx origin is not safe for authorization, but is safe for this purpose.
            TransferHelper.safeTransfer(address(ringTokenAddress), tx.origin, _rewardAmount);
        }
    }
}

