contract LiquidityMakerOrchestrator is IOrchestrator, Ownable {
    address public immutable core;
    address public immutable RUSD;
    address public immutable NFT;
    address public immutable ROUTER;
    address public immutable PCVDepositOrchestrator;
    address public immutable sharedLMControllerOrchestrator;
    address public immutable sharedLMBondingCurveOrchestrator;
    address public tokenRusdPool;
    address public tokenAddress;
    address public erc20UniswapPCVDeposit;
    address public uniswapOracle;
    address public liquidityMakerBondingCurve;
    address public liquidityMakerController;

    uint256 public constant BONDING_CURVE_ALLOCATE_INCENTIVE_FREQUENCY = 1 days; // 1 day duration

    uint256 public constant LIQUIDITY_MAKER_KEEPER_INCENTIVE = 0;

    event TokenUniswapV3Pool(address pool);
  
    constructor(
        address _core,
        address _RUSD,
        address _NFT,
        address _ROUTER,
        address _PCVDepositOrchestrator,
        address _sharedLMControllerOrchestrator,
        address _sharedLMBondingCurveOrchestrator
    ) Ownable() {
        core = _core;
        RUSD = _RUSD;
        NFT = _NFT;
        ROUTER = _ROUTER;
        PCVDepositOrchestrator = _PCVDepositOrchestrator;
        sharedLMControllerOrchestrator = _sharedLMControllerOrchestrator;
        sharedLMBondingCurveOrchestrator = _sharedLMBondingCurveOrchestrator;
    }

    function reset() public onlyOwner{
        tokenAddress = address(0);
        erc20UniswapPCVDeposit = address(0);
        uniswapOracle = address(0);
        tokenRusdPool = address(0);
        liquidityMakerBondingCurve = address(0);
    }

    /// @notice deploy step 1
    function initUniswapV3Pool(
        address _tokenAddress, 
        uint24 _fee,
        uint160 _sqrtPriceX96
    ) external onlyOwner {
        reset();

        address _RUSD = RUSD;
        tokenRusdPool = INonfungiblePositionManager(NFT).createAndInitializePoolIfNecessary(
            _tokenAddress < _RUSD ? _tokenAddress : _RUSD, 
            _tokenAddress < _RUSD ? _RUSD : _tokenAddress, 
            _fee, 
            _sqrtPriceX96
        );
        tokenAddress = _tokenAddress;
        // it is difficult to retrieve the return value in truffle, we emit an event instead
        emit TokenUniswapV3Pool(tokenRusdPool);
    }

    /// @notice deploy step 2
    function initPcvDeposit(address oraclePool, uint32 twapDuration, int24 tickLower, int24 tickUpper) external onlyOwner {
        require(tokenRusdPool != address(0) && tokenAddress != address(0), "tokenRusdPool or tokenAddress is 0");
        (address _erc20UniswapPCVDeposit, address _uniswapOracle) = 
        ISharedPCVDepositOrchestrator(PCVDepositOrchestrator).init(
            core,
            tokenRusdPool,
            NFT,
            ROUTER,
            oraclePool,
            twapDuration,
            tokenAddress,
            tickLower,
            tickUpper
        );
        erc20UniswapPCVDeposit = _erc20UniswapPCVDeposit;
        uniswapOracle = _uniswapOracle;
    }

    /// @notice deploy step 3, deploy bonding curve
    function initBondingCurve(
        uint256 purchaseLimit, 
        string memory tokenName,
        string memory tokenSymbol,
        address rTokenVault
    ) external onlyOwner {
        require(tokenAddress != address(0) &&
            erc20UniswapPCVDeposit != address(0),
            "tokenAddress or erc20UniswapPCVDeposit is 0"
        );
        liquidityMakerBondingCurve = address(ISharedLMBondingCurveOrchestrator(sharedLMBondingCurveOrchestrator)
        .init(
            core,
            erc20UniswapPCVDeposit,
            BONDING_CURVE_ALLOCATE_INCENTIVE_FREQUENCY,
            LIQUIDITY_MAKER_KEEPER_INCENTIVE,
            purchaseLimit,
            tokenName,
            tokenSymbol,
            tokenAddress,
            rTokenVault
        ));
    }

     /// @notice deploy step 4, liquidity maker controller
    function initLiquidityMakerController(address vaultAddress) external onlyOwner {
       require(liquidityMakerBondingCurve != address(0) && erc20UniswapPCVDeposit != address(0), 
       "liquidityMakerBondingCurve or erc20UniswapPCVDeposit is 0");
       liquidityMakerController = 
       address(ISharedLMControllerOrchestrator(sharedLMControllerOrchestrator)
        .init(core, erc20UniswapPCVDeposit, liquidityMakerBondingCurve, vaultAddress));
    }

    function detonate() public override onlyOwner {
        selfdestruct(payable(owner()));
    }
}

