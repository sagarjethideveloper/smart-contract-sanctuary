pragma solidity =0.7.6;
pragma experimental ABIEncoderV2;

import "@openzeppelin/contracts/token/ERC20/ERC20Burnable.sol";
import "./ILiquidityMakerBondingCurve.sol";
import "../refs/CoreRef.sol";
import "../pcv/PCVSplitter.sol";
import "../utils/Timed.sol";

/// @title an abstract liquidity maker for saving token
/// @author Ring Protocol
abstract contract LiquidityMakerBondingCurve is ILiquidityMakerBondingCurve, ERC20Burnable, CoreRef, PCVSplitter, Timed {
    using Decimal for Decimal.D256;
    using SafeMathCopy for uint256;

    // solhint-disable-next-line var-name-mixedcase
    bytes32 public DOMAIN_SEPARATOR;
    // keccak256("Permit(address owner,address spender,uint256 value,uint256 nonce,uint256 deadline)");
    bytes32 public constant PERMIT_TYPEHASH =
        0x6e71edae12b1b97f4d1f60370fef10105fa2faae0126114a169c64845d6126c9;
    mapping(address => uint256) public nonces;

    /// @notice the total amount of token purchased in liquidity maker.
    uint256 public override totalPurchased;

    /// @notice the buffer applied on top of purchase amount
    uint256 public override buffer = 100;
    uint256 public constant BUFFER_GRANULARITY = 10_000;

    /// @notice amount of RUSD paid for allocation when incentivized
    uint256 public override incentiveAmount;

    /// @notice the limit of token can be purchase in liquidity maker.
    uint256 public override purchaseLimit;

    address public override rTokenVault;

    /// @notice constructor
    /// @param _core Ring Core to reference
    /// @param _pcvDeposits the PCV Deposits for the PCVSplitter
    /// @param _ratios the ratios for the PCVSplitter
    /// @param _duration the duration between incentivizing allocations
    /// @param _incentive the amount rewarded to the caller of an allocation
    /// @param _purchaseLimit the limit of token can be purchase in liquidity maker
    /// @param _tokenName the token name of liquidity maker token
    /// @param _tokenSymbol the token symbol of liquidity maker token
    /// @param _rTokenVault vault to hold protocol fees
    constructor(
        address _core,
        address[] memory _pcvDeposits,
        uint256[] memory _ratios,
        uint256 _duration,
        uint256 _incentive,
        uint256 _purchaseLimit,
        string memory _tokenName,
        string memory _tokenSymbol,
        address _rTokenVault
    )
        ERC20(_tokenName, _tokenSymbol)
        CoreRef(_core)
        PCVSplitter(_pcvDeposits, _ratios)
        Timed(_duration)
    {
        uint256 chainId;
        // solhint-disable-next-line no-inline-assembly
        assembly {
            chainId := chainid()
        }
        DOMAIN_SEPARATOR = keccak256(
            abi.encode(
                keccak256(
                    "EIP712Domain(string name,string version,uint256 chainId,address verifyingContract)"
                ),
                keccak256(bytes(name())),
                keccak256(bytes("1")),
                chainId,
                address(this)
            )
        );

        incentiveAmount = _incentive;

        purchaseLimit = _purchaseLimit;

        rTokenVault = _rTokenVault;

        _initTimed();
    }

    /// @notice sets the R roken vault address
    function setRTokenVault(address _rTokenVault) external override onlyGovernor {
        require(_rTokenVault != address(0), "LiquidityMakerBondingCurve: address is 0");
        rTokenVault = _rTokenVault;

        emit RTokenVaultUpdate(_rTokenVault);
    }

    /// @notice sets liquidity maker buffer
    function setBuffer(uint256 _buffer) external override onlyGovernor {
        require(
            _buffer < BUFFER_GRANULARITY,
            "LiquidityMakerBondingCurve: Buffer exceeds or matches granularity"
        );
        buffer = _buffer;
        emit BufferUpdate(_buffer);
    }

    /// @notice sets the allocate incentive amount
    function setIncentiveAmount(uint256 _incentiveAmount) external override onlyGovernor {
        incentiveAmount = _incentiveAmount;
        emit IncentiveAmountUpdate(_incentiveAmount);
    }

    /// @notice sets the purchase limit
    function setPurchaseLimit(uint256 _purchaseLimit) external override onlyGovernor {
        purchaseLimit = _purchaseLimit;
        emit PurchaseLimitUpdate(_purchaseLimit);
    }

    /// @notice sets the allocate incentive frequency
    function setIncentiveFrequency(uint256 _frequency) external override onlyGovernor {
        _setDuration(_frequency);
    }

    /// @notice sets the allocation of incoming PCV
    function setAllocation(
        address[] calldata allocations,
        uint256[] calldata ratios
    ) external override onlyGovernor {
        _setAllocation(allocations, ratios);
    }

    /// @notice batch allocate held PCV
    function allocate() external override whenNotPaused onlyGuardianOrGovernor {
        require((!Address.isContract(msg.sender)), "LiquidityMakerBondingCurve: Caller is a contract");
        uint256 amount = getTotalPCVHeld();
        require(amount != 0, "LiquidityMakerBondingCurve: No PCV held");

        _allocate(amount);
        _incentivize();

        emit Allocate(msg.sender, amount);
    }

    /// @notice return amount of liquidity maker token received after a successful purchase
    /// @param amountIn the amount of underlying used to purchase
    /// @return amountOut the amount of liquidity maker token received
    function getAmountOut(uint256 amountIn)
        external
        view
        override
        returns (uint256 amountOut)
    {
        amountOut = _getBufferAdjustedAmount(amountIn);
    }

    /// @notice the amount of PCV held in contract and ready to be allocated
    function getTotalPCVHeld() public view virtual override returns (uint256);

    /// @notice mint liquidity maker token and send to liquidity maker destination
    function _purchase(uint256 amountIn, address to)
        internal
        returns (uint256 amountOut)
    {
        amountOut = _getBufferAdjustedAmount(amountIn);
        _incrementTotalPurchased(amountOut);
        require(totalPurchased <= purchaseLimit, "LiquidityMakerBondingCurve: Save limit reached");
        _mint(to, amountOut);
        uint256 amountProtocol = amountIn - amountOut;
        if (amountProtocol > 0) {
            _mint(rTokenVault, amountProtocol);
        }

        emit Purchase(to, amountIn, amountOut);
    }

    function _incrementTotalPurchased(uint256 amount) internal {
        totalPurchased = totalPurchased.add(amount);
    }

    /// @notice if window has passed, reward caller and reset window
    function _incentivize() internal virtual {
        if (isTimeEnded()) {
            _initTimed(); // reset window
            rusd().mint(msg.sender, incentiveAmount);
        }
    }

    /// @notice returns the buffer on the liquidity maker
    function _getBufferMultiplier() internal view returns (Decimal.D256 memory) {
        uint256 granularity = BUFFER_GRANULARITY;
        // uses granularity - buffer (i.e. 1-b) instead of 1+b because the peg is inverted
        return Decimal.ratio(granularity - buffer, granularity);
    }

    function _getBufferAdjustedAmount(uint256 amountIn)
        internal
        view
        returns (uint256)
    {
        return _getBufferMultiplier().mul(amountIn).asUint256();
    }

    /// @notice permit spending of liquidity maker token
    /// @param owner the liquidity maker token holder
    /// @param spender the approved operator
    /// @param value the amount approved
    /// @param deadline the deadline after which the approval is no longer valid
    function permit(
        address owner,
        address spender,
        uint256 value,
        uint256 deadline,
        uint8 v,
        bytes32 r,
        bytes32 s
    ) external override {
        // solhint-disable-next-line not-rely-on-time
        require(deadline >= block.timestamp, "LiquidityMakerBondingCurve: EXPIRED");
        bytes32 digest =
            keccak256(
                abi.encodePacked(
                    "\x19\x01",
                    DOMAIN_SEPARATOR,
                    keccak256(
                        abi.encode(
                            PERMIT_TYPEHASH,
                            owner,
                            spender,
                            value,
                            nonces[owner]++,
                            deadline
                        )
                    )
                )
            );
        address recoveredAddress = ecrecover(digest, v, r, s);
        require(
            recoveredAddress != address(0) && recoveredAddress == owner,
            "LiquidityMakerBondingCurve: INVALID_SIGNATURE"
        );
        _approve(owner, spender, value);
    }

    /// @notice this function is not used in liquidity maker
    function getAverageUSDPrice(uint256) external pure override returns (Decimal.D256 memory) {
        return Decimal.one();
    }

    /// @notice this function is not used in liquidity maker
    function getCurrentPrice()
        external
        pure
        override
        returns (Decimal.D256 memory)
    {
        return Decimal.one();
    }
}

