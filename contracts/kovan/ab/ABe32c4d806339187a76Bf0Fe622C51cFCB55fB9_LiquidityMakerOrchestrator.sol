    constructor(
        address core,
        address[] memory pcvDeposits,
        uint256[] memory ratios,
        uint256 duration,
        uint256 incentive,
        uint256 _purchaseLimit,
        string memory _tokenName,
        string memory _tokenSymbol,
        address _tokenAddress,
        address _rTokenVault
    )
        LiquidityMakerBondingCurve(
            core,
            pcvDeposits,
            ratios,
