contract Shop is Ownable{

    using SafeMath for uint256;
    address payable private  feeOwner;
    address payable private  slotFeeOwner;
    mapping(address=>Blurb) public blurbs;

    struct Blurb {
        uint price;
        uint slotPrice;
        uint[] randomKinds;
    }

    event BlindBox(address indexed account,address indexed token,uint[] amounts);
    
    constructor(address payable _feeOwner,address payable _slotFeeOwner) {
        feeOwner = _feeOwner;
        slotFeeOwner = _slotFeeOwner;
    }
    
    function setBlurb(address _token, uint256 _price, uint256 _slotPrice, uint256[] memory _kinds ) public onlyOwner {
        blurbs[_token].price = _price;
        blurbs[_token].slotPrice = _slotPrice;
        blurbs[_token].randomKinds = _kinds;
    }
    
    function blindBox(IMint token,uint nums,bytes memory data) public payable returns(uint[] memory amounts) {
        require(nums>0,"Greater than zero");
        require(nums<128,"Less than 128");
        Blurb storage info = blurbs[address(token)];
        uint totalPrice = info.price.mul(nums);
        require(msg.value==totalPrice,"error price");
        feeOwner.transfer(totalPrice);
        amounts = getAmounts(nums,info.randomKinds.length);
        token.mintBatch(msg.sender, info.randomKinds, amounts, data);
        emit BlindBox(msg.sender,address(token),amounts);
    }
    
    function slot(IMint token,uint nums,bytes memory data) public payable returns(bool) {
        Blurb storage info = blurbs[address(token)];
        uint totalPrice = info.slotPrice.mul(nums);
        require(msg.value==totalPrice,"error slot price");
        slotFeeOwner.transfer(totalPrice);
        token.mint(msg.sender, 0, nums, data);
        return true;
    }

    function getAmounts(uint nums,uint len) public view returns(uint[] memory amounts) {
        uint seed = psuedoRandomness();
        require(seed>>(nums-1)>len,"blindbox nums is too large");
        amounts = new uint[](len);
        for(uint i;i<nums;i++) {
           uint kind = seed%len;
           amounts[kind]++;
           seed>>=2;
        }
    }

    function psuedoRandomness() public view returns(uint256) {
        return uint256(keccak256(abi.encodePacked(
            block.timestamp + block.difficulty +
            ((uint256(keccak256(abi.encodePacked(block.coinbase)))) / (block.timestamp)) +
            block.gaslimit + 
            ((uint256(keccak256(abi.encodePacked(_msgSender())))) / (block.timestamp)) +
            block.number
        )));
    }

}

