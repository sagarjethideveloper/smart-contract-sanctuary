        if(Address.isContract(operator)){
            require(isWhiteListed[operator],"operator is not in whiteList");
        }
        for(uint i;i<size;i++) {
            createAuction(msg.sender,payable(from),ids[i],prices[i],values[i]);
        }
        return IERC1155Receiver.onERC1155BatchReceived.selector;
    }
    
    function createAuction(address token,address payable account, uint tokenId,uint price,uint value) private {
        require(value==1,"value is not allowed");
        uint orderCount = getOrderCount[token]++;
        auctions[token][orderCount] = Auction({
            tokenId: tokenId,
            startTime: block.timestamp,
            price: price,
            seller: account,
            status:true
        });
        emit AuctionCreate(token,account,tokenId,price,orderCount);
    }
    
    function cancelAuction(address token,uint orderCount) public {
        Auction storage auction = auctions[token][orderCount];
        require(auction.status,"invalid auction");
        require(msg.sender==auction.seller,"not good");
        auction.status = false;
        IERC1155(token).safeTransferFrom(address(this),msg.sender,auction.tokenId,1,new bytes(0));
        emit AuctionCancel(token,msg.sender,auction.tokenId,auction.price,orderCount);
    }
    
    function bid(address token,uint orderCount) public payable {
        Auction storage auction = auctions[token][orderCount];
        require(auction.status,"invalid auction");
        require(msg.value ==auction.price,"error bid" );
        auction.status = false;
        IERC1155(token).safeTransferFrom(address(this),msg.sender,auction.tokenId,1,new bytes(0));
        auction.seller.transfer(msg.value);
        emit AuctionBid(token,msg.sender,auction.seller,auction.tokenId,auction.price,orderCount);
    }
    
    
}

