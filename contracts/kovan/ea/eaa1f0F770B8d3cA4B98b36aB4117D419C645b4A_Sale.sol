pragma abicoder v2;

import "@chainlink/contracts/src/v0.8/interfaces/AggregatorV3Interface.sol";
import "@openzeppelin/contracts/token/ERC20/IERC20.sol";

contract Sale {
  AggregatorV3Interface private ETH_USD;

  address private immutable _servgard;

  constructor(address _ETH_USD, address servgard) {
    ETH_USD = AggregatorV3Interface(_ETH_USD);
    _servgard = servgard;
  }

  /**
   * Returns the latest price
   */
  function getEthUsd() public view returns (uint256) {
    (, int256 price, , , ) = ETH_USD.latestRoundData();
    return uint256(price);
  }

  function buyToken() public payable {
    require(msg.value > 0, "No eth sent");
    uint256 amount = (msg.value / getEthUsd()) * 10;

    IERC20(_servgard).transfer(msg.sender, amount);
  }

  function calculateTokenAmount(uint256 payAmount)
    public
    view
    returns (uint256)
  {
    return (payAmount / getEthUsd()) * 10;
  }
}

