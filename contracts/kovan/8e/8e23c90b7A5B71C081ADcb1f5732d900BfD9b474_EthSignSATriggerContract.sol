/**
 * @title EthSignSATriggerContract contract
 * @dev A trigger contract that calls the executor with index information when certain conditions are met.
 * @author EthSignSA Team
 **/
contract EthSignSATriggerContract is
    Ownable,
    KeeperCompatibleInterface,
    ChainlinkClient,
    IEthSignSATriggerContract,
    ERC2771Context
{
    /**
     * @dev EIP2771 compliance
     **/
    function _msgSender()
        internal
        view
        virtual
        override(Context, ERC2771Context)
        returns (address sender)
    {
        return super._msgSender();
    }

    /**
     * @dev EIP2771 compliance
     **/
    function _msgData()
        internal
        view
        virtual
        override(Context, ERC2771Context)
        returns (bytes calldata)
    {
        return super._msgData();
    }

    using Chainlink for Chainlink.Request;

    // Kovan LINK
    IERC20 public constant _linkInstance =
        IERC20(0xa36085F69e2889c224210F603D836748e7dC0088);

    IEthSignSARegistryContract private _registry;
    IEthSignSAModeratorContract private _moderator;
    IEthSignSAExecutorContract public _executor;

    address public immutable _beneficiary;
    uint256 public _jobStartTime; // seconds
    uint256 public immutable _expirationTime;
    uint256 public immutable _jobIntervalSeconds;
    bytes32 public immutable _jobId;
    address public immutable _oracle;
    uint256 public immutable _fee;

    string[] private _urls;
    uint256 private _index;
    string[] private _paths;
    bytes32[] private _expectedResults;
    bytes32 private immutable _rewardsHash;
    bool private _responsePending;
    uint256 private _jobLastRun;
    bool private _jobCompleted;
    bool private _registered;

    /**
     * @dev Initialize a new trigger contract
     * @param beneficiary Reciever of the fund when milestone is delivered
     * @param expiration The expiration of this job. Must be larger than startTime + interval.
     * @param jobId The ID of a Chainlink precoordinator job.
     * @param oracle The address of a Chainlink precoordinator.
     * @param fee The fee of said Chainlink precoordinator.
     * @param urls The ordered list of API URLs that Chainlink will check.
     * @param paths The ordered list of JSON paths that lead to the desired return value from the API.
     * @param expectedResults The ordered list of expected results that will be matched with the returned values from the API.
     **/
    constructor(
        address sender,
        address beneficiary,
        uint256 expiration,
        uint256 interval,
        bytes32 jobId,
        address oracle,
        uint256 fee,
        string[] memory urls,
        string[] memory paths,
        bytes32[] memory expectedResults,
        uint256[] memory rewards
    ) ERC2771Context(0x0000000000000000000000000000000000000000) {
        require(
            (urls.length == paths.length) &&
                (urls.length == expectedResults.length) &&
                (urls.length == rewards.length),
            "AT: Input mismatch"
        );
        setPublicChainlinkToken();
        transferOwnership(sender);
        _beneficiary = beneficiary;
        _expirationTime = expiration;
        _jobIntervalSeconds = interval;
        _jobId = jobId;
        _oracle = oracle;
        _fee = fee;
        _urls = urls;
        _index = 0;
        _paths = paths;
        _expectedResults = expectedResults;
        _rewardsHash = keccak256(abi.encodePacked(rewards));
        _responsePending = false;
        _jobCompleted = false;
    }

    function register(
        IEthSignSARegistryContract registry,
        IEthSignSAModeratorContract moderator,
        IEthSignSAExecutorContract executor
    ) external override {
        require(block.timestamp < _expirationTime, "AT: Invalid expiration");
        require(
            _expirationTime - block.timestamp > _jobIntervalSeconds,
            "AT: Job too short"
        );
        _registry = registry;
        _moderator = moderator;
        _jobStartTime = block.timestamp;
        _jobLastRun = block.timestamp - 1;
        _registry.registerTrigger(this, executor);
        _registered = true;
    }

    function getInfo()
        external
        view
        override
        returns (
            address sender,
            address beneficiary,
            bytes32 rewardsHash,
            uint256 currentIndex
        )
    {
        return (owner(), _beneficiary, _rewardsHash, _index);
    }

    /**
     * @dev Either when some milestones expire or all milestones are done,
     * project can withdraw the remaining dai (in the case expiration)
     * or link (in the case delivery in advance) from the contract
     **/
    function withdraw() external onlyOwner {
        if (!_jobCompleted)
            require(_expirationTime < block.timestamp, "Not expired");
        uint256 remainingLink = _linkInstance.balanceOf(address(this));
        _linkInstance.transfer(owner(), remainingLink);
        emit EthSignSATriggerFundsReclaimed(remainingLink);
    }

    function sendGetRequest() internal returns (bytes32 requestId) {
        require(!_responsePending, "REQ_PENDING");
        Chainlink.Request memory request = buildChainlinkRequest(
            _jobId,
            address(this),
            this.getCallback.selector
        );
        request.add("get", _urls[_index]);
        request.add("path", _paths[_index]);
        _responsePending = true;
        return sendChainlinkRequestTo(_oracle, request, _fee);
    }

    function getCallback(bytes32 requestId, bytes32 result)
        public
        recordChainlinkFulfillment(requestId)
    {
        _responsePending = false;
        emit EthSignSAResultReceived(_expectedResults[_index], result);
        if (result != _expectedResults[_index]) return;
        (
            address sender,
            address beneficiary,
            bytes32 rewardsHash,
            uint256 index
        ) = _executor.getInfo();
        if (
            (owner() != sender) ||
            (_beneficiary != beneficiary) ||
            (_rewardsHash != rewardsHash) ||
            (_index != index)
        ) {
            _jobCompleted = true;
            emit EthSignSAInconsistencyDetected();
            _executor.handleDispute();
            return;
        }
        emit EthSignSAExecutionTriggered(_urls[_index]);
        ++_index;
        if (!_executor.execute()) {
            --_index;
            emit EthSignSAExecutionFailed();
            return;
        }
        if (_index == _urls.length) {
            _jobCompleted = true;
            emit EthSignSAJobCompleted();
        }
    }

    function checkUpkeep(bytes calldata checkData)
        external
        override
        returns (bool upkeepNeeded, bytes memory performData)
    {
        return _checkUpkeep(checkData);
    }

    function _checkUpkeep(bytes memory checkData)
        public
        view
        returns (bool upkeepNeeded, bytes memory performData)
    {
        bool jobCanRun = (block.timestamp > _jobStartTime) &&
            (block.timestamp < _expirationTime);
        bool jobShouldRun = (block.timestamp - _jobLastRun) >=
            _jobIntervalSeconds;
        upkeepNeeded = jobCanRun && jobShouldRun;
        performData = checkData;
        if (_responsePending) upkeepNeeded = false;
        if (_jobCompleted) upkeepNeeded = false;
        if (!_registered) upkeepNeeded = false;
    }

    function performUpkeep(bytes calldata performData) external override {
        (bool upkeepNeeded, ) = _checkUpkeep("0");
        require(upkeepNeeded, "Should not upkeep");
        emit EthSignSAUpkeepPerformed();
        _jobLastRun = block.timestamp;
        sendGetRequest();
    }
}

