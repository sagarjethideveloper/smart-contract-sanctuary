pragma solidity ^0.8.0;

import "@openzeppelin/contracts/utils/Context.sol";
import "@openzeppelin/contracts/utils/math/SafeMath.sol";
import "@openzeppelin/contracts/access/AccessControlEnumerable.sol";
import "@openzeppelin/contracts/token/ERC1155/IERC1155Receiver.sol";
import "@openzeppelin/contracts/security/ReentrancyGuard.sol";
import "@openzeppelin/contracts/security/Pausable.sol";

interface IInfinitySkies{
    function mint(address to, uint256 id, uint256 amount, bytes memory data) external;
    function mintBatch(address to, uint256[] memory ids, uint256[] memory amounts, bytes memory data) external;
    function burnBatch(address account, uint256[] memory ids, uint256[] memory values) external;
    function burn(address account, uint256 id, uint256 value) external;
    function getCategory(uint256 _raw_id) external view returns(uint256, uint256);
    function getRawID(uint256 _category,uint256 _id) external view returns(uint256);
    function capReached(uint256 _id) external view returns(bool);
}

interface IInfinitySkiesRNGConsumer{
    function RNG() external returns(bytes32);
    function fulfilled(bytes32) external returns(bool);
    function results(bytes32) external returns(uint256);
}

contract InfinitySkiesController is Context, AccessControlEnumerable,ReentrancyGuard, Pausable {
    using SafeMath for uint256;
    using SafeMath for uint32;
    
    struct Probability {
        uint256 common;
        uint256 uncommon;
        uint256 rare;
        uint256 epic;
        uint256 legendary;
        uint256 divine;
        uint256 specialty;
    }

    struct Request {
        uint256 id;
        bytes32 requestID;
        bool inQueue;
    }
    
    // contracts to interact with
    IInfinitySkies public InfinitySkiesCollection;
    IInfinitySkiesRNGConsumer public InfinitySkiesRNGConsumer;

    // mappings
    mapping(uint256 => Probability) public Chests;
    mapping(uint256 => bool) public chestSet;

    mapping (uint256 => bool) public exchangeable;
    mapping (uint256 => uint256) public exchanges;
    
    mapping(address => Request) public chestRequests;
        
    // chest_id -> rarity -> list of possible nft ids
    mapping(uint256 => mapping(uint256=> uint256[])) public eligibleIds;

    mapping(uint256 => uint256) public price;
    mapping(uint256 => bool) public purchaseable;

    //events
    event ChestTurnedIn(uint256 id, address user);
    event ChestOpened(bytes32 request_id, uint256 result_id, uint256 chest_id);
    event ChestSet(uint256 chest_id, Probability probability);
    event ExchangeNFT(uint256 id_in, uint256 id_out);
    event ExchangeSet(uint256 id_in, uint256 id_out, bool flag);
    event EligibilityUpdated(uint256 chest_id,uint256 rarity,uint256 outcome_id, uint256 removed);
    event NFTpurchased(uint256 id, address recipient);
    event PurchaseableUpdated(uint256 id,uint256 price,bool flag);
    
    // add modifier for specific roles
    constructor(address _InfinitySkiesCollection, address _InfinitySkiesRNGConsumer) public {
        InfinitySkiesCollection = IInfinitySkies(_InfinitySkiesCollection);
        InfinitySkiesRNGConsumer = IInfinitySkiesRNGConsumer(_InfinitySkiesRNGConsumer);
    }

    //add non reentrant
    function chestTurnIn(uint256 _id) public nonReentrant whenNotPaused {
        // require the balance of the caller is >= 1 for the given category and id
        require(chestSet[_id], "Controller: Chest set"); // checks that the chest is indeed a chest to be opened
        require (!chestRequests[_msgSender()].inQueue, "Controller: Queue");
        
        // burn the id
        InfinitySkiesCollection.burn(_msgSender(), _id, 1);
        
        // make request and store the request, id, and the address
        bytes32 request_id = InfinitySkiesRNGConsumer.RNG();

        // track the request
        chestRequests[_msgSender()] = Request({id: _id, requestID: request_id, inQueue: true});

        //emit turn in
        emit ChestTurnedIn(_id, _msgSender());
    }

    //add non reentrant
    function openChest(uint256 _id) public nonReentrant whenNotPaused {
        //check that they are indeed in queue
        require (chestRequests[_msgSender()].inQueue, "Controller: Queue");

        //check if fulfilled
        require (InfinitySkiesRNGConsumer.fulfilled(chestRequests[_msgSender()].requestID));

        uint256 randomness = InfinitySkiesRNGConsumer.results(chestRequests[_msgSender()].requestID);
        uint256 entropy = uint256(keccak256(abi.encodePacked(block.timestamp,randomness)));

        uint256 rarity = calculateRarity(randomness, _id);
        uint256 result_id = calculateResult(entropy, _id, rarity);

        // mint the new
        InfinitySkiesCollection.mint(_msgSender(), result_id, 1, "");

        chestRequests[_msgSender()].inQueue = false;

        //emit request result
        emit ChestOpened(chestRequests[_msgSender()].requestID, result_id, _id);
    }

    //add a chest and its corresponding id and probability distribution
    function setChest(uint256 _id, uint256[7] memory _probability) public nonReentrant {
        Probability memory _prob = Probability({common: _probability[0], uncommon: _probability[1], rare: _probability[2], epic: _probability[3], legendary: _probability[4],divine: _probability[5], specialty: _probability[6]});
        validateProbabilty(_prob);
        
        Chests[_id] = _prob;
        chestSet[_id] = true;

        //emit chest being set
        emit ChestSet(_id, _prob);
    }

    function validateProbabilty(Probability memory _prob) internal {
        uint256 _total = _prob.common.add(_prob.uncommon).add(_prob.rare).add(_prob.epic).add(_prob.legendary).add(_prob.divine).add(_prob.specialty);
        require(_total == 100_000, "InfinitySkies: Probabilty");
    }


    function exchangeNFT(uint256 _id) public nonReentrant whenNotPaused{
        //check if this id is exchangeable    
        require (exchangeable[_id], "Controller: exchangeable");

        // burn the old
        InfinitySkiesCollection.burn(_msgSender(), _id, 1);

        // mint the new
        InfinitySkiesCollection.mint(_msgSender(), exchanges[_id], 1, "");

        //emit event on exchange
        emit ExchangeNFT(_id, exchanges[_id]);
    }
    
    function setExchange(uint256 _incomingID, uint256 _outgoingID, bool _flag) public {
        exchangeable[_incomingID] = _flag;
        exchanges[_incomingID] = _outgoingID;

        //emit event on exchange set
        emit ExchangeSet(_incomingID, _outgoingID, _flag);
    }


    function purchaseNFT(uint256 id) public payable {
        require(msg.value == price[id], "InfinitySkiesController: price");
        require(purchaseable[id], "InfinitySkiesController: purchaseable");
        require(!InfinitySkiesCollection.capReached(id), "InfinitySkiesController: Cap");
        
        //mint the id
        InfinitySkiesCollection.mint(_msgSender(), id, 1, "");

        //emit purchase
        emit NFTpurchased(id, _msgSender());
    }

    function setPurchase(uint256 id, uint256 _price, bool flag) public {
        price[id] = _price;
        purchaseable[id] = flag;

        emit PurchaseableUpdated(id,_price,flag);
    }

    function pause() external {
        _pause();
    }

    function unpause() external {
        _unpause();
    }
            

    function calculateRarity(uint256 randomness, uint256 id) public returns(uint256) {
        uint256 result = randomness%100000;

        if(0 <= result && result < Chests[id].common){
            //result is common
            return 0;
        } else if(result >= Chests[id].common && result < (Chests[id].common).add(Chests[id].uncommon)){
            //result is uncommon
            return 1;
        }else if(result >= (Chests[id].common).add(Chests[id].uncommon) && result < (Chests[id].common).add(Chests[id].uncommon).add(Chests[id].rare)){
            //result is rare
            return 2;
        }else if(result >= (Chests[id].common).add(Chests[id].uncommon).add(Chests[id].rare) && result < (Chests[id].common).add(Chests[id].uncommon).add(Chests[id].rare).add(Chests[id].epic)){
            //result is epic
            return 3;
        }else if(result >= (Chests[id].common).add(Chests[id].uncommon).add(Chests[id].rare).add(Chests[id].epic) && result < (Chests[id].common).add(Chests[id].uncommon).add(Chests[id].rare).add(Chests[id].epic).add(Chests[id].legendary)){
            //result is legendary
            return 4;
        }else if(result >=(Chests[id].common).add(Chests[id].uncommon).add(Chests[id].rare).add(Chests[id].epic).add(Chests[id].legendary) && result < (Chests[id].common).add(Chests[id].uncommon).add(Chests[id].rare).add(Chests[id].epic).add(Chests[id].legendary).add(Chests[id].divine)){
            //result is divine
            return 5;
        }else if(result >=(Chests[id].common).add(Chests[id].uncommon).add(Chests[id].rare).add(Chests[id].epic).add(Chests[id].legendary).add(Chests[id].divine) && result < 100_000){
            //result is specialty
            return 6;
        }

        revert("Controller: rarity");
    }

    function calculateResult(uint256 randomness, uint256 id, uint256 rarity) public view returns (uint256) {
        
        //given rarity and seed check the given chest id for the corresponding eligible id and return
        uint256 result_idx = randomness%eligibleIds[id][rarity].length;
        uint256 result_id = eligibleIds[id][rarity][result_idx];

        //check if result cap has been hit, if it has try for the next one and so on until it works
        uint256 failstack = 1;

        //
        while(InfinitySkiesCollection.capReached(result_id)) {
            if(failstack > eligibleIds[id][rarity].length){
                revert("InfinitySkiesController: failstack");
            }

            //assign a new one
            result_idx = (randomness.sub(failstack))%eligibleIds[id][rarity].length;
            result_id = eligibleIds[id][rarity][result_idx];
            failstack+=1;
        }

        return result_id;
    }
    
    function addEligibleIds(uint256 chest_id, uint256 rarity, uint256 outcome_id) public {
        eligibleIds[chest_id][rarity].push(outcome_id);

        //emit eligbile ids
        emit EligibilityUpdated(chest_id, rarity, outcome_id, 0);
    }

    function batchAddEligibleIds(uint256 chest_id, uint256 rarity, uint256[] memory outcome_ids) public {
        for(uint i =0; i< outcome_ids.length; i++){
            addEligibleIds(chest_id, rarity, outcome_ids[i]);
        }
    }

    function removeEligibleIds(uint256 chest_id, uint256 rarity, uint256 id_to_remove) public {
        uint256 eleToRemove = eligibleIds[chest_id][rarity][id_to_remove];
        eligibleIds[chest_id][rarity][id_to_remove] = eligibleIds[chest_id][rarity][eligibleIds[chest_id][rarity].length - 1];
        delete eligibleIds[chest_id][rarity][eligibleIds[chest_id][rarity].length - 1];
        eligibleIds[chest_id][rarity].pop();

        // emit remove from pool
        emit EligibilityUpdated(chest_id, rarity, id_to_remove, 1);
    }
}

