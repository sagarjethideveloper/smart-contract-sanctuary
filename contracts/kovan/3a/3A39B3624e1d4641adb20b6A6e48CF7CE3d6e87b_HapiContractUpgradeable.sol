pragma solidity >=0.6.0 <0.8.0;

import "@openzeppelin/contracts-upgradeable/access/OwnableUpgradeable.sol";
import "@openzeppelin/contracts/token/ERC20/SafeERC20.sol";
import "@openzeppelin/contracts/token/ERC20/IERC20.sol";

contract HapiContractUpgradeable is OwnableUpgradeable {
    using SafeMath for uint256;
    using SafeERC20 for IERC20;

    IERC20 private _rewardERC20Token;

    struct Configuration {
        uint256 gasPrice;
        uint256 averageReportGas;
    }
    Configuration private _configuration;

    struct ReporterType {
        string name;
        uint64 rewardFactor;
        bool privileged;
    }
    uint64 private _reporterTypeIdTracker;
    mapping(uint64 => ReporterType) private _reporterTypes;

    struct Reporter {
        string name;
        address account;
        uint64 rate;
        uint64 reporterTypeId;
    }
    uint64 private _reporterIdTracker;
    mapping(uint64 => Reporter) private _reporters;
    mapping(address => uint64) private _reporterIds;

    struct Incident {
        string name;
        uint32 category;
        uint32 timestamp;
        uint64 reporterId;
    }
    uint64 private _incidentIdTracker;
    mapping(uint64 => Incident) private _incidents;

    struct Address {
        uint8 rank;
        uint64 incidentId;
        uint64 reporterId;
    }
    mapping(address => Address) private _addresses;

    event UpdateGasPrice(uint256 gasPrice);
    event UpdateAverageReportGas(uint256 averageReportGas);

    event ReporterTypeCreated(uint64 reporterTypeId, string name, uint64 rewardFactor, bool privileged);
    event ReporterTypeUpdated(uint64 reporterTypeId, string name, uint64 rewardFactor, bool privileged);

    event ReporterCreated(uint64 reporterId, string name, address account, uint64 rate, uint64 reporterTypeId);
    event ReporterUpdated(uint64 reporterId, string name, address account, uint64 rate, uint64 reporterTypeId);

    event IncidentReported(uint64 incidentId, string name, uint32 category, uint32 timestamp, uint64 reporterId);
    event IncidentUpdated(uint64 incidentId, string name, uint32 category, uint32 timestamp, uint64 reporterId);

    event AddressReported(address indexed account, uint8 rank, uint64 incidentId, uint64 reporterId);
    event AddressUpdated(address indexed account, uint8 rank, uint64 incidentId, uint64 reporterId);

    function initialize(address rewardERC20TokenAddress_, uint256 gasPrice_, uint256 averageReportGas_) initializer public {
        __Ownable_init();

        require(rewardERC20TokenAddress_ != address(0), "HapiContract: Invalid reward erc20 token address");
        _rewardERC20Token = IERC20(rewardERC20TokenAddress_);

        _configuration.gasPrice = gasPrice_;
        _configuration.averageReportGas = averageReportGas_;
    }

    modifier onlyReporter() {
        require(_reporters[_reporterIds[_msgSender()]].reporterTypeId != 0, "HapiContract: caller is not active reporter");
        _;
    }

    function getConfiguration()
        public
        view
        returns (
            uint256 gasPrice,
            uint256 averageReportGas,
            address rewardERC20TokenAddress,
            uint256 rewardERC20TokenBalance
        )
    {
        return (
            _configuration.gasPrice,
            _configuration.averageReportGas,
            address(_rewardERC20Token),
            _rewardERC20Token.balanceOf(address(this))
        );
    }

    function getReporterTypeCount() public view returns (uint64) {
        return _reporterTypeIdTracker;
    }

    function getReporterType(uint64 reporterTypeId_)
        public
        view
        returns (
            string memory name,
            uint64 rewardFactor,
            bool privileged
        )
    {
        ReporterType memory reporterType = _reporterTypes[reporterTypeId_];
        return (
            reporterType.name,
            reporterType.rewardFactor,
            reporterType.privileged
        );
    }

    function getReporterCount() public view returns (uint64) {
        return _reporterIdTracker;
    }

    function getReporterId(address account_) public view returns (uint64) {
        return _reporterIds[account_];
    }

    function getReporter(uint64 reporterId_)
        public
        view
        returns (
            string memory name,
            address account,
            uint64 rate,
            uint64 reporterTypeId
        )
    {
        Reporter memory reporter = _reporters[reporterId_];
        return (
            reporter.name,
            reporter.account,
            reporter.rate,
            reporter.reporterTypeId
        );
    }

    function getIncidentCount() public view returns (uint64) {
        return _incidentIdTracker;
    }

    function getIncident(uint64 incidentId_)
        public
        view
        returns (
            string memory name,
            uint32 category,
            uint32 timestamp,
            uint64 reporterId
        )
    {
        Incident memory incident = _incidents[incidentId_];
        return (
            incident.name,
            incident.category,
            incident.timestamp,
            incident.reporterId
        );
    }

    function checkAddress(address account_)
        public
        view
        returns (
            uint8 rank,
            uint64 incidentId,
            uint64 reporterId
        )
    {
        Address memory account = _addresses[account_];
        return (
            account.rank,
            account.incidentId,
            account.reporterId
        );
    }

    function updateGasPrice(uint256 gasPrice_) public onlyReporter {
        uint64 reporterTypeId = _reporters[_reporterIds[_msgSender()]].reporterTypeId;
        require(_reporterTypes[reporterTypeId].privileged, "HapiContract: Reporter has not permissions");

        _configuration.gasPrice = gasPrice_;

        emit UpdateGasPrice(gasPrice_);
    }

    function updateAverageReportGas(uint256 averageReportGas_) public onlyOwner {
        _configuration.averageReportGas = averageReportGas_;

        emit UpdateAverageReportGas(averageReportGas_);
    }

    function addReporterType(string memory name_, uint64 rewardFactor_, bool privileged_) external onlyOwner {
        require(bytes(name_).length != 0, "HapiContract: Invalid name");

        _reporterTypeIdTracker += 1;
        uint64 reporterTypeId = _reporterTypeIdTracker;

        ReporterType memory reporterType;
        reporterType.name = name_;
        reporterType.rewardFactor = rewardFactor_;
        reporterType.privileged = privileged_;

        _reporterTypes[reporterTypeId] = reporterType;

        emit ReporterTypeCreated(reporterTypeId, name_, rewardFactor_, privileged_);
    }

    function updateReporterType(uint64 reporterTypeId_, string memory name_, uint64 rewardFactor_, bool privileged_) external onlyOwner {
        require(reporterTypeId_ > 0 && reporterTypeId_ <= _reporterTypeIdTracker, "HapiContract: ReporterTypeId not exist");
        require(bytes(name_).length != 0, "HapiContract: Invalid name");

        _reporterTypes[reporterTypeId_].name = name_;
        _reporterTypes[reporterTypeId_].rewardFactor = rewardFactor_;
        _reporterTypes[reporterTypeId_].privileged = privileged_;

        emit ReporterTypeUpdated(reporterTypeId_, name_, rewardFactor_, privileged_);
    }

    function addReporter(string memory name_, address account_, uint64 rate_, uint64 reporterTypeId_) external onlyOwner {
        require(bytes(name_).length != 0, "HapiContract: Invalid name");
        require(account_ != address(0), "HapiContract: Invalid account");
        require(_reporterIds[account_] == 0, "HapiContract: Reporter with current account already exists");
        require(reporterTypeId_ <= _reporterTypeIdTracker, "HapiContract: ReporterTypeId not exist");

        _reporterIdTracker += 1;
        uint64 reporterId = _reporterIdTracker;

        Reporter memory reporter;
        reporter.name = name_;
        reporter.account = account_;
        reporter.rate = rate_;
        reporter.reporterTypeId = reporterTypeId_;

        _reporters[reporterId] = reporter;
        _reporterIds[account_] = reporterId;

        emit ReporterCreated(reporterId, name_, account_, rate_, reporterTypeId_);
    }

    function updateReporter(uint64 reporterId_, string memory name_, uint64 rate_, uint64 reporterTypeId_) external onlyOwner {
        require(reporterId_ > 0 && reporterId_ <= _reporterIdTracker, "HapiContract: ReporterId not exist");
        require(bytes(name_).length != 0, "HapiContract: Invalid name");
        require(reporterTypeId_ <= _reporterTypeIdTracker, "HapiContract: ReporterTypeId not exist");

        _reporters[reporterId_].name = name_;
        _reporters[reporterId_].rate = rate_;
        _reporters[reporterId_].reporterTypeId = reporterTypeId_;

        emit ReporterUpdated(reporterId_, name_, _reporters[reporterId_].account, rate_, reporterTypeId_);
    }

    function reportIncident(string memory name_, uint32 category_, uint32 timestamp_) external onlyReporter {
        require(bytes(name_).length != 0, "HapiContract: Invalid name");

        _incidentIdTracker += 1;
        uint64 incidentId = _incidentIdTracker;

        Incident memory incident;
        incident.name = name_;
        incident.category = category_;
        incident.timestamp = timestamp_;
        incident.reporterId = _reporterIds[_msgSender()];

        _incidents[incidentId] = incident;

        emit IncidentReported(incidentId, name_, category_, timestamp_, _reporterIds[_msgSender()]);
    }

    function updateIncident(uint64 incidentId_, string memory name_, uint32 category_) external onlyOwner {
        require(incidentId_ > 0 && incidentId_ <= _incidentIdTracker, "HapiContract: IncidentId not exist");
        require(bytes(name_).length != 0, "HapiContract: Invalid name");

        _incidents[incidentId_].name = name_;
        _incidents[incidentId_].category = category_;

        emit IncidentUpdated(incidentId_, name_, category_, _incidents[incidentId_].timestamp, _incidents[incidentId_].reporterId);
    }

    function reportAddress(address account_, uint8 rank_, uint64 incidentId_) external onlyReporter {
        require(account_ != address(0), "HapiContract: Invalid account");
        require(rank_ > 0 && rank_ <= 10, "HapiContract: Invalid rank");
        require(incidentId_ > 0 && incidentId_ <= _incidentIdTracker, "HapiContract: IncidentId not exist");
        require(rank_ > _addresses[account_].rank, "HapiContract: Rank must be greater than the current value");

        Address memory account;
        account.rank = rank_;
        account.incidentId = incidentId_;
        account.reporterId = _reporterIds[_msgSender()];

        _addresses[account_] = account;

        uint256 reward = _calculateRewardForReporter(_reporterIds[_msgSender()]);
        if (reward > 0) {
            _rewardERC20Token.transfer(_msgSender(), reward);
        }

        emit AddressReported(account_, rank_, incidentId_, _reporterIds[_msgSender()]);
    }

    function updateAddress(address account_, uint8 rank_) external onlyReporter {
        require(account_ != address(0), "HapiContract: Invalid account");
        require(rank_ <= 10, "HapiContract: Invalid rank");

        uint64 reporterTypeId = _reporters[_reporterIds[_msgSender()]].reporterTypeId;
        require(_reporterTypes[reporterTypeId].privileged  || rank_ > _addresses[account_].rank, "HapiContract: Rank must be greater than the current value");

        _addresses[account_].rank = rank_;
        _addresses[account_].reporterId = _reporterIds[_msgSender()];

        emit AddressUpdated(account_, rank_, _addresses[account_].incidentId, _reporterIds[_msgSender()]);
    }

    function _calculateRewardForReporter(uint64 reporterId_) private view returns (uint256) {
        Reporter memory reporter = _reporters[reporterId_];
        return _configuration.gasPrice
            .mul(_configuration.averageReportGas)
            .mul(reporter.rate)
            .mul(_reporterTypes[reporter.reporterTypeId].rewardFactor);
    }
}

