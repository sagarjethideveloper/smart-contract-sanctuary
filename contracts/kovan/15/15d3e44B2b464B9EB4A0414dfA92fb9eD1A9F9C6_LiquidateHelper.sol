pragma solidity 0.7.3;
pragma experimental ABIEncoderV2;

import "./Types.sol";
import "./dex/PriceOracleInterface.sol";

contract LiquidateHelper {
    using SafeMath for uint;

    constructor ()
    {

    }
    struct Vars {
        uint128 current;
        uint32 marketLimit;
        uint8 liquidateStep;
    }
    //ï½ž27000 gas cost one
    function batchQuery(IOpenLev openLev, address[] calldata owners, uint16[] calldata marketIds, bool[] calldata longTokens) external view returns (Vars[] memory results){

        results = new Vars[](owners.length);
        PriceOracleInterface priceOracle = PriceOracleInterface(openLev.priceOracle());
        for (uint i = 0; i < owners.length; i++) {
            address owner = owners[i];
            uint16 marketId = marketIds[i];
            bool longToken = longTokens[i];

            Types.Trade memory trade = openLev.activeTrades(owner, marketId, longToken);
            if (trade.held == 0) {
                results[i] = Vars(0, 0, 0);
                continue;
            }

            Types.MarketVars memory vars;

            Types.Market memory market = openLev.markets(marketId);
            vars.buyPool = longToken ? market.pool1 : market.pool0;
            vars.sellPool = longToken ? market.pool0 : market.pool1;
            vars.buyToken = IERC20(vars.buyPool.underlying());
            vars.sellToken = IERC20(vars.sellPool.underlying());
            vars.marginRatio = market.marginRatio;

            uint borrowed = vars.sellPool.borrowBalanceCurrent(owner);
            (uint buyTokenPrice, uint8 buyTokenDecimals) = priceOracle.getPrice(address(vars.buyToken), address(vars.sellToken));
            uint marketValueCurrent = trade.held.mul(buyTokenPrice).div(10 ** uint(buyTokenDecimals));

            if (marketValueCurrent >= borrowed) {
                results[i] = Vars((uint128)(marketValueCurrent.sub(borrowed).mul(10000).div(borrowed)), vars.marginRatio, trade.liqBlockNum == 0 ? 1 : 2);
            } else {
                results[i] = Vars(0, vars.marginRatio, trade.liqBlockNum == 0 ? 1 : 2);
            }
        }
        return results;
    }

}

interface IOpenLev {

    function activeTrades(address owner, uint16 marketId, bool longToken) external view returns (Types.Trade memory);

    function priceOracle() external view returns (PriceOracleInterface);

    function markets(uint16 marketId) external view returns (Types.Market memory);
}

