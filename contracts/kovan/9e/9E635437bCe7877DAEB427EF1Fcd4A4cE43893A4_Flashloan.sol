pragma experimental ABIEncoderV2;

import "./DydxFlashloanBase.sol";
import "./ICallee.sol";

import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import {
    IUniswapV2Router02
} from "@uniswap/v2-periphery/contracts/interfaces/IUniswapV2Router02.sol";
import {IERC20} from "@openzeppelin/contracts/token/ERC20/IERC20.sol";

contract Flashloan is ICallee, DydxFlashloanBase {
    struct LoanData {
        address beneficiary;
        address tokenLoan;
        address tokenBuy;
        uint256 repayAmount;
    }

    IUniswapV2Router02 uniswap;

    constructor(address uniswapAddress) {
        uniswap = IUniswapV2Router02(uniswapAddress);
    }

    event LogLoanData(
        address beneficiary,
        address tokenLoan,
        address tokenBuy,
        uint256 repayAmount
    );

    event NewArbitrage(address beneficiary, uint256 profit, uint256 timeStamp);

    // This is the function that will be called postLoan
    // i.e. Encode the logic to handle your flashloaned funds here
    function callFunction(
        address sender,
        Account.Info memory account,
        bytes memory data
    ) public override {
        LoanData memory loanData = abi.decode(data, (LoanData));
        address _beneficiary = loanData.beneficiary;
        IERC20 _tokenLoan = IERC20(loanData.tokenLoan);
        IERC20 _tokenBuy = IERC20(loanData.tokenBuy);

        uint256 balOfLoanedToken = _tokenLoan.balanceOf(address(this));

        // Note that you can ignore the line below
        // if your dydx account (this contract in this case)
        // has deposited at least ~2 Wei of assets into the account
        // to balance out the collaterization ratio
        require(
            balOfLoanedToken >= loanData.repayAmount,
            "Not enough funds to repay dydx loan!"
        );

        // Buy token on uniswap
        _tokenLoan.approve(address(uniswap), balOfLoanedToken);
        address[] memory buyPath = new address[](2);
        buyPath[0] = address(_tokenLoan);
        buyPath[1] = address(_tokenBuy);
        uint256[] memory buyMinOuts =
            uniswap.getAmountsOut(balOfLoanedToken, buyPath);
        uniswap.swapExactTokensForTokens(
            balOfLoanedToken,
            buyMinOuts[1],
            buyPath,
            address(this),
            block.timestamp
        );
        // Sell token on uniswap
        address[] memory sellPath = new address[](2);
        sellPath[0] = address(_tokenBuy);
        sellPath[1] = address(_tokenLoan);
        uint256[] memory sellMinOuts =
            uniswap.getAmountsOut(address(this).balance, sellPath);
        uniswap.swapExactTokensForTokens(
            balOfLoanedToken,
            sellMinOuts[1],
            sellPath,
            address(this),
            block.timestamp
        );

        uint256 profit =
            _tokenLoan.balanceOf(address(this)) - loanData.repayAmount;
        _tokenLoan.transfer(_beneficiary, profit);

        emit NewArbitrage(_beneficiary, profit, block.timestamp);
    }

    function initiateFlashLoan(
        address _solo,
        address _tokenLoan,
        address _tokenBuy,
        uint256 _amount
    ) external {
        ISoloMargin solo = ISoloMargin(_solo);

        // Get marketId from token address
        uint256 marketId = _getMarketIdFromTokenAddress(_solo, _tokenLoan);

        // Calculate repay amount (_amount + (2 wei))
        // Approve transfer from
        uint256 repayAmount = _getRepaymentAmountInternal(_amount);
        IERC20(_tokenLoan).approve(_solo, repayAmount);

        // 1. Withdraw $
        // 2. Call callFunction(...)
        // 3. Deposit back $
        Actions.ActionArgs[] memory operations = new Actions.ActionArgs[](3);

        operations[0] = _getWithdrawAction(marketId, _amount);
        operations[1] = _getCallAction(
            // Encode LoanData for callFunction
            abi.encode(
                LoanData({
                    beneficiary: msg.sender,
                    tokenLoan: _tokenLoan,
                    tokenBuy: _tokenBuy,
                    repayAmount: repayAmount
                })
            )
        );

        emit LogLoanData(msg.sender, _tokenLoan, _tokenBuy, repayAmount);

        operations[2] = _getDepositAction(marketId, repayAmount);

        Account.Info[] memory accountInfos = new Account.Info[](1);
        accountInfos[0] = _getAccountInfo();

        solo.operate(accountInfos, operations);
    }
}

