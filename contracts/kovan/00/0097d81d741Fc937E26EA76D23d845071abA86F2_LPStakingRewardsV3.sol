pragma solidity ^0.7.6;

import "./Math.sol";
import "./SafeERC20.sol";
import "./Ownable.sol";
import './libraries/NFTPositionInfo.sol';
import '@uniswap/v3-periphery/contracts/interfaces/INonfungiblePositionManager.sol';
import '@uniswap/v3-core/contracts/interfaces/IUniswapV3Factory.sol';
import '@uniswap/v3-core/contracts/interfaces/IUniswapV3Pool.sol';
import '@openzeppelin/contracts/token/ERC721/IERC721Receiver.sol';

abstract contract ReentrancyGuard {
    uint256 private _guardCounter;

    constructor () {
        _guardCounter = 1;
    }

    modifier nonReentrant() {
        _guardCounter += 1;
        uint256 localCounter = _guardCounter;
        _;
        require(localCounter == _guardCounter, "ReentrancyGuard: reentrant call");
    }
}

contract LPStakingRewardsV3 is Ownable, ReentrancyGuard, IERC721Receiver {
    using KineSafeMath for uint;
    using SafeERC20 for IERC20;

    event NewRewardDistribution(address oldRewardDistribution, address newRewardDistribution);
    event NewRewardDuration(uint oldRewardDuration, uint newRewardDuration);
    event NewRewardReleasePeriod(uint oldRewardReleasePeriod, uint newRewardReleasePeriod);
    event NewCooldownTime(uint oldCooldownTime, uint newCooldownTime);
    event NewSupportedTickRange(int24 oldTickLower, int24 oldTickUpper, int24 newTickLower, int24 newTickUpper);
    event Staked(address indexed user, uint tokenId, uint liquidity);
    event Withdrawn(address indexed user, uint tokenId, uint liquidity);
    event RewardAdded(uint rewardAmount);
    event RewardPaid(address indexed user, uint rewardAmount);

    /**
     * @notice This is for avoiding reward calculation overflow (see https://sips.synthetix.io/sips/sip-77)
     * 1.15792e59 < uint(-1) / 1e18
    */
    uint public constant REWARD_OVERFLOW_CHECK = 1.15792e59;

    IERC20 public rewardsToken;

    IUniswapV3Factory public immutable factory;
    INonfungiblePositionManager public immutable nonfungiblePositionManager;

    address public rewardDistribution;

    uint public startTime;
    uint public rewardReleasePeriod;
    uint public periodFinish = 0;
    uint public claimCooldownTime;
    uint public rewardDuration;
    uint public rewardRate = 0;
    uint public rewardPerLiquidityStored;
    uint public lastUpdateTime;

    // Total staked liquidity
    uint public totalStakedLiquidity = 0;
    // The supported Uni V3 Pool
    IUniswapV3Pool public supportedPool;
    // The supported tick range for position
    int24 public supportedTickLower;
    int24 public supportedTickUpper;

    struct AccountRewardDetail {
        uint lastClaimTime;
        uint rewardPerTokenUpdated;
        uint accruedReward;
    }

    mapping(address => AccountRewardDetail) public accountRewardDetails;

    struct Position {
        address owner;
        // the tokenId
        uint256 tokenId;
        // the liquidity of the position
        uint128 liquidity;
    }

    // The token id user staked， index by account.
    mapping(address => uint[]) public accountStakedTokenIds;

    // The all staked positions index by tokenId.
    mapping(address => mapping(uint => Position)) public accountStakedPositions;

    // The total Liquidity user staked
    mapping(address => uint) public accountTotalStakedLiquidity;
    /////////////////////////////////////////////////////////////////////////


    constructor (address rewardsToken_, address nonfungiblePositionManager_, address factory_, address pool_, uint startTime_) {
        rewardsToken = IERC20(rewardsToken_);
        nonfungiblePositionManager = INonfungiblePositionManager(nonfungiblePositionManager_);
        factory = IUniswapV3Factory(factory_);
        supportedPool = IUniswapV3Pool(pool_);
        startTime = startTime_;
    }

    modifier onlyRewardDistribution() {
        require(_msgSender() == rewardDistribution, "Caller is not reward distribution");
        _;
    }

    modifier checkStart() {
        require(block.timestamp >= startTime, "not started yet");
        _;
    }

    modifier afterCooldown(address staker) {
        require(accountRewardDetails[staker].lastClaimTime.add(claimCooldownTime) < block.timestamp, "claim cooling down");
        _;
    }

    modifier updateReward(address account) {
        rewardPerLiquidityStored = rewardPerToken();
        lastUpdateTime = lastTimeRewardApplicable();
        if (account != address(0)) {
            AccountRewardDetail storage rd = accountRewardDetails[account];
            rd.accruedReward = earned(account);
            rd.rewardPerTokenUpdated = rewardPerLiquidityStored;
            if (rd.lastClaimTime == 0) {
                rd.lastClaimTime = block.timestamp;
            }
        }
        _;
    }

    /// @notice Upon receiving a Uniswap V3 ERC721, check the token info and stake into contract ,start earn reward.
    function onERC721Received(
        address,
        address from,
        uint256 tokenId,
        bytes calldata data
    ) external checkStart updateReward(from) override returns (bytes4) {
        require(
            msg.sender == address(nonfungiblePositionManager),
            'onERC721Received: not a univ3 nft'
        );

        (IUniswapV3Pool pool, int24 tickLower, int24 tickUpper, uint128 liquidity) =
        NFTPositionInfo.getPositionInfo(factory, nonfungiblePositionManager, tokenId);

        require(
            supportedPool == pool, "onERC721Received: Not supported pool"
        );

        require(
            tickLower <= supportedTickLower && tickUpper >= supportedTickUpper, "onERC721Received: Invalid tick range"
        );

        accountStakedPositions[from][tokenId] = Position({owner : from, tokenId : tokenId, liquidity : liquidity});

        accountStakedTokenIds[from].push(tokenId);

        accountTotalStakedLiquidity[from] = accountTotalStakedLiquidity[from].add(liquidity);

        totalStakedLiquidity = totalStakedLiquidity.add(liquidity);

        emit Staked(from, tokenId, liquidity);

        if (data.length > 0) {
            // Nothing
        }

        return this.onERC721Received.selector;
    }


    // Return NFT if anyone transfer NFT to contract by mistake by transferFrom.
    // transferFrom don't call onERC721Received, so the transfer will not trigger stake action.
    function returnNFT(address to, uint256 tokenId) public onlyOwner nonReentrant {
        nonfungiblePositionManager.safeTransferFrom(address(this), to, tokenId, "");
    }

    function withdraw(uint256 tokenId, bytes memory data) public nonReentrant updateReward(msg.sender) {
        require(tokenId > 0, "Invalid tokenId");

        Position memory position = accountStakedPositions[msg.sender][tokenId];

        require(position.owner == msg.sender, 'LPStakingRewardsV3::withdraw: only owner can withdraw token');

        totalStakedLiquidity = totalStakedLiquidity.sub(position.liquidity);

        accountTotalStakedLiquidity[msg.sender] = accountTotalStakedLiquidity[msg.sender].sub(position.liquidity);

        // remove tokenId from accountStakedTokenIds
        uint[] memory stakedTokenIds = accountStakedTokenIds[msg.sender];
        delete accountStakedTokenIds[msg.sender];

        for (uint i = 0; i < stakedTokenIds.length; i++) {
            if (stakedTokenIds[i] != tokenId) {
                // save in new tokenIds array
                accountStakedTokenIds[msg.sender].push(stakedTokenIds[i]);
            } else {
                // remove withdraw tokenId
            }
        }

        delete accountStakedPositions[msg.sender][tokenId];

        nonfungiblePositionManager.safeTransferFrom(address(this), msg.sender, tokenId, data);

        emit Withdrawn(msg.sender, tokenId, position.liquidity);
    }

    function getStakedTokens(address account) public view returns (uint[] memory) {
        return accountStakedTokenIds[account];
    }

    function lastTimeRewardApplicable() public view returns (uint) {
        return Math.min(block.timestamp, periodFinish);
    }

    function rewardPerToken() public view returns (uint) {
        if (totalStakedLiquidity == 0) {
            return rewardPerLiquidityStored;
        }
        return
        rewardPerLiquidityStored.add(
            lastTimeRewardApplicable()
            .sub(lastUpdateTime)
            .mul(rewardRate)
            .mul(1e18)
            .div(totalStakedLiquidity)
        );
    }

    function earned(address account) public view returns (uint) {
        return accountTotalStakedLiquidity[account]
        .mul(rewardPerToken().sub(accountRewardDetails[account].rewardPerTokenUpdated))
        .div(1e18)
        .add(accountRewardDetails[account].accruedReward);
    }

    function claimable(address account) external view returns (uint) {
        uint accountNewAccruedReward = earned(account);
        uint pastTime = block.timestamp.sub(accountRewardDetails[account].lastClaimTime);
        uint maturedReward = rewardReleasePeriod == 0 ? accountNewAccruedReward : accountNewAccruedReward.mul(pastTime).div(rewardReleasePeriod);
        if (maturedReward > accountNewAccruedReward) {
            maturedReward = accountNewAccruedReward;
        }
        return maturedReward;
    }

    function getRewardForDuration() external view returns (uint256) {
        return rewardRate.mul(rewardDuration);
    }

    function getReward() public nonReentrant afterCooldown(msg.sender) updateReward(msg.sender) {
        uint reward = accountRewardDetails[msg.sender].accruedReward;
        if (reward > 0) {
            uint pastTime = block.timestamp.sub(accountRewardDetails[msg.sender].lastClaimTime);
            uint maturedReward = rewardReleasePeriod == 0 ? reward : reward.mul(pastTime).div(rewardReleasePeriod);
            if (maturedReward > reward) {
                maturedReward = reward;
            }

            accountRewardDetails[msg.sender].accruedReward = reward.sub(maturedReward);
            accountRewardDetails[msg.sender].lastClaimTime = block.timestamp;
            rewardsToken.safeTransfer(msg.sender, maturedReward);
            emit RewardPaid(msg.sender, maturedReward);
        }
    }

    function exit(bytes memory data) external {
        // withdraw all staked tokens
        uint[] memory stakedTokenIds = accountStakedTokenIds[msg.sender];
        for (uint i = 0; i < stakedTokenIds.length; i++) {
            withdraw(stakedTokenIds[i], data);
        }

        getReward();
    }

    function notifyRewardAmount(uint reward) external onlyRewardDistribution updateReward(address(0)) {
        if (block.timestamp > startTime) {
            if (block.timestamp >= periodFinish) {
                require(reward < REWARD_OVERFLOW_CHECK, "reward rate will overflow");
                rewardRate = reward.div(rewardDuration);
            } else {
                uint remaining = periodFinish.sub(block.timestamp);
                uint leftover = remaining.mul(rewardRate);
                require(reward.add(leftover) < REWARD_OVERFLOW_CHECK, "reward rate will overflow");
                rewardRate = reward.add(leftover).div(rewardDuration);
            }
            lastUpdateTime = block.timestamp;
            periodFinish = block.timestamp.add(rewardDuration);
            emit RewardAdded(reward);
        } else {
            require(reward < REWARD_OVERFLOW_CHECK, "reward rate will overflow");
            rewardRate = reward.div(rewardDuration);
            lastUpdateTime = startTime;
            periodFinish = startTime.add(rewardDuration);
            emit RewardAdded(reward);
        }
    }

    function _setRewardDistribution(address _rewardDistribution) external onlyOwner {
        address oldRewardDistribution = rewardDistribution;
        rewardDistribution = _rewardDistribution;
        emit NewRewardDistribution(oldRewardDistribution, _rewardDistribution);
    }

    function _setRewardDuration(uint newRewardDuration) external onlyOwner updateReward(address(0)) {
        uint oldRewardDuration = rewardDuration;
        rewardDuration = newRewardDuration;

        if (block.timestamp > startTime) {
            if (block.timestamp >= periodFinish) {
                rewardRate = 0;
            } else {
                uint remaining = periodFinish.sub(block.timestamp);
                uint leftover = remaining.mul(rewardRate);
                rewardRate = leftover.div(rewardDuration);
            }
            lastUpdateTime = block.timestamp;
            periodFinish = block.timestamp.add(rewardDuration);
        } else {
            rewardRate = rewardRate.mul(oldRewardDuration).div(rewardDuration);
            lastUpdateTime = startTime;
            periodFinish = startTime.add(rewardDuration);
        }

        emit NewRewardDuration(oldRewardDuration, newRewardDuration);
    }

    function _setRewardReleasePeriod(uint newRewardReleasePeriod) external onlyOwner updateReward(address(0)) {
        uint oldRewardReleasePeriod = rewardReleasePeriod;
        rewardReleasePeriod = newRewardReleasePeriod;
        emit NewRewardReleasePeriod(oldRewardReleasePeriod, newRewardReleasePeriod);
    }

    function _setCooldownTime(uint newCooldownTime) external onlyOwner {
        uint oldCooldownTime = claimCooldownTime;
        claimCooldownTime = newCooldownTime;
        emit NewCooldownTime(oldCooldownTime, newCooldownTime);
    }

    function _setRewardTickRange(int24 supportedTickLower_, int24 supportedTickUpper_) external onlyOwner {
        int24 oldSupportedTickLower = supportedTickLower;
        int24 oldSupportedTickUpper = supportedTickUpper;

        supportedTickUpper = supportedTickUpper_;
        supportedTickLower = supportedTickLower_;

        emit NewSupportedTickRange(oldSupportedTickLower, oldSupportedTickUpper, supportedTickLower_, supportedTickUpper_);
    }

}

