contract UniPoolWrapper is IPoolWrapper, ControllerRef{
    
    using SafeMath for uint256;
    using Babylonian for uint256;
    
    bytes32 public pool = keccak256("ETH");
    address public override poolAddress;

    uint256 internal WAD = 1e18;

    /// @notice the referenced Uniswap pair contract
    IUniswapV2Pair public pair;

    constructor(
        address _controller,
        address _poolAddress) public ControllerRef(_controller) {
        
        poolAddress = _poolAddress;
        pair = IUniswapV2Pair(_poolAddress);
    }


    /// @notice the address of the non-artha underlying token
    function token() public view returns (address) {
        address token0 = pair.token0();
        if (address(ausd()) == token0) {
            return pair.token1();
        }
        return token0;
    }

    /// @notice pair reserves with ausd listed first
    /// @dev uses the max of pair ausd balance and ausd reserves. Mitigates attack vectors which manipulate the pair balance
    function getReserves()
        public
        view
        returns (uint256 ausdReserves, uint256 tokenReserves)
    {
        address token0 = pair.token0();
        (uint256 reserve0, uint256 reserve1, ) = pair.getReserves();
        (ausdReserves, tokenReserves) = address(ausd()) == token0
            ? (reserve0, reserve1)
            : (reserve1, reserve0);
        return (ausdReserves, tokenReserves);
    }


    function _getTokenToSwap(uint256 tokenReserves, uint256 ausdReserves) internal view returns(uint256){
        
        uint256 price = IPriceFeed(controller().poolPriceFeeds(pool)).price();
        uint256 radicand = ausdReserves.mul(tokenReserves).div(price).mul(1e18);
        uint256 root = radicand.sqrt();
        
        if (root > tokenReserves) {
            return (root - tokenReserves).mul(1000).div(997);
        }

        return 0;
    }


    function swapForRebalance() public override onlyBalancer {


        address token = token();
        (uint256 ausdReserves, uint256 tokenReserves) = getReserves();

        uint256 amount = _getTokenToSwap(tokenReserves, ausdReserves);
        if(amount > 0){

            IPoolBalancer(controller().balancer()).transferToken(token, poolAddress, amount);
            
            uint256 amountOut = UniswapV2Library.getAmountOut(amount, tokenReserves, ausdReserves);
            (uint256 amount0Out, uint256 amount1Out) =
                    pair.token0() == token
                        ? (uint256(0), amountOut)
                        : (amountOut, uint256(0));
            
            pair.swap(amount0Out, amount1Out, address(controller().balancer()), new bytes(0));
            emit SwapForRebalance(address(pair), amountOut, amount);
        }
        

    }

}

