import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@openzeppelin/contracts/token/ERC20/utils/SafeERC20.sol";

import "@uniswap/v3-core/contracts/interfaces/IUniswapV3Factory.sol";
import "./interfaces/INonfungiblePositionManager.sol";
import "@uniswap/v3-periphery/contracts/interfaces/ISwapRouter.sol";
import "@uniswap/v3-core/contracts/interfaces/IUniswapV3Pool.sol";
import "./interfaces/IToken.sol";
import "./libraries/TickMath.sol";
import "./libraries/VaultMath.sol";
import "./LpToken.sol";

contract LiquidityVault is Ownable {
    using SafeERC20 for IERC20;
    struct PoolKey {
        address token0;
        address token1;
        uint24 fee;
    }
    struct PoolState {
        uint256 tokenId;
        uint256 liquidity;
        uint256 sqrtAX96;
        uint256 sqrtBX96;
        IToken lpToken;
        uint24 exitFee;
        uint24 performanceFee;
    }

    uint256 public constant DEADLINE = 10 * 60;
    uint256 public constant FEE_DENOMINATOR = 10**6;
    INonfungiblePositionManager public positionManager;
    ISwapRouter public router;
    IUniswapV3Factory public factory;
    address public feeRecipient;

    address[] private _pools;
    mapping(address => PoolKey) public poolKeys;
    mapping(address => PoolState) public poolStates;
    mapping(address => bool) private _poolSet;

    constructor(
        address _positionManager,
        address _factory,
        address _router,
        address _feeRecipient
    ) {
        positionManager = INonfungiblePositionManager(_positionManager);
        factory = IUniswapV3Factory(_factory);
        router = ISwapRouter(_router);
        feeRecipient = _feeRecipient;
    }

    modifier managedPool(
        address tokenA,
        address tokenB,
        uint24 fee
    ) {
        require(poolExists(tokenA, tokenB, fee), "Pool doesn't exist");
        require(poolStarted(tokenA, tokenB, fee), "Pool is not started");
        _;
    }

    function pools() external view returns (address[] memory) {
        return _pools;
    }

    function poolStarted(
        address tokenA,
        address tokenB,
        uint24 fee
    ) public view returns (bool) {
        address poolAddress = factory.getPool(tokenA, tokenB, fee);
        PoolState storage poolState = poolStates[poolAddress];
        return poolState.tokenId != 0;
    }

    function startPool(
        address tokenA,
        address tokenB,
        uint24 fee,
        uint256 tokenAAmount,
        uint256 tokenBAmount,
        uint256 sqrtAX96,
        uint256 sqrtBX96
    ) external {
        require(poolExists(tokenA, tokenB, fee), "Pool doesn't exist");
        require(!poolStarted(tokenA, tokenB, fee), "Pool already started");
        _deposit(
            tokenA,
            tokenB,
            fee,
            tokenAAmount,
            tokenBAmount,
            sqrtAX96,
            sqrtBX96
        );
    }

    function setFeeRecipient(address _feeRecipient) external onlyOwner {
        feeRecipient = _feeRecipient;
    }

    function deposit(
        address tokenA,
        address tokenB,
        uint24 fee,
        uint256 tokenAAmount,
        uint256 tokenBAmount
    ) external {
        if (tokenA > tokenB) {
            (tokenA, tokenB) = (tokenB, tokenA);
            (tokenAAmount, tokenBAmount) = (tokenBAmount, tokenAAmount);
        }
        _deposit(tokenA, tokenB, fee, tokenAAmount, tokenBAmount, 0, 0);
    }

    function _deposit(
        address token0,
        address token1,
        uint24 fee,
        uint256 token0Amount,
        uint256 token1Amount,
        uint256 sqrtAX96,
        uint256 sqrtBX96
    ) internal {
        address poolAddress = factory.getPool(token0, token1, fee);
        PoolState storage poolState = poolStates[poolAddress];
        bool initial = poolState.tokenId == 0;
        IERC20(token0).safeTransferFrom(
            msg.sender,
            address(this),
            token0Amount
        );
        IERC20(token1).safeTransferFrom(
            msg.sender,
            address(this),
            token1Amount
        );
        uint256 actualAmount0;
        uint256 actualAmount1;
        uint128 liquidity;
        // TODO - convert at optimal rate
        if (initial) {
            (, liquidity, actualAmount0, actualAmount1) = _openPosition(
                token0,
                token1,
                fee,
                sqrtAX96,
                sqrtBX96
            );
        } else {
            (liquidity, actualAmount0, actualAmount1) = positionManager
                .increaseLiquidity(
                INonfungiblePositionManager.IncreaseLiquidityParams({
                    tokenId: poolState.tokenId,
                    amount0Desired: token0Amount,
                    amount1Desired: token1Amount,
                    amount0Min: 0,
                    amount1Min: 0,
                    deadline: block.timestamp + DEADLINE
                })
            );
        }
        poolState.lpToken.mint(msg.sender, liquidity);
        if (token0Amount > actualAmount0) {
            IERC20(token0).safeTransfer(
                msg.sender,
                token0Amount - actualAmount0
            );
        }
        if (token1Amount > actualAmount1) {
            IERC20(token1).safeTransfer(
                msg.sender,
                token1Amount - actualAmount1
            );
        }

        emit Deposited({
            poolAddress: poolAddress,
            tokenA: token0,
            tokenB: token1,
            tokenAAmount: actualAmount0,
            tokenBAmount: actualAmount1,
            lpToken: address(poolState.lpToken),
            lpTokenAmount: liquidity
        });
    }

    function withdraw(
        address tokenA,
        address tokenB,
        uint24 fee,
        uint128 liquidity
    ) external {
        address poolAddress = factory.getPool(tokenA, tokenB, fee);
        PoolState storage poolState = poolStates[poolAddress];
        poolState.lpToken.burnFrom(msg.sender, liquidity);
        (uint256 amountA, uint256 amountB) =
            positionManager.decreaseLiquidity(
                INonfungiblePositionManager.DecreaseLiquidityParams({
                    tokenId: poolState.tokenId,
                    liquidity: liquidity,
                    amount0Min: 0,
                    amount1Min: 0,
                    deadline: block.timestamp + DEADLINE
                })
            );
        (uint256 feesA, uint256 feesB) =
            positionManager.collect(
                INonfungiblePositionManager.CollectParams({
                    tokenId: poolState.tokenId,
                    recipient: address(this),
                    amount0Max: uint128(amountA),
                    amount1Max: uint128(amountB)
                })
            );
        uint256 exitFeesA = (amountA * poolState.exitFee) / FEE_DENOMINATOR;
        uint256 exitFeesB = (amountB * poolState.exitFee) / FEE_DENOMINATOR;
        _transferFees(
            poolAddress,
            tokenA,
            tokenB,
            feesA - amountA,
            feesB - amountB,
            poolState.performanceFee,
            exitFeesA,
            exitFeesB
        );
        IERC20(tokenA).safeTransfer(msg.sender, amountA - exitFeesA);
        IERC20(tokenB).safeTransfer(msg.sender, amountB - exitFeesB);
        emit Withdrawn({
            poolAddress: poolAddress,
            tokenA: tokenA,
            tokenB: tokenB,
            tokenAAmount: amountA,
            tokenBAmount: amountB,
            lpToken: address(poolState.lpToken),
            lpTokenAmount: liquidity
        });
    }

    function addPool(
        address tokenA,
        address tokenB,
        uint24 fee,
        uint24 exitFee,
        uint24 performanceFee
    ) external onlyOwner {
        require(!poolExists(tokenA, tokenB, fee), "Pool already exists");
        if (tokenA > tokenB) {
            (tokenA, tokenB) = (tokenB, tokenA);
        }
        address poolAddress = factory.getPool(tokenA, tokenB, fee);
        IERC20(tokenA).approve(address(positionManager), type(uint256).max);
        IERC20(tokenB).approve(address(positionManager), type(uint256).max);
        IERC20(tokenA).approve(address(router), type(uint256).max);
        IERC20(tokenB).approve(address(router), type(uint256).max);
        LpToken lpToken = new LpToken("MellowLpToken", "MLP");
        _pools.push(poolAddress);
        _poolSet[poolAddress] = true;
        poolKeys[poolAddress] = PoolKey({
            token0: tokenA,
            token1: tokenB,
            fee: fee
        });
        poolStates[poolAddress] = PoolState({
            tokenId: 0,
            liquidity: 0,
            sqrtAX96: 0,
            sqrtBX96: 0,
            lpToken: IToken(lpToken),
            exitFee: exitFee,
            performanceFee: performanceFee
        });
        emit PoolAdded({
            owner: msg.sender,
            poolAddress: poolAddress,
            tokenA: tokenA,
            tokenB: tokenB,
            fee: fee,
            lpToken: address(lpToken)
        });
    }

    function deletePool(
        address tokenA,
        address tokenB,
        uint24 fee
    ) external onlyOwner managedPool(tokenA, tokenB, fee) {
        address poolAddress = factory.getPool(tokenA, tokenB, fee);
        for (uint256 i = 0; i < _pools.length; i++) {
            if (_pools[i] == poolAddress) {
                delete _pools[i];
                break;
            }
        }
        address lpToken = address(poolStates[poolAddress].lpToken);
        delete _poolSet[poolAddress];
        delete poolKeys[poolAddress];
        delete poolStates[poolAddress];
        emit PoolDeleted(msg.sender, poolAddress, tokenA, tokenB, fee, lpToken);
    }

    function updatePool(
        address tokenA,
        address tokenB,
        uint24 fee,
        uint24 exitFee,
        uint24 performanceFee
    ) external onlyOwner {
        require(poolExists(tokenA, tokenB, fee));
        address poolAddress = factory.getPool(tokenA, tokenB, fee);
        PoolState storage poolState = poolStates[poolAddress];
        poolState.exitFee = exitFee;
        poolState.performanceFee = performanceFee;
    }

    function rebalance(
        address tokenA,
        address tokenB,
        uint24 fee,
        uint256 sqrtAX96,
        uint256 sqrtBX96
    ) external managedPool(tokenA, tokenB, fee) {
        if (tokenA > tokenB) {
            (tokenA, tokenB) = (tokenB, tokenA);
            (sqrtAX96, sqrtBX96) = (sqrtBX96, sqrtAX96);
        }
        address poolAddress = factory.getPool(tokenA, tokenB, fee);

        _closePosition(poolAddress, tokenA, tokenB);
        _alignLiquidityBalances(tokenA, tokenB, fee, sqrtAX96, sqrtBX96);
        (uint256 newTokenId, uint128 newLiquidity, , ) =
            _openPosition(tokenA, tokenB, fee, sqrtAX96, sqrtBX96);
        emit Rebalanced({
            owner: msg.sender,
            poolAddress: poolAddress,
            newTokenId: newTokenId,
            liquidity: newLiquidity,
            sqrtAX96: sqrtAX96,
            sqrtBX96: sqrtBX96
        });
    }

    function _openPosition(
        address token0,
        address token1,
        uint24 fee,
        uint256 sqrtAX96,
        uint256 sqrtBX96
    )
        internal
        returns (
            uint256 tokenId,
            uint128 liquidity,
            uint256 actualAmount0,
            uint256 actualAmount1
        )
    {
        int24 tickSpacing = factory.feeAmountTickSpacing(fee);
        int24 aTick =
            (TickMath.getTickAtSqrtRatio(uint160(sqrtAX96)) / tickSpacing) *
                tickSpacing;
        int24 bTick =
            (TickMath.getTickAtSqrtRatio(uint160(sqrtBX96)) / tickSpacing) *
                tickSpacing;
        (tokenId, liquidity, actualAmount0, actualAmount1) = positionManager
            .mint(
            INonfungiblePositionManager.MintParams({
                token0: token0,
                token1: token1,
                fee: fee,
                amount0Desired: IERC20(token0).balanceOf(address(this)),
                amount1Desired: IERC20(token1).balanceOf(address(this)),
                tickLower: aTick,
                tickUpper: bTick,
                amount0Min: 0,
                amount1Min: 0,
                recipient: address(this),
                deadline: block.timestamp + DEADLINE
            })
        );
        address poolAddress = factory.getPool(token0, token1, fee);
        PoolState storage poolState = poolStates[poolAddress];
        poolState.tokenId = tokenId;
        poolState.liquidity = liquidity;
        poolState.sqrtAX96 = sqrtAX96;
        poolState.sqrtBX96 = sqrtBX96;
    }

    function _alignLiquidityBalances(
        address tokenA,
        address tokenB,
        uint24 fee,
        uint256 sqrtAX96,
        uint256 sqrtBX96
    ) internal {
        uint256 tokenAAmount = IERC20(tokenA).balanceOf(address(this));
        uint256 tokenBAmount = IERC20(tokenB).balanceOf(address(this));
        IUniswapV3Pool pool =
            IUniswapV3Pool(factory.getPool(tokenA, tokenB, fee));
        (uint256 sqrtCX96, , , , , , ) = pool.slot0();
        /// TODO: this doesn't account for slippage, fees, etc.
        (uint256 tokenAImbalance, uint256 tokenBImbalance) =
            VaultMath.imbalance(
                tokenAAmount,
                tokenBAmount,
                sqrtAX96,
                sqrtBX96,
                sqrtCX96
            );
        if (tokenAImbalance > 0) {
            router.exactOutputSingle(
                ISwapRouter.ExactOutputSingleParams({
                    tokenIn: tokenB,
                    tokenOut: tokenA,
                    fee: fee,
                    recipient: address(this),
                    deadline: block.timestamp + DEADLINE,
                    amountOut: tokenAImbalance,
                    amountInMaximum: type(uint256).max,
                    sqrtPriceLimitX96: 0
                })
            );
        } else if (tokenBImbalance > 0) {
            router.exactOutputSingle(
                ISwapRouter.ExactOutputSingleParams({
                    tokenIn: tokenA,
                    tokenOut: tokenB,
                    fee: fee,
                    recipient: address(this),
                    deadline: block.timestamp + DEADLINE,
                    amountOut: tokenBImbalance,
                    amountInMaximum: type(uint256).max,
                    sqrtPriceLimitX96: 0
                })
            );
        }
    }

    function _closePosition(
        address poolAddress,
        address token0,
        address token1
    ) internal {
        uint256 tokenId = poolStates[poolAddress].tokenId;
        uint256 performaceFee = poolStates[poolAddress].performanceFee;
        if (tokenId == 0) return;
        PoolState storage poolState = poolStates[poolAddress];
        (, , , , , , , uint128 liq, , , , ) =
            positionManager.positions(tokenId);
        positionManager.decreaseLiquidity(
            INonfungiblePositionManager.DecreaseLiquidityParams({
                tokenId: tokenId,
                liquidity: liq,
                amount0Min: 0,
                amount1Min: 0,
                deadline: block.timestamp + DEADLINE
            })
        );
        (uint256 fees0, uint256 fees1) =
            positionManager.collect(
                INonfungiblePositionManager.CollectParams({
                    tokenId: tokenId,
                    recipient: address(this),
                    amount0Max: type(uint128).max,
                    amount1Max: type(uint128).max
                })
            );
        _transferFees(
            poolAddress,
            token0,
            token1,
            fees0,
            fees1,
            poolState.performanceFee,
            0,
            0
        );
        positionManager.burn(poolState.tokenId);
        delete poolState.tokenId;
    }

    function _transferFees(
        address poolAddress,
        address token0,
        address token1,
        uint256 profitToken0,
        uint256 profitToken1,
        uint24 performanceFee,
        uint256 exitFeeToken0,
        uint256 exitFeeToken1
    ) internal {
        uint256 performanceFeeToken0Amount =
            (profitToken0 * performanceFee) / FEE_DENOMINATOR;
        uint256 performanceFeeToken1Amount =
            (profitToken1 * performanceFee) / FEE_DENOMINATOR;
        IERC20(token0).transfer(
            feeRecipient,
            performanceFeeToken0Amount + exitFeeToken0
        );
        IERC20(token1).transfer(
            feeRecipient,
            performanceFeeToken1Amount + exitFeeToken1
        );
        emit FeesTransferred({
            sender: msg.sender,
            poolAddress: poolAddress,
            performanceFeeToken0Amount: performanceFeeToken0Amount,
            performanceFeeToken1Amount: performanceFeeToken1Amount,
            exitFeeToken0Amount: exitFeeToken0,
            exitFeeToken1Amount: exitFeeToken1
        });
    }

    function poolExists(
        address tokenA,
        address tokenB,
        uint24 fee
    ) public view returns (bool) {
        return _poolSet[factory.getPool(tokenA, tokenB, fee)];
    }

    function getPoolAddress(
        address tokenA,
        address tokenB,
        uint24 fee
    ) public view returns (address) {
        return factory.getPool(tokenA, tokenB, fee);
    }

    event PoolAdded(
        address indexed owner,
        address indexed poolAddress,
        address tokenA,
        address tokenB,
        uint24 fee,
        address lpToken
    );

    event PoolDeleted(
        address indexed owner,
        address indexed poolAddress,
        address tokenA,
        address tokenB,
        uint24 fee,
        address lpToken
    );

    event Rebalanced(
        address indexed owner,
        address indexed poolAddress,
        uint256 newTokenId,
        uint128 liquidity,
        uint256 sqrtAX96,
        uint256 sqrtBX96
    );

    event FeesTransferred(
        address indexed sender,
        address indexed poolAddress,
        uint256 performanceFeeToken0Amount,
        uint256 performanceFeeToken1Amount,
        uint256 exitFeeToken0Amount,
        uint256 exitFeeToken1Amount
    );

    event Deposited(
        address indexed poolAddress,
        address tokenA,
        address tokenB,
        uint256 tokenAAmount,
        uint256 tokenBAmount,
        address lpToken,
        uint256 lpTokenAmount
    );
    event Withdrawn(
        address indexed poolAddress,
        address tokenA,
        address tokenB,
        uint256 tokenAAmount,
        uint256 tokenBAmount,
        address lpToken,
        uint256 lpTokenAmount
    );
}

