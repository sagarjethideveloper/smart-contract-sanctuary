/// @title Helper methods for vault
library VaultMath {
    function imbalance(
        uint256 tokenAAmount,
        uint256 tokenBAmount,
        uint256 sqrtAX96,
        uint256 sqrtBX96,
        uint256 sqrtCX96
    ) internal pure returns (uint256 tokenAImbalance, uint256 tokenBImbalance) {
        tokenAImbalance = 0;
        tokenBImbalance = 0;
        uint256 CX96 = FullMath.mulDiv(sqrtCX96, sqrtCX96, FixedPoint96.Q96);
        uint256 CRX96 = targetTokenRatio(sqrtAX96, sqrtBX96, sqrtCX96);
        uint256 crta = FullMath.mulDiv(CRX96, tokenAAmount, FixedPoint96.Q96);
        if (crta > tokenBAmount) {
            tokenBImbalance = FullMath.mulDiv(
                crta - tokenBAmount,
                CX96,
                CX96 + CRX96
            );
        } else {
            tokenAImbalance = FullMath.mulDiv(
                tokenBAmount - crta,
                FixedPoint96.Q96,
                CX96 + CRX96
            );
        }
