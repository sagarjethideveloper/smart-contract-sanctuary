import '@openzeppelin/contracts/utils/Counters.sol';
import '@openzeppelin/contracts/utils/math/SafeMath.sol';
import '@openzeppelin/contracts/access/Ownable.sol';
import '@openzeppelin/contracts/proxy/utils/Initializable.sol';

import './interfaces/IFactory.sol';
import './interfaces/IGameItem.sol';
import './interfaces/ITokenVault.sol';
import './RENE.sol';

contract Factory is IFactory, Ownable, Initializable {
    using SafeMath for uint256;
    using Counters for Counters.Counter;

    struct GameItemMeta {
        bytes32 externalId;
        uint256 weight;
    }

    uint256 mintingRate;

    // nft contract
    RENE public rene;
    IGameItem public nft;
    ITokenVault public vault;

    // map between external ID and token id
    mapping(bytes32 => uint256) private _externalToTokenIds;
    // map between token ID and metadata
    mapping(uint256 => GameItemMeta) private _tokenMetas;
    // list of all token IDs
    uint256[] _tokenIds;

    // current token id
    Counters.Counter private _currentTokenId;

    /*                                            Admin Public Functions                                             */

    /**
     * @dev initializer
     * @param _rene RENE contract address
     * @param _nft NFT contract address
     * @param _mintingRate rate of RENE to mint to the vault when mint NFT (0-100)
     */
    function initialize(
        RENE _rene,
        address _nft,
        uint256 _mintingRate
    ) external initializer onlyOwner {
        require(_nft != address(0), 'Factory: NFT contract is zero address');
        require(_mintingRate <= 100, 'Factory: invalid minting rate');

        rene = _rene;
        nft = IGameItem(_nft);
        mintingRate = uint256(10**18).mul(_mintingRate).div(100);
    }

    /**
     * @dev Updates NFT contract address
     * @param _nft NFT contract address
     */
    function setNFTContract(address _nft) external onlyOwner {
        require(_nft != address(0), 'Factory: NFT contract is zero address');

        nft = IGameItem(_nft);
    }

    /**
     * @dev Updates RENE minting rate
     * @param _mintingRate rate of RENE to mint to the vault when mint NFT (0-100)
     */
    function setMintingRate(uint256 _mintingRate) external onlyOwner {
        require(_mintingRate <= 100, 'Factory: invalid minting rate');

        mintingRate = uint256(10**18).div(100).mul(_mintingRate);
    }

    /**
     * @dev Mints asset(s) in accordance to a specific address with an _externalId.
     * See {IGameItemFactory-mint}
     */
    function mint(
        address _toAddress,
        bytes32 _externalId,
        uint256 _weight,
        bytes calldata _data
    ) external override onlyOwner returns (uint256) {
        require(!_externalIdExists(_externalId), 'Factory: already minted');
        require(_weight > 0, 'Factory: weight is zero');

        uint256 _id = _getNextTokenId();

        GameItemMeta memory meta = GameItemMeta(_externalId, _weight);
        _externalToTokenIds[_externalId] = _id;
        _tokenMetas[_id] = meta;
        _tokenIds.push(_id);

        // mint NFT
        nft.mint(_toAddress, _id, _data);

        // mint RENE
        uint256 reneToMint = _weight.mul(mintingRate).div(10**18);
        rene.mint(address(vault), reneToMint);

        return _id;
    }

    /*                                            Utility Public Functions                                            */

    /**
     * Retrieves the last global snapshot index, if any.
     * See {IGameItemFactory-lastTokenIdIndex}
     */
    function lastTokenIdIndex() external view override returns (uint256) {
        return _tokenIds.length - 1;
    }

    /**
     * Retrieves the token ID at specified index.
     * See {IGameItemFactory-tokenId}
     */
    function tokenId(uint256 _index) external view override returns (uint256) {
        require(_index < _tokenIds.length, 'Factory: index out of bound');

        return _tokenIds[_index];
    }

    /**
     * @dev Returns the weight for a token ID
     * See {IGameItemFactory-tokenWeight}
     */
    function tokenWeight(uint256 _id) external view override returns (uint256) {
        require(_exists(_id), 'Factory: nonexistent token');

        return _tokenMetas[_id].weight;
    }

    /*                                            Utility Private Functions                                           */

    /**
     * @dev Returns whether the specified token exists by checking to see if it has metadata
     * @param _id uint256 ID of the token to query the existence of
     * @return bool whether the token exists
     */
    function _exists(uint256 _id) internal view returns (bool) {
        return _tokenMetas[_id].weight != 0;
    }

    /**
     * @dev Returns whether the specified external ID exists by checking to see if it has an token id
     * @param _externalId external id of the token to query the existence of
     * @return bool whether the external ID exists
     */
    function _externalIdExists(bytes32 _externalId) internal view returns (bool) {
        return _externalToTokenIds[_externalId] != 0;
    }

    /**
     * @dev calculates the next token ID based on value of _currentTokenId
     * @return uint256 for the next token ID
     */
    function _getNextTokenId() private returns (uint256) {
        _currentTokenId.increment();
        return _currentTokenId.current();
    }
}

