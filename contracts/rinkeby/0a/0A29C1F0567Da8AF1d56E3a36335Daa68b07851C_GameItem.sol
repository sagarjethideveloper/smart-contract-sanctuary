contract GameItem is IGameItem, ERC1155NFTInventory, Ownable, Initializable {
    using Strings for string;

    // Contract name
    string public name = 'Rene Game Item NFTs';
    // Contract symbol
    string public symbol = 'RENFT';
    // base metadata uri
    string public baseURI;

    // factory address
    address public factory;

    modifier onlyFactory() {
        require(_msgSender() == factory, 'GameItem: must be factory');
        _;
    }

    constructor() {}

    /**
     * @dev initializer
     * @param _baseURI base metadata uri
     * @param _factory factory contract address
     */
    function initialize(string memory _baseURI, address _factory) external initializer onlyOwner {
        baseURI = _baseURI;
        factory = _factory;
    }

    /* @dev Returns the URI for a token ID
     * @param _id uint256 ID of the token to query
     * @return token URI
     */
    function uri(uint256 _id) public view override returns (string memory) {
        return string(abi.encodePacked(baseURI, Strings.toString(_id)));
    }

    /*                                             Admin Public Functions                                             */

    /**
     * @dev Mint a new token with specified ID and assigns to an address
     * See {IGameItem-mint}
