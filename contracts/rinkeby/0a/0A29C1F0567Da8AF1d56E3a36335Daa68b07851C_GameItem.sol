    function mint(
        address _owner,
        uint256 _id,
        bytes calldata _data
    ) external override onlyFactory {
        require(_owner != address(0), 'GameItem: create to the zero address');
        require(!_exists(_id), 'GameItem: id already exists');

        _mint(_owner, _id, 1, _data);
    }

    function setFactory(address _factory) external onlyOwner {
        require(_factory != address(0), "GameItem: Factory can't be zero address");
        factory = _factory;
    }

