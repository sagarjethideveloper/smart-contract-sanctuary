import "@openzeppelin/contracts/utils/Counters.sol";
import "./LimitedNimSupply.sol";

// =======================================================================
// RANDOM TOKEN ASSIGNMENT
// =======================================================================
abstract contract RandomlyAssignedNim is LimitedNimSupply {
    using Counters for Counters.Counter;

    // Keep track of how many we have minted
    Counters.Counter public nimCount;

    // Used for random index assignment
    uint256 internal nonce = 0;
    uint256[MAX_NIM_COUNT] internal indices;

    // Enure that there are still available nims
    modifier ensureAvailability() {
        require(nimCount.current() < MAX_NIM_COUNT, "No more Nims available");
        _;
    }

    function randomIndex() internal returns (uint256) {
        uint256 totalSize = MAX_NIM_COUNT - nimCount.current();
        uint256 index = uint256(
            keccak256(
                abi.encodePacked(nonce, msg.sender, block.difficulty, block.timestamp)
            )
        ) % totalSize;
        uint256 value = 0;

        if (indices[index] != 0) {
            value = indices[index];
        } else {
            value = index;
        }

        // Move last value to selected position
        if (indices[totalSize - 1] == 0) {
            // Array position not initialized, so use position
            indices[index] = totalSize - 1;
        } else {
            // Array position holds a value so use that
            indices[index] = indices[totalSize - 1];
        }

        nonce++;

        // There goes another one
        nimCount.increment();

        // Don't allow a zero index, start counting at 1
        return value + 1;
    }
}

