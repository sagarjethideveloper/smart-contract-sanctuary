        require(_exists(tokenId), "ERC721Metadata: URI query for nonexistent token");

        uint8 choice = chosenNim(tokenId);
        return choice > 0
            ? string(
                abi.encodePacked(
                    _baseURI(), "/", tokenId.toString(), "_", choice.toString(), ".json"
                )
            ) : '';
    }
}

