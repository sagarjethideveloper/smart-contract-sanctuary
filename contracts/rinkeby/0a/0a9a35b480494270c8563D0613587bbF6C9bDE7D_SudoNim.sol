        require(msg.sender == ownerOf(tokenId), "You must be the owner of the Nim to choose.");
        require(chosen > 0 && chosen <= 3, "You can only choose Nim 1, 2 or 3.");
        require(_chosenNim[tokenId] == 0, "You can only choose your nim outfit once.");

        _chosenNim[tokenId] = chosen;

