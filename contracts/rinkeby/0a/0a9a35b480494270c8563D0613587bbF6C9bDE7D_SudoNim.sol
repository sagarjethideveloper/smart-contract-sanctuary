import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/token/ERC721/ERC721.sol";
import "@openzeppelin/contracts/utils/Counters.sol";

import "./ChoosableNim.sol";
import "./LimitedNimSupply.sol";
import "./OnePerWallet.sol";
import "./RandomlyAssignedNim.sol";
import "./SetsSaleStart.sol";
import "./UpdatesProfileLinks.sol";
import "./HasContractMetaData.sol";
import "./HasSecondarySaleFees.sol";

contract SudoNim is
    HasSecondarySaleFees,
    ERC721,
    OnePerWallet,
    ChoosableNim,
    UpdatesProfileLinks,
    LimitedNimSupply,
    RandomlyAssignedNim,
    Ownable,
    SetsSaleStart,
    HasContractMetaData
{
    using Counters for Counters.Counter;

    address payable internal sudodao;
    uint256 public price = 1 ether / 10;
    string public cid;

    // Instantiate the SudoNim Contract
    constructor(
        address payable _sudodao,
        string memory _cid,
        uint256 _saleStart,
        string memory _contractMetaDataURI
    )
        ERC721("IIIIIII", "IIII")
        SetsSaleStart(_saleStart)
        HasContractMetaData(_contractMetaDataURI)
    {
        sudodao = _sudodao;
        cid = _cid;
    }

    // Mint one of the previously rolled nims
    function mint() external payable afterSaleStart onePerWallet ensureAvailability {
        require(msg.value >= price, "Sorry it is 0.1ETH, friend");

        sudodao.transfer(msg.value);

        uint256 newNim = randomIndex();

        _safeMint(msg.sender, newNim);
    }

    // Get the tokenURI for a specific nim
    function tokenURI(uint256 tokenId)
        public view override(ChoosableNim, ERC721)
        returns (string memory)
    {
        return super.tokenURI(tokenId);
    }

    // Configure the baseURI for the tokenURI method.
    function _baseURI() internal view override returns (string memory) {
        return string(abi.encodePacked("ipfs://", cid));
    }

    // Override for ERC721, OnePerWallet
    function _mint(address to, uint256 tokenId) internal override(ERC721, OnePerWallet) {
        super._mint(to, tokenId);
    }

    // Override for ERC721, OnePerWallet
    function _transfer(address from, address to, uint256 tokenId) internal override(ERC721, OnePerWallet) {
        super._transfer(from, to, tokenId);
    }

    // Implement the `HasSecondarySalesFees` Contract
    function getFeeRecipients(uint256) public view override returns (address payable[] memory) {
        address payable[] memory recipient;
        recipient[0] = sudodao;
        return recipient;
    }

    // Implement the `HasSecondarySalesFees` Contract
    function getFeeBps(uint256) public pure override returns (uint256[] memory) {
        uint256[] memory bps = new uint256[](1);
        bps[0] = 1000;
        return bps;
    }

    // We support the `HasSecondarySalesFees` Interface
    function supportsInterface(bytes4 interfaceId) public view override(ERC721, ERC165) returns (bool) {
        return interfaceId == type(HasSecondarySaleFees).interfaceId
            || ERC721.supportsInterface(interfaceId);
    }
}

