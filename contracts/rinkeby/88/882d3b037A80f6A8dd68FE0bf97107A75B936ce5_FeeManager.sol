pragma solidity 0.8.0;

import "./libs/SafeMath.sol";
import '@openzeppelin/contracts/token/ERC20/IERC20.sol';
import "./interfaces/IPancakeRouter02.sol";
import "./interfaces/IPancakePair.sol";
import "./interfaces/IMoneyPot.sol";

/*
* The FeeManager is a conract which allows to unbind LP token and swap it into reward token, then send it to the MoneyPot contract
*/
contract FeeManager {
    using SafeMath for uint;

    address public DFIANCE_Address;
    address public owner;
    address public rewardToken;

    IMoneyPot public moneyPot;
    IPancakeRouter02 public router;

    constructor (address _DFIANCE_Address) public {
        owner = msg.sender;
        DFIANCE_Address = _DFIANCE_Address;
    }

    modifier OnlyOwner() {
        require(msg.sender == owner, "caller is not the owner");
        _;
    }

    function sendFeesToMoneyPot(address _pair) external {
        removeLiquidityToToken(_pair);
        
        (address token0, address token1) = (IPancakePair(_pair).token0(), IPancakePair(_pair).token1());
        address _rewardToken =  moneyPot.getRewardToken();
        
        swapBalanceToToken(token0, _rewardToken);
        swapBalanceToToken(token1, _rewardToken);

        moneyPot.updateReceived(IERC20(_rewardToken).balanceOf(address(this))); // sends information to the money pot for update token received
        IERC20(_rewardToken).transfer(address(moneyPot), IERC20(_rewardToken).balanceOf(address(this)));
    }

    function removeLiquidityToToken(address _token) private {
        IPancakePair _pair = IPancakePair(_token);
        uint256 _amount = _pair.balanceOf(address(this));
        address token0 = _pair.token0();
        address token1 = _pair.token1();

        _pair.approve(address(router), _amount);
        router.removeLiquidity(token0, token1, _amount, 0, 0, address(this), block.timestamp.add(100));
    }

    function swapBalanceToToken(address _token0, address _token1) private {
        require(_token0 != address(DFIANCE_Address), "rads can only be burn");
        uint256 _amount = IERC20(_token0).balanceOf(address(this));
        IERC20(_token0).approve(address(router), _amount);
        address[] memory path = new address[](2);
        path[0] = _token0;
        path[1] = _token1;
        router.swapExactTokensForTokens(_amount, 0, path, address(this), block.timestamp.add(100));
    }

    function setMoneyPot(address _moneyPot) external OnlyOwner {
        require(moneyPot == IMoneyPot(address(0))); // can only be defined once

        moneyPot = IMoneyPot(_moneyPot);
        rewardToken = moneyPot.getRewardToken();
    }

    function setRouterAddress(address _router) external OnlyOwner {
        router = IPancakeRouter02(_router);
    }

}

