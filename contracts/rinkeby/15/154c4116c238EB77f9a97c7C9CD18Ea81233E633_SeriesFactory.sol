pragma solidity ^0.8.6;

import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/token/ERC721/IERC721.sol";
import "@openzeppelin/contracts/proxy/Clones.sol";

error AlreadyMinted();

interface ISeries {
    function initialize(
        string calldata _name,
        string calldata _symbol,
        uint256 _totalSupply,
        bytes calldata _ipfsCid
    ) external;
}

contract SeriesFactory is Ownable {
    mapping(bytes => bool) public minted;
    address public seriesImplementation;

    event SeriesCreated(address location, address owner);

    constructor(address _seriesImplementation) {
        seriesImplementation = _seriesImplementation;
    }

    function createSeries(
        string calldata _name,
        string calldata _symbol,
        uint256 _totalSupply,
        bytes calldata _ipfsCid
    ) external onlyOwner {
        // all relevant checks are done in the series contract,
        // so no double checks are performed
        ISeries _series = ISeries(Clones.clone(seriesImplementation));
        _series.initialize(_name, _symbol, _totalSupply, _ipfsCid);
        for (uint256 _tokenId = 1; _tokenId <= _totalSupply; _tokenId++)
            IERC721(address(_series)).safeTransferFrom(
                address(this),
                msg.sender,
                _tokenId
            );
        emit SeriesCreated(address(_series), msg.sender);
    }
}

