pragma solidity ^0.7.6;

import "@openzeppelin/contracts/token/ERC20/SafeERC20.sol";
import "@openzeppelin/contracts/math/SafeMath.sol";
import "@openzeppelin/contracts/access/Ownable.sol";

contract Launchpad is Ownable {
    using SafeMath for uint256;

    struct PresaleItem {
        address ownerAddress;
        address tokenAddress;
        uint256 presaleRate;
        uint256 softCap;
        uint256 hardCap;
        uint256 minimumContributionLimit;
        uint256 maximumContributionLimit;
        uint256 liquidityPercent;
        uint256 listingRate;
        uint256 startTime;
        uint256 endTime;
        uint256 unlockTime;
        bool isPublic;
        bool isCanceled;
    }

    address public launchpadOwnerAddress;
    uint256 public presaleId;

    uint256[] public allPresaleIds;
    mapping(address => uint256[]) public presaleIdsByOwnerAddress;
    mapping(uint256 => PresaleItem) public presaleItems;
    mapping(uint256 => mapping(address => bool)) public whiteListedAddresses;

    mapping(uint256 => uint256) public amountRaisedByPresaleId;
    mapping(uint256 => mapping(address => uint256)) public amountContributed;

    /* Events */
    event LogCreatePresale(
        uint256 id,
        address ownerAddress,
        address tokenAddress,
        uint256 presaleRate,
        uint256 softCap,
        uint256 hardCap,
        uint256 minimumContributionLimit,
        uint256 maximumContributionLimit,
        uint256 liquidityPercent,
        uint256 listingRate,
        uint256 startTime,
        uint256 endTime,
        uint256 unlockTime
    );
    event LogContributeToPresale(uint256 id, uint256 amount);

    /* Modifiers */
    modifier onlyPresaleOwner(uint256 _id) {
        require(_id <= presaleId, "overflow");
        PresaleItem storage obj = presaleItems[_id];
        require(
            obj.ownerAddress == msg.sender ||
                launchpadOwnerAddress == msg.sender,
            "only owner can excute"
        );
        _;
    }
    modifier onlyActivePresale(uint256 _id) {
        PresaleItem storage obj = presaleItems[_id];
        require(obj.endTime >= block.timestamp, "Presale ended");
        require(obj.isCanceled == true, "Presale canceled");
        _;
    }
    modifier onlyWhitelistedAddress(uint256 _id) {
        PresaleItem storage obj = presaleItems[_id];
        require(
            obj.isPublic == true ||
                whiteListedAddresses[_id][msg.sender] == true,
            "You are not whitelisted"
        );
        _;
    }

    //Constructor
    constructor() public {
        launchpadOwnerAddress = msg.sender;
    }

    //Update Owner Address
    function setOwnerAddress(address _OwnerAddress) external onlyOwner {
        launchpadOwnerAddress = _OwnerAddress;
    }

    //Create PresaleItem
    function createPresale(
        address _tokenAddress,
        uint256 _presaleRate,
        uint256 _softCap,
        uint256 _hardCap,
        uint256 _minimumContributionLimit,
        uint256 _maximumContributionLimit,
        uint256 _liquidityPercent,
        uint256 _listingRate,
        uint256 _startTime,
        uint256 _endTime,
        uint256 _unlockTime
    ) external returns (uint256 _id) {
        require(_presaleRate > _listingRate, "PresaleRate > ListingRate, ok?");
        require(_hardCap >= _softCap, "Hardcap >= SoftCap, ok?");
        require(_hardCap <= _softCap.mul(2), "Hardcap/2 <= SoftCap, ok?");
        require(
            _maximumContributionLimit >= _minimumContributionLimit,
            "Wrong contributon limit"
        );
        require(_liquidityPercent > 50, "Add at least 50% liquidity");
        require(
            block.timestamp.add(600) <= _startTime,
            "Start time must be at least 10 minutes from current time!"
        );
        require(
            _startTime.add(600) <= _endTime,
            "End time must be at least 10 minutes from start time!"
        );
        require(
            _endTime.add(2592000) <= _unlockTime,
            "Liquidity Lock time must be at least 1 month after end Time!"
        );

        address _ownerAddress = msg.sender;
        _id = ++presaleId;

        presaleItems[_id].ownerAddress = _ownerAddress;
        presaleItems[_id].tokenAddress = _tokenAddress;
        presaleItems[_id].presaleRate = _presaleRate;
        presaleItems[_id].softCap = _softCap;
        presaleItems[_id].hardCap = _hardCap;
        presaleItems[_id].minimumContributionLimit = _minimumContributionLimit;
        presaleItems[_id].maximumContributionLimit = _maximumContributionLimit;
        presaleItems[_id].liquidityPercent = _liquidityPercent;
        presaleItems[_id].listingRate = _listingRate;
        presaleItems[_id].startTime = _startTime;
        presaleItems[_id].endTime = _endTime;
        presaleItems[_id].unlockTime = _unlockTime;
        presaleItems[_id].isPublic = true;
        presaleItems[_id].isCanceled = false;

        allPresaleIds.push(_id);
        presaleIdsByOwnerAddress[_ownerAddress].push(_id);

        amountRaisedByPresaleId[_id] = 0;

        emit LogCreatePresale(
            _id,
            _ownerAddress,
            _tokenAddress,
            _presaleRate,
            _softCap,
            _hardCap,
            _minimumContributionLimit,
            _maximumContributionLimit,
            _liquidityPercent,
            _listingRate,
            _startTime,
            _endTime,
            _unlockTime
        );
    }

    //Set Presale Owner
    function setPresaleOwner(uint256 _id, address _ownerAddress)
        external
        onlyPresaleOwner(_id)
        onlyActivePresale(_id)
    {
        presaleItems[_id].ownerAddress = _ownerAddress;
    }

    //Set presale permission, available for everyone or only whitelisted addresses
    function setPresalePermission(uint256 _id, bool _isPublic)
        external
        onlyPresaleOwner(_id)
        onlyActivePresale(_id)
    {
        presaleItems[_id].isPublic = _isPublic;
    }

    //Set/Remove Whitelisted addresses
    function setWhitelistedAddresses(uint256 _id, address[] memory _addresses)
        external
        onlyPresaleOwner(_id)
        onlyActivePresale(_id)
    {
        for (uint256 i = 0; i < _addresses.length; i++) {
            whiteListedAddresses[_id][_addresses[i]] = true;
        }
    }

    function addAddressToWhitelist(uint256 _id, address _address)
        external
        onlyPresaleOwner(_id)
        onlyActivePresale(_id)
    {
        whiteListedAddresses[_id][_address] = true;
    }

    function removeAddressFromWhitelist(uint256 _id, address _address)
        external
        onlyPresaleOwner(_id)
        onlyActivePresale(_id)
    {
        whiteListedAddresses[_id][_address] = false;
    }

    //Participate Presale
    function contributeToPresale(uint256 _id)
        external
        payable
        onlyActivePresale(_id)
        onlyWhitelistedAddress(_id)
    {
        PresaleItem storage obj = presaleItems[_id];
        require(
            amountRaisedByPresaleId[_id].add(msg.value) <= obj.hardCap,
            "Hardcap overflowing"
        );
        require(
            amountContributed[_id][msg.sender].add(msg.value) <=
                obj.maximumContributionLimit,
            "Max limit per wallet overflowing"
        );
        require(
            amountContributed[_id][msg.sender].add(msg.value) >=
                obj.minimumContributionLimit,
            "Do more than min limit per wallet"
        );

        amountContributed[_id][msg.sender] = amountContributed[_id][msg.sender]
            .add(msg.value);
        amountRaisedByPresaleId[_id] = amountRaisedByPresaleId[_id].add(
            msg.value
        );
        emit LogContributeToPresale(_id, msg.value);
    }
}

