pragma solidity ^0.7.3;

import "@openzeppelin/contracts/utils/Counters.sol";
import "@openzeppelin/contracts/cryptography/ECDSA.sol";
import "@openzeppelin/contracts/access/Ownable.sol";

contract Verifier is Ownable {
    using Counters for Counters.Counter;

    bytes32 private immutable _PERMIT_TYPEHASH =
        keccak256(
            "Permit(address collection,address buyer,uint256 cardId,uint256 nonce,uint256 deadline)"
        );

    mapping(address => Counters.Counter) private _nonces;
    mapping(address => bool) private _trustedSignerRegistry;

    constructor() {}

    function nonces(address owner) external view returns (uint256) {
        return _nonces[owner].current();
    }

    /**
     * @dev allows owner to add trusted signer
     * @param _signer signer
     */
    function addTrustedSigner(address _signer) external onlyOwner {
        require(_signer != address(0), "Verifier: zero address");
        _trustedSignerRegistry[_signer] = true;
    }

    /**
     * @dev allows owner to remove trusted signer
     * @param _signer signer
     */
    function removeTrustedSigner(address _signer) external onlyOwner {
        require(_trustedSignerRegistry[_signer], "Verifier: already removed");
        _trustedSignerRegistry[_signer] = false;
    }

    /**
     * @dev return the status of signer
     * @param _signer signer
     */
    function isTrustedSigner(address _signer) external view returns (bool) {
        return _trustedSignerRegistry[_signer];
    }

    // TODO: rename
    /**
     * @dev See {ILaunchpadVerifier-permit}.
     */
    function permit(
        address collection,
        address buyer,
        address cardId,
        uint256 deadline,
        uint8 v,
        bytes32 r,
        bytes32 s
    ) public virtual {
        require(block.timestamp <= deadline, "LaunchpadVerifier: expired deadline");

        bytes32 structHash =
            keccak256(
                abi.encode(
                    _PERMIT_TYPEHASH,
                    collection,
                    buyer,
                    cardId,
                    _nonces[buyer].current(),
                    deadline
                )
            );

        bytes32 hash = ECDSA.toEthSignedMessageHash(structHash);

        address signer = ECDSA.recover(hash, v, r, s);
        require(_trustedSignerRegistry[signer], "LaunchpadVerifier: invalid signature or data");

        _nonces[buyer].increment();
    }
}

