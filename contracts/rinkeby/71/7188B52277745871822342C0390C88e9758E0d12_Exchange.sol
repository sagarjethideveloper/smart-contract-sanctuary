pragma solidity >0.6.0;

import '@openzeppelin/contracts/access/Ownable.sol';
import '@openzeppelin/contracts/token/ERC20/IERC20.sol';
import '@openzeppelin/contracts/math/SafeMath.sol';

contract Exchange is Ownable {
  using SafeMath for uint256;

  struct PoolInfo {
    uint256 price;
    uint256 totalAmount;
    uint256 minAmount;
    bool locked;
    uint256 depositAmount;
  }

  PoolInfo[] public pools;
  uint256 public maxAmount;
  IERC20 public token;
  mapping(address => bool) public admins;
  mapping(address => uint256) public userHoldings;
  mapping(address => mapping(uint256 => uint256)) public userInfo;

  event Buy(address indexed user, uint256 indexed pid, uint256 amount);
  event Withdraw(address indexed user, uint256 indexed pid, uint256 amount);

  constructor(address _token, uint256 _maxAmount) public {
    token = IERC20(_token);
    maxAmount = _maxAmount;
  }

  modifier onlyAdmin() {
    require(admins[_msgSender()], 'Caller is not admin');
    _;
  }

  function updateAdmin(address addr, bool _res) external onlyOwner {
    admins[addr] = _res;
  }

  function ownerWithdraw() external onlyOwner {
    msg.sender.transfer(address(this).balance);
  }

  function ownerWithdrawTokens() external onlyOwner {
    token.transfer(msg.sender, token.balanceOf(address(this)));
  }

  function updateMaxAmount(uint256 _maxAmount) external onlyOwner {
    maxAmount = _maxAmount;
  }

  function addPool(
    uint256 _price,
    uint256 _totalAmount,
    uint256 _minAmount,
    bool _locked
  ) external onlyOwner {
    pools.push(
      PoolInfo({
        price: _price,
        totalAmount: _totalAmount,
        minAmount: _minAmount,
        locked: _locked,
        depositAmount: 0
      })
    );
  }

  function updatePool(
    uint256 pid,
    uint256 _price,
    uint256 _totalAmount,
    uint256 _minAmount,
    bool _locked
  ) external onlyOwner {
    require(pid >= 0 && pid < pools.length, 'invalid pool id');

    PoolInfo storage pool = pools[pid];
    pool.price = _price;
    pool.totalAmount = _totalAmount;
    pool.minAmount = _minAmount;
    pool.locked = _locked;
  }

  function buy(uint256 pid) external payable {
    require(pid >= 0 && pid < pools.length, 'invalid pool id');
    require(pools[pid].minAmount <= msg.value, 'below the minimum amount');

    PoolInfo storage pool = pools[pid];
    uint256 tokenAmount = msg.value.mul(pool.price);

    require(
      userHoldings[msg.sender].add(tokenAmount) <= maxAmount,
      'user balance over limit'
    );
    require(
      pool.depositAmount.add(tokenAmount) <= pool.totalAmount,
      'not enough pool balance'
    );

    pool.depositAmount = pool.depositAmount.add(tokenAmount);
    userInfo[msg.sender][pid] = userInfo[msg.sender][pid].add(tokenAmount);
    userHoldings[msg.sender] = userHoldings[msg.sender].add(tokenAmount);

    emit Buy(msg.sender, pid, tokenAmount);

    if (!pool.locked) {
      withdraw(pid);
    }
  }

  function withdraw(uint256 pid) public {
    require(pid >= 0 && pid < pools.length, 'invalid pool id');
    require(!pools[pid].locked, 'pool is locked');

    uint256 balance = userInfo[msg.sender][pid];

    require(token.transfer(msg.sender, balance), 'token transfer failed');

    emit Withdraw(msg.sender, pid, balance);

    userInfo[msg.sender][pid] = 0;
  }

  function getPoolCount() external view returns (uint256) {
    return pools.length;
  }
}

