contract StackingStorage is ERC20 {
    /**
     * Stacking token.
     */
    CTokenInterface public token;

    /**
     * User shares per address.
     */
    mapping(address => uint) public lastClaims;

    /**
     * Stacking pool state. The state aggregates reward and supply at one moment.
     */
    struct PoolState {
        /**
         * Actual at that moment reward amount;
         */
        uint rewardPool;
        /**
         * Total supply at that moment.
         */
        uint totalSupply;
    }

