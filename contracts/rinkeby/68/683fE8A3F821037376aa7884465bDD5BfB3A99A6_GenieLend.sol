contract GenieLend is VirtualAmm, OwnableUpgradeable, ReentrancyGuard {

    ERC20 public principalToken;
    ERC20 public collateralFractionToken;
    ERC721 public collateralToken;
    uint256 public totalCredit;
    uint256 public priceScale;
    uint256 public totalCollateral;
    uint256 public collateralizationRatio;
    uint256 public collateralMintRatio;
    uint256 public expiry;
    uint256[] public depositedTokenIds;

    mapping (address => uint256) public debt;
    mapping (address => uint256) public credit;
    mapping (address => uint256) public collateral;
    mapping (address => uint256[]) public depositedCollateral;
    mapping (address => uint256) public collateralRedeemAvailable;

    event LendEvent(address indexed lender, uint256 principalDeposited, uint256 credit);
    event BorrowEvent(address indexed borrower, uint256[] collateralDeposited, uint256 debt, uint256 loanAmount);

    modifier beforeExpiry() {
        require(block.timestamp <= expiry, "pool expired");
        _;
    }

    modifier afterExpiry() {
        require(block.timestamp > expiry, "pool not expired");
        _;
    }

    constructor(
        ERC20 _principalToken, 
        ERC20 _collateralFractionToken,
        ERC721 _collateralToken, 
        uint256 _amp, 
        uint256 _priceScale,
        uint256 _collateralizationRatio,
        uint256 _collateralMintRatio,
        uint256 _expiry
    ) {
        principalToken = _principalToken;
        collateralFractionToken = _collateralFractionToken;
        collateralToken = _collateralToken;
        priceScale = _priceScale;
        collateralizationRatio = _collateralizationRatio;
        collateralMintRatio = _collateralMintRatio;
        expiry = _expiry;
        initializeAmm(_amp);
    }

    /* function initialize(
        ERC20 _principalToken, 
        ERC20 _collateralFractionToken,
        ERC721 _collateralToken, 
        uint256 _amp, 
        uint256 _collateralizationRatio,
        uint256 _collateralMintRatio,
        uint256 _expiry
    ) external initializer {
        principalToken = _principalToken;
        collateralFractionToken = _collateralFractionToken;
        collateralToken = _collateralToken;
        collateralizationRatio = _collateralizationRatio;
        collateralMintRatio = _collateralMintRatio;
        expiry = _expiry;
        initializeAmm(_amp);
    } */

    function updatecollateralizationRatio(uint256 _collateralizationRatio) external onlyOwner {
        collateralizationRatio = _collateralizationRatio;
    }

    function lend(uint256 principalAmount) external beforeExpiry nonReentrant {
        require(
            principalToken.transferFrom(msg.sender, address(this), principalAmount),
            "Failed to transfer principal token"
        );

        if (balances[0] >= balances[1]) {
            // 0% interest for lender
            _addLiquidity([principalAmount, principalAmount]);

            credit[msg.sender] += principalAmount;
            totalCredit += principalAmount;
        
            emit LendEvent(msg.sender, principalAmount, principalAmount);
        }
        else {
            // +ve interest for lender
            uint256 dy = _swap(0, 1, principalAmount);

            credit[msg.sender] += dy;
            totalCredit += dy;

            emit LendEvent(msg.sender, principalAmount, dy);
        }
    }

    function borrow(uint256[] memory collateralTokenIds) external beforeExpiry nonReentrant {
        // accept NFTs
        for (uint256 i = 0; i < collateralTokenIds.length; i++) {
            collateralToken.transferFrom(msg.sender, address(this), collateralTokenIds[i]);
            depositedCollateral[msg.sender].push(collateralTokenIds[i]);
            depositedTokenIds.push(collateralTokenIds[i]);
        }

        // mint internal collateral balance
        uint256 collateralAmount = collateralTokenIds.length * collateralMintRatio * priceScale;

        totalCollateral += collateralAmount;

        uint256 bondTokenAmount = getBondAmountFromCollateral(collateralAmount);
        debt[msg.sender] += bondTokenAmount;

        uint256 dy = _swap(1, 0, bondTokenAmount);
        
        principalToken.transfer(msg.sender, dy);

        collateral[msg.sender] += collateralAmount;

        emit BorrowEvent(msg.sender, collateralTokenIds, bondTokenAmount, dy);
    }

    function repay(uint256 principalAmountRepayed) external beforeExpiry nonReentrant {
        require(
            principalToken.transferFrom(msg.sender, address(this), principalAmountRepayed),
            "Failed to transfer principal token"
        );

        uint256 freedUpCollateral = (principalAmountRepayed*collateral[msg.sender])/debt[msg.sender];

        collateralRedeemAvailable[msg.sender] += freedUpCollateral;
        collateral[msg.sender] -= freedUpCollateral;
        totalCollateral -= freedUpCollateral;
        debt[msg.sender] -= principalAmountRepayed;
    }

    function collectCollateralRedeemed(uint256[] memory tokenIndexes) external {
        // deduct the redeem available
        collateralRedeemAvailable[msg.sender] -= tokenIndexes.length * collateralMintRatio * priceScale;
        // transfer the requested tokenIndexes
        for (uint256 i=0; i < tokenIndexes.length; i++) {
            collateralToken.safeTransferFrom(address(this), msg.sender, depositedCollateral[msg.sender][tokenIndexes[i]]);
            _removeFromDepositedTokenIds(depositedCollateral[msg.sender][tokenIndexes[i]]);
        }
    }

    function collectAllCollateralRedeemed() external {
        // check if there is any pending debt
        // if no, then transfer all the collateral (NFTs) 
        if (debt[msg.sender] == 0) {
            for (uint256 i = 0; i < depositedCollateral[msg.sender].length; i++) {
                collateralToken.safeTransferFrom(address(this), msg.sender, depositedCollateral[msg.sender][i]);
                _removeFromDepositedTokenIds(depositedCollateral[msg.sender][i]);
            }
            return;
        }
        // if yes,
        // check how many NFTs can be freed completely
        uint256 numCanBeRedeemed = collateralRedeemAvailable[msg.sender] / (collateralMintRatio * priceScale);
        // calculate the remaining redeemable fraction
        uint256 remainingRedeemable = collateralRedeemAvailable[msg.sender] % (collateralMintRatio * priceScale);
        // transfer the NFTs (if any can be redeemed fully)
        for (uint256 i = 0; i < numCanBeRedeemed; i++) {
            if (collateralToken.ownerOf(depositedCollateral[msg.sender][i]) == address(this)) {
                collateralToken.safeTransferFrom(address(this), msg.sender, depositedCollateral[msg.sender][i]);
                _removeFromDepositedTokenIds(depositedCollateral[msg.sender][i]);
            }
            else {
                numCanBeRedeemed += 1;
            }
        }
        // NOTE: Fractionalize the remaining NFTs
        for (uint256 i = numCanBeRedeemed; i < depositedCollateral[msg.sender].length; i++) {
            if (collateralToken.ownerOf(depositedCollateral[msg.sender][i]) == address(this)) {                
                _liquidateViaDummy(depositedCollateral[msg.sender][i]);
                // _liquidateViaNFT20(depositedCollateral[msg.sender][i]);
                // _liquidateViaNFTX(depositedCollateral[msg.sender][i]);   
                _removeFromDepositedTokenIds(depositedCollateral[msg.sender][i]);
            }
        }
        // transfer the pro-rata fractions to the borrower
        // NOTE: remainingRedeemable amount assumes that the fractionalization factor is equal to collateralMintRatio
        collateralFractionToken.transfer(msg.sender, remainingRedeemable);
        // remaining fractionalized NFTs will be distributed to the lenders
    }

    function collectForLender() external afterExpiry nonReentrant {
        if (ammTotalSupply > 0) {
            _removeAllLiquidity();
        }

        uint256 proRataDebt = (credit[msg.sender]*principalToken.balanceOf(address(this)))/totalCredit;
        // NOTE: Need a way to track defaulted collateral and fraction distribution
        // We have 2 kinds of defaulted collateral at expiry
        // 1. Case where collateral is partially defaulted
        // 2. Case where collateral is fully defaulted
        // NOTE: proRataCollateral amount assumes that the fractionalization factor is equal to collateralMintRatio
        uint256 proRataCollateral = (credit[msg.sender]*totalCollateral)/(totalCredit*priceScale);
        principalToken.transfer(msg.sender, proRataDebt);
        // check how much fractionalized collateral we have, and can we fulfil the lender with that
        uint256 fractionsAvaliable = collateralFractionToken.balanceOf(address(this));
        // if yes, then just fulfil the lender request
        // if no, then calculate the amount of fractions we need and liquidate accordingly 
        if (fractionsAvaliable < proRataCollateral) {
            uint256 fractionsNeeded = proRataCollateral - fractionsAvaliable;
            _liquidate(fractionsNeeded);
        }
        collateralFractionToken.transfer(msg.sender, proRataCollateral);

        totalCredit = totalCredit - credit[msg.sender];
        credit[msg.sender] = 0;
        totalCollateral -= proRataCollateral;
    }

    function _liquidate(uint256 fractionsNeeded) internal {
        // NOTE: Need a way to fractionalize all the defualted collateral
        // Challenges
        // 1. Tracking remaining collateral. This can be made easy by allowing only the owner of the pool to liquidate
        //    by passing in the list of defaulted collaterals. We still need to add checks so that we do not end up
        //    liquidating assets for borrowers who have repayed but bot have collected their NFTs.
        //    We might need a `isLiquidated` bool to check that the pool has been liquidated (So, that lenders don't start
        //    collecting before this is done)
        // 2. It might not be possible to fractionalize all the defaulted NFTs in a single trx (might be greater than block limit)
        //    So, we might need to call this a few times.
        //    Or, we can create a mechanism where we just let the lender's collect function to fractionalize according
        //    to the pro-rata fractions that the lender is entitled to.
        
        // caluclate the minimum number of NFTs needed to be fractionalized to get fractionsNeeded
        uint256 numNft = fractionsNeeded / (collateralMintRatio * priceScale);
        if (fractionsNeeded % (collateralMintRatio * priceScale) > 0) {
            numNft += 1;
        }
        for (uint256 i = 0; i < numNft; i++) {
            _liquidateViaDummy(depositedTokenIds[i]);
            // _liquidateViaNFTX(depositedTokenIds[i]);
            // _liquidateViaNFT20(depositedTokenIds[i]);
            // swap token ids and delete
            depositedTokenIds[i] = depositedTokenIds[depositedTokenIds.length - 1];
            depositedTokenIds.pop();
        }
    }

    function _liquidateViaNFTX(uint256 id) internal {
        uint256[] memory ids;
        ids[0] = id; 
        IERC721(0x641927E970222B10b2E8CDBC96b1B4F427316f16).approve(0x641927E970222B10b2E8CDBC96b1B4F427316f16, id);
        INFTXVault(0x641927E970222B10b2E8CDBC96b1B4F427316f16).redeemTo(1, ids, address(this));       
    }

    function _liquidateViaNFT20(uint256 id) internal {
        // IERC721(_fromERC721).safeTransferFrom(
        //     address(this),
        //     _fromERC20,
        //     id,
        //     abi.encodePacked(address(this), address(this)) // referral, recipient
        // );
    }

    function _liquidateViaDummy(uint256 id) internal {
        uint256[] memory ids = new uint256[](1);
        ids[0] = id;
        IERC721(collateralToken).approve(address(collateralFractionToken), id);
        ITestFractions(address(collateralFractionToken)).deposit(collateralToken, ids);
    }

    function _removeFromDepositedTokenIds(uint256 id) internal {
        for (uint256 i = 0; i < depositedTokenIds.length; i++) {
            if (depositedTokenIds[i] == id) {
                // swap token ids and delete
                depositedTokenIds[i] = depositedTokenIds[depositedTokenIds.length - 1];
                depositedTokenIds.pop();
                break;
            }
        }
    }

    function getBondAmountFromCollateral(uint256 collateralAmount) public view returns(uint256 bondAmount) {
        return collateralAmount*100/collateralizationRatio;
    }

    // utility functions
    function getBorrowerDepositedColleteral(address account) external view returns(uint256[] memory tokenIds) {
        tokenIds = new uint256[](depositedCollateral[account].length);
        for (uint256 i = 0; i < depositedCollateral[account].length; i++) {
            tokenIds[i] = depositedCollateral[account][i];
        } 
    } 

    function getAllDepositedCollateral() external view returns(uint256[] memory tokenIds) {
        tokenIds = new uint256[](depositedTokenIds.length);
        for (uint256 i = 0; i < depositedTokenIds.length; i++) {
            tokenIds[i] = depositedTokenIds[i];
        }
    }

    function hasExpired() external view returns(bool) {
        return block.timestamp > expiry; 
    }
}

