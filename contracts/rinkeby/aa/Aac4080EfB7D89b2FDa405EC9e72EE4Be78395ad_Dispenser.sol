pragma solidity ^0.8.4;

import "@openzeppelin/contracts/token/ERC721/extensions/IERC721Enumerable.sol";
import "@openzeppelin/contracts/utils/math/SafeMath.sol";
import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@openzeppelin/contracts/access/Ownable.sol";

contract Dispenser is Ownable {
    using SafeMath for uint256;

    IERC721Enumerable private _nft;
    IERC20  private _token;
    uint256 private _claimableTokens;

    mapping(uint256 => bool) private _claimedTokens;

    /**
     * @dev Constructor
     */
    constructor(
        address nftAddress,
        uint256 nftTotalSupply,
        address tokenAddress,
        uint256 tokenTotalSupply
    ){
        require((tokenTotalSupply % nftTotalSupply) == 0, 'configuration error');

        _nft  = IERC721Enumerable(nftAddress);
        _token = IERC20(tokenAddress);
        _claimableTokens = tokenTotalSupply.div(nftTotalSupply);
    }


    function isTokenIdEligible(uint256 tokenID) public view returns (bool){
        return !_claimedTokens[tokenID];
    }

    function claim(uint256[] calldata tokenIDs) public {

        for(uint256 i = 0; i < tokenIDs.length; i++){
            require(_nft.ownerOf(tokenIDs[i]) == _msgSender(), "caller is not the owner");
            require(!_claimedTokens[tokenIDs[i]], "tokens already claimed");
            _claimedTokens[tokenIDs[i]] = true;
        }

        uint256 totClaimableTokens = _claimableTokens.mul(tokenIDs.length);

        _token.transfer(_msgSender(), totClaimableTokens);

    }

    function claimSingle(uint256 tokenID) public {
        require(_nft.ownerOf(tokenID) == _msgSender(), "caller is not the owner");
        require(!_claimedTokens[tokenID], "tokens already claimed");

        _claimedTokens[tokenID] = true;
        _token.transfer(_msgSender(), _claimableTokens);
    }

    function eligibleTokenIds() public view returns (uint256[] memory){

        uint256 k = 0;
        uint256 numTokens = _nft.balanceOf(_msgSender());

        for(uint256 i = 0; i < numTokens; i++){
            if(!_claimedTokens[_nft.tokenOfOwnerByIndex(_msgSender(), i)]){
                k = k.add(1);
            }
        }

        uint256[] memory tokens = new uint256[](k);

        for(uint256 i = 0; i < numTokens; i++){
            uint256 idx = _nft.tokenOfOwnerByIndex(_msgSender(), i);
            if(!_claimedTokens[idx]){
                k = k.sub(1);
                tokens[k] = idx;
            }
        }

        return tokens;
    }

    function claimableTokens() public view returns (uint256){
        uint256 tokens = 0;
        uint256 numTokens = _nft.balanceOf(_msgSender());

        for(uint256 i = 0; i < numTokens; i++){
            if(!_claimedTokens[_nft.tokenOfOwnerByIndex(_msgSender(), i)]){
                tokens = tokens.add(_claimableTokens);
            }
        }

        return tokens;
    }


    /**
     * @dev Withdraw any remaining tokens
     */
    function withdraw() onlyOwner() public {
        uint256 balance = _token.balanceOf(address(this));
        require(balance > 0, "empty balance");

        _token.transfer(_msgSender(), balance);
    }

}

