    uint256 private constant _initialSupply = 1000000000 * 10**18;

    modifier onlyFactory() {
        require(_msgSender() == factory, 'RENE: must be factory');
        _;
    }

    constructor() ERC20('Rene Token', 'RENE') {
        _mint(_msgSender(), _initialSupply);
    }

    /**
