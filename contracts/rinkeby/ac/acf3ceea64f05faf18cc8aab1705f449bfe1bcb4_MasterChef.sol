// MasterChef is the master of RENE. He can make RENE and he is a fair guy.
//
// Note that it's ownable and the owner wields tremendous power. The ownership
// will be transferred to a governance smart contract once RENE is sufficiently
// distributed and the community can show to govern itself.
//
// Have fun reading it. Hopefully it's bug-free. God bless.
contract MasterChef is Initializable, OwnableUpgradeable, ReentrancyGuardUpgradeable {
    using SafeMathUpgradeable for uint256;
    using SafeERC20Upgradeable for IERC20Upgradeable;
    using EnumerableSetUpgradeable for EnumerableSetUpgradeable.UintSet;

    // Info of each user.
    struct UserInfo {
        uint256 amount; // How many LP tfownokens the user has provided.
        uint256 rewardDebt; // Reward debt. See explanation below.
        uint256 lastDepositeTimestamp; // Last time the user deposite
        uint256 nftTotalPoint; // Total NFT point staked by user
        mapping(uint256 => uint256) nftPoint; // mapping NFT id => point
        EnumerableSetUpgradeable.UintSet stakedNFTs; // deposited NFTs

        //
        // We do some fancy math here. Basically, any point in time, the amount of RENE
        // entitled to a user but is pending to be distributed is:
        //
        //   pending reward = (user.amount * pool.accRENEPerShare) - user.rewardDebt
        //
        // Whenever a user deposits or withdraws LP tokens to a pool. Here's what happens:
        //   1. The pool's `accRENEPerShare` (and `lastRewardBlock`) gets updated.
        //   2. User receives the pending reward sent to his/her address.
        //   3. User's `amount` gets updated.
        //   4. User's `rewardDebt` gets updated.
    }

    // Info of each pool.
    struct PoolInfo {
        IERC20Upgradeable lpToken; // Address of LP token contract., address is 0 if it is NFT pool
        uint256 allocPoint; // How many allocation points assigned to this pool. RENEPoint to distribute per block.
        uint256 lastRewardBlock; // Last block number that RENEPoint distribution occurs.
        uint256 accRENEPerShare; // Accumulated RENEPoint per share, times MAX_SHARES. See below.
        uint256 nftTotalPoint; // Total NFT's weight of the pool
    }

    // Locked reward info
    struct RewardInfo {
        uint256 amount;
        uint256 claimedAmount;
    }

    // Is staking enabled
    bool isActive;

    // The RENE TOKEN!
    RENE public rene;
    ITransferrableGameItem public nft;
    ITokenWeightHook public nftWeightHook;
    address public vault;

    // withdraw fee
    uint256 public withdrawFee;
    // reward locked
    uint256 public withdrawNeedFeePeriod;
    // RENE tokens created per block.
    uint256 public renePerBlock;
    // Total allocation poitns. Must be the sum of all allocation points in all pools.
    uint256 public totalAllocPoint;
    // The block number when RENE mining starts.
    uint256 public startBlock;
    // index of NFT poll
    uint256 public nftPoolId;

    uint256 private constant MAX_SHARES = 1e12;
    uint256 private constant HUNDRED_PERCENT = 10**18;

    PoolInfo[] public poolInfo;

    // mapping pool => user => info
    mapping(uint256 => mapping(address => UserInfo)) private _userInfo;
    // mapping pool => user => reward
    mapping(uint256 => mapping(address => RewardInfo)) private _rewardInfo;

    event Deposit(address indexed user, uint256 indexed pid, uint256 amount);
    event DepositNFT(address indexed user, uint256 indexed pid, uint256 tokenId, uint256 weight);
    event Withdraw(address indexed user, uint256 indexed pid, uint256 amount, uint256 fee);
    event WithdrawNFT(address indexed user, uint256 indexed pid, uint256 tokenId, uint256 weight);
    event EmergencyWithdraw(address indexed user, uint256 indexed pid, uint256 amount);
    event EmergencyWithdrawNFT(address indexed user, uint256 indexed pid);
    event ClaimRewards(address indexed user, uint256 indexed pid, uint256 amount);

    modifier mustActive() {
        require(isActive == true, 'MasterChef: not active');
        _;
    }

    constructor() {}

    function initialize(
        RENE _rene,
        address _nft,
        address _nftWeightHook,
        address _vault,
        uint256 _renePerBlock,
        uint256 _startBlock,
        uint256 _withdrawFee,
        uint256 _withdrawNeedFeePeriod
    ) external initializer {
        require(_nft != address(0), 'MasterChef: zero nft address');
        require(_nftWeightHook != address(0), 'MasterChef: zero weight hook address');
        require(_withdrawFee < 100, 'MasterChef: invalid withdraw fee');

        __Ownable_init();
        __ReentrancyGuard_init();

        rene = _rene;
        nft = ITransferrableGameItem(_nft);
        nftWeightHook = ITokenWeightHook(_nftWeightHook);
        vault = _vault;
        renePerBlock = _renePerBlock;
        startBlock = _startBlock > 0 ? _startBlock : block.number;
        withdrawFee = HUNDRED_PERCENT.mul(_withdrawFee).div(100);
        withdrawNeedFeePeriod = _withdrawNeedFeePeriod;

        // init poll the first time only
        if (poolInfo.length == 0) {
            nftPoolId = type(uint256).max;

            // NFT staking pool
            _initPool(address(0), 1000, false);
            // RENE staking pool
            _initPool(address(rene), 1000, false);
        }

        isActive = true;
    }

    /*                                            Admin Public Functions                                             */

    function setNFTContract(address _nft, address _nftWeightHook) external onlyOwner {
        require(_nft != address(0), 'MasterChef: NFT contract is zero address');
        require(_nftWeightHook != address(0), 'MasterChef: NFT weight hook is zero address');

        nft = ITransferrableGameItem(_nft);
        nftWeightHook = ITokenWeightHook(_nftWeightHook);
    }

    // function setNFTContract(address _nft) external onlyOwner {
    //     require(_nft != address(0), 'MasterChef: NFT contract is zero address');

    //     nft = ITransferrableGameItem(_nft);
    // }

    // Update the given pool's RENE allocation point. Can only be called by the owner.
    function setAllocPoint(
        uint256 _pid,
        uint256 _allocPoint,
        bool _withUpdate
    ) public onlyOwner {
        if (_withUpdate) {
            massUpdatePools();
        }
        totalAllocPoint = totalAllocPoint.sub(poolInfo[_pid].allocPoint).add(_allocPoint);
        poolInfo[_pid].allocPoint = _allocPoint;
    }

    function setRewardPerBlock(uint256 _r, bool _withUpdate) external onlyOwner {
        if (_withUpdate) {
            massUpdatePools();
        }
        renePerBlock = _r;
    }

    function setWithdrawFee(uint256 _withdrawFee, uint256 _withdrawNeedFeePeriod) external onlyOwner {
        require(_withdrawFee < 100, 'MasterChef: invalid withdraw fee');

        withdrawFee = HUNDRED_PERCENT.mul(_withdrawFee).div(100);
        withdrawNeedFeePeriod = _withdrawNeedFeePeriod;
    }

    // function setWithdrawNeedFeePeriod(uint256 _withdrawNeedFeePeriod) external onlyOwner {
    //     withdrawNeedFeePeriod = _withdrawNeedFeePeriod;
    // }

    /*                                            Admin Private Functions                                            */

    // Add a new lp to the pool. Can only be called by the owner.
    // XXX DO NOT add the same LP token more than once. Rewards will be messed up if you do.
    function _initPool(
        address _lpToken,
        uint256 _allocPoint,
        bool _withUpdate
    ) internal {
        if (_withUpdate) {
            massUpdatePools();
        }
        if (_lpToken == address(0)) {
            require(nftPoolId == type(uint256).max, 'MasterChef: NFT Pool already exist');
            nftPoolId = poolInfo.length;
        }

        uint256 lastRewardBlock = block.number > startBlock ? block.number : startBlock;

        PoolInfo memory pool = PoolInfo(IERC20Upgradeable(_lpToken), _allocPoint, lastRewardBlock, 0, 0);
        poolInfo.push(pool);

        totalAllocPoint = totalAllocPoint.add(_allocPoint);
    }

    /*                                            Utility Public Functions                                           */

    function isNFTPool(uint256 pid) public view returns (bool) {
        return address(poolInfo[pid].lpToken) == address(0);
    }

    function poolLength() external view returns (uint256) {
        return poolInfo.length;
    }

    /*                                            Staking Public Functions                                           */

    // View function to see pending RENE on frontend.
    function pendingRewards(uint256 _pid, address _user) external view returns (uint256) {
        PoolInfo storage pool = poolInfo[_pid];
        UserInfo storage user = _userInfo[_pid][_user];
        uint256 accRENEPerShare = pool.accRENEPerShare;
        uint256 lpSupply = 0;
        if (isNFTPool(_pid)) {
            lpSupply = pool.nftTotalPoint;
        } else {
            lpSupply = pool.lpToken.balanceOf(address(this));
        }
        if (block.number > pool.lastRewardBlock && lpSupply != 0) {
            uint256 multiplier = _getMultiplier(pool.lastRewardBlock, block.number);
            uint256 pending = multiplier.mul(renePerBlock).mul(pool.allocPoint).div(totalAllocPoint);
            accRENEPerShare = accRENEPerShare.add(pending.mul(MAX_SHARES).div(lpSupply));
        }
        uint256 amount = isNFTPool(_pid) ? user.nftTotalPoint : user.amount;
        return amount.mul(accRENEPerShare).div(MAX_SHARES).sub(user.rewardDebt);
    }

    // Update reward variables of the given pool to be up-to-date.
    function updatePool(uint256 _pid) public view mustActive {
        PoolInfo memory pool = poolInfo[_pid];
        if (block.number <= pool.lastRewardBlock) {
            return;
        }
        uint256 lpSupply = 0;
        if (!isNFTPool(_pid)) {
            lpSupply = pool.lpToken.balanceOf(address(this));
        } else {
            lpSupply = pool.nftTotalPoint;
        }
        if (lpSupply == 0) {
            pool.lastRewardBlock = block.number;
            return;
        }
        uint256 _multiplier = _getMultiplier(pool.lastRewardBlock, block.number);
        uint256 _pendingRewards = _multiplier.mul(renePerBlock).mul(pool.allocPoint).div(totalAllocPoint);

        pool.accRENEPerShare = pool.accRENEPerShare.add(_pendingRewards.mul(MAX_SHARES).div(lpSupply));
        pool.lastRewardBlock = block.number;
    }

    // Update reward vairables for all pools. Be careful of gas spending!
    function massUpdatePools() public view mustActive {
        uint256 length = poolInfo.length;
        for (uint256 pid = 0; pid < length; ++pid) {
            updatePool(pid);
        }
    }

    // Deposit LP tokens to MasterChef for RENE allocation.
    function deposit(uint256 _pid, uint256 _amount) external {
        require(!isNFTPool(_pid), 'deposit: must not be NFT pool');
        require(_amount > 0, 'deposit: amount must greater than 0');

        PoolInfo storage pool = poolInfo[_pid];
        UserInfo storage user = _userInfo[_pid][_msgSender()];
        updatePool(_pid);
        if (user.amount > 0) {
            uint256 pending = user.amount.mul(pool.accRENEPerShare).div(MAX_SHARES).sub(user.rewardDebt);
            if (pending > 0) {
                _accumulateRewards(_pid, _msgSender(), pending);
            }
        }

        user.amount = user.amount.add(_amount);
        user.rewardDebt = user.amount.mul(pool.accRENEPerShare).div(MAX_SHARES);
        user.lastDepositeTimestamp = block.timestamp;
        pool.lpToken.safeTransferFrom(_msgSender(), address(this), _amount);

        emit Deposit(_msgSender(), _pid, _amount);
    }

    function depositNFT(uint256[] memory _tokenIds) public {
        require(nftPoolId != type(uint256).max, 'depositNFT: NFT Pool not exists');
        require(_tokenIds.length > 0, 'depositNFT: empty token list');

        PoolInfo storage pool = poolInfo[nftPoolId];
        UserInfo storage user = _userInfo[nftPoolId][_msgSender()];
        updatePool(nftPoolId);

        if (user.nftTotalPoint > 0) {
            uint256 pending = user.nftTotalPoint.mul(pool.accRENEPerShare).div(MAX_SHARES).sub(user.rewardDebt);
            if (pending > 0) {
                _accumulateRewards(nftPoolId, _msgSender(), pending);
            }
        }

        uint256 addedPoint = 0;
        for (uint256 i = 0; i < _tokenIds.length; i++) {
            uint256 _tokenId = _tokenIds[i];

            uint256 stakingPoint = nftWeightHook.tokenWeight(_tokenId);
            require(stakingPoint > 0, 'depositNFT: invalid NFT weight');

            nft.safeTransferFrom(_msgSender(), address(this), _tokenId, 1, '');

            user.nftPoint[_tokenId] = stakingPoint;
            user.stakedNFTs.add(_tokenId);
            addedPoint = addedPoint.add(stakingPoint);

            emit DepositNFT(_msgSender(), nftPoolId, _tokenId, stakingPoint);
        }

        user.nftTotalPoint = user.nftTotalPoint.add(addedPoint);
        user.rewardDebt = user.nftTotalPoint.mul(pool.accRENEPerShare).div(MAX_SHARES);
        pool.nftTotalPoint = pool.nftTotalPoint.add(addedPoint);
    }

    // Withdraw LP tokens from MasterChef.
    function withdraw(uint256 _pid, uint256 _amount) public {
        require(!isNFTPool(_pid), 'withdraw: must not be NFT pool');

        PoolInfo storage pool = poolInfo[_pid];
        UserInfo storage user = _userInfo[_pid][_msgSender()];
        require(user.amount >= _amount, 'withdraw: bad amount');

        updatePool(_pid);

        uint256 pending = user.amount.mul(pool.accRENEPerShare).div(MAX_SHARES).sub(user.rewardDebt);
        if (pending > 0) {
            _accumulateRewards(_pid, _msgSender(), pending);
        }

        if (_amount > 0) {
            user.amount = user.amount.sub(_amount);
        }
        user.rewardDebt = user.amount.mul(pool.accRENEPerShare).div(MAX_SHARES);

        uint256 _fee = 0;
        if (_amount > 0) {
            if (
                withdrawNeedFeePeriod > 0 &&
                withdrawFee > 0 &&
                // deposit time has not passed the withdrawNeedFeePeriod
                user.lastDepositeTimestamp + withdrawNeedFeePeriod >= block.timestamp
            ) {
                _fee = _amount.mul(withdrawFee).div(HUNDRED_PERCENT);
            }
            pool.lpToken.safeTransfer(_msgSender(), _amount.sub(_fee));
            if (_fee > 0) {
                pool.lpToken.safeTransfer(vault, _fee);
            }
        }

        emit Withdraw(_msgSender(), _pid, _amount, _fee);
    }

    function withdrawNFT(uint256 _tokenId) external {
        require(nftPoolId != type(uint256).max, 'withdrawNFT: NFT Pool not exists');

        UserInfo storage user = _userInfo[nftPoolId][_msgSender()];
        require(user.stakedNFTs.contains(_tokenId), 'withdrawNFT: bad token id');

        PoolInfo storage pool = poolInfo[nftPoolId];

        updatePool(nftPoolId);

        uint256 pending = user.nftTotalPoint.mul(pool.accRENEPerShare).div(MAX_SHARES).sub(user.rewardDebt);
        if (pending > 0) {
            _accumulateRewards(nftPoolId, _msgSender(), pending);
        }

        // transfer nft back
        nft.transferFrom(address(this), _msgSender(), _tokenId);

        uint256 nftPoint = user.nftPoint[_tokenId];
        user.nftTotalPoint = user.nftTotalPoint.sub(nftPoint);
        user.rewardDebt = user.nftTotalPoint.mul(pool.accRENEPerShare).div(MAX_SHARES);
        user.stakedNFTs.remove(_tokenId);
        delete user.nftPoint[_tokenId];
        pool.nftTotalPoint = pool.nftTotalPoint.sub(nftPoint);

        emit WithdrawNFT(_msgSender(), nftPoolId, _tokenId, nftPoint);
    }

    function claimRewards(uint256 _pid) external nonReentrant {
        PoolInfo storage pool = poolInfo[_pid];
        if (block.number <= pool.lastRewardBlock) {
            return;
        }

        address _user = _msgSender();
        uint256 _claimableAmount = _getClaimableAmount(_pid, _user);
        if (_claimableAmount > 0) {
            _claimRewards(_pid, _user, _claimableAmount, true);

            emit ClaimRewards(_user, _pid, _claimableAmount);
        }
    }

    function getClaimableAmount(uint256 _pid, address _user) external view returns (uint256) {
        return _getClaimableAmount(_pid, _user);
    }

    // Withdraw without caring about rewards. EMERGENCY ONLY.
    function emergencyWithdraw(uint256 _pid) public {
        require(!isNFTPool(_pid), 'emergencyWithdraw: must not be NFT pool');

        address _user = _msgSender();
        PoolInfo storage pool = poolInfo[_pid];
        UserInfo storage user = _userInfo[_pid][_user];
        pool.lpToken.safeTransfer(address(_user), user.amount);
        emit EmergencyWithdraw(_user, _pid, user.amount);
        user.amount = 0;
        user.rewardDebt = 0;
    }

    function emergencyWithdrawNFT() public {
        address _user = _msgSender();
        PoolInfo storage pool = poolInfo[nftPoolId];
        UserInfo storage user = _userInfo[nftPoolId][_user];

        uint256 stakedNFTs = user.stakedNFTs.length();

        for (uint256 i = 0; i < stakedNFTs; i++) {
            uint256 _tokenId = user.stakedNFTs.at(i);
            if (nft.ownerOf(_tokenId) == address(this)) {
                nft.transferFrom(address(this), _user, _tokenId);
            }
        }
        delete user.stakedNFTs;

        if (pool.nftTotalPoint >= user.nftTotalPoint) {
            pool.nftTotalPoint = pool.nftTotalPoint.sub(user.nftTotalPoint);
        }
        user.nftTotalPoint = 0;
        user.amount = 0;
        user.rewardDebt = 0;

        emit EmergencyWithdrawNFT(_user, nftPoolId);
    }

    /*                                            Staking Internal Functions                                         */

    // Return reward multiplier over the given _from to _to block.
    function _getMultiplier(uint256 _from, uint256 _to) private pure returns (uint256) {
        return _to.sub(_from);
    }

    function _claimRewards(
        uint256 _pid,
        address _user,
        uint256 _claimableAmount,
        bool _shouldTransfer
    ) internal {
        RewardInfo storage _lockedReward = _rewardInfo[_pid][_user];
        _lockedReward.claimedAmount = _lockedReward.claimedAmount.add(_claimableAmount);

        if (_shouldTransfer) {
            _safeTokenTransfer(_user, _claimableAmount);
        }
    }

    function _getClaimableAmount(uint256 _pid, address _user) internal view returns (uint256) {
        RewardInfo storage info = _rewardInfo[_pid][_user];
        if (info.amount == 0) {
            return 0;
        }

        return info.amount.sub(info.claimedAmount);
    }

    function _accumulateRewards(
        uint256 _pid,
        address _user,
        uint256 _amount
    ) internal {
        RewardInfo storage info = _rewardInfo[_pid][_user];
        info.amount = info.amount.add(_amount);
    }

    function _safeTokenTransfer(address _to, uint256 _amount) internal {
        ITokenVault(vault).safeTokenTransfer(_to, _amount);
    }

    function getUserInfo(uint256 _pid, address _user)
        external
        view
        returns (
            uint256 amount, // How many LP tokens the user has provided.
            uint256 rewardDebt,
            uint256 nftTotalPoint,
            uint256 lastDepositeTimestamp
        )
    {
        UserInfo storage user = _userInfo[_pid][_user];
        return (user.amount, user.rewardDebt, user.nftTotalPoint, user.lastDepositeTimestamp);
    }
}

