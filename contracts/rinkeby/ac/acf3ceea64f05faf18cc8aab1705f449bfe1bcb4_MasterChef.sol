        _mint(to, amount);
    }

    /*                                             Admin Public Functions                                             */

    function setFactory(address _factory) external onlyOwner {
        require(_factory != address(0), "RENE: Factory can't be zero address");
        factory = _factory;
    }

    /**
     * @dev Pauses all token transfers.
