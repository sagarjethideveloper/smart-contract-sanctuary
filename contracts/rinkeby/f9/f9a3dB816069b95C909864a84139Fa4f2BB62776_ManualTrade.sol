/// @title Manual Mirror Trading for UniswapV3
contract ManualTrade is OwnableUpgradeable {
  using SafeMath for uint256;
  using BytesLib for bytes;

  // ================ WARNING ==================
  // ===== THIS CONTRACT IS INITIALIZABLE ======
  // === STORAGE VARIABLES ARE DECLARED BELOW ==
  // REMOVAL OR REORDER OF VARIABLES WILL RESULT
  // ========= IN STORAGE CORRUPTION ===========

  address payable private feeStorage;
  uint256 private feeQuota;
  uint256 private feeQuotaDecimals;

  /// @notice WETH9 address
  address public WETH9;

  /// @notice Uniswap router address
  ISwapRouter public uniswap;

  // ======= STORAGE DECLARATION END ============

  event NewManualTrade(
    address indexed tokenIn,
    address indexed tokenOut,
    uint256 amountIn,
    uint256 amountOut
  );

  function initialize(
    address payable _feeStorage,
    uint256 _feeQuota,
    uint256 _feeQuotaDecimals,
    address _WETH9,
    ISwapRouter _uniswap
  ) public initializer {
    feeStorage = _feeStorage;
    feeQuota = _feeQuota;
    feeQuotaDecimals = _feeQuotaDecimals;
    WETH9 = _WETH9;
    uniswap = _uniswap;
    __Ownable_init();
  }

  // Function to receive Ether. msg.data must be empty
  receive() external payable {}

  // Fallback function is called when msg.data is not empty
  fallback() external payable {}

  /// @notice swapExactTokensForTokens swaps a fixed amount of tokenIn for a maximum possible amount of tokenOut using intermediary pools.
  /// msg.sender should approve this contract
  /// @dev The calling address must approve this contract to spend at least `amountIn` worth of its tokenIn.
  /// @param amountIn The amount of tokenIn to be swapped.
  /// @param amountOutMin The minimum amount of tokenOut to receive.
  /// @param path Encode packed list of [TokenIn, fee, TokenOut]
  /// @return amountOut The amount of tokenOut received after the swap.
  function swapExactTokensForTokens(
    uint256 amountIn,
    uint256 amountOutMin,
    bytes calldata path
  ) external returns (uint256 amountOut) {
    address tokenIn = path.toAddress(0);

    // step 0: Transfer `amountIn` of from user to this contract.
    TransferHelper.safeTransferFrom(
      tokenIn,
      msg.sender,
      address(this),
      amountIn
    );

    // step 1: Approve the router to spend tokenIn.
    TransferHelper.safeApprove(tokenIn, address(uniswap), amountIn);

    // step 2: Calculate fee amount.
    uint256 feeAmount = calculateFee(amountIn);

    // step 3: Swap fee to ETH and send to FeeStorage. Can fail if no pair exists
    // We also set the sqrtPriceLimitx96 to be 0 to ensure we swap our exact input amount.
    ISwapRouter.ExactInputSingleParams memory feeParams = ISwapRouter
      .ExactInputSingleParams({
      tokenIn: tokenIn,
      tokenOut: WETH9,
      fee: 3000,
      recipient: feeStorage,
      deadline: block.timestamp,
      amountIn: feeAmount,
      amountOutMinimum: 0,
      sqrtPriceLimitX96: 0
    });
    uniswap.exactInputSingle(feeParams);

    // step 4: Sub fee from amountIn
    uint256 swapAmountIn = amountIn.sub(feeAmount);

    // step 5: Execute the swap
    // The format for pool encoding is (tokenIn, fee, tokenOut/tokenIn, fee, tokenOut)
    ISwapRouter.ExactInputParams memory params = ISwapRouter.ExactInputParams({
      path: path,
      recipient: msg.sender,
      deadline: block.timestamp,
      amountIn: swapAmountIn,
      amountOutMinimum: amountOutMin
    });
    amountOut = uniswap.exactInput(params);
  }

  /// @notice swapExactTokensForETH swaps a fixed amount of tokenIn for a maximum possible amount of WETH9/ETH using intermediary pools.
  /// msg.sender should approve this contract
  /// @dev The calling address must approve this contract to spend at least `amountIn` worth of its tokenIn.
  /// @param amountIn The amount of tokenIn to be swapped.
  /// @param amountOutMin The minimum amount of tokenOut to receive.
  /// @param path Encode packed list of [TokenIn, fee, TokenOut]
  /// @param isOutNative Determines WETH9 unwrap is needed or not
  /// @return amountOut The amount of tokenOut received after the swap.
  function swapExactTokensForETH(
    uint256 amountIn,
    uint256 amountOutMin,
    bytes calldata path,
    bool isOutNative
  ) external returns (uint256 amountOut) {
    address tokenOut = path.toAddress(path.length - 20);
    require(tokenOut == WETH9, "Invalid tokenOut");

    address tokenIn = path.toAddress(0);
    // step 0: Transfer `amountIn` of from user to this contract.
    TransferHelper.safeTransferFrom(
      tokenIn,
      msg.sender,
      address(this),
      amountIn
    );

    // step 1: Approve the router to spend tokenIn.
    TransferHelper.safeApprove(tokenIn, address(uniswap), amountIn);

    // step 2: Execute the swap
    // The format for pool encoding is (tokenIn, fee, tokenOut/tokenIn, fee, tokenOut)
    ISwapRouter.ExactInputParams memory params = ISwapRouter.ExactInputParams({
      path: path,
      recipient: address(this),
      deadline: block.timestamp,
      amountIn: amountIn,
      amountOutMinimum: amountOutMin
    });
    amountOut = uniswap.exactInput(params);

    // step 3: Send WETH9 fee to fee storage
    uint256 balanceWETH9 = IWETH9(WETH9).balanceOf(address(this));
    require(balanceWETH9 >= amountOut, "Insufficient WETH9");

    uint256 feeAmount = calculateFee(amountOut);
    TransferHelper.safeTransfer(WETH9, feeStorage, feeAmount);

    amountOut = amountOut.sub(feeAmount);
    if (isOutNative) {
      IWETH9(WETH9).withdraw(amountOut);
      TransferHelper.safeTransferETH(msg.sender, amountOut);
    } else {
      TransferHelper.safeTransfer(WETH9, msg.sender, amountOut);
    }
  }

  /// @notice swapExactETHForTokens swaps a fixed amount of ETH for a maximum possible amount of tokenOut using intermediary pools.
  /// @dev This function should receive ETH
  /// @param amountOutMin The minimum amount of tokenOut to receive.
  /// @param path Encode packed list of [TokenIn, fee, TokenOut]
  /// @return amountOut The amount of tokenOut received after the swap.
  function swapExactETHForTokens(uint256 amountOutMin, bytes calldata path)
    external
    payable
    returns (uint256 amountOut)
  {
    // step 0: Calculate fee amount
    uint256 feeAmount = calculateFee(msg.value);
    (bool feeSent, ) = feeStorage.call{value: feeAmount}("");
    require(feeSent, "Failed to sent fee");

    // Step 1: Sub fee from amountIn
    uint256 swapAmountIn = msg.value.sub(feeAmount);

    // step 5: Execute the swap
    // The format for pool encoding is (tokenIn, fee, tokenOut/tokenIn, fee, tokenOut)
    ISwapRouter.ExactInputParams memory params = ISwapRouter.ExactInputParams({
      path: path,
      recipient: msg.sender,
      deadline: block.timestamp,
      amountIn: swapAmountIn,
      amountOutMinimum: amountOutMin
    });
    amountOut = uniswap.exactInput{value: swapAmountIn}(params);
  }

  /// @notice Update fee quota
  function setFeeQuota(uint256 _feeQuota, uint256 _feeQuotaDecimals)
    external
    onlyOwner
  {
    feeQuota = _feeQuota;
    feeQuotaDecimals = _feeQuotaDecimals;
  }

  /// @notice Calculate fee for a specific token
  function calculateFee(uint256 _amount) public view returns (uint256) {
    return _amount.mul(feeQuota).div(feeQuotaDecimals);
  }
}

