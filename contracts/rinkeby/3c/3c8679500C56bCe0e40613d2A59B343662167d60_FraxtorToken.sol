pragma solidity ^0.8.0;

import "@openzeppelin/contracts-upgradeable/token/ERC20/ERC20Upgradeable.sol";
import "@openzeppelin/contracts-upgradeable/access/AccessControlUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/utils/cryptography/ECDSAUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/metatx/ERC2771ContextUpgradeable.sol";
import "./IERC1404.sol";
import "./IERC1404Manager.sol";
import "./ILostAccountCompatible.sol";

contract FraxtorToken is ERC2771ContextUpgradeable, ERC20Upgradeable, AccessControlUpgradeable, ILostAccountCompatible, IERC1404 {
    IERC1404Manager _policy;
    address private _lostAccountDirectory;
    bytes32 private _assetHash;

    bytes32 public constant ISSUER_ROLE = keccak256("ISSUER_ROLE");

    event DocumentCertified(bytes32 indexed documentType, bytes32 indexed documentHash);

    modifier onlyAdmin(){
        require(hasRole(DEFAULT_ADMIN_ROLE, _msgSender()), "Caller is not admin");
        _;
    }

    modifier onlyIssuer() {
        require(hasRole(ISSUER_ROLE, _msgSender()), "Caller is not issuer");
        _;
    }

    function initialize(string memory name, string memory symbol, uint256 total_supply, address issuer_address, address admin_address, address lostAccountDirectory_, address trustedForwarder, IERC1404Manager policy_)
    public initializer {
        __ERC20_init(name, symbol);
        __AccessControl_init();
        __ERC2771Context_init(trustedForwarder);
        _policy = policy_;
        _mint(issuer_address, total_supply);
        _setupRole(DEFAULT_ADMIN_ROLE, admin_address);
        _setupRole(ISSUER_ROLE, issuer_address);
        _lostAccountDirectory = lostAccountDirectory_;
    }

    function decimals() public view virtual override returns (uint8) {
        return 0;
    }

    function assetHash() public view returns(bytes32){
        return _assetHash;
    }

    function setAssetHash(bytes32 assetHash_) external onlyIssuer{
        require(assetHash_ != bytes32(0),"Can't be 0");
        require(_assetHash == bytes32(0),"Already define");
        _assetHash = assetHash_;
    }

    function lostAccountDirectory() public view returns(address){
        return _lostAccountDirectory;
    }

    function setLostAccountDirectory(address lostAccountDirectory_) external onlyAdmin {
        _lostAccountDirectory = lostAccountDirectory_;
    }

    function setPolicy(IERC1404Manager policy_) external onlyAdmin {
        _policy = policy_;
    }

    function policy() public view returns (IERC1404Manager){
        return _policy;
    }

    function certifyDocument(bytes32 documentType, bytes32 documentHash) external onlyIssuer {
        emit DocumentCertified(documentType, documentHash);
    }

    function batchCertifyDocument(bytes32[] memory documentType, bytes32[] memory documentHash) external onlyIssuer {
        require(documentType.length == documentHash.length, "Length not equal");
        for (uint256 index; index < documentType.length; index++){
            emit DocumentCertified(documentType[index], documentHash[index]);
        }
    }

    function migrateAddressBalance(address lostAccount, address newAccount) external override {
        require(_lostAccountDirectory == _msgSender(), "Caller is not lostAccountDirectory");
        uint256 lostBalance = balanceOf(lostAccount);
        _burn(lostAccount, lostBalance);
        _mint(newAccount, lostBalance);
    }

    function redeem(address[] memory accounts) external onlyIssuer {
        for (uint256 index; index < accounts.length; index++){
            address account = accounts[index];
            _burn(account, balanceOf(account));
        }
    }

    function detectTransferRestriction (address from, address to, uint256 value) public view override(IERC1404) returns (uint8){
        return _policy.detectTransferRestriction(address(this), from, to, value);
    }

    function messageForTransferRestriction (uint8 restrictionCode) public view override(IERC1404) returns (string memory){
        return _policy.messageForTransferRestriction(address(this), restrictionCode);
    }

    function _beforeTokenTransfer(address from, address to, uint256 amount) internal virtual override(ERC20Upgradeable) {
        uint8 restrictionCode = detectTransferRestriction(from, to, amount);
        require(restrictionCode == 0, messageForTransferRestriction(restrictionCode));
    }

    function _msgSender() internal view virtual override(ContextUpgradeable, ERC2771ContextUpgradeable) returns (address) {
        return ERC2771ContextUpgradeable._msgSender();
    }

    function _msgData() internal view virtual override(ContextUpgradeable, ERC2771ContextUpgradeable) returns (bytes calldata) {
        return ERC2771ContextUpgradeable._msgData();
    }
}

