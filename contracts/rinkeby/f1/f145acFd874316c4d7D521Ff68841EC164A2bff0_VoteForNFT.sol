pragma solidity 0.6.11;
pragma experimental ABIEncoderV2;

import "@openzeppelin/contracts/math/SafeMath.sol";
import "@openzeppelin/contracts/token/ERC721/IERC721.sol";

contract VoteForNFT {
    using SafeMath for uint256;

    // collectionAddress => tokenId => voter => status
    mapping(address => mapping(uint256 => mapping(address => bool)))
        private nftTokenVoters;
    mapping(address => mapping(uint256 => uint256)) private nftTokenVoteCnt;

    event Vote(
        address indexed voter,
        address indexed collectionAddress,
        uint256 indexed tokenId
    );

    /**
     * @dev                         Initializes Vote Nft contract
     */
    constructor() public {}

    /**
     * @dev                         Vote to nft token with token id
     * @param _collectionAddress    The address of nft collection
     * @param _tokenId              The token id of nft collection
     */
    function vote(address _collectionAddress, uint256 _tokenId)
        external
        validAddress(_collectionAddress)
    {
        require(
            msg.sender != IERC721(_collectionAddress).ownerOf(_tokenId),
            "Token owner can't vote to his token"
        );

        require(
            nftTokenVoters[_collectionAddress][_tokenId][msg.sender] == false,
            "Users can't vote 2 times for the same token"
        );

        nftTokenVoters[_collectionAddress][_tokenId][msg.sender] = true;
        nftTokenVoteCnt[_collectionAddress][_tokenId] = nftTokenVoteCnt[
            _collectionAddress
        ][_tokenId]
            .add(1);

        emit Vote(msg.sender, _collectionAddress, _tokenId);
    }

    function getUserCanVote(address _collectionAddress, uint256 _tokenId)
        external
        view
        validAddress(_collectionAddress)
        returns (bool)
    {
        if (msg.sender == IERC721(_collectionAddress).ownerOf(_tokenId)) {
            return false;
        }
        return nftTokenVoters[_collectionAddress][_tokenId][msg.sender];
    }

    function getNftTokenVoteCnt(address _collectionAddress, uint256 _tokenId)
        external
        view
        validAddress(_collectionAddress)
        returns (uint256)
    {
        return nftTokenVoteCnt[_collectionAddress][_tokenId];
    }

    modifier validAddress(address _address) {
        require(
            _address != address(0) && _address != address(this),
            "Address is Zero address or invalid address"
        );
        _;
    }
}

