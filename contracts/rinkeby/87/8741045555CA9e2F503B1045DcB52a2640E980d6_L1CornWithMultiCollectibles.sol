    /**
     * @dev PUBLIC: Get the harvested amount of a specific address up to a target block
     */
    function getHarvestAmount(address targetAddress, uint256 targetBlock)
        public
        view
        returns (uint256 actualMinted)
    {
        Farm memory farm = farms[targetAddress]; // Shortcut accessor

        // Ensure this address has a farm on the LAND
        if (farm.amount == 0) {
            return 0;
        }

        require(
            targetBlock <= block.number,
            "You can only calculate up to current block"
        );
        require(
            farm.lastHarvestedBlockNumber <= targetBlock,
            "You can only specify blocks at or ahead of last harvested block"
        );

        uint256 lastBlockInGrowthCycle = farm.lastHarvestedBlockNumber.add(_maxGrowthCycle); // end of growth cycle last allowed block
        uint256 blocksMinted = _maxGrowthCycle;

        if (targetBlock < lastBlockInGrowthCycle) {
            blocksMinted = targetBlock.sub(farm.lastHarvestedBlockNumber);
        }

        uint256 amount = farm.amount; // Total of size of the farm in LAND for this address
        uint256 blocksMintedByAmount = amount.mul(blocksMinted);

        // Adjust by multipliers
        uint256 totalMultiplier = getTotalMultiplier(targetAddress).div(_percentMultiplier);
        uint256 afterMultiplier = blocksMintedByAmount.mul(totalMultiplier);
        actualMinted = afterMultiplier.div(_harvestPerBlockDivisor);
    }

    /**
     * @dev PUBLIC: Find out a farms maturity boost for the current LAND address (Using 1 block = 13.5 sec formula)
     */
    function getAddressMaturityMultiplier(address targetAddress)
        public
        view
        returns (uint256 timeMultiplier)
    {
        Farm memory farm = farms[targetAddress]; // Shortcut accessor

        // Ensure this address has a farm on the LAND
        if (farm.amount == 0) {
            return _percentMultiplier;
        }

        // You don't get a boost until minimum blocks passed
        uint256 targetBlockNumber =
            farm.blockNumber.add(startMaturityBoost);
        if (block.number < targetBlockNumber) {
            return _percentMultiplier;
        }

        // 24 hours - min before starting to receive rewards
        // 28 days - max for waiting 28 days (The function returns PERCENT (10000x) the multiplier for 4 decimal accuracy
        uint256 blockDiff =
            block.number
            .sub(targetBlockNumber)
            .mul(_maturityBoostExtension)
            .div(endMaturityBoost)
            .add(_percentMultiplier);

        timeMultiplier = Math.min(_maxMaturityBoost, blockDiff); // Min 1x, Max 3x
    }

    /**
     * @dev PUBLIC: Find out a farms compost productivity boost for a specific address. This will be returned as PERCENT (10000x)
     */
    function getAddressCompostMultiplier(address targetAddress)
        public
        view
        returns (uint256 compostMultiplier)
    {
        uint256 myRatio = getAddressRatio(targetAddress);
        uint256 globalRatio = getGlobalRatio();

        // Avoid division by 0 & ensure 1x boost if nothing is locked
        if (globalRatio == 0 || myRatio == 0) {
            return _percentMultiplier;
        }

        // The final multiplier is return with 10000x multiplication and will need to be divided by 10000 for final number
        compostMultiplier =
            Math.min(
                _maxCompostBoost,
                myRatio.mul(_percentMultiplier).div(globalRatio).add(
                    _percentMultiplier
                )
            ); // Min 1x, Max 10x
    }

    /**
     * @dev PUBLIC: Find out a farms Collectible boost for the current LAND address
     */
    function getAddressCollectibleMultiplier(address targetAddress)
        public
        view
        returns (uint256 collectibleMultiplier)
    {
        Farm memory farm = farms[targetAddress]; // Shortcut accessor

        // Ensure this address has a collectible on the LAND
        if (farm.numberOfCollectibles == 0) {
            return _percentMultiplier;
        }
        
        (uint256 totalMaxBoost, uint256 totalBlocksToMaxBoost, uint256 targetBlockNumber, uint256 finalExpiry) = getCollectibleDetails(targetAddress); 
      
        // You don't get a boost if the MaxBoostLevel is less than or equal to 1x
        if (totalMaxBoost <= _percentMultiplier) {
            return _percentMultiplier;
        }
        // You don't get a boost if the your collectible has expired; if Expiry equals zero then no expiry
        if (finalExpiry > 0 && block.timestamp >= finalExpiry) {
            return _percentMultiplier;
        }

        // Calculates the boost extension; i.e., the extension over and above 1x e.g., the 2x to get to a 3x boost
        uint256 boostExtension = totalMaxBoost.sub(_percentMultiplier);

        // 24 hours - min before starting to receive rewards
        // Max before multiplier stops growing depends on the collectible attributes 
        // The function returns PERCENT (10000x) the multiplier for 4 decimal accuracy
        uint256 blockDiff =
            block.number
            .sub(targetBlockNumber)
            .mul(boostExtension)
            .div(totalBlocksToMaxBoost)
            .add(_percentMultiplier);

        collectibleMultiplier = Math.min(totalMaxBoost, blockDiff); // Min 1x, Max depends on the collectible attributes 
    }

    /**
     * @dev PUBLIC: Calculate Total Boost
     */
    function getTotalMultiplier(address targetAddress)
        public
        view
        returns (uint256 totalMultiplier)
    {
        uint256 maturityMultiplier = getAddressMaturityMultiplier(targetAddress);
        uint256 compostMultiplier = getAddressCompostMultiplier(targetAddress);
        uint256 collectibleMultiplier = getAddressCollectibleMultiplier(targetAddress);
        totalMultiplier = compostMultiplier.mul(maturityMultiplier).mul(collectibleMultiplier).
                          div(_percentMultiplier).div(_percentMultiplier);
    }

    /**
     * @dev PUBLIC: Calculate Total Boost
     */
    function getCollectibleDetails(address targetAddress)
        public
        view
        returns (
            uint256 totalMaxBoost,
            uint256 totalblocksToMaxBoost,
            uint256 firstAddedBlockNumber,
            uint256 finalExpiry
            )
    {
        firstAddedBlockNumber = block.number;
