        uint256 amount = farm.amount;
        farm.amount = 0;
        _globalAllocatedAmount = _globalAllocatedAmount.sub(amount);
        _globalCompostedAmount = _globalCompostedAmount.sub(farm.compostedAmount);
        _globalTotalFarms = _globalTotalFarms.sub(1);

        emit Released(_msgSender(), amount, farm.compostedAmount);

        // Send back the LAND amount to person calling the method
        IERC777(token).send(_msgSender(), amount, ""); // [RE-ENTRANCY WARNING] external call, must be at the end
    }

