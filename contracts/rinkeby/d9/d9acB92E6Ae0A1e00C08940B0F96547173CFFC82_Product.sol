//*******************************************************************************************************************************************
contract Token is Context, AccessControlEnumerable, ERC20Burnable, ERC20Pausable {
    
    event Purchase(uint256 price, uint8 licensingModel, address productAddr, address buyer);
    
    bytes32 public constant MINTER_ROLE = keccak256("MINTER_ROLE");
    bytes32 public constant PAUSER_ROLE = keccak256("PAUSER_ROLE");

    constructor(string memory name, string memory symbol, uint256 initialSupply, address owner) ERC20(name, symbol) {
        _setupRole(DEFAULT_ADMIN_ROLE, owner);

        _setupRole(MINTER_ROLE, owner);
        _setupRole(PAUSER_ROLE, owner);
        
        _mint(owner, initialSupply * 10 ** decimals());

    }
    
    //TODO: sholud be decided     
    function mint(address to, uint256 amount) public virtual {
        require(hasRole(MINTER_ROLE, _msgSender()), "Token: must have minter role to mint");
        _mint(to, amount);
    }
    

    function pause() public virtual {
        require(hasRole(PAUSER_ROLE, _msgSender()), "Token: must have pauser role to pause");
        _pause();
    }


    function unpause() public virtual {
        require(hasRole(PAUSER_ROLE, _msgSender()), "Token: must have pauser role to unpause");
        _unpause();
    }

    function _beforeTokenTransfer(address from, address to, uint256 amount) internal virtual override(ERC20, ERC20Pausable) {
        super._beforeTokenTransfer(from, to, amount);
    }
}

//*******************************************************************************************************************************************
contract Product is Context, AccessControlEnumerable {

    event ProductDeployed(string productName, string productURL, string ownerName, string ownerEmail);
    event ProductDeleted(string productURL);
    event SetPrice(uint256 price, LicensingModel licensingModel, string productVersion);
    event DependencyAdded(string dependencyURL, string dependencyVersion, string productVersion, string productURL);
    event DependencyDeleted(string dependencyURL, string dependencyVersion, string productVersion, string productURL);
    event Purchase(string productURL, string productVersion, uint8 licensingModel, uint256 price, address buyer);
    event VersionAdded(string productURL, string productVersion);
    event VersionDeleted(string productURL, string productVersion);
    
    event PayeeAdded(address account, uint256 shares, string productURL, string productVersion);
    event PayeeDeleted(address account, string productURL, string productVersion);
    event PayeeUpdated(address account, uint256 shares, string productURL, string productVersion);
    event PaymentReleased(address to, uint256 amount, string productURL, string productVersion);
    
    enum LicensingModel {FREE, HOURLY, MONTHLY, ANNUAL, PERPETUAL}
    
    using EnumerableSet for EnumerableSet.Bytes32Set;
    using SafeERC20 for IERC20;
    
    struct PayeesInfo {
        uint256 share;
        uint256 released;
        bool isExist;
    }
    
    struct ProductVersionInfo {
        EnumerableSet.Bytes32Set dependencies;
        mapping(LicensingModel => uint256) price;
        uint256 virtualAccount;
        uint256 totalShares;
        uint256 totalReleased;
        bool isExist;
    }
    
    struct ProductInfo {
        mapping(string => ProductVersionInfo) versions;
        uint256 versionsLength;
        address ownerAddress;
        string url;
        bool isExist;
    }
    
    mapping(string => ProductInfo) products;
    mapping(bytes32 => PayeesInfo) payees;
    address private _tokenAddr;
    address private _signer;

    constructor(
        string memory name,
        string memory symbol,
        uint256 initialSupply,
        address owner
        ) 
    {
        _setupRole(DEFAULT_ADMIN_ROLE, owner);
        _tokenAddr = address(new Token(name, symbol, initialSupply, owner));
    }
    
    function addProduct(string memory productName, string memory productURL, string memory ownerName, string memory ownerEmail) public {
         require(bytes(productName).length != 0 , "Product: productName is empty");
         require(bytes(productURL).length != 0 , "Product: productURL is empty");
         require(bytes(ownerName).length != 0 , "Product: ownerName is empty");
         require(bytes(ownerEmail).length != 0 , "Product: ownerEmail is empty");

         require(!products[productURL].isExist, "Product: product has been already registered");
         require(_verifyproductOwnership(productURL, ownerName, ownerEmail), "Product: access is limmited to product owner");
        
         products[productURL].isExist = true;
         products[productURL].url = productURL;
         products[productURL].ownerAddress = msg.sender;

         emit ProductDeployed(productName, productURL, ownerName, ownerEmail);
     }
     
    function delProduct(string memory productURL) public isProductOwner(productURL) {
        require(bytes(productURL).length != 0 , "Product: productURL is empty");
        
        require(products[productURL].isExist, "Product: product does not exist");
        require(products[productURL].versionsLength == 0, "Product: delete all versions first");

        delete products[productURL];

        emit ProductDeleted(productURL);

     }
     
    function addVersion(string memory productURL, string memory productVersion) public isProductOwner(productURL) {
       require(bytes(productURL).length != 0 , "Product: productURL is empty");
       require(bytes(productVersion).length != 0 , "Product: productVersion is empty");

       require(!products[productURL].versions[productVersion].isExist, "Product: product version exists");
       products[productURL].versions[productVersion].isExist = true;
       products[productURL].versionsLength += 1;
       
       emit VersionAdded(productURL, productVersion);

    }
    
    function delVersion(string memory productURL, string memory productVersion) public isProductOwner(productURL) {
       require(bytes(productURL).length != 0 , "Product: productURL is empty");
       require(bytes(productVersion).length != 0 , "Product: productVersion is empty");
       
       require(products[productURL].versions[productVersion].isExist, "Product: product version does not exist");
       require(products[productURL].versions[productVersion].virtualAccount == 0, "Product: account is not empty");
       
       delete products[productURL].versions[productVersion];
       products[productURL].versionsLength -= 1;

       emit VersionDeleted(productURL, productVersion);

    }
     
    function setPrices(uint256[] memory prices, LicensingModel[] memory licensingModels, string memory productURL, string memory productVersion) public isProductOwner(productURL) {
        require(bytes(productURL).length != 0 , "Product: productURL is empty");
        require(bytes(productVersion).length != 0 , "Product: productVersion is empty");
       
        require(products[productURL].versions[productVersion].isExist, "Product: product version does not exist");
        require(prices.length == licensingModels.length, "Product: prices and licensingModels length mismatch");
        require(prices.length > 0, "Product: no prices");
        
         for (uint256 i = 0; i < prices.length; i++) {
            products[productURL].versions[productVersion].price[licensingModels[i]] = prices[i];
            
            emit SetPrice(prices[i], licensingModels[i], productVersion);

        }
    }
    
    function getPrice(uint8 licensingModel, string memory productURL, string memory productVersion) public view returns(uint256) {
        require(bytes(productURL).length != 0 , "Product: productURL is empty");
        require(bytes(productVersion).length != 0 , "Product: productVersion is empty");
       
        require(products[productURL].versions[productVersion].isExist, "Product: product version does not exist");
        return products[productURL].versions[productVersion].price[LicensingModel(licensingModel)];
    }
    
    function addDependencies(string[] memory dependenciesURL, string[] memory dependenciesVersion, string memory productURL, string memory productVersion) public isProductOwner(productURL) {
        require(bytes(productURL).length != 0 , "Product: productURL is empty");
        require(bytes(productVersion).length != 0 , "Product: productVersion is empty");
        
        require(products[productURL].versions[productVersion].isExist, "Product: product version does not exist");
        require(dependenciesURL.length == dependenciesVersion.length, "Product: dependenciesURL and dependenciesVersion length mismatch");
        require(dependenciesURL.length > 0, "Product: no dependenciesURL");

        for (uint256 i = 0; i < dependenciesURL.length; i++) {
            _addDependencies(dependenciesURL[i], dependenciesVersion[i], productVersion, productURL);
        }
    }
    
    function _addDependencies(string memory dependencyURL, string memory dependencyVersion, string memory productURL, string memory productVersion) private {
        require(products[dependencyURL].isExist, "Product: dependency does not exist");
        require(products[dependencyURL].versions[dependencyVersion].isExist, "Product: dependency version does not exist");
        require(keccak256(abi.encodePacked(dependencyURL)) != keccak256(abi.encodePacked(productURL)), "Product: dependencyURL is equal to productURL");
        
        //TODO: check if dependecy url is in dependecies
        bytes32 dependencyHash = keccak256(abi.encodePacked(dependencyURL, dependencyVersion));
        products[productURL].versions[productVersion].dependencies.add(dependencyHash);
 
        emit DependencyAdded(dependencyURL, dependencyVersion, productVersion, productURL);

    }
    
    function delDependencies(string[] memory dependenciesURL, string[] memory dependenciesVersion, string memory productURL, string memory productVersion) public isProductOwner(productURL) {
        require(bytes(productURL).length != 0 , "Product: productURL is empty");
        require(bytes(productVersion).length != 0 , "Product: productVersion is empty");
       
        require(products[productURL].versions[productVersion].isExist, "Product: product version does not exist");
        require(dependenciesURL.length == dependenciesVersion.length, "Product: dependenciesURL and dependenciesVersion length mismatch");
        require(dependenciesURL.length > 0, "Product: no dependenciesURL");

        for (uint256 i = 0; i < dependenciesURL.length; i++) {
            _delDependencies(dependenciesURL[i], dependenciesVersion[i], productVersion, productURL);
        }
    }
    
    function _delDependencies(string memory dependencyURL, string memory dependencyVersion, string memory productURL, string memory productVersion) private {
        require(products[dependencyURL].isExist, "Product: dependency does not exist");
        require(products[dependencyURL].versions[dependencyVersion].isExist, "Product: dependency version does not exist");
        
        bytes32 dependencyHash = keccak256(abi.encodePacked(dependencyURL, dependencyVersion));
        products[productURL].versions[productVersion].dependencies.remove(dependencyHash);
        
        emit DependencyDeleted(dependencyURL, dependencyVersion, productVersion, productURL);

    }
    
    function purchase(string[] memory productsURL, string[] memory productsVersion, uint256[] memory productsPrices, uint8 licensingModel, bytes32[] memory inputHash, bytes[] memory inputSignature) public {
        require(productsURL.length == productsPrices.length, "Product: productsURL and productsPrices length mismatch");
        require(productsURL.length == productsVersion.length, "Product: productsURL and productsVersion length mismatch");
        require(inputHash.length == 4, "Product: inputHash length is less than four");
        require(inputSignature.length == 4, "Product: inputSignature length is less than four");

        bytes32 productHash;
        bytes32 versionHash;
        bytes32 priceHash;
        bytes32 licenseHash;
        
        for (uint256 i = 0; i < productsURL.length; i++) {
            
            productHash = keccak256(abi.encodePacked(productHash, productsURL[i]));
            versionHash = keccak256(abi.encodePacked(versionHash, productsVersion[i]));
            priceHash = keccak256(abi.encodePacked(priceHash, productsPrices[i]));
        }
        
        licenseHash = keccak256(abi.encodePacked(licensingModel));
        
        require(SignatureChecker.isValidSignatureNow(_signer, inputHash[0], inputSignature[0]), "Product: productsURL signature mismatch");
        require(SignatureChecker.isValidSignatureNow(_signer, inputHash[1], inputSignature[1]), "Product: productsVersion signature mismatch");
        require(SignatureChecker.isValidSignatureNow(_signer, inputHash[2], inputSignature[2]), "Product: productsPrices signature mismatch");
        require(SignatureChecker.isValidSignatureNow(_signer, inputHash[3], inputSignature[3]), "Product: licensingModel signature mismatch");

        require(productHash == inputHash[0], "Product: unintended changes to productsURL");
        require(versionHash == inputHash[1], "Product: unintended changes to productsVersion");
        require(priceHash == inputHash[2], "Product: unintended changes to productsPrices");
        require(licenseHash == inputHash[3], "Product: unintended changes to licensingModel");

        uint256 totalPrice = 0;
        
        for (uint256 i = 0; i < productsURL.length; i++) {

            _purchase(productsURL[i], productsVersion[i], productsPrices[i], licensingModel);
            totalPrice += productsPrices[i];
        }
        
        IERC20(_tokenAddr).safeTransferFrom(msg.sender, address(this), totalPrice);

    }
    
    function _purchase(string memory productURL, string memory productVersion, uint256 price, uint8 licensingModel) private {
        uint256 _productPrice = getPrice(licensingModel, productVersion, productURL);
        require(_productPrice > 0, "Product: licensingModel not supported");
        require(price == _productPrice, "Product: price mismatch");
        
        products[productURL].versions[productVersion].virtualAccount += price;

        emit Purchase(productURL, productVersion, licensingModel, price, msg.sender);

    }
    
    function addPayees(address[] memory payees, uint256[] memory shares, string memory productURL, string memory productVersion) public isProductOwner(productURL) {
        require(bytes(productURL).length != 0 , "Product: productURL is empty");
        require(bytes(productVersion).length != 0 , "Product: productVersion is empty");
       
        require(products[productURL].versions[productVersion].isExist, "Product: product version does not exist");
        require(payees.length == shares.length, "Product: payees and shares length mismatch");
        require(payees.length > 0, "Product: no payees");

        for (uint256 i = 0; i < payees.length; i++) {
            _addPayee(payees[i], shares[i], productURL, productVersion);
        }
        
    }
    
    function _addPayee(address account, uint256 share, string memory productURL, string memory productVersion) private {
        require(account != address(0), "Product: account is the zero address");
        require(share > 0, "Product: share is equal or less than zero");
        bytes32 payeeHash = keccak256(abi.encodePacked(account, productURL, productVersion));
        require(payees[payeeHash].isExist == false, "Product: payee already added");

        payees[payeeHash].isExist = true;
        payees[payeeHash].share = share;
        products[productURL].versions[productVersion].totalShares += share;

        emit PayeeAdded(account, share, productURL, productVersion);
    }
     
    function delPayees(address[] memory payees, string memory productURL, string memory productVersion) public isProductOwner(productURL) {
        require(bytes(productURL).length != 0 , "Product: productURL is empty");
        require(bytes(productVersion).length != 0 , "Product: productVersion is empty");
       
        require(products[productURL].versions[productVersion].isExist, "Product: product version does not exist");
        require(payees.length > 0, "Product: no payees");

        for (uint256 i = 0; i < payees.length; i++) {
            _delPayee(payees[i], productURL, productVersion);
        }
        
    }
    
    function _delPayee(address account, string memory productURL, string memory productVersion) private {
        require(account != address(0), "Product: account is the zero address");
        bytes32 payeeHash = keccak256(abi.encodePacked(account, productURL, productVersion));
        require(payees[payeeHash].isExist == true, "Product: payee does not exist");

        uint256 share = payees[payeeHash].share;
        uint256 released = payees[payeeHash].released;
        
        products[productURL].versions[productVersion].totalShares -= share;
        products[productURL].versions[productVersion].totalReleased -= released;

        delete payees[payeeHash];
        
        emit PayeeDeleted(account, productURL, productVersion);
    }
    
    function updatePayees(address[] memory payees, uint256[] memory shares, string memory productURL, string memory productVersion) public isProductOwner(productURL) {
        require(bytes(productURL).length != 0 , "Product: productURL is empty");
        require(bytes(productVersion).length != 0 , "Product: productVersion is empty");
       
        require(products[productURL].versions[productVersion].isExist, "Product: product version does not exist");
        require(payees.length == shares.length, "Product: payees and shares length mismatch");
        require(payees.length > 0, "Product: no payees");

        for (uint256 i = 0; i < payees.length; i++) {
            _updatePayee(payees[i], shares[i], productURL, productVersion);
        }
        
    }
        
    function _updatePayee(address account, uint256 share, string memory productURL, string memory productVersion) private {
        require(account != address(0), "Product: account is the zero address");
        bytes32 payeeHash = keccak256(abi.encodePacked(account, productURL, productVersion));
        require(payees[payeeHash].isExist == true, "Product: payee does not exist");
        require(share >= 0, "Product: share is less than zero");
        
        uint256 _share = payees[payeeHash].share;

        products[productURL].versions[productVersion].totalShares -= _share;
        products[productURL].versions[productVersion].totalShares += share;
        payees[payeeHash].share = share;
        
        emit PayeeUpdated(account, share, productURL, productVersion);
    }
    
    function release(address account, string memory productURL, string memory productVersion) public {
        require(bytes(productURL).length != 0 , "Product: productURL is empty");
        require(bytes(productVersion).length != 0 , "Product: productVersion is empty");
       
        require(products[productURL].isExist, "Product: product does not exist");
        require(products[productURL].versions[productVersion].isExist, "Product: product version does not exist");
        
        bytes32 payeeHash = keccak256(abi.encodePacked(account, productURL, productVersion));
        require(payees[payeeHash].isExist == true, "Product: payee does not exist");
        
        uint256 released = payees[payeeHash].released;
        uint256 share = payees[payeeHash].share;
        require(share > 0, "Product: payee has no share");
        
        uint256 totalShares = products[productURL].versions[productVersion].totalShares;
        uint256 totalReleased = products[productURL].versions[productVersion].totalReleased;

        uint256 totalReceived = products[productURL].versions[productVersion].virtualAccount + totalReleased;
        uint256 payment = totalReceived * share / totalShares - released;

        require(payment > 0, "Product: account is not due payment");

        payees[payeeHash].released += payment;
        products[productURL].versions[productVersion].totalReleased += payment;
        products[productURL].versions[productVersion].virtualAccount -= payment;

        IERC20(_tokenAddr).safeTransfer(account, payment);
        emit PaymentReleased(account, payment, productURL, productVersion);
    }
    
    function getTotalShares(string memory productURL, string memory productVersion) public view returns (uint256) {
        require(bytes(productURL).length != 0 , "Product: productURL is empty");
        require(bytes(productVersion).length != 0 , "Product: productVersion is empty");
        
        return products[productURL].versions[productVersion].totalShares;
    }


    function getTotalReleased(string memory productURL, string memory productVersion) public view returns (uint256) {
        require(bytes(productURL).length != 0 , "Product: productURL is empty");
        require(bytes(productVersion).length != 0 , "Product: productVersion is empty");
       
        return products[productURL].versions[productVersion].totalReleased;
    }

    function getTotalUnReleased(string memory productURL, string memory productVersion) public view returns (uint256) {
        require(bytes(productURL).length != 0 , "Product: productURL is empty");
        require(bytes(productVersion).length != 0 , "Product: productVersion is empty");
       
        return products[productURL].versions[productVersion].virtualAccount;
    }
    
    function getPayeeInfo(address account, string memory productURL, string memory productVersion) public view returns (uint256, uint256, uint256) {
       require(bytes(productURL).length != 0 , "Product: productURL is empty");
       require(bytes(productVersion).length != 0 , "Product: productVersion is empty");
       
       bytes32 payeeHash = keccak256(abi.encodePacked(account, productURL, productVersion));

       uint256 released = payees[payeeHash].released;
       uint256 share = payees[payeeHash].share;
       
       uint256 totalShares = products[productURL].versions[productVersion].totalShares;
       uint256 totalReleased = products[productURL].versions[productVersion].totalReleased;
       uint256 totalReceived = products[productURL].versions[productVersion].virtualAccount + totalReleased;
       
       uint256 unreleased = totalReceived * share / totalShares - released;
       return (share, released, unreleased);
    }
    
    function setSigner(address signer) public onlyRole(DEFAULT_ADMIN_ROLE) {
        _signer = signer;
    }
    
    function getToken() public view returns (address) {
         return _tokenAddr;
    }
     
    function _verifyproductOwnership(string memory productURL, string memory ownerName, string memory ownerEmail) private pure returns(bool) {
        return true; //TODO: Shoud be implemented
    }
    
    modifier isProductOwner(string memory productURL) {
        require(products[productURL].ownerAddress == msg.sender, "Product: access is limmited to product owner");
        _;
    }
    
}

