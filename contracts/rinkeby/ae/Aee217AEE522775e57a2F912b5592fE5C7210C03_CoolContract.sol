        if (_lotteryFee != 0 && amount >= _lotterySwapMinAmount) {

            // swap tokens for ETH
            swapTokensForEth(amount);
            // <- this breaks the ETH -> HATE swap when swap+liquify is triggered
            emit SwapForRaffle(amount);
        }

        // how much ETH did we just swap into?
