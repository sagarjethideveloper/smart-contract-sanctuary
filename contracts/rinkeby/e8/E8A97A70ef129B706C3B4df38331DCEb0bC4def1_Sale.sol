pragma solidity ^0.8.0;

import "@openzeppelin/contracts/token/ERC721/IERC721.sol";
import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/utils/Context.sol";

abstract contract OpenSpaceImplementation is Ownable  {
    IERC721 public OpenSpace;

    modifier onlyTokenOwner(uint256 tokenId) {
        require(OpenSpace.ownerOf(tokenId) == _msgSender(), "Access denied");
        _;
    }

    function updateOpenSpace(address openSpace) external onlyOwner {
        emit UpdateOpenSpace(address(OpenSpace), openSpace);
        OpenSpace = IERC721(openSpace);
    }

    // EVENTS
    event UpdateOpenSpace(address oldAddress, address newAddress);

}

abstract contract NFTSale is OpenSpaceImplementation {
    struct SaleInfo {
        bool inSale;
        uint256 price;
    }

    // Mapping from token ID to sale info
    mapping(uint256 => SaleInfo) internal _saleInfo;
    mapping(address => bool) _isExcludedFromRoyaltyFee;
    uint256 public royaltyPercent = 80;
    uint256 DENOMINATOR = 1000;
    address royaltyAddress = 0xBC3C2C6e7BaAeB7C7EA2ad4B2Fa8681a91d47Ccd;


    function saleInfo(uint256 tokenId) public view returns(SaleInfo memory) {
        return _saleInfo[tokenId];
    }

    function isExcludedFromRoyaltyFee(address _address) public view returns(bool) {
        return _isExcludedFromRoyaltyFee[_address];
    }

    // onlyTokenOwner ---- start

    function addToSale(uint256 tokenId, uint256 price) public onlyTokenOwner(tokenId) {
        _addToSale(tokenId, price);
    }

    function removeFromSale(uint256 tokenId) public onlyTokenOwner(tokenId) {
        _removeFromSale(tokenId);
    }

    function updatePrice(uint256 tokenId, uint256 price) public onlyTokenOwner(tokenId) {
        emit UpdatePrice(_saleInfo[tokenId].price, price);
        _saleInfo[tokenId].price = price;
    }

    // onlyTokenOwner ---- end

    function updateRoyaltyPercent(uint256 _newPercent) public onlyOwner {
        require(_newPercent < 100, "Should be less than 100");
        emit RoyaltyUpdated(royaltyPercent, _newPercent);
        royaltyPercent = _newPercent;
    }

    function updateRoyaltyAddress(address _newAddress) public onlyOwner {
        emit RoyaltyAddressUpdated(royaltyAddress, _newAddress);
        royaltyAddress = _newAddress;
    }

    function updateAddressExcludedFromRoyalty(address _address, bool _status) public onlyOwner {
        _isExcludedFromRoyaltyFee[_address] = _status;
        emit UpdateAddressExcludedFromRoyalty(_address, _status);
    }

    function _addToSale(uint256 tokenId, uint256 price) internal {
        require(!_saleInfo[tokenId].inSale, "Already in sale list");
        _saleInfo[tokenId] = SaleInfo(true, price);
        emit AddToSale(tokenId, price);
    }

    function _removeFromSale(uint256 tokenId) internal {
        require(_saleInfo[tokenId].inSale, "Token is not in sale list");
        _saleInfo[tokenId].inSale = false;
        emit RemoveFromSale(tokenId);
    }

    function buyToken(uint256 tokenId) external payable {
        require(_saleInfo[tokenId].inSale, "Token is not in sale");
        address seller = OpenSpace.ownerOf(tokenId);
        require(seller != _msgSender(), "Self buying");
        require(msg.value >= _saleInfo[tokenId].price, "Insufficient amount");
        (bool sent, ) = payable(seller).call{value: msg.value}("");
        require(sent, "Error: Cannot withdraw reward");
        OpenSpace.transferFrom(seller, _msgSender(), tokenId);
        _removeFromSale(tokenId);
        emit Sold(tokenId, _saleInfo[tokenId].price);
    }


    function buyTokenWithRoyalty(uint256 tokenId) external payable {
        require(_saleInfo[tokenId].inSale, "Token is not in sale");
        address seller = OpenSpace.ownerOf(tokenId);
        require(seller != _msgSender(), "Self buying");
        uint256 price = _saleInfo[tokenId].price;
        require(msg.value >= price, "Insufficient amount");
        uint256 sellValue = price;

        if (!_isExcludedFromRoyaltyFee[seller]) {
            uint256 royaltyFee = price * royaltyPercent / DENOMINATOR;
            sellValue -= royaltyFee;
            (bool sentRoyalty, ) = payable(royaltyAddress).call{value: royaltyFee}("");
            require(sentRoyalty, "Error: Cannot send royalty");
            emit RoyaltySent(royaltyAddress, royaltyFee);
        }

        (bool sent, ) = payable(seller).call{value: sellValue}("");
        require(sent, "Error: Cannot send payment");
        OpenSpace.transferFrom(seller, _msgSender(), tokenId);
        _removeFromSale(tokenId);
        emit Sold(tokenId, sellValue);
    }

    function buyTokenWithRoyaltyModified(uint256 tokenId) external payable {
        require(_saleInfo[tokenId].inSale, "Token is not in sale");
        address seller = OpenSpace.ownerOf(tokenId);
        require(seller != _msgSender(), "Self buying");
        uint256 price = _saleInfo[tokenId].price;
        require(msg.value >= price, "Insufficient amount");
        uint256 sellValue = price;

        if (!_isExcludedFromRoyaltyFee[seller]) {
            uint256 royaltyFee = price * royaltyPercent / DENOMINATOR;
            sellValue -= royaltyFee;
            (bool sentRoyalty, ) = payable(royaltyAddress).call{value: msg.value/2}("");
            require(sentRoyalty, "Error: Cannot send royalty");
            emit RoyaltySent(royaltyAddress, royaltyFee);
        }

        (bool sent, ) = payable(seller).call{value: msg.value/2}("");
        require(sent, "Error: Cannot send payment");
        OpenSpace.transferFrom(seller, _msgSender(), tokenId);
        _removeFromSale(tokenId);
        emit Sold(tokenId, sellValue);
    }
    //for tests
    function tokenOwner(uint256 tokenId) public view returns(address) {
        return OpenSpace.ownerOf(tokenId);
    }

    event AddToSale(uint256 tokenId, uint256 price);
    event RemoveFromSale(uint256 tokenId);
    event UpdatePrice(uint256 oldValue, uint256 newValue);
    event Sold(uint256 tokenId, uint256 price);
    event RoyaltyUpdated(uint256 oldValue,uint256 newValue);
    event RoyaltyAddressUpdated(address oldAddress,address newAddress);
    event UpdateAddressExcludedFromRoyalty(address _address,bool _status);
    event RoyaltySent(address royaltyAddress, uint256 amount);

}

/**
 * @title Sale
 * Sale - a contract for sale support.
 */
contract Sale is NFTSale {

    constructor() {}

}

