import "@openzeppelin/contracts-upgradeable/security/PausableUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/access/OwnableUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/token/ERC721/utils/ERC721HolderUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/token/ERC721/IERC721ReceiverUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/token/ERC1155/IERC1155ReceiverUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/utils/introspection/ERC165Upgradeable.sol";
import '@openzeppelin/contracts-upgradeable/utils/math/SafeMathUpgradeable.sol';
import "solidity-bytes-utils/contracts/BytesLib.sol";


contract Taloha is Initializable, OwnableUpgradeable, IERC721ReceiverUpgradeable, IERC1155ReceiverUpgradeable, ERC165Upgradeable {
    using SafeMathUpgradeable for uint;
	using BytesLib for bytes;

    event Dumped(address indexed contractAddress, address indexed dumper, uint indexed tokenId);
    event Purchased(address indexed contractAddress, address indexed buyer, uint indexed tokenId);
    event TestEvent1(uint value);
    event TestEvent2(uint value);
    event TestEvent3();

    struct Dump { 
       address dumper;
       uint reservePrice;
       uint timestamp;
    }

    ExternalERC721Contract public externalERC721Contract;

    mapping (address => mapping (uint => Dump)) private dumpedTokens;
    mapping (address => uint) private balances;

    uint buybackMinPrice;
    uint buybackFeePercentage;
    uint buybackLength;

    uint royaltiesPercentage;
    uint dutchAuctionLength;
    uint buyMinPrice;

    function initialize() initializer public {
        __Context_init_unchained();
        __Ownable_init_unchained();

        buybackMinPrice = 10000000000000000;
        buybackFeePercentage = 10;
        buybackLength = 31536000;

        royaltiesPercentage = 10;
        dutchAuctionLength = 2592000;
        buyMinPrice = 10000000000000000;
    }

    receive() external payable {}

    // change data location to calldata?
    function onERC721Received(address operator, address from, uint256 tokenId, bytes memory data) public override returns (bytes4) {
        require(ExternalERC721Contract(msg.sender).ownerOf(tokenId) == address(this), "sender not ERC721 contract");
        require(dumpedTokens[msg.sender][tokenId].dumper == address(0), "token already dumped");

        dumpedTokens[msg.sender][tokenId] = Dump(from, data.toUint256(0), block.timestamp);
        (bool success, ) = from.call{value:1}(""); // limit forwarded gas?
        require(success, "Ether transfer failed.");

        emit Dumped(msg.sender, from, tokenId);

        return this.onERC721Received.selector;
    }

    function onERC1155Received(address operator, address from, uint256 tokenId, uint256 value, bytes memory data) public override returns (bytes4) {
        require(ExternalERC1155Contract(msg.sender).balanceOf(address(this), tokenId) > 0, "sender not ERC1155 contract");
        // require(dumpedTokens[msg.sender][tokenId].dumper == address(0), "token already dumped");

        // dumpedTokens[msg.sender][tokenId] = Dump(from, data.toUint256(0), block.timestamp);
        // (bool success, ) = from.call{value:1}(""); // limit forwarded gas?
        // require(success, "Ether transfer failed.");

        return this.onERC1155Received.selector;
    }    


    function onERC1155BatchReceived(address operator, address from, uint256[] memory ids, uint256[] memory values, bytes memory data) public override returns (bytes4) {

        return this.onERC1155BatchReceived.selector;
    }


    function safeTransferTo(address contractAddress, address to, uint256 tokenId) private {
        ExternalERC721Contract(contractAddress).safeTransferFrom(address(this), to , tokenId);
    }

    function getDumper(address contractAddress, uint tokenId) public view returns (address) {
        return dumpedTokens[contractAddress][tokenId].dumper;
    }

    function getReservePrice(address contractAddress, uint tokenId) public view returns (uint) {
        return dumpedTokens[contractAddress][tokenId].reservePrice;
    }

    function balanceOf(address dumper) public view returns (uint) {
        return balances[dumper];
    }

    function claimRoyalties() external {
        uint amount = balances[msg.sender];
        balances[msg.sender] = 0;

        (bool success, ) = msg.sender.call{value:amount}(""); // limit forwarded gas?
        require(success, "Ether transfer failed.");
    }

    

    function buy(address _contractAddress, uint _tokenId) payable external {
        Dump memory dump = dumpedTokens[_contractAddress][_tokenId];

        uint price = getPrice(dump.dumper, dump.timestamp, dump.reservePrice);

        require(ExternalERC721Contract(_contractAddress).ownerOf(_tokenId) == address(this), "token not in vault");
        require(msg.value == price, "ether amount incorrect");

        delete dumpedTokens[_contractAddress][_tokenId];

        safeTransferTo(_contractAddress, msg.sender, _tokenId);

        if(dump.dumper != msg.sender && price > buybackMinPrice) {
            balances[dump.dumper] = royaltiesPercentage.mul(price).div(100);
        }

        emit Purchased(_contractAddress, msg.sender, _tokenId);
    }  

    function getPrice (address dumper, uint timestamp, uint reservePrice) public view returns (uint) {        
        if(dumper == msg.sender && timestamp.add(buybackLength) > block.timestamp) {
            uint result = buybackFeePercentage.mul(reservePrice) / 100;

            if(result >= buybackMinPrice) {
                return result;
            } else {
                return buybackMinPrice;
            }
        } else if(block.timestamp < timestamp + buybackLength){
            return reservePrice;
        } else {
            uint timePassedSinceReserveExpired = block.timestamp - timestamp - buybackLength;

            if(timePassedSinceReserveExpired > dutchAuctionLength) {
                return buyMinPrice;
            } else {
                uint daysExpired = timePassedSinceReserveExpired / 86400;
                uint percentagePassed = daysExpired * 86400 / dutchAuctionLength * 100;
                
                return percentagePassed.mul(reservePrice) / 100;
            }

        }
    }

    function setBuybackPeriod(uint _buybackPeriod) public onlyOwner {

        buybackLength = _buybackPeriod;
    }

    function setAuctionPeriod(uint _auctionPeriod) public onlyOwner {

        dutchAuctionLength = _auctionPeriod;
    }    

    function withdraw() onlyOwner external {
        uint balance = address(this).balance;
        payable(msg.sender).transfer(balance);
    }    
}

interface ExternalERC721Contract {
    function ownerOf(uint256 tokenId) external view returns (address);
    function safeTransferFrom(address from, address to, uint256 tokenId) external;
    function safeTransferFrom(address from, address to, uint256 tokenId, bytes memory _data) external;
}

interface ExternalERC1155Contract {
    function balanceOf(address _owner, uint256 _id) external returns (uint256);
    function safeTransferFrom(address _from, address _to, uint256 _id, uint256 _value, bytes calldata _data) external;
    function safeBatchTransferFrom(address _from, address _to, uint256[] calldata _ids, uint256[] calldata _values, bytes calldata _data) external;
}

