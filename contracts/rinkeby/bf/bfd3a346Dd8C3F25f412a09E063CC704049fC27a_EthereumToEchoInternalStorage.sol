contract WrappedECHO is ERC20 {
    function decimals() public override(ERC20) pure returns (uint8) {
        return 5;
    }

    address public minter;
    address public burner;

    constructor() ERC20("Wrapped ECHO", "wECHO") {
        return;
    }

    function setMinter(address minter_) external returns (bool success) {
        require(minter == address(0), "Minter already set");
        minter = minter_;
        return true;
    }

    function setBurner(address burner_) external returns (bool success) {
        require(burner == address(0), "Burner already set");
        burner = burner_;
        return true;
    }

    function mint(address receiver, uint256 amount) external returns (bool success) {
        require(msg.sender == minter, "Not allowed");
        _mint(receiver, amount);
        return true;
    }

    function burn(address owner, uint256 amount) external returns (bool success) {
        require(msg.sender == burner, "Not allowed");
        _burn(owner, amount);
        return true;
    }
}

