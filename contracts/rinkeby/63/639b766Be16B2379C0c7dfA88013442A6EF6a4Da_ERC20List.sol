pragma solidity ^0.8.5;

import "@openzeppelin/contracts/access/Ownable.sol";
import "../library/AdressSet.sol";

contract ERC20List is Ownable {
    using AddressSet for Set;

    Set private whitelist;
    mapping(address => uint256) public decimals;
    mapping(address => address) public priceFeed;

    event TokenAdded(address token_);
    event TokenDeleted(address token_);

    function isSupportedToken(address token_) external view returns (bool) {
        return whitelist.contains(token_);
    }

    function addToken(
        address token_,
        uint256 decimals_,
        address priceFeed_
    ) external onlyOwner {
        require(token_ != address(0), "You must set address");

        decimals[token_] = decimals_;
        priceFeed[token_] = priceFeed_;
        whitelist.add(token_);
        emit TokenAdded(token_);
    }

    function removeToken(address token_) external onlyOwner {
        require(whitelist.contains(token_), "Token address not supported");

        delete (decimals[token_]);
        delete (priceFeed[token_]);

        whitelist.remove(token_);

        emit TokenDeleted(token_);
    }

    function getWhitelist() external view returns (address[] memory) {
        return whitelist.getArray();
    }

    function getDecimal(address token_) external view returns (uint256) {
        return decimals[token_];
    }

    function getTokenFeed(address token_) external view returns (address) {
        return priceFeed[token_];
    }
}

