pragma solidity 0.7.0;

import "./SafeMath.sol";
import "./Initializable.sol";

interface IERC20 {
    function transfer(address to, uint256 amount) external returns (bool);

    function transferFrom(
        address owner,
        address sender,
        uint256 amount
    ) external returns (bool);

    function balanceOf(address adr) external returns (uint256);
}

contract JamaaPay is Initializable {
    using SafeMath for uint256;

    uint256 public fee;
    bool public feeTicker;

    address public owner;
    address public DAI;

    function initialize() external virtual initializer {
        owner = msg.sender;
    }

    function setDAI(address addr) external OnlyOwner {
        DAI = addr;
    }

    function sendDAI(address addr, uint256 amount) external returns (bool) {
        require(
            IERC20(DAI).balanceOf(msg.sender) >= amount,
            "insufficent funds"
        );

        if (feeTicker) {
            require(
                IERC20(DAI).balanceOf(msg.sender) >= amount.add(fee),
                "no sufficent funds"
            );
            IERC20(DAI).transferFrom(msg.sender, address(this), fee);
        }

        IERC20(DAI).transferFrom(msg.sender, addr, amount);
    }

    function toggleFees() external OnlyOwner {
        if (feeTicker) feeTicker = false;
        else if (!feeTicker) feeTicker = true;
    }

    function setFee(uint256 newFee) external OnlyOwner {
        fee = newFee;
    }

    function withdraw() external OnlyOwner {
        uint256 bal = IERC20(DAI).balanceOf(address(this));
        IERC20(DAI).transfer(owner, bal);
    }

    modifier OnlyOwner() {
        require(msg.sender == owner, "only owner can call this function");
        _;
    }
}

