pragma solidity 0.6.12;
pragma experimental ABIEncoderV2;

import "../interfaces/IPool.sol";


contract Pool{
    address public _poolAddress;
    address public _poolStrategyAddress;
    address public _strategy_address;
    address private _owner;

    IPool poolInstance;

    modifier isOwner{
        require(msg.sender == _owner, 'Not authorized to call function');
        _;
    }

    constructor(address strategy_address, address poolAddress)public{
        _strategy_address = strategy_address;
        _poolAddress = poolAddress;
        IPool poolInstance = IPool(_poolAddress);
        _owner = msg.sender;
    }

    function setPoolAddress(address poolAddress) isOwner public{
        _poolAddress = poolAddress;
    }

    function setPoolStrategyAddress(address poolStrategyAddress) isOwner public {
        _poolStrategyAddress = poolStrategyAddress;
    }

    function deposit(address to, uint256 amount, address controlledToken, address referrer) public{
        //create instance of pool 
        poolInstance.depositTo(to, amount, controlledToken, referrer);
    }
}

