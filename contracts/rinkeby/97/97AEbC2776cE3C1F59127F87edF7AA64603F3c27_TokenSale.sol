        uint256 fee = amount * liquidity_tax / 10**4;
        liquidity_tax_balance += fee; 
        return fee;
    }

    function calculateCharityFee(uint256 amount) internal returns (uint256) {
        uint256 fee = amount * charity_tax / 10**4;
        charity_tax_balance += fee; 
        return fee;
    }

