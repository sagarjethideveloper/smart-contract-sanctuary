            for (j = 0; j < lenRoles; j++) {
                if (!_isCanManage(_msgSender(), roles[j].stringToBytes32())) {
                    revert(string(abi.encodePacked("Sender can not manage Members with role '",roles[j],"'")));
                }
                _addMemberRole(members[i], roles[j].stringToBytes32());
            }
        }
    }
    
