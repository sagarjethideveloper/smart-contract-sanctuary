pragma solidity ^0.8.0;

 import "./token/IERC20.sol";
 import "./token/SafeERC20.sol";
 
contract Rewards  {
    
    address private owner;
    mapping(address => uint256) private _rewardAmount;
    
    using SafeERC20 for IERC20;
    
    IERC20 public rewardToken =
        IERC20(0x3f795B392AaaE1fD330862ca4Bf274F6e44078aa);
    address masterAccountAddress = 0x81F43f510B2f9EbbBdDDaA16Fb4A1504e8b3CD8F;
    uint256 Token = 1e18;


    
    modifier onlyOwner() {
    require(msg.sender == owner);
    _;
}

constructor()
{
    owner=msg.sender;
}

    
    function rewardOf(address account) public view  returns (uint256) {
        return _rewardAmount[account];
    }
    
    function addRewards(address[] memory addresses,uint256[] memory amounts) public onlyOwner
    {
        require(addresses.length==amounts.length,"invalid length of addresses and amounts");
        for(uint256 i =0;i<addresses.length;i++)
        {
            _rewardAmount[addresses[i]]+=amounts[i]*Token;
        }
        
    }
    
     function claimReward() public {
        rewardToken.safeTransferFrom(
            address(masterAccountAddress),
            msg.sender,
            _rewardAmount[msg.sender]);
        _rewardAmount[msg.sender]=0;    
    }
}

