pragma solidity ^0.8.0;

import "@openzeppelin/contracts-upgradeable/utils/structs/EnumerableMapUpgradeable.sol";
import "./common/BaseGovernanceWithUserUpgradable.sol";

 /**
  * @title Deposit manager
  * @author Polkalokr
  * @notice This contract is used by the Lock to manage beneficiaries and their amounts.
  * @dev 
  */
contract DepositManager is BaseGovernanceWithUserUpgradable {

    using EnumerableMapUpgradeable for EnumerableMapUpgradeable.UintToAddressMap;
    EnumerableMapUpgradeable.UintToAddressMap private _beneficiaries ;


    struct Property {
        uint additionTime;
        uint initialAmount;
        uint claimedAmount;
    }
    mapping(uint => Property) private _properties;

    function initialize() initializer public {
        __DepositManager_init();
    }

    function __DepositManager_init() initializer internal {
        __BaseGovernanceWithUser_init();
        __DepositManager_init_unchained();
    }

    function __DepositManager_init_unchained() initializer internal {
    }

    /**
     * @notice Get all the properties from an ID-NFT.
     * @return Beneficiary or owner of the ID-NFT 
     * @return Timestamp of when the beneficiary was added
     * @return The initial amount that was locked on this ID-NFT
     * @return The amount claimed so far 
     */
    function getProperties(uint id) public view returns(address, uint, uint, uint) {
        address beneficiary  = _beneficiaries.get(id);
        Property memory property = _properties[id];
        uint additionTime = property.additionTime;
        uint initial = property.initialAmount;
        uint claimed = property.claimedAmount;
        return(beneficiary, additionTime, initial, claimed);
    }

    /**
     * @notice Update the claimed amount to a benefiary and an NFT ID
     * @param id NFT ID
     * @param amountToClaim The amount to update
     */
    function updateClaimedAmount(uint id, uint amountToClaim) external {
        require(tx.origin == _beneficiaries.get(id), "ERROR: Not the owner");
        require(
            _properties[id].initialAmount > _properties[id].claimedAmount + amountToClaim,
            "ERROR: Not enought balance"
        );
        _properties[id].claimedAmount += amountToClaim;
    }
    
    /**
     * @notice Add a deposit with beneficiaries
     * @dev beneficiaries and amounts must be have the same length
     * @param addresses Addresses of beneficiaries
     * @param amounts Amounts of beneficiaries
     * @param IDs New NFT-IDs
     * @param totalAmount Total amount of tokens to be locked for additional beneficiaries
     */
    function addDeposits(
        address[] memory addresses, 
        uint[] memory amounts, 
        uint[] memory IDs, 
        uint256 totalAmount
        ) 
        external 
        {
            require(!_existIds(IDs), "ERROR: Existing ID");
            require(_checkAmounts(amounts, totalAmount), "ERROR: Bad distribution amounts");
            uint amountBeneficiaries = addresses.length;
            uint time = block.timestamp;
            for (uint i; i < amountBeneficiaries; i++) {
                _setBeneficiary(
                    IDs[i], 
                    addresses[i], 
                    time, 
                    amounts[i],
                    0
                );
            }
    }

    /**
     * @notice Remove a deposit with beneficiaries
     * @dev Beneficiaries must have the enough claimable amount (initial - claimed)
     * @param addresses Addresses of beneficiaries
     * @param amounts Amounts of beneficiaries
     * @param IDs New NFT-IDs
     * @param refundAmount Amount of tokens allocated for removed beneficiaries to be refunded
     */
    function removeDeposits(
        address[] memory addresses, 
        uint[] memory amounts, 
        uint[] memory IDs, 
        uint256 refundAmount
        ) 
        external 
        {
            require(_existIds(IDs), "ERROR: non-existing ID");
            require(_checkAmounts(amounts, refundAmount), "ERROR: Bad distribution amounts to refund");
            uint amountBeneficiaries = addresses.length;
            require(_checkBalances(IDs, amounts));
            for (uint i; i < amountBeneficiaries; i++) {
                _removeBeneficiary(
                    IDs[i],
                    addresses[i]
                );
            }
    }

    /**
     * @notice Split a deposit
     * @dev Split a deposit with IDs provided by the Lock Contract
     * @param originId ID-NFT to be divided
     * @param splitedIds New IDs
     * @param splitParts Split proportions normalized
     * @param addresses Addresses of beneficiaries
     */
    function split(
        uint originId, 
        uint[] memory splitedIds, 
        uint[] memory splitParts, 
        address[] memory addresses
        ) 
        external 
        {
            (address actualBeneficiary, uint additionTime, uint initialAmount, uint amountClaimed) 
                = getProperties(originId);
            require(_checkSplit(splitedIds, splitParts, addresses), "ERROR: Check Split failed");
            _removeBeneficiary(originId, tx.origin);
            
            for (uint i; i < splitedIds.length; i++) {
                uint amountPart = splitParts[i] * initialAmount / 1e18;
                uint amounclaimedParttPart = splitParts[i] * amountClaimed / 1e18;
                _setBeneficiary(splitedIds[i], addresses[i], additionTime, amountPart, amounclaimedParttPart);
            }
    }

    function _setBeneficiary(
        uint _id, 
        address _beneficiary, 
        uint _additionTime, 
        uint _amount, 
        uint _claimed
        ) 
        internal 
        {
            _beneficiaries.set(_id, _beneficiary);
            _properties[_id] = Property(_additionTime, _amount, _claimed);
    }

    function _removeBeneficiary(uint _id, address _beneficiary) internal {
        require(
            _beneficiary == _beneficiaries.get(_id), 
            "ERROR: Address is not the lock beneficiary of this ID"
        );
        /*
            If the beneficiary is removed from '_beneficiaries', is it 
            completely necessary to completely delete it from the map?
        **/
        _beneficiaries.remove(_id);
        delete _properties[_id]; 
    }

    function _checkBalances(
        uint[] memory _IDs, 
        uint[] memory amounts
        ) 
        internal 
        view 
        returns(bool)
        {
            uint totalAmounts;
            uint totalRefundAmount;
            for(uint i; i < _IDs.length; i++) {
                (, , uint initial, uint claimed) = getProperties(_IDs[i]);
                totalAmounts += amounts[i];
                totalRefundAmount += (initial - claimed);
            }
            return totalAmounts == totalRefundAmount;
    }

    function _checkAmounts(uint[] memory amounts, uint totalAmount) internal pure returns(bool){
        uint aux;
        for(uint i; i < amounts.length; i++) {
            aux += amounts[i];
        }
        return aux == totalAmount;
    }

    function _calculateByDivisible(uint a, uint divisible) internal pure returns(uint, uint){
        uint amount1;
        uint amount2;
        if (a % divisible == 0) {
            amount1 = a / divisible;
            amount2 = a / divisible;
        } else {
            amount1 = (a-1) / divisible + 1;
            amount2 =   (a-1) / divisible;
        }
        return(amount1, amount2);
    }

    function _existIds(uint[] memory IDs) internal view returns(bool){
        for (uint i; i < IDs.length; i++) {
            if (_beneficiaries.contains(IDs[i])) {
                return true;
            }  
        }
        return false;
    }
    
    function _checkSplit(
        uint[] memory IDs, 
        uint[] memory splitParts, 
        address[] memory addresses
        ) 
        internal 
        view 
        returns(bool)
        {
        require(!_existIds(IDs), "ERROR: Existing ID");
        require(
            IDs.length == splitParts.length && IDs.length == addresses.length, 
            "ERROR: Addresses, amounts and IDs does not have same length"
        );
        uint total;
        for(uint i; i < splitParts.length; i ++) {
            total += splitParts[i];
        }
        if(total == 1e18){
            return true;
        } else {
            return false;
        }
    }

}

