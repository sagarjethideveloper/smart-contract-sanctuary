/// @title A contract that allows you to deposit ETH & borrow DAI. Exchange rate driven by chainlink contracts
/// @author Prafful Sahu
contract CollateralVault {
    address public owner;

    /// @notice Token which could be borrowed
    ERC20 public token;

    /// @notice Tracks the ether deposited by each user
    mapping(address => uint256) public deposits;

    /// @notice Tracks DAI borrowed by each user
    mapping(address => uint256) public debt;

    /// @notice Price feed of chainlink ETH/Token
    AggregatorV3Interface internal priceFeed;

    // Events
    /// @notice Event to capture deposit amount & depositor
    event Deposited(address depositor, uint256 amount);

    /// @notice Event to capture borrow amount & borrower
    event Borrowed(address borrower, uint256 amount);

    /// @notice Event to capture amount withdrawn & the user
    event Withdrawn(address withdrawee, uint256 amount);

    /// @notice Event to capture liquidation
    event Liquidated(address debtor, uint256 ethAmount, uint256 daiAmount);

    /// @notice Event to capture repayment
    event Repaid(address depositor, uint256 amount);

    constructor(AggregatorV3Interface priceFeed_, ERC20 token_) public {
        owner = msg.sender;
        priceFeed = priceFeed_;
        token = token_;
    }

    /// @notice Function that returns how much DAI you get against the amount of ether supplied
    /// @return rate Returns the amount of DAI user would get
    function howMuchDAI(uint256 eth, uint256 rate) internal returns (uint256) {
        return (eth / rate) * 10**18;
    }

    /// @notice Function that returns how much DAI a user could borrow
    /// @return rate Returns the max amount of DAI the user could borrow
    function exchangeRate() internal view returns (uint256 rate) {
        //Check from chainlink oracle what is the price
        (, int256 answer, , , ) = priceFeed.latestRoundData();
        rate = (uint256)(answer);
    }

    /// @notice Function that accepts the ether deposits from the user
    function deposit() external payable {
        deposits[msg.sender] += msg.value;
        emit Deposited(msg.sender, msg.value);
    }

    /// @notice Function that returns how much DAI a user could borrow
    /// @param user Address of the user
    /// @return amount Returns the max amount of DAI the user could borrow
    function howMuchCanIBorrow(address user) public returns (uint256 amount) {
        uint256 rate = exchangeRate();
        amount = howMuchDAI(deposits[user], rate);
    }

    /// @notice Explain to an end user what this does
    /// @param borrowAmount Amount of DAI user is trying to borrow
    function borrow(uint256 borrowAmount) external {
        uint256 maxBorrow = howMuchCanIBorrow(msg.sender);
        require(borrowAmount + debt[msg.sender] <= maxBorrow, "Not enough collateral");

        debt[msg.sender] += borrowAmount;
        //send the funds to the msg.sender
        token.transfer(msg.sender, borrowAmount);

        emit Borrowed(msg.sender, borrowAmount);
    }

    /// @notice Explain to an end user what this does
    /// @param daiAmount Amount of DAI user is trying to repay
    function repay(uint256 daiAmount) external {
        //Checking if not paying more than what they have borrowed
        require(daiAmount <= debt[msg.sender], "Overpaying");

        unchecked {
            debt[msg.sender] -= daiAmount;
        }

        token.transferFrom(msg.sender, address(this), daiAmount);
        emit Repaid(msg.sender, daiAmount);
    }

    /// @notice A function that allows a user to withdraw the ether they have deposited
    /// @param amount Amount of ether user is trying to withdraw
    function withdraw(uint256 amount) external {
        require(amount <= deposits[msg.sender], "Not enough deposit");
        unchecked {
            deposits[msg.sender] -= amount;
        }
        //Check if the collateral is sufficient for the amount being withdrawn
        uint256 maxBorrow = howMuchCanIBorrow(msg.sender);
        //Check if user has enough borrow amount
        require(debt[msg.sender] <= maxBorrow, "Repayment pending");

        (bool result, ) = msg.sender.call{ value: amount }("");
        require(result, "ETH send fail");
        emit Withdrawn(msg.sender, amount);
    }

    /// @notice Explain to an end user what this does
    /// @param account Account which the owner is trying to liquidate
    function liquidate(address account) external {
        require(msg.sender == owner, "Not Owner");

        //Find how much they can borrow
        uint256 maxBorrow = howMuchCanIBorrow(account);

        //Check if the amount borrowed is less than or equal to what they can borrow
        require(debt[account] > maxBorrow, "healthy");

        //Based on the above take a call on whether to liquidate or not
        emit Liquidated(account, deposits[account], debt[account]);

        debt[account] = 0;
        deposits[account] = 0;
    }
}

