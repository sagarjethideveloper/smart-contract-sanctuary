pragma solidity ^0.8.0;

import "@openzeppelin/contracts/token/ERC721/extensions/IERC721Enumerable.sol";
import "@openzeppelin/contracts/access/Ownable.sol";


contract TheWorldsHardestGame is Ownable {

    IERC721Enumerable private _token;

    uint16 constant public tokensLength = 1000;
    uint8 constant public collectionLength = 15;
    uint256[tokensLength][collectionLength] public collections;

    address public winner;
    bool public started = false;

    event GameFinished(address indexed winner, uint256 balance, uint256 time);
    event GameStarted(uint256 time);

    constructor(IERC721Enumerable token_) {
        _token = token_;
    }

    function _checkStarted() internal view {
        require(started == false, 'TWHG: The game has already started');
    }

    function _checkFinished() internal view {
        require(winner == address(0), 'TWHG: The game is over');
    }

    function _checkGame(address checkAddress) view internal returns (bool status) {
        require(started == true, 'TWHG: The game has not started yet');
        _checkFinished();

        uint16 collectionIndex;
        for (uint8 index; index < tokensLength; index += 1) {
            collectionIndex = 0;
            while (
                collectionIndex < collectionLength &&
                _token.ownerOf(collections[collectionIndex][index]) != checkAddress
            ) {
                collectionIndex += 1;
            }
            if (collectionIndex == collectionLength) {
                return false;
            }
        }

        return true;
    }

    function tokenAddress() external view returns(address) {
        return address(_token);
    }

    function setCollection(uint8 collectionIndex, uint256[] memory tokens, uint16 offset) external onlyOwner {
        _checkStarted();
        require(collectionIndex < collectionLength, 'TWHG: The collection index out of range');

        uint256 totalSupply = _token.totalSupply();
        for (uint16 index; index < tokens.length; index += 1) {
            require(tokens[index] <= totalSupply);
            collections[collectionIndex][offset + index] = tokens[index];
        }
    }

    function startGame() external onlyOwner {
        _checkStarted();
        require(_token.totalSupply() >= tokensLength * collectionLength);
        started = true;
        emit GameStarted(block.timestamp);
    }

    function finishGame() external returns (bool status) {
        bool status = _checkGame(msg.sender);
        require(status, 'TWHG: Collect a full collection');

        winner = msg.sender;
        emit GameFinished(winner, address(this).balance, block.timestamp);
        return true;
    }

    function checkGame(address checkAddress) view external returns (bool status) {
        return _checkGame(checkAddress);
    }


    function withdraw() external {
        require(msg.sender != address(0));
        require(winner != address(0), 'TWHG: The game is still going on');
        require(winner == msg.sender, 'TWHG: Only the winner can call withdraw');
        require(address(this).balance > 0, 'TWHG: The balance is already withdrawn');

        payable(winner).transfer(address(this).balance);
    }

    receive() payable external {
        _checkFinished();
    }
}

