pragma solidity ^0.8.4;

import "@openzeppelin/contracts/utils/structs/EnumerableSet.sol";
import "./libraries/SafeERC20.sol";

contract SNPFaucet {
    using EnumerableSet for EnumerableSet.AddressSet;
    using SafeERC20 for IERC20;

    address private owner;
    address[] public stableMocks;

    EnumerableSet.AddressSet private _beneficiaries;
    mapping(address => uint256) private _timestampsTokens;
    mapping(address => uint256) private _timestampsETH;

    constructor(address _owner, address[] memory _stableCoins) {
        require(_owner != address(0), "Owner is a zero address");
        owner = _owner;
        stableMocks = _stableCoins;
    }

    function midasTouchTokens(uint256 from, uint256 to) external onlyOwner {
        require(from < to, "Incorrect range");
        require(to < _beneficiaries.length(), "Incorrect range");

        for (uint256 i = 0; i <= to - from; i++) {
            if (block.timestamp > _timestampsTokens[_beneficiaries.at(i + from)] + 4 hours) {
                _timestampsTokens[_beneficiaries.at(i + from)] = block.timestamp;
                for (uint256 j = 0; j < stableMocks.length; j++) {
                    address stableCoin = address(stableMocks[j]);
                    uint8 decimals = IERC20(stableCoin).safeDecimals();
                    uint256 stableCoinUnits = 20000 * (10**(decimals));
                    uint256 balance = IERC20(stableCoin).balanceOf(_beneficiaries.at(i + from));
                    if (balance < stableCoinUnits) {
                        IERC20(stableCoin).safeTransfer(_beneficiaries.at(i + from), stableCoinUnits - balance);
                    }
                }
            }
        }
    }

    function midasTouchETH(uint256 from, uint256 to) external onlyOwner {
        require(from < to, "Incorrect range");
        require(to < _beneficiaries.length(), "Incorrect range");

        for (uint256 i = 0; i <= to - from; i++) {
            if (block.timestamp > _timestampsETH[_beneficiaries.at(i + from)] + 4 hours) {
                _timestampsETH[_beneficiaries.at(i + from)] = block.timestamp;
                uint256 balance = address(_beneficiaries.at(i + from)).balance;
                if (balance < 0.015 * 1 ether) {
                    payable(address(_beneficiaries.at(i + from))).transfer((0.015 * 1 ether) - balance);
                }
            }
        }
    }

    function addBeneficiaries(address[] calldata addresses) external onlyOwner {
        for (uint256 i = 0; i < addresses.length; i++) {
            if (!_beneficiaries.contains(addresses[i])) {
                _beneficiaries.add(addresses[i]);
            }
        }
    }

    function isBeneficiary(address addr) external view returns (bool) {
        return _beneficiaries.contains(addr);
    }

    function recoverErc20(address token) external onlyOwner {
        uint256 amount = IERC20(token).balanceOf(address(this));
        if (amount > 0) {
            IERC20(token).safeTransfer(owner, amount);
        }
    }

    function recoverEth() external onlyOwner {
        payable(owner).transfer(address(this).balance);
    }

    modifier onlyOwner() {
        require(msg.sender == owner, "Only for contract Owner");
        _;
    }

    receive() external payable {}
}

