pragma solidity ^0.7.1;

import "./StakBank.sol";
import "./interfaces/IStakBank.sol";
import "./libraries/Ownable.sol";
import "./libraries/Pausable.sol";
import "./libraries/SafeMath.sol";

contract StakBankFactory is Ownable, Pausable {
    using SafeMath for uint256;

    // Array of created Campaign Address
    address[] public allStakBanks;
    // Mapping from User token. From tokens to array of created StakBank for token
    mapping(address => mapping(IERC20 => address[])) public getStakBanks;

    event StakBankCreated(
        address registedBy,
        address indexed token,
        address indexed pool,
        uint256 poolId
    );

    /**
     * @notice Get the number of all created campaigns
     * @return Return number of created campaigns
     */
    function allStakBanksLength() public view returns (uint256) {
        return allStakBanks.length;
    }

    /**
     * @notice Get the created campaigns by token address
     * @dev User can retrieve their created campaign by address of tokens
     * @param _creator Address of created campaign user
     * @param _lpToken Address of LP token want to query
     * @return Created LPBank Address
     */
    function getCreatedLPBanksByToken(address _creator, IERC20 _lpToken)
        public
        view
        returns (address[] memory)
    {
        return getStakBanks[_creator][_lpToken];
    }

    /**
     * @notice Retrieve number of campaigns created for specific token
     * @param _creator Address of created campaign user
     * @param _lpToken Address of LP token want to query
     * @return Return number of created LPBank
     */
    function getCreatedStakBanksLengthByToken(address _creator, IERC20 _lpToken)
        public
        view
        returns (uint256)
    {
        return getStakBanks[_creator][_lpToken].length;
    }

    /**
     * @notice Register ICO Campaign for tokens
     * @dev To register, you MUST have an ERC20 token
     * @param _name String name of new StakBank
     * @param _lpToken address of ERC20 LP token users will deposit
     * @param _rewardToken address of ERC20 token to distribute as rewards
     */
    function registerStakBank(
        string memory _name,
        IERC20 _lpToken,
        IERC20 _rewardToken
    ) external whenNotPaused onlyOwner returns (address pool) {
        require(
            _lpToken != IERC20(address(0)),
            "StakBankFactory::ZERO_ADDRESS"
        );
        require(
            _rewardToken != IERC20(address(0)),
            "StakBankFactory::ZERO_ADDRESS"
        );
        bytes memory tempNameString = bytes(_name);
        require(tempNameString.length != 0, "StakBankFactory::NO_NAME");

        bytes memory bytecode = type(StakBank).creationCode;
        uint256 tokenIndex =
            getCreatedStakBanksLengthByToken(msg.sender, _lpToken);
        bytes32 salt =
            keccak256(abi.encodePacked(msg.sender, _lpToken, tokenIndex));
        assembly {
            pool := create2(0, add(bytecode, 32), mload(bytecode), salt)
        }
        IStakBank(pool).initialize(_name, _lpToken, _rewardToken);
        getStakBanks[msg.sender][_lpToken].push(pool);
        allStakBanks.push(pool);

        emit StakBankCreated(
            msg.sender,
            address(_lpToken),
            pool,
            allStakBanks.length - 1
        );
    }

    function pause() public onlyOwner whenNotPaused {
        _pause();
    }

    function unpause() public onlyOwner whenPaused {
        _unpause();
    }
}

