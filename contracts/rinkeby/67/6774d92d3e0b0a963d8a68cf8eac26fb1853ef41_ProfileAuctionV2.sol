interface INftToken {
    function burn(uint256 _amount) external;
}

struct Bid {
    uint256 _nftTokens;                 // number of nft tokens associated with bid
    string _profileURI;                 // profile url
    address _owner;                     // the user making the bid
}

contract ProfileAuctionV2 is Initializable,
    UUPSUpgradeable,
    ReentrancyGuardUpgradeable   
{
    using SafeMathUpgradeable for uint256;

    mapping(bytes32 => bool) public cancelledOrFinalized;   // Cancelled / finalized bid, by hash
    mapping(bytes32 => uint256) public claimableBlock;      // Claimable bid (0 = not claimable, > 0 = claimable), by hash
    mapping(bytes32 => bool) public approvedBids;           // Bids verified by on-chain approval (optional)

    address internal governor;
    address internal minter;
    address internal owner;
    address internal nftErc20Contract;
    address internal nftProfile;
    uint256 public profileFee;
    uint256 public blockWait;
    address public nftProfileHelperAddress;
    address internal coldWallet;

    event NewBid(address _user, string _val, uint256 _amount);
    event BidCancelled(bytes32 indexed hash);
    event NewClaimableProfile(address _user, string _val, uint256 _amount, uint256 _blockNum);
    event MintedProfile(address _user, string _val, uint256 _amount, uint256 _blockNum);
    event RedeemProfile(address _user, string _val, uint256 _block, uint256 _amount, uint256 _tokenId);
    
    /* An ECDSA signature. */ 
    struct Sig {
        uint8 v;
        bytes32 r;
        bytes32 s;
    }

    modifier validURI_ (string memory _profileURI) {
        require(validURI(_profileURI));
        require(!INftProfile(nftProfile).tokenUsed(_profileURI));
        _;
    }

    modifier onlyGovernor () {
        require(msg.sender == governor);
        _;
    }

    modifier onlyOwner () {
        require(msg.sender == owner);
        _;
    }

    function initialize(
        address _nftErc20Contract,
        address _minter,
        address _nftProfile,
        address _governor,
        address _nftProfileHelperAddress,
        address _coldWallet
    ) public initializer {
        __ReentrancyGuard_init();
        __UUPSUpgradeable_init();

        nftErc20Contract = _nftErc20Contract;
        nftProfile = _nftProfile;
        blockWait = 1228540;
        profileFee = 500000000000000000;
        nftProfileHelperAddress = _nftProfileHelperAddress;
        coldWallet = _coldWallet;

        owner = msg.sender;
        governor = _governor;
        minter = _minter;
    }

    function _authorizeUpgrade(address) internal override onlyOwner {}

    /**
     @notice helper function transfer NFT tokens to reduce contract size
     @param _user user transferring tokens
     @param _amount number of NFT tokens being transferred
    */
    function transferNftTokens(address _user, uint256 _amount) private returns (bool) {
        require(_amount != 0);
        return IERC20Upgradeable(nftErc20Contract).transferFrom(
                _user,
                address(this),
                _amount
            );
    }

    function validURI(string memory _name) private view returns (bool) {
        return INftProfileHelper(nftProfileHelperAddress)._validURI(_name);
    }

    /**
     * Calculate size of an bid struct when tightly packed
     *
     * @param bid Bid to calculate size of
     * @return Size in bytes
     * @notice 0x20 represents uint256 size, 0x17 represents address, 1 represents uint8
     */
    function sizeOf(Bid memory bid)
        internal
        pure
        returns (uint)
    {
        return (0x17 + 0x20 + bytes(bid._profileURI).length);
    }

    /**
     * @dev Hash an bid, returning the canonical bid hash, without the message prefix
     * @param bid Bid to hash
     * @return hash of bid
     */
    function hashBid_(Bid memory bid)
        internal
        pure
        returns (bytes32 hash)
    {
        /* Unfortunately abi.encodePacked doesn't work here, stack size constraints. */
        uint size = sizeOf(bid);
        bytes memory array = new bytes(size);
        uint index;
        assembly {
            index := add(array, 0x20)
        }

        index = ArrayUtils.unsafeWriteAddress(index, bid._owner);
        index = ArrayUtils.unsafeWriteUint(index, bid._nftTokens);
        index = ArrayUtils.unsafeWriteBytes(index, bytes(bid._profileURI));
        assembly {
            hash := keccak256(add(array, 0x20), size)
        }
        return hash;
    }

    /**
     * @dev Assert an bid is valid and return its hash
     * @param bid Bid to validate
     * @param sig ECDSA signature
     */
    function requireValidBid_(Bid memory bid, Sig memory sig)
        internal
        view
        returns (bytes32)
    {
        bytes32 hash = hashToSign_(bid);
        require(validateBid_(hash, bid, sig));
        return hash;
    }

    /**
     * @dev Cancel an bid, preventing it from being matched. Must be called by the maker of the bid
     * @param bid Bid to cancel
     * @param sig ECDSA signature
     */
    function cancelBid_(Bid memory bid, Sig memory sig) 
        internal
    {
        /* CHECKS */

        /* Calculate bid hash. */
        bytes32 hash = requireValidBid_(bid, sig);

        require(msg.sender == bid._owner);  // must be owner
        require(claimableBlock[hash] == 0); // must not be claimable
  
        /* EFFECTS */
      
        /* Mark bid as cancelled, preventing it from being matched. */
        cancelledOrFinalized[hash] = true;

        /* Log cancel event. */
        emit BidCancelled(hash);
    }

    /**
     * @dev Approve an bid. Must be called by the _owner of the bid
     * @param bid Bid to approve
     */
    function approveBid_(Bid memory bid)
        internal
    {
        // checks
        require(msg.sender == bid._owner);
        bytes32 hash = hashToSign_(bid);
        require(!approvedBids[hash]); // Assert bid has not already been approved.

        // effects
        approvedBids[hash] = true; // Mark bid as approved.

        emit NewBid(bid._owner, bid._profileURI, bid._nftTokens);
    }

    /**
     * @dev Validate a provided previously approved / signed bid, hash, and signature.
     * @param hash Bid hash (already calculated, passed to avoid recalculation)
     * @param bid Bid to validate
     * @param sig ECDSA signature
     */
    function validateBid_(bytes32 hash, Bid memory bid, Sig memory sig) 
        internal
        view
        returns (bool)
    {
        /* Not done in an if-conditional to prevent unnecessary ecrecover evaluation, which seems to happen even though it should short-circuit. */

        /* Bid must have valid token amount. */
        if (bid._nftTokens == 0) {
            return false;
        }

        /* Bid must have not been canceled or already filled. */
        if (cancelledOrFinalized[hash]) {
            return false;
        }
        
        /* Bid authentication. Bid must be either:
        /* (a) previously approved */
        if (approvedBids[hash]) {
            return true;
        }

        /* or (b) ECDSA-signed by owner. */
        if (ecrecover(hash, sig.v, sig.r, sig.s) == bid._owner) {
            return true;
        }

        return false;
    }

    /**
     * @dev Hash a Bid, returning the hash that a client must sign, including the standard message prefix
     * @param bid Bid to hash
     * @return hash of message prefix and bid hash per Ethereum format
     */
    function hashToSign_(Bid memory bid)
        internal
        pure
        returns (bytes32 hash)
    {
        return keccak256(abi.encodePacked("\x19Ethereum Signed Message:\n32", hashBid_(bid)));
    }

    /* EXTERNAL FUNCTIONS */
    function validateBid(
        Bid memory bid,
        uint8 v,
        bytes32 r,
        bytes32 s)
        view
        external
        returns (bool)
    {
        return validateBid_(
          hashToSign_(bid),
          bid,
          Sig(v, r, s)
        );
    }

    function _domainSeparatorV4ProfileAuction() internal view returns (bytes32) {
        bytes32 _TYPE_HASH = keccak256("EIP712Domain(string name,string version,uint256 chainId,address verifyingContract)");
        return keccak256(abi.encode(
            _TYPE_HASH,
            keccak256(bytes("NFT.com Domain Auction")),
            keccak256(bytes("1")),
            block.chainid,
            address(this)
        ));
    }

    function _hashTypedDataV4ProfileAuction(bytes32 structHash) internal view virtual returns (bytes32) {
        return ECDSAUpgradeable.toTypedDataHash(_domainSeparatorV4ProfileAuction(), structHash);
    }

    function returnOwner(
        uint256 _nftTokens,
        string memory _profileURI,
        address _owner,
        uint8 v,
        bytes32 r,
        bytes32 s
    ) public view returns (address) {
        bytes32 _PERMIT_TYPEHASH = keccak256("Bid(address _nftTokens,string _profileURI,address _owner");
        bytes32 structHash = keccak256(abi.encode(_PERMIT_TYPEHASH, _nftTokens, _profileURI, _owner));

        bytes32 hash = _hashTypedDataV4ProfileAuction(structHash);

        return ECDSAUpgradeable.recover(hash, v, r, s);
    }

    function hashBid(
        Bid memory bid)
        external
        pure
        returns (bytes32)
    {
        return hashBid_(
          bid
        );
    }
    function approveBid(
        Bid memory bid) 
        external
    {
        return approveBid_(bid);
    }

    function cancelBid(
        Bid memory bid,
        uint8 v,
        bytes32 r,
        bytes32 s)
        external
    {

        return cancelBid_(
          bid,
          Sig(v, r, s)
        );
    }

    function hashToSign(
        Bid memory bid)
        external
        pure
        returns (bytes32)
    { 
        return hashToSign_(
          bid
        );
    }

    /**
     @notice sets ETH fee for buying a profile
     @param _fee denominated in wei
    */
    function setProfileFee(uint256 _fee) external onlyGovernor {
        profileFee = _fee;
    }

    /**
     @notice sets global minimum block wait time to redeem a profile from minting
     @param _wait block number
    */
    function setBlockWait(uint256 _wait) external onlyGovernor {
        blockWait = _wait;
    }

    function setOwner(address _new) external onlyOwner {
        owner = _new;
    }

    /**
     @notice centralized mint function for auction profiles, restricted to minter and approved bids
     @param bid bid struct
    */
    function mintProfileFor(
        Bid memory bid,
        uint8 v,
        bytes32 r,
        bytes32 s
    ) external nonReentrant validURI_(bid._profileURI) {
        require(msg.sender == minter);
        
        // checks
        bytes32 hash = requireValidBid_(bid, Sig(v, r, s));
        require(!cancelledOrFinalized[hash]);
        require(claimableBlock[hash] == 0);
  
        // effects
        claimableBlock[hash] = block.number;

        // interactions
        require(transferNftTokens(bid._owner, bid._nftTokens));

        emit NewClaimableProfile(bid._owner, bid._profileURI, bid._nftTokens, block.number);
    }

    /**
     @notice allows winning profiles (from mintProfileFor) to claim the profile and mint
    */
    function claimProfile(
        Bid memory bid,
        uint8 v,
        bytes32 r,
        bytes32 s
    ) external payable nonReentrant {
        require(msg.value == profileFee, "!ETH"); // only required on claim
        require(msg.sender == bid._owner);
        
        // checks
        bytes32 hash = requireValidBid_(bid, Sig(v, r, s));
        require(!cancelledOrFinalized[hash]);
        require(claimableBlock[hash] != 0);
  
        // effects
        cancelledOrFinalized[hash] = true;

        // interactions
        INftProfile(nftProfile).createProfile(
            bid._owner,
            bid._nftTokens,
            bid._profileURI,
            blockWait,
            claimableBlock[hash]
        );

        emit MintedProfile(bid._owner, bid._profileURI, bid._nftTokens, claimableBlock[hash]);
        payable(coldWallet).transfer(profileFee);
    }

    /**
     @notice client facing function to allow profile redemptions for underlying nft tokens
             user will send NFT.com profile to the protocol governor
             user will receive NFT.com collateral with a 0.5% burn fee attached
     @param _tokenId the ID of the NFT.com profile
    */
    function redeemProfile(uint256 _tokenId) external {
        require(INftProfile(nftProfile).profileDetails(_tokenId)._blockMinted != 0, "invalid or unclaimed profile");

        require(block.number >= 
            INftProfile(nftProfile).profileDetails(_tokenId)._blockMinted.add(
                INftProfile(nftProfile).profileDetails(_tokenId)._blockWait), "block wait not met");

        IERC721EnumerableUpgradeable(nftProfile).transferFrom(msg.sender, governor, _tokenId);

        uint256 amount = INftProfile(nftProfile).profileDetails(_tokenId)._nftTokens.mul(9950).div(10000);

        IERC20Upgradeable(nftErc20Contract).transfer(
            msg.sender,
            amount
        );

        INftToken(nftErc20Contract).burn(INftProfile(nftProfile).profileDetails(_tokenId)._nftTokens.mul(50).div(10000));

        emit RedeemProfile(
            msg.sender,
            INftProfile(nftProfile).profileDetails(_tokenId)._profileURI,
            block.number,
            amount,
            _tokenId
        );
    }
}

