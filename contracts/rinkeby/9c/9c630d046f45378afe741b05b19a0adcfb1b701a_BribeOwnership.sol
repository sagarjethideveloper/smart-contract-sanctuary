pragma solidity ^0.8.0;

import "@openzeppelin/contracts/token/ERC1155/extensions/ERC1155Supply.sol";
import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "./library/BeaconProxyDeployer.sol";
import "./interfaces/IBribeOwnership.sol";
import "./interfaces/IBribeNFT.sol";
import "./interfaces/IBribeVault.sol";
import "./interfaces/IBribeController.sol";

contract BribeOwnership is ERC1155Supply, IBribeOwnership {
    IBribeController public immutable controller;

    IBribeNFT public immutable nft;

    IERC20 public immutable bribe;

    uint256 public constant DURATION = 1 weeks;

    struct BriberyInfo {
        uint256 perDeposit;
        uint256 releaseSpeed;
        uint256 releaseEnd;
        uint256 lastUpdated;
    }

    struct RewardInfo {
        uint256 lastPaid;
        uint256 reward;
    }

    mapping(uint256 => BriberyInfo) public bribeInfo;

    mapping(uint256 => mapping(address => RewardInfo)) public rewardInfo;

    constructor(
        address _controller,
        address _nft,
        address _bribe
    ) ERC1155("") {
        controller = IBribeController(_controller);
        nft = IBribeNFT(_nft);
        bribe = IERC20(_bribe);
    }

    modifier update(uint256 _id, address _user) {
        _updateId(_id);
        if (_user != address(0)) {
            _updateUser(_id, _user);
        }
        _;
    }

    function _updateId(
        uint256 _id
    ) internal {
        if (bribeInfo[_id].lastUpdated < block.timestamp) {
            uint256 lastTime = block.timestamp > bribeInfo[_id].lastUpdated
                ? bribeInfo[_id].lastUpdated
                : block.timestamp;
            bribeInfo[_id].perDeposit += totalSupply(_id) == 0
                ? 0
                : (bribeInfo[_id].releaseSpeed *
                   (lastTime - bribeInfo[_id].lastUpdated) *
                   1e18) / totalSupply(_id);
            bribeInfo[_id].lastUpdated = lastTime;
        }
    }

    function _updateUser(
        uint256 _id,
        address _user
    ) internal {
        rewardInfo[_id][_user].reward +=
            (balanceOf(_user, _id) *
             (bribeInfo[_id].perDeposit -
              rewardInfo[_id][_user].lastPaid)) /
              1e18;
        rewardInfo[_id][_user].lastPaid = bribeInfo[_id]
        .perDeposit;
    }

    function _beforeTokenTransfer(
        address,
        address from,
        address to,
        uint256[] memory ids,
        uint256[] memory,
        bytes memory
    ) internal override {
        for (uint256 i = 0; i < ids.length; i++) {
            _updateId(ids[i]);
            if(from != address(0)){
                _updateUser(ids[i], from);
            }
            if(to != address(0)){
                _updateUser(ids[i], to);
            }
        }
    }

    function deposit(uint256 _id, uint256 _amount)
        external
        override
        update(_id, msg.sender)
    {
        address token = nft.token(_id);
        address vault = BeaconProxyDeployer.calculateAddress(
            address(controller),
            controller.beacon(nft.token(_id)),
            abi.encodePacked(IBribeVault.enableVote.selector),
            bytes32(_id)
        );
        _mint(msg.sender, _id, _amount, "");
        // deposits only gets bribed when deposited before expiry
        IERC20(token).transferFrom(msg.sender, vault, _amount);
    }

    function addBribe(uint256 _id, uint256 _amount)
        external
        override
        update(_id, address(0))
    {
        uint256 feeAmount = _amount / 100; // 1% fee\
        uint256 bribeAmount = _amount - feeAmount;
        if (block.timestamp < nft.expiresAt(_id)) {
            // if release has not been started yet
            bribeInfo[_id].releaseEnd = nft.expiresAt(_id) + DURATION;
            bribeInfo[_id].releaseSpeed =
                bribeInfo[_id].releaseSpeed +
                bribeAmount /
                DURATION;
        } else if (bribeInfo[_id].releaseEnd < block.timestamp) {
            // if release has started but ended
            bribeInfo[_id].releaseEnd = block.timestamp + DURATION;
            bribeInfo[_id].releaseSpeed = bribeAmount / DURATION;
        } else if (bribeInfo[_id].releaseSpeed > bribeAmount / DURATION) {
            // if release has not been ended but bribeSpeed of new bribe is smaller than releaseSpeed
            bribeInfo[_id].releaseEnd +=
                bribeAmount /
                bribeInfo[_id].releaseSpeed;
        } else {
            bribeInfo[_id].releaseSpeed =
                (bribeInfo[_id].releaseSpeed *
                    (bribeInfo[_id].releaseEnd - block.timestamp) +
                    bribeAmount) /
                DURATION;
            bribeInfo[_id].releaseEnd = block.timestamp + DURATION;
        }
        bribe.transferFrom(msg.sender, address(this), _amount - feeAmount);
        bribe.transferFrom(msg.sender, controller.feeTo(), feeAmount);
    }

    function claim(uint256 _id) external override update(_id, msg.sender) {
        require(block.timestamp >= nft.expiresAt(_id), "!expired");
        bribe.transfer(msg.sender, rewardInfo[_id][msg.sender].reward);
        rewardInfo[_id][msg.sender].reward = 0;
    }

    function withdraw(uint256 _id, uint256 _amount)
        external
        override
        update(_id, address(0))
    {
        require(block.timestamp >= nft.expiresAt(_id), "!expired");
        _burn(msg.sender, _id, _amount);
        address vault = BeaconProxyDeployer.calculateAddress(
            address(controller),
            controller.beacon(nft.token(_id)),
            abi.encodePacked(IBribeVault.enableVote.selector),
            bytes32(_id)
        );
        IBribeVault(vault).withdraw(msg.sender, _amount);
    }
}

