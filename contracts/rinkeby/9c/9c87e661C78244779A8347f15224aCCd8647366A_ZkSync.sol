/// @title zkSync public interface contract containing functions accessible to the wide audience.
/// @author Matter Labs
contract PublicInterface is BaseInterface, ReentrancyGuard {
    using SafeMath for uint256;

    /// @notice Add token to the list of networks tokens
    /// @param _token Token address
    function addToken(address _token) external {
        requireActive();
        if (governance.isGovernor(msg.sender) == false) {
            // Check that added token indeed has ERC20 interface.
            // We assume that governor will not be malicious, and can use this method
            // to add pre-defined tokens that don't actually correspond to an ERC-20 token,
            // but are processable by the contract nonetheless (e.g. ETH).
            IERC20 erc20 = IERC20(_token);
            address self = address(this);
            erc20.balanceOf(self);
            uint256 allowance = erc20.allowance(msg.sender, self);
            erc20.transferFrom(msg.sender, self, allowance);
            erc20.transfer(msg.sender, allowance);
        }

        // Check that token address is not yet added and add it.
        require(addedTokens[_token] == false, "1e"); // token exists
        addedTokens[_token] = true;
        registerAddToken(_token);
    }

    /// @notice Deposit ETH to Layer 2 - transfer ether from user into contract, validate it, register deposit
    /// @param _zkSyncAddress The receiver Layer 2 address
    function depositETH(address _zkSyncAddress) external payable {
        requireActive();
        registerDeposit(ZKSYNC_ETH_ADDRESS, msg.value, _zkSyncAddress);
    }

    /// @notice Deposit ERC20 token to Layer 2 - transfer ERC20 tokens from user into contract, validate it, register deposit
    /// @param _token Token address
    /// @param _amount Token amount
    /// @param _zkSyncAddress Receiver Layer 2 address
    function depositERC20(
        IERC20 _token,
        uint256 _amount,
        address _zkSyncAddress
    ) external nonReentrant {
        requireActive();

        uint256 balanceBefore = _token.balanceOf(address(this));
        require(Utils.transferFromERC20(_token, msg.sender, address(this), _amount), "c"); // token transfer failed deposit
        uint256 balanceAfter = _token.balanceOf(address(this));
        uint256 depositAmount = balanceAfter.sub(balanceBefore);

        registerDeposit(address(_token), depositAmount, _zkSyncAddress);
    }

    /// @notice Returns amount of tokens that can be withdrawn by `address` from zkSync contract
    /// @param _address Address of the tokens owner
    /// @param _token Address of token, zero address is used for ETH
    function getPendingBalance(address _address, address _token) public view returns (uint256) {
        // Translate ETH address to its zkSync address.
        if (_token == address(0)) {
            _token = ZKSYNC_ETH_ADDRESS;
        }
        return pendingBalances[packAddressAndToken(_address, _token)].balanceToWithdraw;
    }

    /// @notice  Withdraws tokens from zkSync contract to the owner
    /// @param _owner Address of the tokens owner
    /// @param _token Address of tokens, zero address is used for ETH
    /// @param _amount Amount to withdraw to request.
    ///         NOTE: We will call ERC20.transfer(.., _amount), but if according to internal logic of ERC20 token zkSync contract
    ///         balance will be decreased by value more then _amount we will try to subtract this value from user pending balance
    function withdrawPendingBalance(
        address payable _owner,
        address _token,
        uint256 _amount
    ) external nonReentrant {
        if (_token == address(0)) {
            registerWithdrawal(ZKSYNC_ETH_ADDRESS, _amount, _owner);
            (bool success, ) = _owner.call{value: _amount}("");
            require(success, "d"); // ETH withdraw failed
        } else {
            bytes32 packedBalanceKey = packAddressAndToken(_owner, _token);
            uint256 balance = pendingBalances[packedBalanceKey].balanceToWithdraw;
            // We will allow withdrawals of `value` such that:
            // `value` <= user pending balance
            // `value` can be bigger then `_amount` requested if token takes fee from sender in addition to `_amount` requested
            uint256 withdrawnAmount = this._transferERC20(IERC20(_token), _owner, _amount, balance);
            registerWithdrawal(_token, withdrawnAmount, _owner);
        }
    }

    /// @notice Checks if Exodus mode must be entered. If true - enters exodus mode and emits ExodusMode event.
    /// @dev Exodus mode must be entered in case of current ethereum block number is higher than the oldest
    /// @dev of existed priority requests expiration block number.
    /// @return bool flag that is true if the Exodus mode must be entered.
    function activateExodusMode() public returns (bool) {
        bool trigger =
            block.number >= priorityRequests[firstPriorityRequestId].expirationBlock &&
                priorityRequests[firstPriorityRequestId].expirationBlock != 0;
        if (false || trigger) {
            if (!exodusMode) {
                exodusMode = true;
                emit ExodusMode();
            }
            return true;
        } else {
            return false;
        }
    }

    /// @notice Withdraws token from ZkSync to root chain in case of exodus mode. User must provide proof that he owns funds
    /// @param _storedBlockInfo Last verified block
    /// @param _owner Owner of the account
    /// @param _accountId Id of the account in the tree
    /// @param _proof Proof
    /// @param _zkSyncTokenAddress Verified token id
    /// @param _amount Amount for owner (must be total amount, not part of it)
    function performExodus(
        StoredBlockInfo memory _storedBlockInfo,
        address _owner,
        uint32 _accountId,
        address _zkSyncTokenAddress,
        uint256 _amount,
        uint256[] memory _proof
    ) external nonReentrant {
        bytes32 packedBalanceKey = packAddressAndToken(_owner, _zkSyncTokenAddress);
        require(exodusMode, "s"); // must be in exodus mode
        require(!performedExodus[_accountId][_zkSyncTokenAddress], "t"); // already exited
        require(storedBlockHashes[totalBlocksExecuted] == hashStoredBlockInfo(_storedBlockInfo), "u"); // incorrect sotred block info

        bool proofCorrect =
            verifier.verifyExitProof(
                _storedBlockInfo.stateRoot,
                _accountId,
                _owner,
                _zkSyncTokenAddress,
                _amount,
                _proof
            );
        require(proofCorrect, "x");

        increaseBalanceToWithdraw(packedBalanceKey, _amount);
        performedExodus[_accountId][_zkSyncTokenAddress] = true;
    }

    /// @notice Register AddToken request - pack pubdata, add priority request and emit OnchainDeposit event
    /// @param _tokenAddress Address of token
    function registerAddToken(address _tokenAddress) internal {
        // Priority Queue request
        Operations.AddToken memory op = Operations.AddToken({tokenAddress: _tokenAddress});
        bytes memory pubData = Operations.writeAddTokenPubdataForPriorityQueue(op);
        addPriorityRequest(Operations.OpType.AddToken, pubData);
    }

    /// @notice Register deposit request - pack pubdata, add priority request and emit OnchainDeposit event
    /// @param _zkSyncTokenAddress Address of token in zkSync network
    /// @param _amount Token amount
    /// @param _owner Receiver
    function registerDeposit(
        address _zkSyncTokenAddress,
        uint256 _amount,
        address _owner
    ) internal {
        // Priority Queue request
        Operations.Deposit memory op =
            Operations.Deposit({owner: _owner, zkSyncTokenAddress: _zkSyncTokenAddress, amount: _amount});
        bytes memory pubData = Operations.writeDepositPubdataForPriorityQueue(op);
        addPriorityRequest(Operations.OpType.Deposit, pubData);
        emit Deposit(_zkSyncTokenAddress, _amount);
    }

    /// @notice Register withdraw request - pack pubdata, add priority request
    /// @param _token Token address, 0 address for ether
    /// @param _amount Amount of funds to be withdrawn
    /// @param _to Recipients for the withdrawn funds
    function requestWithdraw(
        address _token,
        uint256 _amount,
        address _to
    ) public nonReentrant {
        requireActive();

        address zkSyncTokenAddress = _token;
        if (zkSyncTokenAddress == address(0)) {
            zkSyncTokenAddress = ZKSYNC_ETH_ADDRESS;
        }

        // Priority Queue request
        Operations.Withdraw memory op =
            Operations.Withdraw({zkSyncTokenAddress: zkSyncTokenAddress, to: _to, amount: _amount});
        bytes memory pubData = Operations.writeWithdrawPubdataForPriorityQueue(op);
        addPriorityRequest(Operations.OpType.Withdraw, pubData);

        // User must fill storage slot of balancesToWithdraw(_to, zkSyncTokenAddress) with nonzero value
        // In this case operator should just overwrite this slot during confirming withdrawal
        bytes32 packedBalanceKey = packAddressAndToken(_to, zkSyncTokenAddress);
        pendingBalances[packedBalanceKey].gasReserveValue = FILLED_GAS_RESERVE_VALUE;
    }

    /// @notice Register MigrateToPorter request - pack pubdata, add priority request
    function requestMigrateToPorter() public nonReentrant {
        requireActive();

        // Priority Queue request
        Operations.MigrateToPorter memory op = Operations.MigrateToPorter({accountAddress: address(msg.sender)});
        bytes memory pubData = Operations.writeMigrateToPorterPubdataForPriorityQueue(op);
        addPriorityRequest(Operations.OpType.MigrateToPorter, pubData);
    }

    /// @notice Register withdrawal - update user balance and emit OnchainWithdrawal event
    /// @param _token - token by id
    /// @param _amount - token amount
    /// @param _to - address to withdraw to
    function registerWithdrawal(
        address _token,
        uint256 _amount,
        address payable _to
    ) internal {
        bytes32 packedBalanceKey = packAddressAndToken(_to, _token);
        uint256 balance = pendingBalances[packedBalanceKey].balanceToWithdraw;
        pendingBalances[packedBalanceKey].balanceToWithdraw = balance.sub(_amount);
        emit Withdrawal(_token, _amount);
    }

    /// @notice Saves priority request in storage
    /// @dev Calculates expiration block for request, store this request and emit NewPriorityRequest event
    /// @param _opType Rollup operation type
    /// @param _pubData Operation pubdata
    function addPriorityRequest(Operations.OpType _opType, bytes memory _pubData) internal {
        // Expiration block is: current block number + priority expiration delta
        uint64 expirationBlock = uint64(block.number + PRIORITY_EXPIRATION);

        uint64 nextPriorityRequestId = totalPriorityRequests;

        bytes20 hashedPubData = Utils.hashBytesToBytes20(_pubData);

        priorityRequests[nextPriorityRequestId] = PriorityOperation({
            hashedPubData: hashedPubData,
            expirationBlock: expirationBlock,
            opType: _opType
        });

        emit NewPriorityRequest(msg.sender, nextPriorityRequestId, _opType, _pubData, uint256(expirationBlock));

        totalPriorityRequests++;
    }
}

