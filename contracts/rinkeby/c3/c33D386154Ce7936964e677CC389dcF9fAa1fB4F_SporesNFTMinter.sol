pragma solidity ^0.8.0;

import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/utils/cryptography/ECDSA.sol";
import "../Interface/ISporeMinter.sol";
import "../Interface/IERC1155Mintable.sol";
import "../Interface/IERC721Mintable.sol";

contract SporesNFTMinter is ISporeMinter, Ownable {
    // Address that generates a signature
    address public verifier;

    // NFT contracts
    IERC1155Mintable public erc1155;
    IERC721Mintable public erc721;

    /**
       @notice Initialize Owner, ERC1155 and ERC721 Token contracts, and Verifier address
       @param _erc1155          Address of ERC1155 Token contract
       @param _erc721           Address of ERC721 Token contract
       @param _verifier         Address of a client that generates a signature
    */
    constructor(address _erc1155, address _erc721, address _verifier) Ownable() {
        erc1155 = IERC1155Mintable(_erc1155);
        erc721 = IERC721Mintable(_erc721);
        verifier = _verifier;
    }

    /**
       @notice Update a new ERC1155 Token contract
       @dev Caller must be Owner
            Address of new ERC1155 Token contract should not be address(0)
       @param _newERC1155       Address of a new ERC1155 Token contract
    */
    function updateERC1155(address _newERC1155) external onlyOwner {
        require(_newERC1155 != address(0), "SporeNFTMinter: Set zero address");
        erc1155 = IERC1155Mintable(_newERC1155);
    }

    /**
       @notice Update a new ERC721 Token contract
       @dev Caller must be Owner
            Address of new ERC721 Token contract should not be address(0)
       @param _newERC721       Address of a new ERC721 Token contract
    */
    function updateERC721(address _newERC721) external onlyOwner {
        require(_newERC721 != address(0), "SporeNFTMinter: Set zero address");
        erc721 = IERC721Mintable(_newERC721);
    }

    /**
       @notice Update a new Verifier address
       @dev Caller must be Owner
            Address of new Verifier should not be address(0)
       @param _newVerifier       Address of a new Verifier
    */
    function updateVerifier(address _newVerifier) external onlyOwner {
        require(_newVerifier != address(0), "SporeNFTMinter: Set zero address");
        verifier = _newVerifier;
    }

    /**
       @notice Mint Spore NFT Token (ERC721) to Receiver `to`
       @dev Caller can be ANY
            Only Users of Spore Network are allowed to mint Spore NFT Tokens
            Require a signature from Verifier
       @param _to               Receiver address
       @param _tokenId          Token ID 
       @param _uri              Token URI
       @param _signature        A signature from Verifier
    */
    function mintSporeERC721(
        address _to,
        uint256 _tokenId,
        string calldata _uri,
        bytes calldata _signature
    ) external override {
        bytes32 _data = keccak256(abi.encodePacked(_to, _tokenId));
        bytes32 _msgHash = ECDSA.toEthSignedMessageHash(_data);

        require(
            ECDSA.recover(_msgHash, _signature) == verifier,
            "SporesNFTMinter: verifier signature invalid"
        );

        erc721.mint(_to, _tokenId, _uri);

        emit SporeNFTMint(_to, address(erc721), _tokenId, 1);
    }

    /**
       @notice Mint Spore NFT Token (ERC1155) to Receiver `to`
       @dev Caller can be ANY
            Only Users of Spore Network are allowed to mint Spore NFT Tokens
            Require a signature from Verifier
       @param _to               Receiver address
       @param _tokenId          Token ID 
       @param _amount           An amount of Spore NFT Tokens being minted
       @param _uri              Token URI
       @param _signature        A signature from Verifier
    */
    function mintSporeERC1155(
        address _to,
        uint256 _tokenId,
        uint256 _amount,
        string calldata _uri,
        bytes calldata _signature
    ) external override {
        bytes32 _data = keccak256(abi.encodePacked(_to, _tokenId));
        bytes32 _msgHash = ECDSA.toEthSignedMessageHash(_data);

        require(
            ECDSA.recover(_msgHash, _signature) == verifier,
            "SporesNFTMinter: verifier signature invalid"
        );

        erc1155.mint(_to, _tokenId, _amount, _uri, "");

        emit SporeNFTMint(_to, address(erc1155), _tokenId, 1);
    }

    /**
       @notice destroy this contract
       @dev Caller must be owner
    */
    function selfDestruct() external onlyOwner {
        selfdestruct(payable(msg.sender));
    }
}

