pragma solidity 0.8.6;

import "./ExchangeCore.sol";

/**
 * @title Exchange
 * @author Wyvern Protocol Developers
 */
contract Exchange is ExchangeCore {
    /* external ABI-encodable method wrappers. */
    function hashOrder(
        address maker,
        address target,
        address token,
        address artist,
        uint256 price,
        uint256 tokenId,
        uint256 listingTime,
        uint256 expirationTime,
        uint256 salt
    ) external pure returns (bytes32 hash) {
        return
            hashOrder_(
                Order(
                    maker,
                    target,
                    token,
                    artist,
                    price,
                    tokenId,
                    listingTime,
                    expirationTime,
                    salt
                )
            );
    }

    function hashToSign(bytes32 orderHash)
        external
        view
        returns (bytes32 hash)
    {
        return hashToSign_(orderHash);
    }

    function setTreasury(address _treasury) public onlyOwner {
        setTreasury_(_treasury);
    }

    function setTreasuryPercent(uint256 _treasuryPercent) public onlyOwner {
        setTreasuryPercent_(_treasuryPercent);
    }

    function setArtistPercent(uint256 _artistPercent) public onlyOwner {
        setArtistPercent_(_artistPercent);
    }

    function validateOrderParameters(
        address maker,
        address target,
        address token,
        address artist,
        uint256 price,
        uint256 tokenId,
        uint256 listingTime,
        uint256 expirationTime,
        uint256 salt
    ) external view returns (bool) {
        Order memory order = Order(
            maker,
            target,
            token,
            artist,
            price,
            tokenId,
            listingTime,
            expirationTime,
            salt
        );
        return validateOrderParameters_(order, hashOrder_(order));
    }

    function validateOrderAuthorization(
        bytes32 hash,
        address maker,
        bytes calldata signature
    ) external view returns (bool) {
        return validateOrderAuthorization_(hash, maker, signature);
    }

    function atomicMatch(
        address[8] memory addresses,
        uint256[10] memory uints,
        bytes memory signatures
    ) public payable {
        return
            atomicMatch_(
                Order(
                    addresses[0],
                    addresses[1],
                    addresses[2],
                    addresses[3],
                    uints[0],
                    uints[1],
                    uints[2],
                    uints[3],
                    uints[4]
                ),
                Order(
                    addresses[4],
                    addresses[5],
                    addresses[6],
                    addresses[7],
                    uints[5],
                    uints[6],
                    uints[7],
                    uints[8],
                    uints[9]
                ),
                signatures
            );
    }
}

