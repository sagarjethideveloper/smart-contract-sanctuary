pragma solidity ^0.7.1;
pragma experimental ABIEncoderV2;

import "./libraries/Ownable.sol";
import "./libraries/IERC20.sol";
import "./libraries/SafeMath.sol";

contract AllocatedWhitelist is Ownable {
    using SafeMath for uint256;
    IERC20 token = IERC20(0xe527Af9fbDa1D44e02C425455E33fc2A0C2f9B33);
    uint256 constant TIMELOCK = 600;
    struct UserInfoMap {
        uint256 amount;
        uint256 releaseTimestamp;
    }
    struct UserInfoArray {
        address user;
        uint256 amount;
    }

    mapping(address => UserInfoMap) public userMapping;
    UserInfoArray[] public userArray;

    event AllocateAddress(address indexed account, uint256 amount);
    event Release(address indexed accounts, uint256 amount);
    event TokenChanged(IERC20 _token);

    function allocate(uint256 _amount) external onlyOwner {
        require(_amount > 1e4 ether, "ALLOCATED_WHITELIST::INVALID_AMOUNT");
        require(
            userMapping[msg.sender].amount == 0,
            "ALLOCATED_WHITELIST::USER_ALREADY_ALLOCATED"
        );
        token.transferFrom(msg.sender, address(this), _amount);
        userMapping[msg.sender].amount = _amount;
        userMapping[msg.sender].releaseTimestamp = block.timestamp.add(
            TIMELOCK
        );
        UserInfoArray memory user = UserInfoArray(msg.sender, _amount);
        userArray.push(user);
        emit AllocateAddress(msg.sender, _amount);
    }

    function release() external onlyOwner {
        uint256 amount = userMapping[msg.sender].amount;
        require(
            userMapping[msg.sender].releaseTimestamp >= block.timestamp,
            "ALLOCATED_WHITELIST::RELEASE_TIME_NOT_COMPLETED"
        );
        require(amount > 0, "ALLOCATED_WHITELIST::INVALID_WEI_AMOUNT");
        token.transfer(msg.sender, amount);
        userMapping[msg.sender].amount = userMapping[msg.sender].amount.sub(
            amount
        );
        emit Release(msg.sender, amount);
    }

    function getAllocatedAddresses(address _address)
        external
        view
        returns (UserInfoArray[] memory)
    {
        return userArray;
    }

    function changeAllocationToken(IERC20 _contract) external onlyOwner {
        token = _contract;
        emit TokenChanged(_contract);
    }
}

