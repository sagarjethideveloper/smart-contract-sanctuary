// Each tile is 10x10 pixels
// Coordinates are rendered as XX0:YY0
// Tokens are represented as XXYY in decimal

// e.g. 100:920 is a 10x10 tile at (x=100,y=920) and
// is represented as tokenId 1092

// Each pixel in the tile is coded as 1 byte
// The color value is looked up in the palette that's the same for all tiles
// The data in the pixel buffer is starting at top left in rows of 10
// 123456789a
// bcdefghijk
// lmnoprs...

contract OneMillionPixels is ERC721Enumerable, ReentrancyGuard, Ownable {
    uint256 public constant MAX_TILES = 10000;
    uint256 public constant PRICE = 0.1 ether;

    bytes public constant palette =
        hex"";
    mapping(uint256 => bytes) public bmps;
    mapping(uint256 => string) public urls;
    mapping(uint256 => uint256) public lastUpdated;

    mapping(address => uint256) private _freeMinters;
    bool private _paused;

    event TilePainted(uint256 indexed tokenId, bytes bmp);
    event TileLinked(uint256 indexed tokenId, string url);

    constructor() ERC721("One Million Pixels", "1MPX") Ownable() {}

    // Minting

    function mintAt(uint256 location) public payable nonReentrant {
        require(location < MAX_TILES, "out of range");
        require(totalSupply() < MAX_TILES, "sold out");
        require(_paused == false, "paused");
        require(msg.value == PRICE, "wrong price");

        _safeMint(_msgSender(), location);
    }

    function mintRandom() public nonReentrant {
        require(totalSupply() < MAX_TILES, "sold out");
        require(_paused == false, "paused");
        require(_freeMinters[_msgSender()] < 4, "free limit");

        uint256 rnd = uint256(keccak256(abi.encodePacked(block.timestamp, block.number)));

        uint256 tokenId = rnd % MAX_TILES;
        while (_exists(tokenId)) {
            tokenId = (tokenId + 1) % MAX_TILES;
        }
        _freeMinters[_msgSender()] += 1;
        _safeMint(_msgSender(), tokenId);
    }

    // Token owner

    function paint(uint256 tokenId, bytes memory bmp) public {
        require(ownerOf(tokenId) == _msgSender(), "not your token");
        require(bmp.length == 100, "not 10x10");

        bmps[tokenId] = bmp;
        lastUpdated[tokenId] = block.number;
        emit TilePainted(tokenId, bmp);
    }

    function link(uint256 tokenId, string memory url) public {
        require(ownerOf(tokenId) == _msgSender(), "not your token");

        bytes memory bts = bytes(url);
        require(bts.length < 256, "too large");

        for (uint256 i = 0; i < bts.length; i++) {
            require(uint8(bts[i]) != 34, "double quote not allowed");
        }

        urls[tokenId] = url;
        lastUpdated[tokenId] = block.number;
        emit TileLinked(tokenId, url);
    }

    // Rendering

    function tokenURI(uint256 tokenId) public view virtual override returns (string memory) {
        uint16 x = to2DigitString(tokenId / 100);
        uint16 y = to2DigitString(tokenId % 100);
        string memory json = Base64.encode(
            bytes(
                string(
                    abi.encodePacked(
                        '{"name":"10x10 tile at (',
                        x,
                        "0, ",
                        y,
                        '0)","description":"One million pixels","image":"data:image/svg+xml;base64,',
                        Base64.encode(bytes(svgValueOf(tokenId))),
                        '","attributes":[{"trait_type":"x","value":"',
                        x,
                        '0"},{"trait_type":"y","value":"',
                        y,
                        '0"}]}'
                    )
                )
            )
        );
        return string(abi.encodePacked("data:application/json;base64,", json));
    }

    function svgValueOf(uint256 tokenId) public pure returns (string memory) {
        uint256 x = tokenId / 100;
        uint256 y = tokenId % 100;
        string
            memory svgBefore = '<?xml version="1.0" encoding="UTF-8" standalone="no"?><svg xmlns="http://www.w3.org/2000/svg" version="1.1" viewBox="0 0 10 10"><rect fill="#000" x="0" y="0" width="100% " height="100%"/><text font-family="monospace" font-size="2" fill="#aaa" x="50%" y="50%" text-anchor="middle" dominant-baseline="middle">';
        string memory svgAfter = "</text></svg>";

        return string(abi.encodePacked(svgBefore, to2DigitString(x), "0:", to2DigitString(y), "0", svgAfter));
    }

    function to2DigitString(uint256 value) internal pure returns (uint16) {
        require(value < 100);
        return (uint16(48 + uint256(value / 10)) << 8) + uint16(48 + uint256(value % 10));
    }

    function bmpValueOf(uint256 tokenId) public view returns (bytes memory) {
        require(_exists(tokenId), "no token");
        bytes memory bmp = bmps[tokenId].length == 100 ? bmps[tokenId] : new bytes(100);

        uint256 width = 10;
        uint256 height = 10;

        uint256 rowSize = ((24 * width + 31) / 32) * 4;
        uint256 pixelArraySize = rowSize * height;

        bytes memory data = new bytes(pixelArraySize);
        uint256 offset = 0;
        for (uint256 y = 0; y < height; y++) {
            for (uint256 x = 0; x < width; x++) {
                // BMP layout starts bottom left, our layout starts top left
                uint256 index = uint256(uint8(bmp[(height - y - 1) * height + x]));
                data[offset++] = palette[index * 3 + 0];
                data[offset++] = palette[index * 3 + 1];
                data[offset++] = palette[index * 3 + 2];
            }

            for (uint256 pad = 0; pad < ((4 - (width % 4)) % 4); pad++) {
                data[offset++] = 0xff;
            }
        }

        return
            abi.encodePacked(
                hex"424d9a0000000000000036000000280000000a0000000a00000001001800000000000000000000000000000000000000000000000000",
                data
            );
    }

    function tokenHtmlURI(uint256 tokenId) public view returns (string memory) {
        bytes memory html = abi.encodePacked(
            '<a href="',
            urls[tokenId],
            '"><img src="data:image/bmp;base64,',
            Base64.encode(bmpValueOf(tokenId)),
            '"></a>'
        );

        return string(abi.encodePacked("data:text/html;base64,", Base64.encode(html)));
    }

    // Admin

    function withdrawAll() public payable onlyOwner {
        require(payable(_msgSender()).send(address(this).balance));
    }

    function toggle() public onlyOwner {
        _paused = !_paused;
    }

    function mintFounder(uint256 count) public onlyOwner nonReentrant {
        require(totalSupply() + count < MAX_TILES);
        require(_freeMinters[_msgSender()] + count <= 100);

        uint256 rnd = uint256(keccak256(abi.encodePacked(block.timestamp, block.number)));
        while (count > 0) {
            count--;

            uint256 tokenId = rnd % MAX_TILES;
            while (_exists(tokenId)) {
                tokenId = (tokenId + 1) % MAX_TILES;
            }
            _freeMinters[_msgSender()] += 1;
            _safeMint(_msgSender(), tokenId);
        }
    }
}

