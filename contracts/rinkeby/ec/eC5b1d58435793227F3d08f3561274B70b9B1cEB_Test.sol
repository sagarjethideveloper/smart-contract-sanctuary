pragma abicoder v2;

import "@uniswap/v3-periphery/contracts/interfaces/ISwapRouter.sol";

import "@openzeppelin/contracts/access/Ownable.sol";

contract Swapper is Ownable {

    /// @dev Set addresses to Rinkeby network
    ISwapRouter internal constant uniswapRouter = ISwapRouter(0xE592427A0AEce92De3Edee1F18E0157C05861564);
    address internal constant LINKToken = 0x01BE23585060835E02B77ef475b0Cc51aA1e0709;
    address internal constant WETH9 = 0xc778417E063141139Fce010982780140Aa0cD5Ab;

    uint24 public uniswapPoolFee = 3000;
    uint public LINKRequired = 2 * 10 ** 18;

    function setUniswapPoolFee(uint24 _uniswapPoolFee) public onlyOwner {
        uniswapPoolFee = _uniswapPoolFee;
    }

    function setLINKRequired(uint _LINKRequired) public onlyOwner {
        LINKRequired = _LINKRequired;
    }

    function fundLink(address _recipient, uint _amountInMaximum, uint160 _sqrtPriceLimitX96) public payable returns (uint amountInUsed)
    {
        // Critical check
        require(msg.value >= _amountInMaximum, "Not enough ETH passed");

        ISwapRouter.ExactOutputSingleParams memory params = ISwapRouter.ExactOutputSingleParams({
            tokenIn: WETH9,
            tokenOut: LINKToken,
            fee: uniswapPoolFee,
            recipient: _recipient,
            // recipient: address(this),
            deadline: block.timestamp + 200,
            amountOut: LINKRequired,
            amountInMaximum: _amountInMaximum,
            sqrtPriceLimitX96: _sqrtPriceLimitX96
        });

        amountInUsed = uniswapRouter.exactOutputSingle(params);

        if (amountInUsed < _amountInMaximum) {
            (bool success, ) = msg.sender.call{ value: _amountInMaximum - amountInUsed }("");
        }
    }
}

