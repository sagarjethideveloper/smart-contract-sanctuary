pragma solidity ^0.8.0;
import "../InitializableOwnable.sol";
import "@openzeppelin/contracts/token/ERC1155/IERC1155.sol";
import "@openzeppelin/contracts/token/ERC721/IERC721.sol";
import "@openzeppelin/contracts/utils/cryptography/ECDSA.sol";
import "./MinterInterface.sol";

interface IERC721Mintable is IERC721 {
	function mint(
		address to,
		uint256 tokenId,
		string calldata uri
	) external;
}

interface IERC1155Mintable is IERC1155 {
	function mint(
		address to,
		uint256 tokenId,
		uint256 amount,
		string calldata uri,
		bytes memory data
	) external;
}

contract SporesNFTMinter is InitializableOwnable, MinterInterface {
	// address used to verified minting signature
	address public verifier;

	// NFT contract
	IERC1155Mintable public erc1155;
	IERC721Mintable public erc721;

	function init(
		address _erc1155,
		address _erc721,
		address _verifier,
		address _owner
	) external initializer {
		super.init(_owner);

		erc1155 = IERC1155Mintable(_erc1155);
		erc721 = IERC721Mintable(_erc721);
		verifier = _verifier;
	}

	function setERC1155(address _erc1155) external onlyOwner {
		erc1155 = IERC1155Mintable(_erc1155);
	}

		function setERC721(address _erc721) external onlyOwner {
		erc721 = IERC721Mintable(_erc721);
	}

	/**
	 * @dev set address used to verified minting signature
	 */	
	function setVerifier(address _verifier) external onlyOwner {
		verifier = _verifier;
	}

	/**
	 * @dev mint function to distribute spores NFT to user
	 */
	function mint721To(
		address to,
		uint256 tokenId,
		string calldata uri,
		bytes calldata signature
	) external override {
		bytes32 data = keccak256(abi.encodePacked(to, tokenId));
		bytes32 hash = ECDSA.toEthSignedMessageHash(data);
		
		require(
			ECDSA.recover(hash, signature) == verifier,
			"SporesNFTMinter: verifier signature invalid"
		);

		erc721.mint(to, tokenId, uri);

		emit Minted(to, address(erc721), tokenId, 1);
	}

	/**
	 * @dev mint function to distribute spores NFT to user
	 */
	function mint1155To(
		address to,
		uint256 tokenId,
		uint256 amount,
		string calldata uri,
		bytes calldata signature
	) external override {
		bytes32 data = keccak256(abi.encodePacked(to, tokenId));
		bytes32 hash = ECDSA.toEthSignedMessageHash(data);
		
		require(
			ECDSA.recover(hash, signature) == verifier,
			"SporesNFTMinter: verifier signature invalid"
		);

		erc1155.mint(to, tokenId, amount, uri, "");

		emit Minted(to, address(erc1155), tokenId, 1);
	}
}

