pragma solidity ^0.8.3;
pragma experimental ABIEncoderV2;

import {OwnableUpgradeable} from "@openzeppelin/contracts-upgradeable/access/OwnableUpgradeable.sol";
import {ERC20Upgradeable} from "@openzeppelin/contracts-upgradeable/token/ERC20/ERC20Upgradeable.sol";
import {IERC20Upgradeable} from "@openzeppelin/contracts-upgradeable/token/ERC20/IERC20Upgradeable.sol";

contract Launchpad is OwnableUpgradeable {

    uint256 constant BRONZE_THRESHOLD = 1000000000 * (10 ** 18);
    uint256 constant SILVER_THRESHOLD = 5000000000 * (10 ** 18);
    uint256 constant GOLD_THRESHOLD = 1000000000 * (10 ** 18);

    uint256 constant GOLD_WEIGHT = 60;
    uint256 constant SILVER_WEIGHT = 25;
    uint256 constant BRONZE_WEIGHT = 5;

    enum Tiers {GOLD,SILVER,BRONZE}

    struct WhitelistInput {
        address wallet;
        uint256 maxPayableAmount;
    }

    struct Whitelist {
        address wallet;
        Tiers tier;
        bool whitelist;
        uint256 rewardedAmount;
        bool redeemed;
    }

    uint256 public goldParticipants;
    uint256 public silverParticipants;
    uint256 public bronzeParticipants;

    // Whitelist map
    mapping(address => Whitelist) private whitelist;
    address[] public whitelistUsers;

    // Private
    ERC20Upgradeable private _token;
    address private _safeMoonAVAX;

    // Public
    uint256 public startTime;
    uint256 public tokenRate;
    uint256 public totalParticipant;
    uint256 public totalRedeemed;
    uint256 public totalRewardTokens;
    bool public isFinished;

    // Events
    event ESetAcceptedTokenAddress(
        string _name,
        string _symbol,
        uint8 _decimals,
        uint256 _totalSupply
    );
    event ESetTokenAddress(
        string _name,
        string _symbol,
        uint8 _decimals,
        uint256 _totalSupply
    );
    event ESetTokenRate(uint256 _tokenRate);
    event EOpenSale(uint256 _startTime, bool _isStarted);
    event EBuyTokens(
        address _sender,
        uint256 _value,
        uint256 _totalToken,
        uint256 _rewardedAmount,
        uint256 _senderTotalAmount,
        uint256 _senderTotalRewardedAmount,
        uint256 _senderSoldAmount,
        uint256 _senderTotalRise,
        uint256 _totalParticipant,
        uint256 _totalRedeemed
    );
    event EFinishSale(bool _isFinished);
    event ERedeemTokens(address _wallet, uint256 _rewardedAmount);
//    event EAddWhiteList(WhitelistInput[] _addresses);
    event ERemoveWhiteList(address[] _addresses);
    event EWithdrawAVAXBalance(address _sender, uint256 _balance);
    event EWithdrawRemainingTokens(address _sender, uint256 _remainingAmount);
    event EAddRewardTokens(
        address _sender,
        uint256 _amount,
        uint256 _remaingRewardTokens
    );

    constructor() {
        tokenRate = 10000000000000000;
        _token = ERC20Upgradeable(0x038561C7008f1Dbe8dCcD05A60c699FCa19E7A32);
        _safeMoonAVAX = 0xdbe655Dd63E0B65Ef484420810016b1B9111F043;
        __Ownable_init();
    }

    // Write: Owner set exchange rate
    function setTokenRate(uint256 _tokenRate) external onlyOwner {
        require(!isInitialized(), "This step should perform before the sale");
        require(_tokenRate > 0, "The rate must not be zero");

        tokenRate = _tokenRate;
        // Emit event
        emit ESetTokenRate(tokenRate);
    }

    // Write: Open sale
    // Ex _startTime = 1618835669
    function openSale(uint256 _startTime) external onlyOwner {
        require(!isInitialized(), "This step should perform before the sale");
        require(
            _startTime >= block.timestamp,
            "start time should be greater than current time"
        );
        require(
            getTokenAddress() != address(0),
            "Token address has not initialized yet"
        );
        require(
            getTotalTokens() > 0,
            "Total token for sale must greater than zero"
        );

        startTime = _startTime;
        isFinished = false;
        // Emit event
        emit EOpenSale(startTime, isStarted());
    }

    // Read: Get token address
    function getTokenAddress() public view returns (address tokenAddress) {
        return address(_token);
    }

    // Read: Get Total Token
    function getTotalTokens() public view returns (uint256) {
        return _token.balanceOf(address(this));
    }

    function isInitialized() public view returns (bool) {
        return startTime != 0;
    }

    // Read: Is Sale Start
    function isStarted() public view returns (bool) {
        return isInitialized() && startTime > 0 && block.timestamp >= startTime;
    }

    // read token in AVAX
    function getTokenInAVAX(uint256 tokens) public view returns (uint256) {
        uint256 tokenDecimal = 10**uint256(18);
        return (tokens * tokenRate) / tokenDecimal;
    }

    function registerIDO() external {
        require(!isStarted(), "Sale has started. Can't register again.");
        address _address = msg.sender;
        uint256 userBalance = IERC20Upgradeable(_safeMoonAVAX).balanceOf(_address);
        if (userBalance >= GOLD_THRESHOLD) {
            goldParticipants += 1;
            Whitelist memory _whitelist = Whitelist(_address, Tiers.GOLD, true, 0, false);
            whitelist[_address] = _whitelist;
        } else if (userBalance >= SILVER_THRESHOLD && userBalance <= GOLD_THRESHOLD) {
            silverParticipants +=1;
            Whitelist memory _whitelist = Whitelist(_address, Tiers.SILVER, true, 0, false);
            whitelist[_address] = _whitelist;
        }
        else if (userBalance >= BRONZE_THRESHOLD && userBalance <= SILVER_THRESHOLD) {
            bronzeParticipants +=1;
            Whitelist memory _whitelist = Whitelist(_address, Tiers.BRONZE, true, 0, false);
            whitelist[_address] = _whitelist;
        }
    }

    // Read: Calculate Token
    function calculateAmount(uint256 acceptedAmount) public view returns (uint256) {
        uint256 tokenDecimal = 10**uint256(18);
        return (acceptedAmount * tokenDecimal) / tokenRate;
    }

    // ON SALE
    // Write: User buy token by sending AVAX
    // Convert Accepted avax to Sale token
    function buyTokens() external payable {
        Whitelist memory whitelistSnapshot = whitelist[msg.sender];
        require(isStarted(), "Sale is not started yet");
        require(!isFinished, "Sale is finished");
        uint256 acceptedAmount = msg.value;
        require(acceptedAmount > 0, "You must pay some AVAX to get tokens");
        require(whitelistSnapshot.whitelist, "You need to register first");


        uint256 totalWeight = (goldParticipants * GOLD_WEIGHT) + (silverParticipants * SILVER_WEIGHT) + (bronzeParticipants * BRONZE_WEIGHT);
        uint256 totalTokens = getTotalTokens();
        uint256 tokenAllocationPerTier = totalTokens / totalWeight;
        uint256 tokenAmountPerTier;


        if (keccak256(abi.encode(whitelistSnapshot.tier)) == keccak256(abi.encode(Tiers.GOLD))) {
            whitelistSnapshot.rewardedAmount = totalParticipant * tokenAllocationPerTier * GOLD_WEIGHT;
        } else if (keccak256(abi.encode(whitelistSnapshot.tier)) == keccak256(abi.encode(Tiers.SILVER))) {
            whitelistSnapshot.rewardedAmount = totalParticipant * tokenAllocationPerTier * SILVER_WEIGHT;
        } else if (keccak256(abi.encode(whitelistSnapshot.tier)) == keccak256(abi.encode(Tiers.BRONZE))) {
            whitelistSnapshot.rewardedAmount = totalParticipant * tokenAllocationPerTier * BRONZE_WEIGHT;
        }

//        msg.sender.transfer();

    }

    // Write: Finish sale
    function finishSale() external onlyOwner returns (bool) {
        isFinished = true;
        // Emit event
        emit EFinishSale(isFinished);
        return isFinished;
    }

}

