import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/token/ERC1155/extensions/ERC1155Supply.sol";
import "@openzeppelin/contracts/utils/Counters.sol";
import "./ILoot.sol";
import "./Base64.sol";

contract UnbundledLoot is ERC1155Supply, Ownable {
    using Counters for Counters.Counter;
    ILoot private _lootContract = ILoot(0x79E2d470f950f2Cf78eeF41720E8ff2cf4B3CD78);

    mapping (uint256 => string) private _names;
    mapping (uint256 => uint256) private _lastUnbundled;
    mapping (uint256 => Counters.Counter) private _unbundleCount;
    
    uint256 private _curveInitial = 5760; // average number of blocks in a day (86400/15)
    uint256 private _curveRate = 1250; // will be divided by 1,000 (defaults to 1.25)
    
    modifier lootOwner(uint256 bagId) {
        require(_lootContract.ownerOf(bagId) == _msgSender());
      _;
    }

    constructor() ERC1155("") {}
    
    function unbundle(uint256 bagId) public lootOwner(bagId) {
        require(block.number > nextUnbundleBlock(bagId), "Must wait to unbundle");
        string[8] memory _itemNames = _getItemNamesForBag(bagId);
        uint256[] memory itemIds = new uint256[](8);
        uint256[] memory amounts = new uint256[](8);
        for (uint i = 0; i < 8; i++) {
            string memory name = _itemNames[i];
            uint256 itemId = _nameToId(name);
            if (keccak256(abi.encodePacked(_names[itemId])) == keccak256("")) _names[itemId] = name;
            itemIds[i] = itemId;
            amounts[i] = 1;
        }
        _mintBatch(_msgSender(), itemIds, amounts, "");
        _lastUnbundled[bagId] = block.number;
        _unbundleCount[bagId].increment();
    }
    
    function nextUnbundleBlock(uint256 bagId) public view returns (uint256) {
        return _lastUnbundled[bagId] + _unbundleCount[bagId].current() ** _curveRate / 1000;
    }
    
    
    function _getItemNamesForBag(uint256 bagId) private view returns (string[8] memory) {
        return [
            _lootContract.getWeapon(bagId),
            _lootContract.getChest(bagId),
            _lootContract.getHead(bagId),
            _lootContract.getWaist(bagId),
            _lootContract.getFoot(bagId),
            _lootContract.getHand(bagId),
            _lootContract.getNeck(bagId),
            _lootContract.getRing(bagId)
        ];
    }

    function _nameToId(string memory name) private pure returns (uint256) {
        return uint256(keccak256(abi.encodePacked(name)));
    }
        
    function _setCurveRate(uint256 r) public onlyOwner {
        _curveRate = r;
    }

    function uri(uint256 id) public override view returns (string memory) {
        string[3] memory parts;
        string memory name = _names[id];
        parts[0] = '<svg xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMinYMin meet" viewBox="0 0 350 350"><style>.base { fill: white; font-family: serif; font-size: 14px; }</style><rect width="100%" height="100%" fill="black" /><text x="10" y="20" class="base">';
        parts[1] = name;
        parts[2] = '</text></svg>';
        string memory output = string(abi.encodePacked(parts[0], parts[1], parts[2]));
        string memory json = Base64.encode(bytes(string(abi.encodePacked('{"name": "', name, '", "description": "This item is from a bag of Loot.", "image": "data:image/svg+xml;base64,', Base64.encode(bytes(output)), '"}'))));
        output = string(abi.encodePacked('data:application/json;base64,', json));
        return output;
    }
}

