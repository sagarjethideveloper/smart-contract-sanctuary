pragma solidity 0.6.12;

import "@openzeppelin/contracts/math/SafeMath.sol";
import "./UniswapV2Pair.sol";
import "./IUniSwapV2Factory.sol";

contract Pricer {
    using SafeMath for *;

    uint256 public lastPrice = 0;

    uint256 public constant PERIOD = 2 minutes;

    uint256 public percentageChange = 5;

    address public pairAddress;

    // block time of last update
    uint32 public blockTimestampLast;

    constructor(address _pairAddress) public {
        pairAddress = _pairAddress;
        (, uint112 reserve1, uint32 blockTime) = UniswapV2Pair(pairAddress).getReserves(); // gas savings
        blockTimestampLast = blockTime;
        lastPrice = reserve1;
        require(reserve1 != 0, "ORACLE: NO_RESERVES"); // ensure that there's liquidity in the pair
    }

    // constructor() public {}

    function currentBlockTimestamp() internal view returns (uint32) {
        return uint32(block.timestamp % 2**32);
    }

    function computerPercentage(uint256 last, uint256 current) public view returns (uint256) {
        uint256 change = 0;
        if (last > current) {
            change = last.sub(current).mul(100).div(last);
            return change;
        }
    }

    function checkPrice() public view returns (uint256 change, bool flag) {
        uint32 blockTimestamp = currentBlockTimestamp();
        uint32 timeElapsed = blockTimestamp - blockTimestampLast; // overflow is desired

        // ensure that at least one full period has passed since the last update
        // if (timeElapsed >= PERIOD) {
        (, uint112 _reserve1, ) = UniswapV2Pair(pairAddress).getReserves(); // gas savings
        if (lastPrice > _reserve1) {
            change = lastPrice.sub(_reserve1).mul(100).div(lastPrice);
        }

        if (change >= percentageChange) {
            flag = true;
        } else {
            flag = false;
        }
        // }
    }
}

