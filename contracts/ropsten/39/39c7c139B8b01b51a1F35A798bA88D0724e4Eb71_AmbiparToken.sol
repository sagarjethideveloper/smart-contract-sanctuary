pragma solidity 0.8.4;

import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/security/Pausable.sol";
import "@openzeppelin/contracts/token/ERC20/ERC20.sol";
import "@openzeppelin/contracts/utils/math/SafeMath.sol";
import "@openzeppelin/contracts/access/AccessControl.sol";

contract AmbiparToken is ERC20, Ownable, Pausable, AccessControl {
  using SafeMath for uint256;
  using SafeMath for uint16;

  struct SerialNumber {
    uint256 totalAmount;
    uint256 mintedAmount;
    uint256 neutralizedAmount;
  }

  mapping (string => SerialNumber) public serialNumbers;

  uint16 public mintComission;
  address public mintComissionAddress;

  address public manager;
  address public partner;

  // TODO definir nome e ticker
  constructor(address _owner, address _manager, address _partner, uint16 _mintComission, address _mintComissionAddress, address _exchangeAddress) ERC20("Ambipar Token", "AMBP") {
      mintComission = _mintComission;
      mintComissionAddress = _mintComissionAddress;
      manager = _manager;
      partner = _partner;

      transferOwnership(_owner);
      _setupRole("authorizedAdmin", _exchangeAddress);
      _setupRole("authorizedAdmin", _manager);
      _setRoleAdmin("exchange", "authorizedAdmin");
  }

  // Cadastrar Serial Number com serial number, quantidade maxima e data
  function createSerialNumber(string memory _serialNumber, uint256 _totalAmount) public onlyOwner {
    require(bytes(_serialNumber).length > 0, "empty serial number");
    require(_totalAmount > 0, "invalid tokens amount");
    // TODO verificar se é multiplo de 1 ether

    SerialNumber memory newSerialNumber;
    newSerialNumber.totalAmount = _totalAmount;
    serialNumbers[_serialNumber] = newSerialNumber;
    
    emit SerialNumberCreated(_serialNumber, _totalAmount);
  }

  // Burn pela API Bleu
  // Funcao para adicionar e remover address nas roles
  function neutralize(string memory _serialNumber, uint256 _tokensAmount, string memory _neutralizeIdentifier) public onlyAuthorized {
    require(bytes(_serialNumber).length > 0, "empty serial number");
    require(_tokensAmount > 0, "invalid tokens amount");
    // TODO verificar se é multiplo de 1 ether

    SerialNumber storage sn = serialNumbers[_serialNumber];
    require(sn.mintedAmount >= _tokensAmount.add(sn.neutralizedAmount), "insuficient tokens");
    
    sn.neutralizedAmount = sn.neutralizedAmount.add(_tokensAmount);

    _burn(address(this), _tokensAmount);

    emit Neutralized(_serialNumber, _tokensAmount, sn.mintedAmount, sn.neutralizedAmount, _neutralizeIdentifier);
  }

  // Multiassinado pela ambipar
  // Verificar se o serial number já chegou no limite da quantidade maxima
  // No mint enviar % para endereço comissionAddress
  // Somente Ambipar pode alterar
  function mint(string memory _serialNumber, uint256 _tokensAmount) public onlyOwner {
    SerialNumber storage sn = serialNumbers[_serialNumber];
    require(_tokensAmount.add(sn.mintedAmount) <= sn.totalAmount, "total amount limit");
  // TODO tirar a resto minimo e colocar comissão de 1 token pra comissionAddress
    require(sn.totalAmount.sub(_tokensAmount) >= (uint256(1 ether).div(mintComission.mul(10**14)).mul(1 ether)) ||
      sn.totalAmount.sub(_tokensAmount) == 0, "minimum mint of tokens");

    uint256 comission = _tokensAmount.mul(mintComission).div(10000);
    require(comission >= 1 ether, "too small");

    sn.mintedAmount = sn.mintedAmount.add(_tokensAmount);
    
    // TODO o resto da operação deve ir para comissionAddress
    _mint(mintComissionAddress, comission);
    _mint(msg.sender, _tokensAmount.sub(comission));

    emit Minted(_serialNumber, _tokensAmount, comission);
  }

  // Alterar % comissão
  // Só pode ser alterado em comum acordo
  function changeMintComission(uint16 _comission) public onlyManager {
    require(_comission >= 0, "negative comisstion");

    mintComission = _comission;

    emit MintComissionChanged(_comission);
  }

  // funcão para alterar o endereço da Bleu
  // Só o endereço Bleu pode alterar
  function changeMintComissionAddress(address _newComissionAdress) public onlyPartner {
    require(_newComissionAdress != address(0), "invalid comission address");
    mintComissionAddress = _newComissionAdress;

    emit MintComissionAddressChanged(_newComissionAdress);
  }

  function pause() public onlyOwner returns (bool) {
    _pause();
    return true;
  }

  function unpause() public onlyOwner returns (bool) {
    _unpause();
    return true;
  }

  function changeManager(address _newManager) public onlyManager {
    require(_newManager != address(0), "invalid manager address");

    manager = _newManager;

    emit MananagerChanged(_newManager);
  }

  function changePartner(address _newPartner) public onlyPartner {
     require(_newPartner != address(0), "invalid partner address");

     partner = _newPartner;

     emit PartnerChanged(_newPartner);
  }

  modifier onlyAuthorized() {
    require(hasRole("exchange", msg.sender), "not authorized");
    _;
  }

  modifier onlyManager() {
    require(manager == msg.sender, "not manager");
    _;
  }

  modifier onlyPartner() {
    require(partner == msg.sender, "not partner");
        _;
  }

  event SerialNumberCreated(string _serialNumber, uint256 _tokensAmount);
  event MaxAmountAdded(string _serialNumber, uint256 _tokensAmount);
  event Neutralized(string _serialNumber, uint256 _mintedAmount, uint256 _totalAmount, uint256 _neutralizedAmount, string _neutralizeIdentifier);
  event Minted(string _serialNumber, uint256 _tokensAmount, uint256 _comission);
  event MintComissionChanged(uint16 _comission);
  event MintComissionAddressChanged(address _newComissionAdress);
  event MananagerChanged(address _newManager);
  event PartnerChanged(address _newPartner);
}

