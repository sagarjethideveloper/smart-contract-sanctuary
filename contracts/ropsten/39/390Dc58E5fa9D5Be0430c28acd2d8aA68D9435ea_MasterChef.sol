import "@openzeppelin/contracts/token/ERC20/ERC20.sol";
import "@openzeppelin/contracts/utils/math/SafeMath.sol";
import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@openzeppelin/contracts/access/Ownable.sol";

contract WAGMI_V2 is ERC20, Ownable {
    using SafeMath for uint256;

    uint256 public burnPercent = 100;
    uint256 public treasuryPercent = 100;
    uint256 public redistributePercent = 300;
    IERC20 public wagmi;
    bool public bridgeOpen;
    address public treasuryAddress;
    address public redistributeAddress;

    constructor(IERC20 _wagmi) ERC20("Elon WAGMI", "ELONWAGMI") {
        wagmi = _wagmi;
        bridgeOpen = true;
        treasuryAddress = address(0);
        redistributeAddress = address(0);
        super._mint(_msgSender(), 100000000e18);
    }

    /**
     * Owner Function
     */
    function changePercent(
        uint256 _treasuryPercent,
        uint256 _redistributePercent
    ) public onlyOwner {
        treasuryPercent = _treasuryPercent;
        redistributePercent = _redistributePercent;
    }

    function setBridgeOpen(bool _bridgeOpen) public onlyOwner {
        bridgeOpen = _bridgeOpen;
    }

    function setTreasuryAddress(address _treasuryAddress) public onlyOwner {
        treasuryAddress = _treasuryAddress;
    }

    function setRedistributeAddress(address _redistributeAddress)
        public
        onlyOwner
    {
        redistributeAddress = _redistributeAddress;
    }

    /**
     * V1 Migration Function
     */
    function migrateFromV1toV2() public {
        require(bridgeOpen, "Bridge is closed");
        uint256 balanceOf = wagmi.balanceOf(_msgSender());
        require(balanceOf != 0, "WAGMI v1 balance is 0");
        wagmi.transferFrom(_msgSender(), address(this), balanceOf);
        super._mint(_msgSender(), balanceOf);
    }

    /**
     * Deflationary Mechanism
     */
    function transfer(address to, uint256 amount)
        public
        override
        returns (bool)
    {
        super.transfer(to, _handleBurn(_msgSender(), amount));
        return true;
    }

    function transferFrom(
        address from,
        address to,
        uint256 amount
    ) public override returns (bool) {
        super.transferFrom(from, to, _handleBurn(from, amount));
        return true;
    }

    function _handleBurn(address from, uint256 amount)
        private
        returns (uint256)
    {
        uint256 tokensToBurn = cut(amount, burnPercent);
        uint256 tokensToTreasury = cut(amount, treasuryPercent);
        uint256 tokensToRedistribute = cut(amount, redistributePercent);
        uint256 tokensToTransfer =
            amount.sub(tokensToBurn).sub(tokensToTreasury).sub(
                tokensToRedistribute
            );
        super._burn(from, tokensToBurn);
        super._transfer(from, treasuryAddress, tokensToTreasury);
        super._transfer(from, redistributeAddress, tokensToRedistribute);
        require(
            tokensToTransfer.add(tokensToBurn).add(tokensToTreasury).add(
                tokensToRedistribute
            ) == amount,
            "Amount incorrect"
        );
        return tokensToTransfer;
    }

    function cut(uint256 value, uint256 percent) public pure returns (uint256) {
        uint256 cutValue = value.mul(percent).div(10000);
        return cutValue;
    }
}

