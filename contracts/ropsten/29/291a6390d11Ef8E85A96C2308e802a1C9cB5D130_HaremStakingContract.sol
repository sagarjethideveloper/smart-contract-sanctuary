pragma solidity ^0.8.0;

import "@openzeppelin/contracts/token/ERC1155/utils/ERC1155Holder.sol";
import "@openzeppelin/contracts/token/ERC721/utils/ERC721Holder.sol";
import "@openzeppelin/contracts/token/ERC1155/IERC1155.sol";
import "@openzeppelin/contracts/token/ERC721/IERC721.sol";
import '@openzeppelin/contracts/utils/math/SafeMath.sol';

contract HaremStakingContract is ERC721Holder, ERC1155Holder {
  using SafeMath for uint256;

  IERC1155 harem1155Token;
  IERC721 harem721Token;

  enum NFTTokenType { ERC1155, ERC721 }

  struct StakedNftData {
    NFTTokenType nftTokenType;
    uint256 nftTokenId;
    uint256 nftNumTokens;
    bool isStaked;
  }

  mapping(address => mapping(NFTTokenType => mapping(uint256 => StakedNftData))) public stakedNft;

  event Stake(NFTTokenType nftTokenType, uint256 tokenId, uint256 tokenAmount);
  event Unstake(NFTTokenType nftTokenType, uint256 tokenId, uint256 tokenAmount);

  constructor(address _harem1155Address, address _harem721Address) {
    harem1155Token = IERC1155(_harem1155Address);
    harem721Token = IERC721(_harem721Address);
  }

  function stake(NFTTokenType[] calldata _tokenTypes, uint256[] calldata _tokenIds, uint256[] calldata _tokenAmounts) public {
    require(_tokenTypes.length == _tokenIds.length && _tokenIds.length == _tokenAmounts.length, 'Incorrect Inputs.');

    for(uint256 i=0; i < _tokenTypes.length; i++) {
      uint256 tokenId = _tokenIds[i];

      if(_tokenTypes[i] == NFTTokenType.ERC1155) {
        require(_tokenAmounts[i] >= 1, 'Token amount should be at least 1.');
        uint256 tokenAmounts = _tokenAmounts[i];
        bool isStaked = stakedNft[msg.sender][NFTTokenType.ERC1155][tokenId].isStaked;

        if (isStaked) {
          uint256 pastStakedAmount = stakedNft[msg.sender][NFTTokenType.ERC1155][tokenId].nftNumTokens;
          uint256 newStakedAmount = tokenAmounts.add(pastStakedAmount);

          StakedNftData memory stakedNftData = StakedNftData(NFTTokenType.ERC1155, tokenId, newStakedAmount, true);
          stakedNft[msg.sender][NFTTokenType.ERC1155][tokenId] = stakedNftData;
        } else {
          StakedNftData memory stakedNftData = StakedNftData(NFTTokenType.ERC1155, tokenId, tokenAmounts, true);
          stakedNft[msg.sender][NFTTokenType.ERC1155][tokenId] = stakedNftData;
        }

        harem1155Token.safeTransferFrom(msg.sender, address(this), tokenId, _tokenAmounts[i], '');

        emit Stake(NFTTokenType.ERC1155, tokenId, tokenAmounts);
      } else {
        StakedNftData memory stakedNftData = StakedNftData(NFTTokenType.ERC721, tokenId, 1, true);
        stakedNft[msg.sender][NFTTokenType.ERC721][tokenId] = stakedNftData;
        harem721Token.safeTransferFrom(msg.sender, address(this), tokenId);

        emit Stake(NFTTokenType.ERC721, tokenId, 1);
      }
    }
  }

  function unstake(NFTTokenType[] calldata _tokenTypes, uint256[] calldata _tokenIds, uint256[] calldata _tokenAmounts) public {
    require(_tokenTypes.length == _tokenIds.length && _tokenIds.length == _tokenAmounts.length, 'Incorrect Inputs.');

    for(uint256 i=0; i < _tokenTypes.length; i++) {
      uint256 tokenId = _tokenIds[i];

      if(_tokenTypes[i] == NFTTokenType.ERC1155) {
        uint256 tokenAmounts = _tokenAmounts[i];
        uint256 stakedAmount = stakedNft[msg.sender][NFTTokenType.ERC1155][tokenId].nftNumTokens;
        bool isStaked = stakedNft[msg.sender][NFTTokenType.ERC1155][tokenId].isStaked;

        require(isStaked, 'Nft is not staked.');
        require(stakedAmount >= tokenAmounts, 'Not enough Nfts staked to unstake.');

        if (tokenAmounts == stakedAmount) {
          StakedNftData memory stakedNftData = StakedNftData(NFTTokenType.ERC1155, tokenId, 0, false);
          stakedNft[msg.sender][NFTTokenType.ERC1155][tokenId] = stakedNftData;
        } else {
          uint256 newStakedAmount = stakedAmount.sub(tokenAmounts);
          StakedNftData memory stakedNftData = StakedNftData(NFTTokenType.ERC1155, tokenId, newStakedAmount, true);
          stakedNft[msg.sender][NFTTokenType.ERC1155][tokenId] = stakedNftData;
        }

        harem1155Token.safeTransferFrom(address(this), msg.sender, tokenId, _tokenAmounts[i], '');

        emit Unstake(NFTTokenType.ERC1155, tokenId, tokenAmounts);
      } else {

        bool isStaked = stakedNft[msg.sender][NFTTokenType.ERC721][tokenId].isStaked;
        require(isStaked, 'Nft is not staked.');
        
        StakedNftData memory stakedNftData = StakedNftData(NFTTokenType.ERC721, tokenId, 0, false);
        stakedNft[msg.sender][NFTTokenType.ERC721][tokenId] = stakedNftData;
        harem721Token.safeTransferFrom(address(this), msg.sender, tokenId);

        emit Unstake(NFTTokenType.ERC721, tokenId, 1);
      }
    }
  }

  function viewStakedData(address account, NFTTokenType nftTokenType, uint256 tokenId) public view returns(uint256, bool) {
    uint256 tokenAmount = stakedNft[account][nftTokenType][tokenId].nftNumTokens;
    bool isStaked = stakedNft[account][nftTokenType][tokenId].isStaked;

    return (tokenAmount, isStaked);
  }
}

