contract WonderFi {
  using SafeMath for uint256;

  struct Order {
    address to;
    bytes data;
    address allowanceTarget;
    uint commission;
  }

  ISwapRouter public immutable swapRouter;
  Withdraw public immutable withdraw;
  address public immutable wallet;

  // For this example, we will set the pool fee to 0.3%.
  uint24 public constant poolFee = 3000;
  uint24 public constant slippage = 10;

  mapping (address => mapping(bytes => bool)) public nonce;

  constructor(ISwapRouter _swapRouter, Withdraw _withdraw, address _wallet) {
      swapRouter = _swapRouter;
      withdraw = _withdraw;
      wallet = _wallet;
  }

  function swap(
    address _signer,
    address token0,
    uint256 token0Amount,
    address token1,
    uint256 token1Amount,
    Order memory order,
    bytes memory _nonce,
    bytes memory signature
    ) external {

      withdraw.withdraw(_signer, token0, token0Amount, token1, token1Amount, order.to, order.data, order.allowanceTarget, _nonce, signature);

      // Approve the router to spend
      TransferHelper.safeApprove(token0, order.allowanceTarget, token0Amount);

      // do the swap
      payable(order.to).call{value: 0}(order.data);

      uint256 balance = uint256(address(this).balance);
      ERC20 erc20 = ERC20(token1);
      if (token1 != address(0x0000000000000000000000000000000000000000)) {
        balance = uint256(erc20.balanceOf(address(this)));
      }
