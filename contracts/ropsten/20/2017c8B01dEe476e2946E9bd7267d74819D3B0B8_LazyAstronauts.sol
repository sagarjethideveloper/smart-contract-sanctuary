pragma solidity 0.8.7;

import "@openzeppelin/contracts-upgradeable/proxy/utils/Initializable.sol";

abstract contract VendorPausable is Initializable {
    event AffiliateGateway_Paused(address account);
    event AffiliateGateway_Unpaused(address account);

    bool private _paused;
    address private _vendor;

    constructor() {}

    function __VendorPausable_init(address vendor_) internal initializer {
        _paused = false;
        _vendor = vendor_;
    }

    function paused() external view returns (bool) {
        return _paused;
    }

    function _pause() external {
        _enforceOnlyVendor();
        _enforceNotPaused();
        _paused = true;
        emit AffiliateGateway_Paused(msg.sender);
    }

    function _unpause() external {
        _enforceOnlyVendor();
        _enforcePaused();
        _paused = false;
        emit AffiliateGateway_Unpaused(msg.sender);
    }

    function _enforceOnlyVendor() internal view {
        if (msg.sender != _vendor) revert ("AffiliateGateway_Unauthorized");
    }

    function _enforceNotPaused() internal view {
        require(!_paused, "AffiliateGateway_Paused");
    }

    function _enforcePaused() internal view {
        require(_paused, "AffiliateGateway_NotPaused");
    }
}

