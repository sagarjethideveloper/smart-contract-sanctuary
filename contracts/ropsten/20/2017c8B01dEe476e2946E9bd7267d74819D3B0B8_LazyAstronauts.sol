pragma solidity 0.8.7;

import "@openzeppelin/contracts/security/ReentrancyGuard.sol";
import "./VendorPausable.sol";

interface IVendorContract {
    function executeAffiliateMint(address minter, uint256 tokens)
        external
        payable;
}

contract AffiliateGateway is VendorPausable, ReentrancyGuard {
    IVendorContract private vendor;
    address public affiliate;
    uint256 private weiFee;
    uint256 public weiTokenPrice;

    constructor() VendorPausable() {}

    function init(
        address vendor_,
        address affiliate_,
        uint256 weiTokenPrice_,
        uint256 weiFee_
    ) external {
        require(affiliate_ != address(0), "ZeroAffiliateAddress");
        vendor = IVendorContract(vendor_);
        affiliate = affiliate_;
        weiTokenPrice = weiTokenPrice_;
        weiFee = weiFee_;

        __VendorPausable_init(vendor_);
    }

    function getVendor() external view returns (address) {
        return address(vendor);
    }

    function mint(uint256 tokens) external payable virtual {
        _enforceNotPaused();
        require(msg.value == weiTokenPrice * tokens, "InvalidETHAmount");

        vendor.executeAffiliateMint{value: (msg.value - weiFee * tokens)}(msg.sender, tokens);
    }

    function withdraw(uint256 amount) external nonReentrant {
        _enforceOnlyGatewayOwner();
        require(amount > 0, "ZeroAmount");
        require(amount <= address(this).balance, "AmountExceedsBalance");

        (bool success, ) = payable(msg.sender).call{value: amount}("");

        require(success, "ETHTransferFailed");
    }

    function getBalance(uint256 any) external view returns (uint256) {
        any;
        _enforceOnlyGatewayOwner();

        return address(this).balance;
    }

    function _enforceOnlyGatewayOwner() internal view {
        require(msg.sender == affiliate, "AffiliateGateway_Unauthorized");
    }
}

