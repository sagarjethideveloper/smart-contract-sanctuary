abstract contract EquitySplitter is ReentrancyGuard {
    uint8 private constant STAKE = 10;

    address private stakeholder;
    uint256 private lastKnownBalance;
    uint256 private ownerCredit;
    uint256 private stakeholderCredit;

    constructor(address stakeholder_) {
        require(stakeholder_ != address(0), "ZeroStakeholderAddress");
        stakeholder = stakeholder_;
    }

    function withdrawStakeholder(uint256 amount) external nonReentrant {
        require(msg.sender == stakeholder, "UnauthorizedAccess");
        require(amount > 0, "ZeroAmount");

        stakeholderCredit += (((address(this).balance - lastKnownBalance) *
            STAKE) / 100);

        ownerCredit +=
            (address(this).balance - lastKnownBalance) -
            (((address(this).balance - lastKnownBalance) * STAKE) / 100);

        require(amount <= stakeholderCredit, "AmountExceedsBalance");

        stakeholderCredit -= amount;
        lastKnownBalance = address(this).balance - amount;

        (bool success, ) = payable(msg.sender).call{value: amount}("");

        require(success, "ETHWithdrawFailed");
    }

    function withdrawOwner(uint256 amount) external nonReentrant {
        require(msg.sender == _owner(), "UnauthorizedAccess");
        require(amount > 0, "ZeroAmount");

        stakeholderCredit += (((address(this).balance - lastKnownBalance) *
            STAKE) / 100);

        ownerCredit +=
            (address(this).balance - lastKnownBalance) -
            (((address(this).balance - lastKnownBalance) * STAKE) / 100);

        require(amount <= ownerCredit, "AmountExceedsBalance");

        ownerCredit -= amount;
        lastKnownBalance = address(this).balance - amount;

        (bool success, ) = payable(msg.sender).call{value: amount}("");

        require(success, "ETHWithdrawFailed");
    }

    function _owner() internal view virtual returns (address);

    function earnings(address who) external view returns (uint256) {
        require(
            msg.sender == _owner() || msg.sender == stakeholder,
            "UnauthorizedAccess"
        );
        require(who == _owner() || who == stakeholder, "UnauthorizedAccess");

        return
            (who == _owner())
                ? ownerCredit +
                    (address(this).balance - lastKnownBalance) -
                    (((address(this).balance - lastKnownBalance) * STAKE) / 100)
                : stakeholderCredit +
                    (((address(this).balance - lastKnownBalance) * STAKE) /
                        100);
    }
}

