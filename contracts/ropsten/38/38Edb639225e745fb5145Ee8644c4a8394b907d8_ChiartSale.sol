contract ChiartSale is Ownable{

    struct Selling {
        address payable recipient;
        uint256 price;
    }

    uint256 public feeRatio = 10;
    uint256 public feeBase = 1000;

    mapping (uint256 =>Selling) public sellingNFTs;
    
    IERC721Upgradeable public nft;

    event ListForSell(address owner, uint256 tokenId, uint256 price);
    event UnlistFromSelling(address owner, uint256 tokenId);
    event Sold(address buyer,uint256 tokenId, uint256 price, uint256 fee);


    constructor(address _nft){
        nft = IERC721Upgradeable(_nft);
    }

    function setFeeRatio(uint256 ratio) public onlyOwner{
        feeRatio = ratio;
    }

    function list(uint256 tokenId,uint256 price) public{
        require(nft.ownerOf(tokenId)==msg.sender,"CHRT:token is not owned by msg.sender");
        sellingNFTs[tokenId] = Selling(msg.sender,price);
        
        nft.transferFrom(msg.sender, address(this), tokenId);

        emit ListForSell(msg.sender,tokenId,price);
    }

    function unlist(uint256 tokenId) public{
        
        Selling memory s = sellingNFTs[tokenId];

        require(s.recipient==msg.sender,"CHRT:token is not owned by msg.sender");
        emit UnlistFromSelling(sellingNFTs[tokenId].recipient,tokenId);
        nft.transferFrom(address(this) , msg.sender, tokenId);
        delete sellingNFTs[tokenId];
    }

    function buy(uint256 tokenId) payable public {
        Selling memory s = sellingNFTs[tokenId];

        require(s.recipient!=address(0x0    ),'CHRT:token is not selling');

        

        require(msg.value>s.price,"CHRT:price is high than offer");

        uint256 fee = msg.value-s.price;
        
        s.recipient.transfer(s.price);
        nft.transferFrom(address(this),msg.sender,tokenId);

        delete sellingNFTs[tokenId];
        
        emit Sold(msg.sender,tokenId,msg.value,fee);
    }

    receive() external payable {}

    function sendValue(address payable recipient, uint256 amount) public onlyOwner {
        require(address(this).balance >= amount, "Address: insufficient balance");
        // solhint-disable-next-line avoid-low-level-calls, avoid-call-value
        (bool success, ) = recipient.call{ value: amount }("");
        require(success, "Address: unable to send value, recipient may have reverted");
    }
}

