    require(IController(controller()).isHardWorker(msg.sender)
      || IController(controller()).isGovernance(msg.sender), "201");
    _;
  }

  modifier onlyGovernance() {
    require(IController(controller()).isGovernance(msg.sender), "202");
    _;
