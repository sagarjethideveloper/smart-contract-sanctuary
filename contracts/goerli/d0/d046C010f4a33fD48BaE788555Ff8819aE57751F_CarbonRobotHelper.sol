contract CarbonRobotHelper is Operator, CarbonRobotHelperInterface {
    address public uniswapRouterAddr;
    IPancakeRouter02 public uniswapRouter;

    //
    IBEP20 public carbonToken;
    address public carbonTokenAddress;

    bool public open = true;

    address public robotAddress;

    event CARBought(uint256 ethAmount);
    event CARSaled(uint256 carAmount);

    constructor(
        address _carAddress,
        address _routerAddress,
        address _robotAddress
    ) public {
        carbonTokenAddress = _carAddress;
        carbonToken = IBEP20(_carAddress);

        uniswapRouterAddr = _routerAddress;
        uniswapRouter = IPancakeRouter02(_routerAddress);

        robotAddress = _robotAddress;

        //approve enough car to uniswap
        _increaseApprove(999999999999000000000000000000);
    }

    function refreshOpen(bool _open) external onlyOperator {
        open = _open;
    }

    function refreshRobotAddress(address addr) external onlyOperator {
        robotAddress = addr;
    }

    function swapETHForCAR()
        external
        payable
        override
        returns (uint256[] memory amounts)
    {
        if (open) {
            uint256 ethAmount = msg.value;
            require(ethAmount > 0, 'bnb amount must > 0');

            address[] memory paths = new address[](2);
            paths[0] = uniswapRouter.WETH();
            paths[1] = carbonTokenAddress;

            amounts = uniswapRouter.swapExactETHForTokens{value: ethAmount}(
                0,
                paths,
                robotAddress,
                block.timestamp
            );
            CARBought(ethAmount);
        }
    }

    function swapCARForETH(uint256 carAmount)
        external
        override
        returns (uint256[] memory amounts)
    {
        if (open) {
            require(carAmount > 0, 'car amount must > 0');
            address[] memory paths = new address[](2);
            paths[0] = uniswapRouter.WETH();
            paths[1] = carbonTokenAddress;

            amounts = uniswapRouter.swapTokensForExactETH(
                carAmount,
                0,
                paths,
                robotAddress,
                block.timestamp
            );

            CARSaled(carAmount);
        }
    }

    function increaseApprove(uint256 amount) external onlyOperator {
        _increaseApprove(amount);
    }

    function _increaseApprove(uint256 amount) internal {
        bool approveResult = carbonToken.approve(uniswapRouterAddr, amount);
        require(approveResult, 'approve failed!');
    }

    function payBackETH() internal onlyOperator {
        address(uint160(msg.sender)).transfer(address(this).balance);
    }

    function payBackCAR() internal onlyOperator {
        carbonToken.transfer(msg.sender, carbonToken.balanceOf(address(this)));
    }
}

