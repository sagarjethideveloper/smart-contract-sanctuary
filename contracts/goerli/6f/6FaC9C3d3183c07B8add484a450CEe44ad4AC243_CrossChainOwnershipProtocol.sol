import {ERC20PresetMinterPauser} from "@openzeppelin/contracts/token/ERC20/presets/ERC20PresetMinterPauser.sol";
import {FxBaseRootTunnel} from "../Libraries/tunnel/FxBaseRootTunnel.sol";
import {IERC721} from "@openzeppelin/contracts/token/ERC721/IERC721.sol";
import {OwnableUpgradeable} from "@openzeppelin/contracts-upgradeable/access/OwnableUpgradeable.sol";
import {Initializable} from "@openzeppelin/contracts-upgradeable/proxy/utils/Initializable.sol";

/**
 * @title CrossChainOwnershipProtocol
 */
contract CrossChainOwnershipProtocol is Initializable, OwnableUpgradeable, FxBaseRootTunnel {
    mapping(address => mapping(uint256 => address)) public cachedOwnership;

    uint256 public constant REWARD = 0.01 ether;
    address public tokenAddress;
    ERC20PresetMinterPauser public crossChainOwnershipProtocolERC20;

    struct NFT {
        address contractAddress;
        uint256 tokenId;
    }

    function initialize(
        address _checkpointManager,
        address _fxRoot,
        address _tokenAddress
    ) public initializer {
        crossChainOwnershipProtocolERC20 = ERC20PresetMinterPauser(_tokenAddress);
        FxBaseRootTunnel.initialize(_checkpointManager, _fxRoot);
        OwnableUpgradeable.__Ownable_init();
    }

    function bulkSubmitNFTOwnership(NFT[] calldata tokens) public {
        uint256 _reward = 0;

        for (uint256 index = 0; index < tokens.length; index++) {
            NFT memory token = tokens[index];

            try IERC721(token.contractAddress).ownerOf(token.tokenId) returns (address owner) {
                if (cachedOwnership[token.contractAddress][token.tokenId] == owner) {
                    continue;
                }
                _processNewOwner(token.contractAddress, token.tokenId, owner);
                _reward += 1;
            } catch {} // solhint-disable-line no-empty-blocks
        }

        reward(_msgSender(), _reward);
    }

    function submitNFTOwnership(address contractAddress, uint256 tokenId) public {
        try IERC721(contractAddress).ownerOf(tokenId) returns (address owner) {
            if (cachedOwnership[contractAddress][tokenId] == owner) {
                return;
            }
            _processNewOwner(contractAddress, tokenId, owner);
            reward(_msgSender(), 1);
        } catch {} // solhint-disable-line no-empty-blocks
    }

    function contractSubmitOwnership(uint256 tokenId) external {
        try IERC721(_msgSender()).ownerOf(tokenId) returns (address owner) {
            if (cachedOwnership[_msgSender()][tokenId] == owner) {
                return;
            }
            _processNewOwner(_msgSender(), tokenId, owner);

            try OwnableUpgradeable(_msgSender()).owner() returns (address contractOwner) {
                reward(contractOwner, 1);
            } catch {
                reward(_msgSender(), 1);
            }
        } catch {} // solhint-disable-line no-empty-blocks
    }

    function _processNewOwner(
        address contractAddress,
        uint256 tokenId,
        address owner
    ) internal {
        cachedOwnership[contractAddress][tokenId] = owner;
        bytes memory message = abi.encode(contractAddress, tokenId, owner);
        _sendMessageToChild(message);
    }

    function reward(address recipient, uint256 amount) internal {
        crossChainOwnershipProtocolERC20.mint(recipient, amount * REWARD);
    }
}

