contract CarbonVoteDAOV2 is Operator {
    using SafeMath for uint256;
    using SafeBEP20 for IBEP20;

    bool public open = true;

    IBEP20 public carToken;

    struct VoteItem {
        uint256 voteId;
        uint256 start; //setting.
        uint256 end; //setting.
        uint256 optionCount; //number of option
    }

    mapping(uint256 => bool) public voteAvailable;
    mapping(uint256 => VoteItem) public voteItems;
    uint256 public numberOfVoteItem = 0;
    uint256 public voteIdIndex = 0;

    mapping(uint256 => uint256) public voteTotalWeight;
    mapping(uint256 => mapping(uint256 => uint256)) public voteOptionWeight; //1->100,2->50,3->300,4->20 ,answer total count

    //
    mapping(address => uint256) public accountStakedAmount; //
    mapping(address => bool) public accountStaked;
    mapping(uint256 => address) public indexToAddress;
    uint256 public stakeAccountIndex = 0;

    //event
    event VoteCreated(
        uint256 voteId,
        uint256 start,
        uint256 end,
        uint256 optionCount
    );

    event VoteModified(
        uint256 voteId,
        uint256 start,
        uint256 end,
        uint256 optionCount
    );

    event VoteAnswered(
        uint256 voteId,
        address indexed user,
        uint256 content,
        uint256 weight
    );

    constructor(address carToken_) public {
        carToken = IBEP20(carToken_);
    }

    function refreshOpen(bool _open) external onlyOperator {
        open = _open;
    }

    function paybackMineToken() public onlyOperator {
        carToken.transfer(msg.sender, carToken.balanceOf(address(this)));
    }

    function paybackETH() public onlyOperator {
        uint256 total = address(this).balance;
        address(uint160(msg.sender)).transfer(total);
    }

    function voteExsits(uint256 voteId) public view returns (bool) {
        return voteAvailable[voteId] == true;
    }

    function createVoteItem(
        uint256 _start,
        uint256 _duration,
        uint256 _optionCount
    ) public onlyOperator returns (uint256 voteId) {
        voteIdIndex++;

        VoteItem memory vote =
            VoteItem({
                voteId: voteIdIndex,
                start: _start,
                end: _start + _duration,
                optionCount: _optionCount
            }); // id: 1,

        voteItems[vote.voteId] = vote;
        numberOfVoteItem++;

        voteAvailable[vote.voteId] = true;

        voteId = vote.voteId;

        /**
            //event
    event VoteCreated(
        uint256 voteId,
        uint256 status,
        uint256 start,
        uint256 end,
        uint256 carAmount
    ); */
        emit VoteCreated(vote.voteId, vote.start, vote.end, vote.optionCount);
    }

    function modifyVoteItem(
        uint256 _voteId,
        uint256 _start,
        uint256 _duration,
        uint256 _optionCount
    ) public onlyOperator {
        require(voteExsits(_voteId), 'invalid vote id');

        voteItems[_voteId].start = _start;
        voteItems[_voteId].end = _start + _duration;
        voteItems[_voteId].optionCount = _optionCount;

        emit VoteModified(
            voteItems[_voteId].voteId,
            voteItems[_voteId].start,
            voteItems[_voteId].end,
            voteItems[_voteId].optionCount
        );
    }

    function answerVote(
        uint256 _voteId,
        uint256 _optionIndex,
        uint256 _amount
    ) external {
        require(voteExsits(_voteId), 'invalid vote id');
        require(_amount >= 1 ether, 'must >1 ether');

        require(
            (block.timestamp >= voteItems[_voteId].start &&
                block.timestamp <= voteItems[_voteId].end),
            'vote not started or ended'
        );

        voteOptionWeight[_voteId][_optionIndex] = voteOptionWeight[_voteId][
            _optionIndex
        ].add(_amount);

        voteTotalWeight[_voteId] = voteTotalWeight[_voteId].add(_amount);

        if (accountStaked[msg.sender] == false) {
            accountStaked[msg.sender] = true;

            stakeAccountIndex++;
            indexToAddress[stakeAccountIndex] = msg.sender;
        }

        accountStakedAmount[msg.sender] = accountStakedAmount[msg.sender].add(
            _amount
        );

        //save account
        //transfer car
        carToken.safeTransferFrom(msg.sender, address(this), _amount);

        //emit event
        emit VoteAnswered(_voteId, msg.sender, _optionIndex, _amount);
    }

    function queryVoteWeightAtOptionIndex(uint256 _voteId, uint256 optionIndex)
        public
        view
        returns (uint256 weight)
    {
        weight = voteOptionWeight[_voteId][optionIndex];
    }

    function paybackVoteLockedCar(uint256 _voteId) public onlyOperator {
        require(voteExsits(_voteId), 'invalid vote id');
        for (uint256 index = 1; index <= stakeAccountIndex; index++) {
            carToken.safeTransfer(
                indexToAddress[index],
                accountStakedAmount[indexToAddress[index]]
            );
        }
    }
}

