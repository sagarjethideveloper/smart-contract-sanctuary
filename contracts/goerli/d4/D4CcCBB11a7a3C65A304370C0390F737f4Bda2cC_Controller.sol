pragma solidity >=0.7.6;

import "@openzeppelin/contracts/access/Ownable.sol";
import "./interfaces/IFIL.sol";

contract Controller is Ownable {
    IFIL public token;
    address public factory;
    address public custodian;
    string public filDepositAddress;

    event SetToken(address indexed token);
    event SetFactory(address indexed factory);
    event SetCustodian(address indexed custodian);
    event SetFilDepositAddress(string indexed filDepositAddress);

    function setToken(IFIL _token) external onlyOwner {
        require(address(_token) != address(0), "invalid token address");
        token = _token;
        emit SetToken(address(token));
    }

    function setFactory(address _factory) external onlyOwner {
        require(_factory != address(0), "invalid factory address");
        factory = _factory;
        emit SetFactory(factory);
    }

    function setCustodian(address _custodian) external onlyOwner {
        require(_custodian != address(0), "invalid custodian address");
        custodian = _custodian;
        emit SetCustodian(_custodian);
    }

    function setFilDepositAddress(string calldata _filDepositAddress) external onlyOwner {
        require(bytes(_filDepositAddress).length != 0, "invalid fil deposit address");
        filDepositAddress = _filDepositAddress;
        emit SetFilDepositAddress(_filDepositAddress);
    }

    function pause() public onlyOwner {
        token.pause();
    }

    function unpause() public onlyOwner {
        token.unpause();
    }

    modifier onlyFactory() {
        require(msg.sender == factory, "sender not authorized for minting or burning.");
        _;
    }

    // only factory actions on token
    function mint(address to, uint amount) external onlyFactory {
        require(to != address(0), "invalid to address");
        token.mint(to, amount);
    }

    // only factory actions on token
    function burn(uint amount) external onlyFactory {
        token.burn(amount);
    }
}

