contract TokenLocker {
    using SafeMath for uint256;
    using SafeERC20 for IERC20;

    /*
     * deposit vars
    */
    struct LockedInfo {
        address tokenAddress;
        address withdrawalAddress;
        uint256 tokenAmount;
        uint256 unlockTime;
        uint256 lastWithdrawTime;
        uint256 withdrawnAmount;
    }

    uint256 public depositId;
    uint256[] public allDepositIds;
    mapping (address => uint256[]) public depositsByWithdrawalAddress;
    mapping (uint256 => LockedInfo) public lockedToken;
    mapping (address => mapping(address => uint256)) public walletTokenBalance;

    event Withdrawal(address SentToAddress, uint256 AmountTransferred);

    /**
     *lock tokens
    */
    function lockTokens(
        address _tokenAddress,
        address _withdrawalAddress,
        uint256 _amount,
        uint256 _unlockTime
    ) public returns (uint256 _id) {
        require(_amount > 0, "amount must be more than zero");
        require(_unlockTime > block.timestamp, "unlock time must be ahead in the future");

        uint256 preBalance = IERC20(_tokenAddress).balanceOf(address(this));

        _id = ++depositId;
        lockedToken[_id].tokenAddress = _tokenAddress;
        lockedToken[_id].withdrawalAddress = _withdrawalAddress;
        lockedToken[_id].unlockTime = _unlockTime;
        lockedToken[_id].lastWithdrawTime = 0;
        lockedToken[_id].withdrawnAmount = 0;

        allDepositIds.push(_id);
        depositsByWithdrawalAddress[_withdrawalAddress].push(_id);

        // transfer tokens into contract
        IERC20(_tokenAddress).transferFrom(msg.sender, address(this), _amount);
        uint256 postBalance = IERC20(_tokenAddress).balanceOf(address(this));

        // handling if the token has burn on transfer mechanism
        require(postBalance > preBalance, "transfer may have failed");
        uint256 addedAmount = postBalance.sub(preBalance);
        lockedToken[_id].tokenAmount = addedAmount;
        //update balance in address
        walletTokenBalance[_tokenAddress][_withdrawalAddress] = walletTokenBalance[_tokenAddress][_withdrawalAddress].add(addedAmount);
    }

    /**
     * @dev set the unlock time _additionalTime in the future relative to the stored unlockTime
     */
    function extendLockDuration(uint256 _id, uint256 _additionalTime) public {
        require(_additionalTime > 0, "addtionalTime must be more than zero");
        require(msg.sender == lockedToken[_id].withdrawalAddress, "only owner can extend");

        //set new unlock time
        lockedToken[_id].unlockTime = lockedToken[_id].unlockTime + _additionalTime;
    }

    function tokenAvailableToWithdraw(uint256 _id) public view returns (uint256) {
        LockedInfo storage lockedInfo = lockedToken[_id];
        if (lockedInfo.unlockTime > block.timestamp) {
            return 0;
        }
        uint256 oneMonthSec = 30 * 24 * 60 * 60;

        // if never withdraw
        if (lockedInfo.lastWithdrawTime == 0) {
            uint256 timeDiff = uint256(block.timestamp).sub(uint256(lockedInfo.unlockTime));
            uint256 timeVar = timeDiff.mod(oneMonthSec).add(1);
            if (timeVar <= 12) {
                // only allow monthly distribution after unlocked up until 12 months
                uint256 fractionAmount = timeVar.mul(lockedInfo.tokenAmount).div(12);
                return fractionAmount.sub(lockedInfo.withdrawnAmount);
            } else {
                return lockedInfo.tokenAmount.sub(lockedInfo.withdrawnAmount);
            }
        } else {
            uint256 timeDiff = uint256(block.timestamp).sub(uint256(lockedInfo.lastWithdrawTime));
            uint256 timeVar = timeDiff.mod(oneMonthSec);
            if (timeVar <= 12) {
                uint256 fractionAmount = timeVar.mul(lockedInfo.tokenAmount).div(12);
                return fractionAmount.sub(lockedInfo.withdrawnAmount);
            } else {
                return lockedInfo.tokenAmount.sub(lockedInfo.withdrawnAmount);
            }
        }
    }

    // /**
    //  *transfer locked tokens
    // */
    // function transferLocks(uint256 _id, address _receiverAddress) public {
