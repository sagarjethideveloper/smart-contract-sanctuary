import "./libraries/SafeBurnMintableERC20.sol";
import "./interfaces/IBurnMintableERC20.sol";


contract MaltPoolPeriphery is Initializable {
  using SafeMath for uint256;
  using SafeBurnMintableERC20 for IBurnMintableERC20;

  IStabilizerNode public stabilizerNode;
  IDAO public dao;
  address public uniswapV2Factory;
  IBurnMintableERC20 public rewardToken;
  IBurnMintableERC20 public malt;
  uint256 public priceTarget = 10**18;

  function initialize(
    address _stabilizerNode,
    address _dao,
    address _uniswapV2Factory,
    address _malt,
    address _rewardToken,
    uint256 _priceTarget
  ) external initializer {
    stabilizerNode = IStabilizerNode(_stabilizerNode);
    uniswapV2Factory = _uniswapV2Factory;
    malt = IBurnMintableERC20(_malt);
    dao = IDAO(_dao);
    rewardToken = IBurnMintableERC20(_rewardToken);
    priceTarget = _priceTarget;
  }

  function maltMarketPrice() public view returns (uint256 price, uint256 decimals){
    // TODO simplify this method potentially Sat 03 Apr 2021 18:41:56 BST
    (uint256 maltReserves, uint256 rewardReserves) = UniswapV2Library.getReserves(
      uniswapV2Factory,
      address(malt),
      address(rewardToken)
    );

    if (maltReserves == 0 || rewardReserves == 0) {
      price = 0;
      decimals = 18;
      return (price, decimals);
    }

    uint256 rewardDecimals = rewardToken.decimals();
    uint256 maltDecimals = malt.decimals();

    if (rewardDecimals > maltDecimals) {
      uint256 diff = rewardDecimals - maltDecimals;
      price = rewardReserves.mul(10**rewardDecimals).div(maltReserves.mul(10**diff));
      decimals = rewardDecimals;
    } else if (rewardDecimals < maltDecimals) {
      uint256 diff = maltDecimals - rewardDecimals;
      price = (rewardReserves.mul(10**diff)).mul(10**rewardDecimals).div(maltReserves);
      decimals = maltDecimals;
    } else {
      price = rewardReserves.mul(10**rewardDecimals).div(maltReserves);
      decimals = rewardDecimals;
    }
  }

  function reserves() public view returns (uint256 maltSupply, uint256 rewardSupply) {
    (maltSupply, rewardSupply) = UniswapV2Library.getReserves(
      uniswapV2Factory,
      address(malt),
      address(rewardToken)
    );
  }

  function reserveRatio() public view returns (uint256, uint256) {
    uint256 balance = rewardToken.balanceOf(address(stabilizerNode)) - stabilizerNode.auction().claimableArbitrageRewards();
    uint256 rewardDecimals = rewardToken.decimals();

    (, uint256 rewardSupply) = UniswapV2Library.getReserves(
      uniswapV2Factory,
      address(malt),
      address(rewardToken)
    );

    uint256 totalReserves = rewardSupply.mul(2);
    uint256 rRatio = balance.mul(10**rewardDecimals).div(totalReserves);
    return (rRatio, rewardDecimals);
  }

  function calculateAuctionPricing(
    uint256 rRatio
  ) external view returns (uint256 startingPrice, uint256 endingPrice) {
    // This method gets called after the protocol does an initial auction purchase.
    // So marketPrice will be the price after the protocol has bolstered it.
    (uint256 marketPrice,) = maltMarketPrice();

    uint256 idealBottom = priceTarget - rRatio;
    uint256 midBottom = ((marketPrice + priceTarget) / 2) - rRatio;
    // 1 wei just so we never have div by zero issues
    uint256 absoluteBottom = 1;

    if (marketPrice > rRatio) {
      absoluteBottom = marketPrice - rRatio;
    }

    // If the endingPrice ends up being anywhere above absoluteBottom then there is a guarantee that the
    // protocol has some capital to play with inside _finalizeAuction where it can choose to skew towards
    // burning or improving reserves
    startingPrice = priceTarget;
    endingPrice = absoluteBottom;
    bool valid = false;

    (valid, startingPrice, endingPrice) = _attemptAuctionPrice(marketPrice, idealBottom);

    if (!valid) {
      (valid, startingPrice, endingPrice) = _attemptAuctionPrice(marketPrice, midBottom);

      if (!valid) {
        (valid, startingPrice, endingPrice) = _attemptAuctionPrice(marketPrice, absoluteBottom);

        if (!valid) {
          startingPrice = marketPrice;
          endingPrice = absoluteBottom;
        }
      }
    }
  }

  function _attemptAuctionPrice(
    uint256 marketPrice,
    uint256 bottomPrice
  ) private view returns (bool valid, uint256 startingPrice, uint256 endingPrice) {
    valid = false;
    uint256 deficit = priceTarget - marketPrice;
    // try to have 3/4 of the auction time below market price
    uint256 buffer = deficit * 3;

    if (marketPrice >= bottomPrice + buffer) {
      valid = true;
      startingPrice = priceTarget;
      endingPrice = marketPrice.sub(buffer);
    } else if (marketPrice >= bottomPrice) {
      uint256 newBuffer = marketPrice - bottomPrice;

      if (newBuffer >= priceTarget / 10) {
        valid = true;
        startingPrice = marketPrice + (newBuffer / 3);
        endingPrice = bottomPrice;
      }
    }
  }

  function _calculateTradeSize(address sellToken, address buyToken) private view returns (uint256) {
    (uint256 sellReserves, uint256 buyReserves) = UniswapV2Library.getReserves(
      uniswapV2Factory,
      sellToken,
      buyToken
    );

    uint256 invariant = sellReserves.mul(buyReserves);

    uint256 buyBase = 10**IBurnMintableERC20(buyToken).decimals();

    uint256 leftSide = Babylonian.sqrt(
      FullMath.mulDiv(
        invariant.mul(1000),
        priceTarget,
        buyBase.div(priceTarget).mul(buyBase).mul(997)
      )
    );
    uint256 rightSide = sellReserves.mul(1000).div(997);

    if (leftSide < rightSide) return 0;

    return leftSide.sub(rightSide);
  }

  function calculateMintingTradeSize(uint256 dampingFactor) external view returns (uint256) {
    uint256 tradeSize = _calculateTradeSize(address(malt), address(rewardToken));

    return tradeSize.div(dampingFactor);
  }

  function calculateBurningTradeSize() external view returns (uint256) {
    uint256 tradeSize = _calculateTradeSize(address(rewardToken), address(malt));

    return tradeSize;
  }

  function calculateFixedReward(uint256 sinceTime, uint256 annualYieldPerc) external view returns (uint256) {
    (uint256 maltReserves,) = reserves();

    uint256 elapsed = block.timestamp - sinceTime;

    // Divided by 10000 as yield percentage is a value where 10000 == 100%
    uint256 annualYield = maltReserves.mul(annualYieldPerc).div(10000);

    // divide by seconds in a year
    return annualYield.mul(elapsed).div(31536000);
  }

  function getOptimalLiquidity(address tokenA, address tokenB, uint256 liquidityB) external view returns (uint256 liquidityA) {
    (uint256 reservesA, uint256 reservesB) = UniswapV2Library.getReserves(
      uniswapV2Factory,
      tokenA,
      tokenB
    );

    liquidityA = UniswapV2Library.quote(
      liquidityB,
      reservesB,
      reservesA
    );
  }

  function realValueOfLPToken(uint256 amount) external view returns (uint256, uint256) {
    (uint256 maltReserves, uint256 rewardReserves) = UniswapV2Library.getReserves(
      uniswapV2Factory,
      address(malt),
      address(rewardToken)
    );

    if (maltReserves == 0) {
      return (0, 0);
    }

    address stakeToken = UniswapV2Library.pairFor(uniswapV2Factory, address(malt), address(rewardToken));

    uint256 totalLPSupply = ERC20(stakeToken).totalSupply();

    return (amount.mul(maltReserves).div(totalLPSupply), amount.mul(rewardReserves).div(totalLPSupply));
  }
}

