import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/token/ERC20/ERC20.sol";
import "./interface/GeltPool.sol";
import "./lib/Exponential.sol";
import "./provider/mstable/SaveWrapper.sol";
import "./provider/mstable/Masset.sol";
import "./provider/mstable/InterestBearingMasset.sol";
import "./provider/mstable/VaultedInterestBearingMasset.sol";
import "./Authorizable.sol";
import "./ErrorReporter.sol";

contract MstableGeltPool is GeltPool, ERC20, Ownable, Authorizable, Exponential, ErrorReporter {
    // keccak256("MintWithAuthorization(address minter,uint256 mintAmount,uint256 validAfter,uint256 validBefore,bytes32 nonce)")
    bytes32 public constant MINT_WITH_AUTHORIZATION_TYPEHASH = 0xad4d465dba421ebf316dfd7beb6ef41bf60496a547732945861044c760879595;
    // keccak256("RedeemWithAuthorization(address redeemer,address withdrawTo,uint256 redeemTokens,uint256 validAfter,uint256 validBefore,bytes32 nonce)")
    bytes32 public constant REDEEM_WITH_AUTHORIZATION_TYPEHASH = 0x14096fccbccc846557d4192820b867744cd17421b9f3e837e5acfb411e85f356;

    ERC20 public bAsset;
    Masset public mAsset;
    InterestBearingMasset public imAsset;
    VaultedInterestBearingMasset public vimAsset;
    SaveWrapper public saveWrapper;

    /**
     * @notice Initialises the Gelt Pool and the associated Gelt Token.
     */
    constructor(
        ERC20 bAsset_,
        VaultedInterestBearingMasset vimAsset_,
        SaveWrapper saveWrapper_,
        string memory name,
        string memory symbol
    )
        ERC20(name, symbol)
        Authorizable(name, "1")
    {
        bAsset = bAsset_;
        vimAsset = vimAsset_;
        saveWrapper = saveWrapper_;
        imAsset = InterestBearingMasset(vimAsset.stakingToken());
        mAsset = Masset(imAsset.underlying());
    }

    // =========================================================================
    // ERC20
    // =========================================================================

    function decimals() public pure override returns (uint8) {
        return 18;
    }

    // =========================================================================
    // Gelt
    // =========================================================================

    function mintWithAuthorization(
        address minter,
	    uint256 mintAmount,
        uint256 validAfter,
        uint256 validBefore,
        bytes32 nonce,
        uint8 v,
        bytes32 r,
        bytes32 s
    )
        external
        override
        onlyOwner
        returns (uint256)
    {
        // Verify authorization.
        _requireValidAuthorization(minter, validAfter, validBefore, nonce);

        // Verify signature.
        bytes memory data = abi.encode(
            MINT_WITH_AUTHORIZATION_TYPEHASH,
            minter,
            mintAmount,
            validAfter,
            validBefore,
            nonce
        );
        _requireValidSignature(minter, data, v, r, s);
        _markAuthorizationAsUsed(minter, nonce);

        // Transfer the underlying to GPC.
        bAsset.transferFrom(minter, address(this), mintAmount);

        // User gets mintTokens gUSDC such the present USDC value of mintTokens
        // reflects the relative ownership of the pool.
        Error err;
        uint256 mintTokens;

        (err, mintTokens) = _mintTokens(mintAmount);
        require(err == Error.NO_ERROR, "MINT_TOKENS_CALCULATION_FAILED");

        // Update the total supply and the balance of the minter.
        _mint(minter, mintTokens);

        return mintTokens;
    }

    function redeemWithAuthorization(
        address redeemer,
        address withdrawTo,
        uint256 redeemTokens,
        uint256 validAfter,
        uint256 validBefore,
        bytes32 nonce,
        uint8 v,
        bytes32 r,
        bytes32 s
	)
        external
        override
        onlyOwner
    {
        // Verify authorization.
        _requireValidAuthorization(redeemer, validAfter, validBefore, nonce);

        // Verify signature.
        bytes memory data = abi.encode(
            REDEEM_WITH_AUTHORIZATION_TYPEHASH,
            redeemer,
            withdrawTo,
            redeemTokens,
            validAfter,
            validBefore,
            nonce
        );
        _requireValidSignature(redeemer, data, v, r, s);
        _markAuthorizationAsUsed(redeemer, nonce);

        Error err;
        uint256 redeemAmount;

        (err, redeemAmount) = _redeemAmount(redeemTokens);
        require(err == Error.NO_ERROR, "REDEEM_AMOUNT_CALCULATION_FAILED");

	    bAsset.transfer(withdrawTo, redeemAmount);

        // Update the total supply and the balance of the redeemer.
        _burn(redeemer, redeemTokens);
    }

    function executeStrategy(int256 amount) external override onlyOwner {
        // TODO: Would this consume less gas if we'd add a two arguments, one
        //       for mint, one for redeeem, instead of casting the int to uint?
        if (amount == 0) return;

        if (amount > 0) {
            uint256 mintAmount = uint256(amount);

            bAsset.approve(address(saveWrapper), mintAmount);

            saveWrapper.saveViaMint(
                address(mAsset), // address _mAsset
                address(imAsset), // address _save
                address(vimAsset), // address _vault
                address(bAsset), // address _bAsset
                mintAmount, // uint256 _amount
                1, // uint256 _minOut
                true // bool _stake
            );
        } else {
            uint256 withdrawAmount = uint256(-amount) * 1e12; // cobol.

            // Step 1: Unstake v-imAsset.
            vimAsset.exit();

            // Step 2: redeem imAsset to underlying mAsset.
            imAsset.redeemUnderlying(withdrawAmount);

            // Step 3: redeem mAsset to backing asset (bAsset).
            mAsset.redeem(
                address(bAsset), // address _output
                withdrawAmount, // uint256 _mAssetQuantity
                1, // uint256 _minOutputQuantity
                address(this) // address _recipient
            );
        }
    }

    function swap(address withdrawTo) external override {
        uint256 redeemTokens = balanceOf(msg.sender);

        Error err;
        uint256 redeemAmount;

        (err, redeemAmount) = _redeemAmount(redeemTokens);
        require(err == Error.NO_ERROR, "REDEEM_AMOUNT_CALCULATION_FAILED");

	    bAsset.transfer(withdrawTo, redeemAmount);

        // Update the total supply and the balance of the redeemer.
        _burn(msg.sender, redeemTokens);
    }

    /**
     * @notice Calculates the exchange rate from the underlying to the GToken.
     * @return (error code, calculated exchange rate scaled by 1e18)
     */
    function _exchangeRate() internal view returns (MathError, uint256) {
        // NOTE: This is a placeholder logic, we're issuing the same number of GTokens as imAssets.
        uint256 exchangeRate = imAsset.exchangeRate();

        return (MathError.NO_ERROR, exchangeRate);
    }

    function _mintTokens(uint256 mintAmount) internal returns (Error, uint256) {
        MathError mathErr;
        uint256 exchangeRateMantissa;

        (mathErr, exchangeRateMantissa) = _exchangeRate();
        if (mathErr != MathError.NO_ERROR) {
            return (failOpaque(Error.MATH_ERROR, FailureInfo.MINT_EXCHANGE_RATE_READ_FAILED, uint256(mathErr)), 0);
        }

        Exp memory fraction;

        (mathErr, fraction) = divScalarByExp(mintAmount, Exp({mantissa: exchangeRateMantissa}));
        require(mathErr == MathError.NO_ERROR, "MINT_EXCHANGE_CALCULATION_FAILED");

        // Truncate the exp to 18 decimals.
        uint256 mintTokens = fraction.mantissa / 1e6;

        return (Error.NO_ERROR, mintTokens);
    }

    function _redeemAmount(uint256 redeemTokens) internal returns (Error, uint256) {
        MathError mathErr;
        uint256 exchangeRateMantissa;

        (mathErr, exchangeRateMantissa) = _exchangeRate();
        if (mathErr != MathError.NO_ERROR) {
            return (failOpaque(Error.MATH_ERROR, FailureInfo.REDEEM_EXCHANGE_RATE_READ_FAILED, uint256(mathErr)), 0);
        }

        uint256 redeemAmount;

        (mathErr, redeemAmount) = mulScalarTruncate(Exp({mantissa: exchangeRateMantissa}), redeemTokens);
        if (mathErr != MathError.NO_ERROR) {
            return (failOpaque(Error.MATH_ERROR, FailureInfo.REDEEM_EXCHANGE_TOKENS_CALCULATION_FAILED, uint256(mathErr)), 0);
        }

        redeemAmount = redeemAmount / 1e12;

        return (Error.NO_ERROR, redeemAmount);
    }
}

