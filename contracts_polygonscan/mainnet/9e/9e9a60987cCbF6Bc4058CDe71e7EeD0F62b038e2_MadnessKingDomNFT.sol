pragma solidity ^0.8.4;

import "@chainlink/contracts/src/v0.8/VRFConsumerBase.sol";
import "./ERC721Presets.sol";

contract TheEndlessFactoryNFT is VRFConsumerBase, ERC721Presets {
    using SafeMath for uint256;
    using Strings for string;

    bytes32 internal keyHash;
    uint256 internal fee;
    uint256 public lastRandomResult;
    address public VRFCoordinator;
    address public LinkToken;

    struct Character {
        uint256 strength;
        uint256 agility;
        uint256 endurance;
        uint256 intelligence;
        uint256 magic;
        uint256 wisdom;
        uint256 experience;
        uint256 generation;
        string name;
    }

    Character[] public characters;

    mapping(bytes32 => string) requestToCharacterName;
    mapping(bytes32 => uint256) requestToCharacterGeneration;
    mapping(bytes32 => address) requestToSender;
    mapping(bytes32 => uint256) requestToTokenId;

    // operator role
    bytes32 public constant OPERATOR_ROLE = keccak256("OPERATOR");
    // minter role
    bytes32 public constant MINTER_ROLE = keccak256("MINTER");

    constructor(address _VRFCoordinator, address _LinkToken, bytes32 _keyhash)
        VRFConsumerBase(_VRFCoordinator, _LinkToken)
        ERC721("TheEndLess NFT", "TheEndless")
    {   
        VRFCoordinator = _VRFCoordinator;
        LinkToken = _LinkToken;
        keyHash = _keyhash;
        fee = 0.0001 * 10**18; // 0.0001 LINK
        _setupRole(DEFAULT_ADMIN_ROLE, msg.sender);
        _setupRole(MINTER_ROLE, msg.sender);
        _setupRole(OPERATOR_ROLE, msg.sender);

    }

    function requestNewRandomEndlessCharacter(
        string memory name,
        uint256 _generation
    ) external onlyRole(MINTER_ROLE) returns (bytes32) {
        require(LINK.balanceOf(address(this)) >= fee);
        bytes32 requestId = requestRandomness(keyHash, fee);
        requestToCharacterName[requestId] = name;
        requestToSender[requestId] = msg.sender;
        requestToCharacterGeneration[requestId] = _generation;
        return requestId;
    }

    function getTokenURI(uint256 tokenId) external view returns (string memory) {
        return tokenURI(tokenId);
    }

    function fulfillRandomness(bytes32 requestId, uint256 randomNumber)
        internal
        override
    {
        lastRandomResult = randomNumber;

        uint256 newId = characters.length;
        uint256 strength = (randomNumber % 100).add(1);
        uint256 agility = ((randomNumber % 10000) / 100 ).add(1);
        uint256 endurance = ((randomNumber % 1000000) / 10000 ).add(1);
        uint256 intelligence = ((randomNumber % 100000000) / 1000000 ).add(1);
        uint256 magic = ((randomNumber % 10000000000) / 100000000 ).add(1);
        uint256 wisdom = ((randomNumber % 1000000000000) / 10000000000).add(1);
        uint256 experience = 0;

        
        characters.push(
            Character(
                strength,
                agility,
                endurance,
                intelligence,
                magic,
                wisdom,
                experience,
                requestToCharacterGeneration[requestId],
                requestToCharacterName[requestId]
            )
        );
        _safeMint(requestToSender[requestId], newId);
    }

    function getNumberOfCharacters() external view returns (uint256) {
        return characters.length; 
    }


    function setExperience(uint256 tokenId, uint256 _newExperience) onlyRole(OPERATOR_ROLE) external {
        characters[tokenId].experience = _newExperience;
    }


    function withdrawLink() external onlyRole(DEFAULT_ADMIN_ROLE) {
        require(LINK.transfer(msg.sender, LINK.balanceOf(address(this))));
    }

    function setTokenURI(uint256 tokenId, string memory _tokenURI) external onlyRole(OPERATOR_ROLE) {
        require(_exists(tokenId));
        _setTokenURI(tokenId, _tokenURI);
    }

    function getCharacterOverView(uint256 tokenId)
        external
        view
        returns (
            string memory,
            uint256,
            uint256
        )
    {
        return (
            characters[tokenId].name,
            characters[tokenId].experience,
            characters[tokenId].generation
        );
    }

    function getCharacterStats(uint256 tokenId)
        external
        view
        returns (
            uint256,
            uint256,
            uint256,
            uint256,
            uint256,
            uint256
        )
    {
        return (
            characters[tokenId].strength,
            characters[tokenId].agility,
            characters[tokenId].endurance,
            characters[tokenId].intelligence,
            characters[tokenId].wisdom,
            characters[tokenId].magic
        );
    }

}

