import "@openzeppelin/contracts/utils/Context.sol";
import "@openzeppelin/contracts/utils/math/SafeMath.sol";
import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@uniswap/v2-core/contracts/interfaces/IUniswapV2Pair.sol";

contract SalaryManager is Ownable {
    using SafeMath for uint256;

    uint256 constant DECIMALS = 18;
    uint256 constant BASE = 10;

    address public lp;
    address public token;

    mapping(address => uint256) public rate;
    mapping(address => uint256) public workHours;
    mapping(address => uint256) public totalWorked;

    // event TODO

    constructor(address _token, address _lp) {
        token = _token;
        lp = _lp;
    }

    /**
     * @dev Changes the lp of the :token: pair with a new `_lp`.
     */
    function changeLp(address _lp) public onlyOwner {
        lp = _lp;
    }

    /**
     * @dev Changes the :token: with a new `_token`.
     */
    function changeToken(address _token) public onlyOwner {
        token = _token;
    }

    /**
     * @dev Hires an `_employee`.
     */
    function hire(address _employee, uint256 _rate) public onlyOwner {
        require(
            _rate >= 1 ether,
            "can not hire someone for less than 1 dollar an hour!"
        );
        rate[_employee] = _rate;
    }

    /**
     * @dev Fires an `_employee`.
     */
    function fire(address _employee) public onlyOwner {
        require(
            rate[_employee] >= 1 ether,
            "you are trying to fire someone that is not an employee!"
        );
        rate[_employee] = 0;
    }

    /**
     * @dev Logs the amount of `_hours` worked by an `_employee`.
     */
    function logHours(address _employee, uint256 _hours) external onlyOwner {
        require(
            rate[_employee] > 1 ether,
            "logging hours for someone thats not employeed!"
        );
        require(_hours >= 1 ether, "you can not log less than 1 hour of work!");
        workHours[_employee] = workHours[_employee] + _hours;
    }

    /**
     * @dev Returns the price of `token` using the `lp`.
     */
    function getPriceFromLp() public view returns (uint256) {
        IUniswapV2Pair pair = IUniswapV2Pair(lp);
        address token0 = pair.token0();
        address token1 = pair.token1();
        (uint256 res0, uint256 res1, ) = pair.getReserves();
        uint256 token0Decimals = IERC20(token0).decimals();
        uint256 token1Decimals = IERC20(token1).decimals();

        res0 = res0.mul(BASE**DECIMALS).div(BASE**token0Decimals);
        res1 = res1.mul(BASE**DECIMALS).div(BASE**token1Decimals);

        if (token == token0) {
            return res1.mul(BASE**DECIMALS).div(res0);
        } else if (token == token1) {
            return res0.mul(BASE**DECIMALS).div(res1);
        } else {
            revert("could not find token in lp trying to compute price!");
        }
    }

    /**
     * @dev Emergency whitedraws all :token:s <USE IN EMERGENCIES>.
     */
    function emergencyWithdraw() public onlyOwner {
        IERC20(token).transfer(msg.sender, balance());
    }

    /**
     * @dev Employees can claim their earnings in :token: value.
     */
    function claim() public {
        require(
            rate[msg.sender] >= 1 ether,
            "you can not claim if you are not an employee!"
        );
        require(
            workHours[msg.sender] >= 1 ether,
            "you have not worked sufficient hours to be paid!"
        );

        uint256 usd = rate[msg.sender] * (workHours[msg.sender] / 1 ether);
        uint256 price = getPriceFromLp();

        uint256 wage = (usd / price) * (BASE**DECIMALS);

        IERC20(token).transfer(msg.sender, wage);

        totalWorked[msg.sender] =
            totalWorked[msg.sender] +
            workHours[msg.sender];
        workHours[msg.sender] = 0;
    }

    /**
     * @dev Returns the total amount of :token: in the contract.
    */
    function balance() public view returns (uint256) {
        return IERC20(token).balanceOf(address(this));
    }

    /**
     * @dev Changes the `_rate` of a hire `_employee`.
    */
    function changeRate(address _employee, uint256 _rate) public onlyOwner {
        require(
            rate[_employee] >= 1 ether,
            "you need to hire the employee before changing the rate!"
        );
        require(
            _rate >= 1 ether,
            "can not hire someone for less than 1 dollar an hour!"
        );
        rate[_employee] = _rate;
    }
}

