// interface IMasterChef {
//     function pendingShares(uint256 _pid, address _user) external view returns (uint);
//     mapping (uint256 => mapping (address => UserInfo)) public userInfo;
// }

contract SharesProxy is Ownable {
    using SafeERC20 for IERC20;

    IERC20 public token = IERC20(0x2791Bca1f2de4661ED88A30C99A7a9449Aa84174);
    MasterChef public masterChef = MasterChef(0x36caee4b022f5a0f5CE31fDb7FDF45498E8b2678);

    mapping (uint256 => mapping (address => uint256)) public claimed;

    constructor() { }

    function claimShares(uint256 _pid) external {
        uint pending = pendingShares(_pid, msg.sender);

        uint256 balance = token.balanceOf(address(this));
        if (pending > balance) {
            pending = balance;
        }

        claimed[_pid][msg.sender] += pending;

        token.safeTransfer(msg.sender, pending);
    }

    function pendingShares(uint256 _pid, address _user) public view returns (uint) {
        uint pending = 24000 * masterChef.pendingShares(_pid, _user) / 1e12;
        
        if (pending > claimed[_pid][_user]) {
            return pending - claimed[_pid][_user];
        } else {
            return 0;
        }
    }
    
    function claimedShares(uint256 _pid, address _user) public view returns (uint256) {
        return claimed[_pid][_user];
    }



    function withdraw() public onlyOwner {
        token.safeTransfer(msg.sender, token.balanceOf(address(this)));
    }
}

