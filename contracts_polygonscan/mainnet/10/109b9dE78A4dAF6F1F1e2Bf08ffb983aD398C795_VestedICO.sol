pragma solidity ^0.8.6;

import "@openzeppelin/contracts/utils/math/SafeMath.sol";
import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/token/ERC20/utils/SafeERC20.sol";
import "@openzeppelin/contracts/security/ReentrancyGuard.sol";

import "@uniswap/v2-periphery/contracts/interfaces/IUniswapV2Router02.sol";
import "@uniswap/v2-core/contracts/interfaces/IUniswapV2Factory.sol";
import "@uniswap/v2-core/contracts/interfaces/IUniswapV2Pair.sol";

contract VestedICO is Ownable, ReentrancyGuard {
    using SafeERC20 for IERC20;
    using SafeMath for uint256;

    uint256 private DENOMATION = 10**18;
    uint256 private BASE = 10000;
    // ERC20 contract.
    IERC20 public token = IERC20(0x9C8070F49732102Be25d40002d2133854c071Bc0); // BET token

    // Vesting grant for a specific holder.
    struct Grant {
        uint256 value;
        uint256 start;
        uint256 cliff;
        uint256 end;
        uint256 installmentLength;
        uint256 transferred;
    }

    // Holder to grant information mapping.
    mapping(address => Grant) public grants;

    // Total tokens available for vesting.
    uint256 public totalVesting;

    event NewGrant(address indexed _from, address indexed _to, uint256 _value);
    event TokensUnlocked(address indexed _to, uint256 _value);

    /* ICO Settings */
    uint256 public minimum = 100000; //minimum commit ($0.1 USDC)
    uint256 public priceUSDC = 650000; // $0,65

    address public fund = address(0xEb6f71fdc0f143345B6a2C2256f79D054100F1Ab); 
    IERC20 public WETH = IERC20(0x7ceB23fD6bC0adD59E62ac25578270cFf1b9f619); //WETH on polygon
    IERC20 public WBTC = IERC20(0x1BFD67037B42Cf73acF2047067bd4F2C47D9BfD6); //WETH on polygon
    IERC20 public USDC = IERC20(0x2791Bca1f2de4661ED88A30C99A7a9449Aa84174); //USDC on polygon
    IERC20 public WMATIC = IERC20(0x0d500B1d8E8eF31E21C99d1Db9A6444d3ADf1270); //USDC on polygon

    IUniswapV2Router02 public router =
        IUniswapV2Router02(0x1b02dA8Cb0d097eB8D57A175b88c7D8b47997506); //Sushiswap router polygon

    uint256 public entries = 0;
    mapping(uint256 => address) participants;
    mapping(address => uint256) commitments;


	/* Referal System */
    struct Referal {
        address referrer;
        uint256 share; // % in BASE points
    }
    mapping(bytes32 => uint256) referal_codes;
    mapping(uint256 => Referal) referals;
    uint256 referal_code_count = 0;

    uint256 public total = 0;

    bool public started = false;
    bool public vestingStarted = false;

    event SaleStart();
    event DepositSale(address indexed sender, address token, uint256 amount);
    event VestingStart(uint256 cliff, uint256 length, uint256 installment);
	event AddReferal(bytes32 ref_code_hash, address referrer_address, uint256 share);
	event EditReferal(bytes32 ref_code_hash, address referrer_address, uint256 share);

    constructor() public {}

    /* Add referal code with address and code */
    function addReferal(
        string memory referal_code,
        address referrer_address,
        uint256 share
    ) external onlyOwner {
        bytes32 ref_code_hash = keccak256(abi.encodePacked(referal_code));
		require(referal_codes[ref_code_hash] == 0,"referal code already used");
        referal_code_count++;
        referal_codes[ref_code_hash] = referal_code_count;
        referals[referal_code_count] = Referal(referrer_address, share);


        emit AddReferal(ref_code_hash, referrer_address, share);
    }

    /* Change receipent of referal code */
    function editReferal(
        string memory referal_code,
        address referrer_address,
        uint256 share
    ) external onlyOwner {
        bytes32 ref_code_hash = keccak256(abi.encodePacked(referal_code));
        uint256 id = referal_codes[ref_code_hash];
		require(referal_codes[ref_code_hash] != 0,"referal code not used");
        Referal storage ref = referals[id];
        ref.referrer = referrer_address;
        ref.share = share;

		emit EditReferal(ref_code_hash, referrer_address, share);
    }

    function recoverToken(IERC20 stoken) public onlyOwner {
        stoken.transfer(_msgSender(), stoken.balanceOf(address(this)));
    }

    /* Get Token Balance of token (allocated) */
    function allocated() public view returns (uint256) {
        return token.balanceOf(address(this));
    }

    /* Get Total Comitted amount in USDC */
    function getTotal() public view returns (uint256) {
        return total;
    }
    /* Get Total Tokens already bought */
    function getTotalReservedTokens() public view returns (uint256) {
        return (getTotal() * DENOMATION) / priceUSDC;
    }

    /* Get Cap in USDC */
    function getCap() public view returns (uint256) {
        require(allocated() > 0, "nothing allocated");
        return (allocated() * priceUSDC) / DENOMATION;
    }

    /* Get reserved Tokens for User */
    function getTokens(address user) public view returns (uint256) {
        return (commitments[user] * DENOMATION) / priceUSDC;
    }

    /* Get committed amount in USDC */
    function getCommitment(address user) public view returns (uint256) {
        return commitments[user];
    }

    /* Check if address is already mapped */
    function hasAlreadyEntered(address user) internal view returns (bool) {
        for (uint256 i = 0; i < entries; i++) {
            if ((participants[i] != address(0)) && (participants[i] == user)) {
                return true;
            }
        }
        return false;
    }

    /* Start the vesting period
		Start is always the block.timestamp
		Cliff, duration until first possible claim
		End is duration in seconds uint256 (e.g. 1800 for 1 hour)
		installment, duration between each claim
	 */
    function startVesting(
        uint256 cliff,
        uint256 length,
        uint256 installment
    ) external onlyOwner {
        require(!vestingStarted, "vesting already started");
        vestingStarted = true;
        for (uint256 i = 0; i < entries; i++) {
            address user = participants[i];
            uint256 tokens = getTokens(user);
            grant(
                user,
                tokens,
                block.timestamp,
                block.timestamp.add(cliff),
                block.timestamp.add(length),
                installment
            );
        }

        emit VestingStart(cliff, length, installment);
    }

    function startSale() external onlyOwner {
        require(!started, "started already");
        started = true;

        emit SaleStart();
    }

    /* Deposit into the sale, sentToken and amount, needs approval
		
	 */
    function deposit(
        IERC20 sentToken,
        uint256 amount,
        string memory referal_code
    ) external nonReentrant {
        /* Check if sale started */
        require(started, "not started yet");
        /* Check if sentToken is one of our accepted tokens */
        require(
            sentToken == WETH ||
                sentToken == WBTC ||
                sentToken == USDC ||
                sentToken == WMATIC,
            "invalid token"
        );
        /* Declare amountOut */
        uint256 amountOut = 0;
        /* Declare Path */
        address[] memory path = new address[](2);
        /* If token is USDC, skip because we dont need to swap */
        if (sentToken != USDC) {
            /* Get Factory */
            IUniswapV2Factory factory = IUniswapV2Factory(router.factory());
            /* Get Pair for sentToken and USDC */
            IUniswapV2Pair pair = IUniswapV2Pair(
                factory.getPair(address(sentToken), address(USDC))
            );
            /* Get reserves in the pair */
            (uint112 _reserve0, uint112 _reserve1, ) = pair.getReserves();
            /* quote price in pair (sentToken vs. USDC) */
            amountOut = router.quote(amount, _reserve0, _reserve1);
            path[0] = pair.token0(); // sentToken
            path[1] = pair.token1(); // USDC

            /* Swap pair if sentToken is token1 and USDC is token0 */
            if (pair.token1() == address(sentToken)) {
                amountOut = router.quote(amount, _reserve1, _reserve0);
                path[0] = pair.token1(); // sentToken
                path[1] = pair.token0(); // USDC
            }
        }
        /* If sentToken is USDC, just take sent amount */
        if (sentToken == USDC) amountOut = amount; // default amount to sent amount if USDC
        /* Check if amount is above/or minimum value USDC */
        require(amountOut >= minimum, "minimum amount not reached");

        require(total + amountOut <= getCap(), "overcommitted");
        /* Transfer (sentToken) tokens (amount) from User to Contract */
        sentToken.transferFrom(_msgSender(), address(this), amount);

        /* Add address to our list, needed for startVesting() */
        if (!hasAlreadyEntered(_msgSender())) {
            participants[entries++] = _msgSender();
        }
        /* Add total amount of committed USDC */
        commitments[_msgSender()] += amountOut;
        /* Add to Total amount USDC */
        total += amountOut;
        /* If token is USDC, skip because we dont need to swap */
        if (sentToken != USDC) {
            sentToken.approve(address(router), type(uint256).max);

            router.swapExactTokensForTokens(
                amount,
                0, //we market sell, so 0
                path,
                address(this),
                block.timestamp + 100
            );
        }

        /* Transfer Coin to Fund & referrer */

		/* Get Ref Hash from Code */
        bytes32 ref_code_hash = keccak256(abi.encodePacked(referal_code));
		/* Get Id of referal code */
        uint256 ref_id = referal_codes[ref_code_hash];
        Referal storage ref = referals[ref_id];

		/* get total amount of usdc to send */
        uint256 to_split = USDC.balanceOf(address(this));

        if (ref_id != 0) {
			/* Remove share from amount */
            uint256 fund_share = (to_split * (BASE - ref.share)) / BASE;
            uint256 referrer_share = to_split - fund_share;

            USDC.transfer(fund, fund_share);
            USDC.transfer(ref.referrer, referrer_share);
        } else {
            USDC.transfer(fund, to_split);
		}

        emit DepositSale(_msgSender(), address(sentToken), amount);
    }

    function grant(
        address _to,
        uint256 _value,
        uint256 _start,
        uint256 _cliff,
        uint256 _end,
        uint256 _installmentLength
    ) internal {
        require(_to != address(0), "invalid to address (0)");
        require(_to != address(this), "invalid to address (this)"); // Don't allow holder to be this contract.
        require(_value > 0, "value equals 0");

        // Require that every holder can be granted tokens only once.
        require(grants[_to].value == 0, "already granted");

        // Require for time ranges to be consistent and valid.
        require(_start <= _cliff && _cliff <= _end, "invalid timeframes");

        // Require installment length to be valid and no longer than (end - start).
        require(
            _installmentLength > 0 && _installmentLength <= _end.sub(_start),
            "installment invalid"
        );

        // Grant must not exceed the total amount of tokens currently available for vesting.
        require(
            totalVesting.add(_value) <= token.balanceOf(address(this)),
            "total vesting exceeds balance"
        );

        // Assign a new grant.
        grants[_to] = Grant({
            value: _value,
            start: _start,
            cliff: _cliff,
            end: _end,
            installmentLength: _installmentLength,
            transferred: 0
        });

        totalVesting = totalVesting.add(_value);

        emit NewGrant(msg.sender, _to, _value);
    }

    function calculateVestedTokens(Grant memory _grant, uint256 _time)
        private
        pure
        returns (uint256)
    {
        // If we're before the cliff, then nothing is vested.
        if (_time < _grant.cliff) {
            return 0;
        }

        // If we're after the end of the vesting period - everything is vested;
        if (_time >= _grant.end) {
            return _grant.value;
        }

        // Calculate amount of installments past until now.
        // NOTE: result gets floored because of integer division.
        uint256 installmentsPast = _time.sub(_grant.start).div(
            _grant.installmentLength
        );

        // Calculate amount of time in entire vesting period.
        uint256 vestingPeriod = _grant.end.sub(_grant.start);

        // Calculate and return installments that have passed according to vesting time that have passed.
        return
            _grant
                .value
                .mul(installmentsPast.mul(_grant.installmentLength))
                .div(vestingPeriod);
    }

    function vestedTokens(address _holder, uint256 _time)
        external
        view
        returns (uint256)
    {
        Grant memory holderGrant = grants[_holder];

        if (holderGrant.value == 0) {
            return 0;
        }

        return calculateVestedTokens(holderGrant, _time);
    }

    /* get total vested tokens for _holder (also includes already claimed) */
    function getTotalVestedTokens(address _holder)
        public
        view
        returns (uint256)
    {
        Grant storage holderGrant = grants[_holder];
        return holderGrant.value;
    }

    /* Returns if a address has tokens vested */
    function hasVestedTokens(address _holder) public view returns (bool) {
        Grant storage holderGrant = grants[_holder];
        if (holderGrant.value > 0) return true;
        return false;
    }

    /* Returns amount the user has already claimed */
    function claimedVestedTokenAmount(address _holder)
        public
        view
        returns (uint256)
    {
        Grant storage holderGrant = grants[_holder];
        return holderGrant.transferred;
    }

    function unlockVestedTokens(address _holder) external nonReentrant {
        Grant storage holderGrant = grants[_holder];

        require(holderGrant.value.sub(holderGrant.transferred) > 0);

        uint256 vested = calculateVestedTokens(holderGrant, block.timestamp);
        if (vested == 0) {
            return;
        }

        uint256 transferable = vested.sub(holderGrant.transferred);
        if (transferable == 0) {
            return;
        }

        holderGrant.transferred = holderGrant.transferred.add(transferable);
        totalVesting = totalVesting.sub(transferable);
        token.transfer(_holder, transferable);

        emit TokensUnlocked(_holder, transferable);
    }
}

