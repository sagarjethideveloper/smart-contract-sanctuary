import "@openzeppelin/contracts/token/ERC20/IERC20.sol";

contract Lock {
    uint public constant locktime = 180 days;
    address public locker = 0xedEA1d58Ad20E30Ff03a660A773757E1c8209D13;
    uint public lockDate;
    bool public locked;
    IERC20 public token = IERC20(0x4583955E607577510A828195954868B8C98D90d0);
    uint public lockedAmount;
    bool finished;

    function deposit () public {
        require(!locked, "Already locked");
        require(msg.sender == locker, "Not initial liquidity provider");
        lockedAmount = token.balanceOf(locker);
        token.transferFrom(locker, address(this), lockedAmount);
        lockDate = block.timestamp;

        locked = true;
    }

    function withdraw () public {
        require(block.timestamp > lockDate + locktime);

        token.transfer(locker, lockedAmount);
        finished = true;
        lockedAmount = 0;
    }
}

