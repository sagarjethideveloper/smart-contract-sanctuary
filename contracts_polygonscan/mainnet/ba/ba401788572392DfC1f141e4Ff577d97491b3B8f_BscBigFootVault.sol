     */
    function calculateHarvestBigRewards() external view returns (uint256) {
        uint256 amount = BscMasterChef(masterchef).pendingBigFoot(0, address(this));
        amount = amount.add(available());
        uint256 currentCallFee = amount.mul(callFee).div(10000);

        return currentCallFee;
    }

    /**
     * @notice Calculates the total pending rewards that can be restaked
     * @return Returns total pending BIG rewards
     */
    function calculateTotalPendingBigFootRewards() external view returns (uint256) {
        uint256 amount = BscMasterChef(masterchef).pendingBigFoot(0, address(this));
        amount = amount.add(available());

        return amount;
    }

