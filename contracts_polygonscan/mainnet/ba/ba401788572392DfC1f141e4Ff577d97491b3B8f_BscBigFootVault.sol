        //
        // We do some fancy math here. Basically, any point in time, the amount of BIGFOOTs
        // entitled to a user but is pending to be distributed is:
        //
        //   pending reward = (user.amount * pool.accBigFootPerShare) - user.rewardDebt
        //
        // Whenever a user deposits or withdraws LP tokens to a pool. Here's what happens:
        //   1. The pool's `accBigFootPerShare` (and `lastRewardBlock`) gets updated.
        //   2. User receives the pending reward sent to his/her address.
        //   3. User's `amount` gets updated.
        //   4. User's `rewardDebt` gets updated.
    }

    // Info of each pool.
    struct PoolInfo {
        IERC20 lpToken; // Address of LP or token contract.
        uint256 allocPoint; // How many allocation points assigned to this pool. BIGFOOTs to distribute per block.
        uint256 lastRewardBlock; // Last block number that BIGFOOTs distribution occurs.
        uint256 accBigFootPerShare; // Accumulated BIGFOOTs per share, times 1e12. See below.
    }

    // The BIGFOOT TOKEN
    BscBigFootToken public bscBigFootToken;
    // Dev address.
    address public devaddr;
    // Block number when bonus BIGFOOT period ends.
    uint256 public bonusEndBlock;
    // Block number when mining period ends.
    uint256 public miningEndBlock;
    // BIGFOOT tokens created per block.
    uint256 public bigFootPerBlock;
    // Bonus multiplier for early bigFoot makers.
    uint256 public constant BONUS_MULTIPLIER = 3;
    // Info of each pool.
    PoolInfo[] public poolInfo;
    // Info of each user that stakes LP tokens.
    mapping(uint256 => mapping(address => UserInfo)) public userInfo;
    // Total allocation points. Must be the sum of all allocation points in all pools.
    uint256 public totalAllocPoint = 0;
    // The block number when BIGFOOT mining starts.
    uint256 public startBlock;
    // Panic Timer
    uint256 panic;

    event Deposit(address indexed user, uint256 indexed pid, uint256 amount);
    event Withdraw(address indexed user, uint256 indexed pid, uint256 amount);
    event EmergencyWithdraw(
        address indexed user,
        uint256 indexed pid,
        uint256 amount
    );

    /*
     *  10512000 blocks in a year
     *  bonus ends at start + 3504000
     *  mining ends at start + 10512000
     */

    constructor(
        address bigFootTokenAddress_,
        address devaddr_,
        uint256 bigFootPerBlock_,
        uint256 startBlock_,
        uint256 bonusEndBlock_,
        uint256 miningEndBlock_
    ) {
        bscBigFootToken = BscBigFootToken(bigFootTokenAddress_); // Token BIG
        devaddr = devaddr_; // Developer Address
        bigFootPerBlock = bigFootPerBlock_; // Tokens per block
        startBlock = startBlock_; // Start block
        bonusEndBlock = bonusEndBlock_; // Bonus end block
        miningEndBlock = miningEndBlock_; // Finish block
    }

    function changeBigFootPerBlock(uint256 _bigFootPerBlock)
        external
        onlyOwner
    {
        bigFootPerBlock = _bigFootPerBlock;
    }

    function poolLength() external view returns (uint256) {
        return poolInfo.length;
    }

    // Add a new lp to the pool. Can only be called by the owner.
    // IMPORTANT: DO NOT add the same LP token more than once. Rewards will be messed up if you do.
    function add(
        uint256 _allocPoint,
        IERC20 _lpToken,
        bool _withUpdate
    ) public onlyOwner {
        // Verify that LP not exists in an existant pool
        for (uint256 pid = 0; pid < poolInfo.length; ++pid) {
            if (poolInfo[pid].lpToken == _lpToken) {
                revert(string(abi.encodePacked("This LP exists in pid ", pid)));
            }
        }

        if (_withUpdate) {
            massUpdatePools();
        }
        uint256 lastRewardBlock = block.number > startBlock
            ? block.number
            : startBlock;
        totalAllocPoint = totalAllocPoint.add(_allocPoint);
        poolInfo.push(
            PoolInfo({
                lpToken: _lpToken,
                allocPoint: _allocPoint,
                lastRewardBlock: lastRewardBlock,
                accBigFootPerShare: 0
            })
        );

    }

    // Update the given pool's BIGFOOT allocation point. Can only be called by the owner.
    function set(
        uint256 _pid,
        uint256 _allocPoint,
        bool _withUpdate
    ) public onlyOwner {
        if (_withUpdate) {
            massUpdatePools();
        }
        totalAllocPoint = totalAllocPoint.sub(poolInfo[_pid].allocPoint).add(
            _allocPoint
        );
        poolInfo[_pid].allocPoint = _allocPoint;
    }

    // Return reward multiplier over the given _from to _to block.
    function getMultiplier(uint256 _from, uint256 _to)
        public
        view
        returns (uint256)
    {
        if (_to <= bonusEndBlock) {
            return _to.sub(_from).mul(BONUS_MULTIPLIER);
        }
        if (_to <= miningEndBlock) {
            if (_from < bonusEndBlock)
                return
                    bonusEndBlock.sub(_from).mul(BONUS_MULTIPLIER).add(
                        _to.sub(bonusEndBlock)
                    );
            return _to.sub(_from);
        }
        if (_from < bonusEndBlock)
            return
                bonusEndBlock.sub(_from).mul(BONUS_MULTIPLIER).add(
                    miningEndBlock.sub(bonusEndBlock)
                );
        if (_from < miningEndBlock) return miningEndBlock.sub(_from);
        return 0;
    }

    // View function to see pending BIGFOOTs on frontend.
    function pendingBigFoot(uint256 _pid, address _user)
        external
        view
        returns (uint256)
    {
        PoolInfo storage pool = poolInfo[_pid];
        UserInfo storage user = userInfo[_pid][_user];
        uint256 accBigFootPerShare = pool.accBigFootPerShare;
        uint256 lpSupply = pool.lpToken.balanceOf(address(this));
        if (block.number > pool.lastRewardBlock && lpSupply != 0) {
            uint256 multiplier = getMultiplier(
                pool.lastRewardBlock,
                block.number
            );
            uint256 bigFootReward = multiplier
            .mul(bigFootPerBlock)
            .mul(pool.allocPoint)
            .div(totalAllocPoint);
            accBigFootPerShare = accBigFootPerShare.add(
                bigFootReward.mul(1e12).div(lpSupply)
            );
        }
        return
            user.amount.mul(accBigFootPerShare).div(1e12).sub(user.rewardDebt);
    }

    // Update reward vairables for all pools. Be careful of gas spending!
    function massUpdatePools() public {
        uint256 length = poolInfo.length;
        for (uint256 pid = 0; pid < length; ++pid) {
            updatePool(pid);
        }
    }

    // Update reward variables of the given pool to be up-to-date.
    function updatePool(uint256 _pid) public {
        PoolInfo storage pool = poolInfo[_pid];
        if (block.number <= pool.lastRewardBlock) {
            return;
        }
        uint256 lpSupply = pool.lpToken.balanceOf(address(this));
        if (lpSupply == 0) {
            pool.lastRewardBlock = block.number;
            return;
        }
        uint256 multiplier = getMultiplier(pool.lastRewardBlock, block.number);
        uint256 bigFootReward = multiplier
        .mul(bigFootPerBlock)
        .mul(pool.allocPoint)
        .div(totalAllocPoint);
        bscBigFootToken.mint(devaddr, bigFootReward.div(10));
        bscBigFootToken.mint(address(this), bigFootReward);
        pool.accBigFootPerShare = pool.accBigFootPerShare.add(
            bigFootReward.mul(1e12).div(lpSupply)
        );
        pool.lastRewardBlock = block.number;
    }

    // Deposit LP tokens to MasterChef for BIGFOOT allocation.
    function deposit(uint256 _pid, uint256 _amount) public nonReentrant {
        PoolInfo storage pool = poolInfo[_pid];
        UserInfo storage user = userInfo[_pid][msg.sender];
        updatePool(_pid);
        if (user.amount > 0) {
            uint256 pending = user
            .amount
            .mul(pool.accBigFootPerShare)
            .div(1e12)
            .sub(user.rewardDebt);
            safeBigFootTransfer(msg.sender, pending);
        }
        pool.lpToken.safeTransferFrom(
            address(msg.sender),
            address(this),
            _amount
        );
        user.amount = user.amount.add(_amount);
        user.rewardDebt = user.amount.mul(pool.accBigFootPerShare).div(1e12);
        emit Deposit(msg.sender, _pid, _amount);
    }

    // Withdraw LP tokens from MasterChef.
    function withdraw(uint256 _pid, uint256 _amount) public nonReentrant {
        PoolInfo storage pool = poolInfo[_pid];
        UserInfo storage user = userInfo[_pid][msg.sender];
        require(user.amount >= _amount, "withdraw: not good");
        updatePool(_pid);
        uint256 pending = user
        .amount
        .mul(pool.accBigFootPerShare)
        .div(1e12)
        .sub(user.rewardDebt);
        safeBigFootTransfer(msg.sender, pending);
        user.amount = user.amount.sub(_amount);
        user.rewardDebt = user.amount.mul(pool.accBigFootPerShare).div(1e12);
        pool.lpToken.safeTransfer(address(msg.sender), _amount);
        emit Withdraw(msg.sender, _pid, _amount);
    }

    // Withdraw without caring about rewards. EMERGENCY ONLY.
    function emergencyWithdraw(uint256 _pid) public nonReentrant {
        PoolInfo storage pool = poolInfo[_pid];
        UserInfo storage user = userInfo[_pid][msg.sender];
        pool.lpToken.safeTransfer(address(msg.sender), user.amount);
        emit EmergencyWithdraw(msg.sender, _pid, user.amount);
        user.amount = 0;
        user.rewardDebt = 0;
    }

    // Safe bigFoot transfer function, just in case if rounding error causes pool to not have enough BIGFOOTs.
    function safeBigFootTransfer(address _to, uint256 _amount) internal {
        uint256 bigFootBal = bscBigFootToken.balanceOf(address(this));
        if (_amount > bigFootBal) {
            bscBigFootToken.transfer(_to, bigFootBal);
        } else {
            bscBigFootToken.transfer(_to, _amount);
        }
    }

    // Update dev address by the previous dev.
    function dev(address _devaddr) public {
        require(msg.sender == devaddr, "Only developer can do this action");
        devaddr = _devaddr;
    }

}

