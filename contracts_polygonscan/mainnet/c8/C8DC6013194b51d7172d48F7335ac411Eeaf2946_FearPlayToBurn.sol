interface NftToken {
    function balanceOf(address account, uint256 id) external view returns (uint256);
    function burn(address account, uint256 id, uint256 value) external;
    function setApprovalForAll(address operator, bool approved) external;
}

contract FearPlayToBurn is AccessControl, ERC1155Holder {

    event PlayToBurn(address indexed account, uint256 indexed tokenId, uint256 playerAttempts);

    NftToken private nftToken = NftToken(0xB9aeE1Ad85bed213B53329F060A13328EB26b7a0);
    bool private playToBurnEnabled = false;

    struct Milestone {
        uint256 id;
        uint256 limit;
        bool enabled;
    }

    struct Token {
        uint256 id;
        uint256 milestoneId;
        uint256 attemptsAllowed;
    }

    // milestoneId => milestone
    mapping(uint256 => Milestone) private milestones;

    // tokenId => token
    mapping(uint256 => Token) private tokens;

    // user => (milestoneId => attempts)
    mapping(address => mapping(uint256 => uint256)) public playerAttempts;
    
    constructor() {
        _setupRole(DEFAULT_ADMIN_ROLE, _msgSender());
    }

    function checkPlayToBurnEnabled() private view {
        require(playToBurnEnabled, "Play to burn has been disabled.");
    }

    function checkAdmin() private view {
        require(hasRole(DEFAULT_ADMIN_ROLE, _msgSender()), "Admin role required.");
    }

    function checkMilestoneSetup(uint256 milestoneId) private view {
        require(milestones[milestoneId].id != 0, "Milestone has not been setup");
    }

    function checkTokenSetup(uint256 tokenId) private view {
        require(tokens[tokenId].id != 0, "Token has not been setup");
    }

    function setPlayToBurnEnabled(bool enabled) external {
        checkAdmin();
        playToBurnEnabled = enabled;
    }

    function playToBurn(uint256 tokenId) external {
        checkPlayToBurnEnabled();
        checkTokenSetup(tokenId);

        Token memory token = tokens[tokenId];
        Milestone memory milestone = milestones[token.milestoneId];
        
        uint256 attemptsSoFar = playerAttempts[_msgSender()][milestone.id];

        require(SafeMath.add(attemptsSoFar, token.attemptsAllowed) <= milestone.limit, "No more attempts at Play to Burn allowed.");

        require(nftToken.balanceOf(_msgSender(), token.id) > 0, "Ticket NFT not found");

        playerAttempts[_msgSender()][milestone.id] = SafeMath.add(attemptsSoFar, token.attemptsAllowed);

        nftToken.burn(_msgSender(), token.id, 1);

        emit PlayToBurn(_msgSender(), tokenId, playerAttempts[_msgSender()][milestone.id]);
    }

    function setPlayerAttempts(address player, uint256 milestoneId, uint256 attempts) external {
        checkAdmin();
        checkMilestoneSetup(milestoneId);
        playerAttempts[player][milestoneId] = attempts;
    }

    function getPlayerAttempts(address player, uint256 milestoneId) external view returns (uint256) {
        checkMilestoneSetup(milestoneId);
        return playerAttempts[player][milestoneId];
    }

    function setupToken(uint256 tokenId, uint256 milestoneId, uint256 attemptsAllowed) external {
        checkAdmin();
        checkMilestoneSetup(milestoneId);
        tokens[tokenId] = Token(tokenId, milestoneId, attemptsAllowed);
    }

    function setupMilestone(uint256 milestoneId, uint256 limit, bool enabled) external {
        checkAdmin();
        milestones[milestoneId] = Milestone(milestoneId, limit, enabled);
    }

    function setNftTokenContract(address addr) external {
        checkAdmin();
        require(addr != address(0), "Cannot set NFT Token contract to zero address");
        nftToken = NftToken(addr);
    }

    function supportsInterface(bytes4 interfaceId) public view virtual override(AccessControl, ERC1155Receiver) returns (bool) {
        return interfaceId == type(AccessControl).interfaceId || interfaceId == type(ERC1155Receiver).interfaceId || super.supportsInterface(interfaceId);
    }
}

