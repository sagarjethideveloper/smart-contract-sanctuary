pragma solidity ^0.8.0;
import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/utils/math/SafeMath.sol";
import "@openzeppelin/contracts/security/Pausable.sol";
import "@openzeppelin/contracts/utils/cryptography/ECDSA.sol";
import "@openzeppelin/contracts/utils/cryptography/draft-EIP712.sol";
import "@openzeppelin/contracts/token/ERC721/IERC721.sol";
import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@openzeppelin/contracts/token/ERC1155/IERC1155.sol";

contract SummerisMarket is Ownable, Pausable,EIP712("Sumeris Market", "1") {
    using SafeMath for uint256;
    uint private immutable ORDER_SELL = 1;
    uint private immutable ORDER_BUY = 2;
    uint private immutable ASSET_ERC721 = 1;
    uint private immutable ASSET_ERC1155 = 2;
    uint private immutable CONFIRM_DELETE = 180101;
    struct Asset {
        uint assetType; 
        address tokenAddress;
        uint256 tokenId;
    }
    bytes32 public TYPE_HASH_ASSET = keccak256("Asset(uint assetType,address tokenAddress,uint256 tokenId)");
    struct Order {
        address maker;   
        Asset asset;
        uint256 amount;
        uint256 price; // 1 = Sell 2 Buy
        uint orderType; // 1 = Sell 2 Buy
        uint startTime;
        uint endTime;
        uint256 id; // Random Number 
    }
    bytes32 public TYPE_HASH_ORDER  = keccak256("Order(address maker,Asset asset,uint256 amount,uint256 price,uint orderType,uint startTime,uint endTime,uint256 id)Asset(uint assetType,address tokenAddress,uint256 tokenId)");
    struct Partial {
        uint256 amount;
        bool used;
    }
    address public feeReceiver = address(0x6568b9b7556907Afb4167D0B32E8BAE4a259fEd8);
    uint public feeMaker = 1;
    uint public feeTaker = 1; // Default 0.1% Fees (Total WETH * Fee / 1000)
    IERC20 public WRAPPED = IERC20(address(0xbb4CdB9CBd36B01bD1cBaEBF2De08d9173bc095c));
    mapping(bytes32 => Partial) public remainingAmount;
    event Transaction(address indexed maker, address indexed taker, Order order, uint256 amount);

    constructor(address _wrapped) {
        WRAPPED = IERC20(_wrapped);
    }
    
    function setFee(uint _feeMaker, uint _feeTaker) public onlyOwner {
        feeMaker = _feeMaker;
        feeTaker = _feeTaker;
    }
    function executeOrder(Order memory _order, bytes memory _signature, uint256 _amount) public payable  {
        bytes32 orderHash = hash(_order);
        address maker = ECDSA.recover(orderHash, _signature);
        require(maker == _order.maker, "Summeris: Invalid Data");
        require(maker != msg.sender, "Summeris: You cant buy your own order");
        require(block.timestamp < _order.endTime, "Sumeris: Order Expired");
        require(block.timestamp > _order.startTime, "Sumeris: Sell Expired");
        require(_order.orderType == ORDER_BUY || _order.orderType == ORDER_SELL, "Sumeris: Buy Or Sell");
        require(_order.asset.assetType == ASSET_ERC721 || _order.asset.assetType == ASSET_ERC1155, "Sumeris: ERC 721 OR ERC 1155");
        Partial storage partialRemaining = remainingAmount[orderHash];
        uint256 realAmountLeft = _order.amount;
        if(partialRemaining.used) {
            realAmountLeft = partialRemaining.amount;
        }
        require(_amount <= realAmountLeft, "Summeris: Amount Outnumber Supply");
        partialRemaining.used = true;
        partialRemaining.amount = realAmountLeft.sub(_amount);
        (uint256 costTotal,uint256 costItem, uint256 costFeeMaker, uint256 costFeeTaker) = cost(_order, _amount);
        if(_order.orderType == ORDER_SELL) { // Maker Sell Taker Buy
            require(msg.value == costTotal, "Summeris: ETH Not Enough");
            
            if(_order.asset.assetType == ASSET_ERC721) {
                IERC721(_order.asset.tokenAddress).safeTransferFrom(_order.maker, msg.sender, _order.asset.tokenId);
            } else if(_order.asset.assetType == ASSET_ERC1155) {
                IERC1155(_order.asset.tokenAddress).safeTransferFrom(_order.maker, msg.sender, _order.asset.tokenId, _amount,abi.encode(""));
            }
            
            payable(_order.maker).transfer(costItem.sub(costFeeMaker));
            payable(feeReceiver).transfer(costFeeMaker.add(costFeeTaker));
            
        } else if(_order.orderType == ORDER_BUY) { // Maker Buy Taker Sell
            if(_order.asset.assetType == ASSET_ERC721) {
                IERC721(_order.asset.tokenAddress).safeTransferFrom(msg.sender, _order.maker, _order.asset.tokenId);
            } else if(_order.asset.assetType == ASSET_ERC1155) {
                IERC1155(_order.asset.tokenAddress).safeTransferFrom(msg.sender, _order.maker, _order.asset.tokenId, _amount,abi.encode(""));
            }

            WRAPPED.transferFrom(_order.maker,msg.sender, costItem.sub(costFeeMaker));
            WRAPPED.transferFrom(_order.maker,feeReceiver, costFeeMaker.add(costFeeTaker));
        }
        emit Transaction(_order.maker, msg.sender, _order, _amount);
        

    }
    function cost(Order memory _order, uint256 _amount) public view returns (uint256 costTotal, uint256 costItem, uint256 costFeeMaker, uint256 costFeeTaker) {
        costItem = _order.price.mul(_amount);
        costFeeMaker = costItem.mul(feeMaker).div(1000);
        costFeeTaker = costItem.mul(feeTaker).div(1000);
        costTotal = costItem.add(costFeeTaker);
    }
    function  setFeeReceiver(address _feeReceiver) public onlyOwner {
        feeReceiver = _feeReceiver;
    }
    function claimToken(address _tokenAddress) public onlyOwner {
        IERC20 token = IERC20(_tokenAddress);

        token.transfer(msg.sender, token.balanceOf(address(this)));
    }


    function finalize(uint256 _areyoureallysure) public onlyOwner {
        require(_areyoureallysure == CONFIRM_DELETE, "Summeris: Do not try");
        selfdestruct(payable(msg.sender));
    }
    function hash(Asset memory _asset) public view returns (bytes32) {
        return keccak256(abi.encode(
            TYPE_HASH_ASSET,
            _asset.assetType,
            _asset.tokenAddress,
            _asset.tokenId
        ));
    }
    function hash(Order memory _order) public view returns(bytes32) {
        return _hashTypedDataV4(keccak256(abi.encode(
            TYPE_HASH_ORDER,
            _order.maker,
            hash(_order.asset),
            _order.amount,
            _order.price,
            _order.orderType,
            _order.startTime,
            _order.endTime,
            _order.id
        )));
    }
}

