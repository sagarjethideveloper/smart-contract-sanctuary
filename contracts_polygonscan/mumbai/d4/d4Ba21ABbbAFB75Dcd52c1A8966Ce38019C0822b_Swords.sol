import {ERC721} from "@openzeppelin/contracts/token/ERC721/ERC721.sol";
import {EnumerableSet} from "@openzeppelin/contracts/utils/structs/EnumerableSet.sol";
import {Counters} from "@openzeppelin/contracts/utils/Counters.sol";
import {IERC20} from "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import {ReentrancyGuard} from "@openzeppelin/contracts/security/ReentrancyGuard.sol";
import {Decimal} from "./utils/Decimal.sol";
import {ISwords} from "./interfaces/ISwords.sol";
import {ISwordsMarket} from "./interfaces/ISwordsMarket.sol";
import {AccessControl} from "@openzeppelin/contracts/access/AccessControl.sol";
import {Context} from "@openzeppelin/contracts/utils/Context.sol";
import {TrustedForwarderRecipient} from "./utils/TrustedForwarderRecipient.sol";

contract Swords is
    ISwords,
    ERC721,
    TrustedForwarderRecipient,
    AccessControl,
    ReentrancyGuard
{
    using Counters for Counters.Counter;

    address public marketContract;

    bytes32 public constant ORGANIZER_ROLE = keccak256("ORGANIZER_ROLE");
    bytes32 public constant ARTIST_ROLE = keccak256("ARTIST_ROLE");
    mapping(uint256 => address) public eventOrganizers;
    mapping(uint256 => address) public eventArtistsA;
    mapping(uint256 => address) public eventArtistsB;
    mapping(uint256 => mapping(address => uint256))
        public swordsEventTokenHolders;

    Counters.Counter private _eventIds;
    Counters.Counter private _tokenIds;

    // Mapping from address to token id to permit nonce
    mapping(address => mapping(uint256 => uint256)) public permitNonces;

    function _msgSender()
        internal
        view
        override(Context, TrustedForwarderRecipient)
        returns (address)
    {
        return super._msgSender();
    }

    function _msgData()
        internal
        view
        override(Context, TrustedForwarderRecipient)
        returns (bytes memory)
    {
        return super._msgData();
    }

    /* *********
     * Modifiers
     * *********
     */

    /**
     * @notice Require that the token has not been burned and has been minted
     */
    modifier onlyExistingToken(uint256 tokenId) {
        require(_exists(tokenId), "SwordsEvent: nonexistent token");
        _;
    }

    /**
     * @notice Require that the caller is an event organizer.
     */
    modifier onlyEventOrganizer() {
        require(
            hasRole(ORGANIZER_ROLE, _msgSender()),
            "SwordsEvent: Must be an organizer."
        );
        _;
    }

    /**
     * @notice Ensure that the provided spender is the approved or the owner of
     * the media for the specified tokenId
     */
    modifier onlyApprovedOrOwner(address spender, uint256 tokenId) {
        require(
            _isApprovedOrOwner(spender, tokenId),
            "Swords: Only approved or owner"
        );
        _;
    }

    /**
     * @notice Ensure the token has been created (even if it has been burned)
     */
    modifier onlyTokenCreated(uint256 tokenId) {
        require(
            _tokenIds.current() >= tokenId,
            "Swords: token with that id does not exist"
        );
        _;
    }

    modifier isNotKing(uint256 _tokenId) {
        require(
            _tokenId % 32 != 5 && _tokenId % 32 != 29,
            "King tokens cannot be used here."
        );
        _;
    }

    /**
     * @notice On deployment, set the market contract address and register the
     * ERC721 metadata interface
     */
    constructor(address marketContractAddr, address trustedForwarderAddr)
        ERC721("32 Swords", "SWORDS")
        TrustedForwarderRecipient(trustedForwarderAddr)
    {
        marketContract = marketContractAddr;
        _setupRole(ORGANIZER_ROLE, _msgSender());
        // _setBaseURI("https://32swords.com/api/token/");
    }

    function contractURI() public pure returns (string memory) {
        return "https://32swords.com/api/contract-metadata";
    }

    /* **************
     * View Functions
     * **************
     */

    /* ****************
     * Public Functions
     * ****************
     */

    /**
     * @notice see ISwords
     */
    function createEvent(address _artistA, address _artistB)
        external
        override
        onlyEventOrganizer
    {
        _eventIds.increment();

        uint256 _eventId = _eventIds.current();

        eventOrganizers[_eventId] = _msgSender();
        eventArtistsA[_eventId] = _artistA;
        eventArtistsB[_eventId] = _artistB;
        _setupRole(ARTIST_ROLE, _artistA);
        _setupRole(ARTIST_ROLE, _artistB);

        uint256 startingIndex = _tokenIds.current();
        for (uint256 i = 1; i <= 32; i++) {
            if (i == 5) {
                // Black King goes to Artist B
                _safeMint(_artistB, startingIndex + i);
            } else if (i == 29) {
                // White King goes to Artist A
                _safeMint(_artistA, startingIndex + i);
            } else {
                // Remainder go to the account calling createEvent
                _safeMint(_msgSender(), startingIndex + i);
            }
            _tokenIds.increment();
        }
    }

    function _beforeTokenTransfer(
        address from,
        address to,
        uint256 tokenId
    ) internal virtual override {
        super._beforeTokenTransfer(from, to, tokenId);
        uint256 eventId = getEventIdFromTokenId(tokenId);
        require(
            swordsEventTokenHolders[eventId][to] == 0 || from == address(0),
            "Address is already an owner in this event."
        );
        swordsEventTokenHolders[eventId][from] = 0;
        swordsEventTokenHolders[eventId][to] = tokenId;
    }

    function getEventIdFromTokenId(uint256 tokenId)
        public
        pure
        returns (uint256)
    {
        return (tokenId - 1) / 32 + 1;
    }

    function burnPiece(uint256 tokenId)
        public
        nonReentrant
        onlyExistingToken(tokenId)
        isNotKing(tokenId)
        onlyEventOrganizer
    {
        _burn(tokenId);
    }

    /**
     * @notice see ISwords
     */
    function exchangeTransfer(uint256 tokenId, address recipient)
        external
        override
    {
        require(_msgSender() == marketContract, "Swords: only market contract");
        _safeTransfer(ownerOf(tokenId), recipient, tokenId, "");
    }

    /**
     * @notice see ISwords
     */
    function setAsk(uint256 tokenId, ISwordsMarket.Ask memory ask)
        public
        override
        nonReentrant
        onlyApprovedOrOwner(_msgSender(), tokenId)
    {
        ISwordsMarket(marketContract).setAsk(tokenId, ask);
    }

    /**
     * @notice see ISwords
     */
    function removeAsk(uint256 tokenId)
        external
        override
        nonReentrant
        onlyApprovedOrOwner(_msgSender(), tokenId)
    {
        ISwordsMarket(marketContract).removeAsk(tokenId);
    }

    /**
     * @notice see ISwords
     */
    function setBid(uint256 tokenId, ISwordsMarket.Bid memory bid)
        public
        override
        nonReentrant
        onlyExistingToken(tokenId)
    {
        require(
            _msgSender() == bid.bidder,
            "Market: Bidder must be msg sender"
        );
        ISwordsMarket(marketContract).setBid(tokenId, bid, _msgSender());
    }

    /**
     * @notice see ISwords
     */
    function removeBid(uint256 tokenId)
        external
        override
        nonReentrant
        onlyTokenCreated(tokenId)
    {
        ISwordsMarket(marketContract).removeBid(tokenId, _msgSender());
    }

    /**
     * @notice see ISwords
     */
    function acceptBid(uint256 tokenId, ISwordsMarket.Bid memory bid)
        public
        override
        nonReentrant
        onlyApprovedOrOwner(_msgSender(), tokenId)
    {
        ISwordsMarket(marketContract).acceptBid(tokenId, bid);
    }

    /**
     * @notice Revoke the approvals for a token. The provided `approve` function is not sufficient
     * for this protocol, as it does not allow an approved address to revoke it's own approval.
     * In instances where a 3rd party is interacting on a user's behalf via `permit`, they should
     * revoke their approval once their task is complete as a best practice.
     */
    function revokeApproval(uint256 tokenId) external override nonReentrant {
        require(
            _msgSender() == getApproved(tokenId),
            "Swords: caller not approved address"
        );
        _approve(address(0), tokenId);
    }

    /* *****************
     * Private Functions
     * *****************
     */

    /**
     * @notice transfer a token and remove the ask for it.
     */
    function _transfer(
        address from,
        address to,
        uint256 tokenId
    ) internal override {
        ISwordsMarket(marketContract).removeAsk(tokenId);
        super._transfer(from, to, tokenId);
    }

    function supportsInterface(bytes4 interfaceId)
        public
        view
        override(AccessControl, ERC721)
        returns (bool)
    {
        return
            interfaceId == type(AccessControl).interfaceId ||
            super.supportsInterface(interfaceId);
    }
}

