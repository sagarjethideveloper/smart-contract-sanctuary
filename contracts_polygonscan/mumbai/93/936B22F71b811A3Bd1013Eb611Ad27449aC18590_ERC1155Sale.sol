pragma solidity 0.6.2;
pragma experimental ABIEncoderV2;

import { AccessProtected } from "./AccessProtected.sol";
import { Pausable } from "@openzeppelin/contracts/utils/Pausable.sol";
import { IERC1155 } from "@openzeppelin/contracts/token/ERC1155/IERC1155.sol";
import { ERC1155Receiver } from "@openzeppelin/contracts/token/ERC1155/ERC1155Receiver.sol";
import { Address } from "@openzeppelin/contracts/utils/Address.sol";
import { IERC20 } from "@openzeppelin/contracts/token/ERC20/IERC20.sol";

contract ERC1155Sale is AccessProtected, Pausable, ERC1155Receiver {
    using Address for address;

    IERC1155 public nft;
    IERC20 public token;

    struct Sale {
        uint256 tokenId;
        uint256 amount;
        uint256 price;
        address payable seller;
        bool isActive;
    }

    mapping(uint256 => Sale) public saleMap;

    modifier onlySeller(uint256 _tokenId) {
        require(saleMap[_tokenId].seller == msg.sender, "caller not seller");
        _;
    }

    modifier isActive(uint256 _tokenId) {
        require(saleMap[_tokenId].isActive, "sale already cancelled or bought");
        _;
    }

    event NewSale(uint256 indexed tokenId, uint256 indexed amount, address indexed seller);
    event Cancel(uint256 indexed tokenId, address indexed seller);
    event Buy(uint256 indexed tokenId, address indexed seller, address indexed buyer);

    constructor(IERC1155 _nft, IERC20 _token) public {
        require(address(_nft).isContract() && address(_token).isContract(), "must be contract addresses");
        nft = _nft;
        token = _token;
    }

    /**
     * Create a new sale
     * @param _tokenId token id
     * @param _amount amount of those tokenIds
     * @param _price price of the sale
     */
    function createSale(
        uint256 _tokenId,
        uint256 _amount,
        uint256 _price
    ) external whenNotPaused {
        nft.safeTransferFrom(msg.sender, address(this), _tokenId, _amount, "");
        Sale memory sale = Sale({
            tokenId: _tokenId,
            amount: _amount,
            price: _price,
            seller: msg.sender,
            isActive: true
        });
        saleMap[_tokenId] = sale;

        emit NewSale(_tokenId, _amount, msg.sender);
    }

    /**
     * Cancel a sale
     * @param _tokenId tokenId of the existing sale
     */
    function cancelSale(uint256 _tokenId) external onlySeller(_tokenId) isActive(_tokenId) {
        saleMap[_tokenId].isActive = false;
        Sale memory sale = saleMap[_tokenId];
        nft.safeTransferFrom(address(this), sale.seller, sale.tokenId, sale.amount, "");

        emit Cancel(_tokenId, msg.sender);
    }

    /**
     * Buy a Sale
     * @param _tokenId tokenId of the Sale to buy
     */
    function buy(uint256 _tokenId) external isActive(_tokenId) whenNotPaused {
        saleMap[_tokenId].isActive = false;
        Sale memory sale = saleMap[_tokenId];
        token.transferFrom(msg.sender, sale.seller, sale.price);
        nft.safeTransferFrom(address(this), msg.sender, sale.tokenId, sale.amount, "");

        emit Buy(_tokenId, sale.seller, msg.sender);
    }

    function batchBuy(uint256[] calldata _tokenIds) external whenNotPaused {
        uint256 len = _tokenIds.length;
        for (uint256 i = 0; i < len; i++) {
            uint256 tokenId = _tokenIds[i];
            require(saleMap[tokenId].isActive, "sale already cancelled or bought");
            saleMap[tokenId].isActive = false;
            Sale memory sale = saleMap[tokenId];
            token.transferFrom(msg.sender, sale.seller, sale.price);
            nft.safeTransferFrom(address(this), msg.sender, tokenId, sale.amount, "");

            emit Buy(tokenId, sale.seller, msg.sender);
        }
    }

    //
    // IMPLEMENT PAUSABLE FUNCTIONS
    //
    function pause() external whenNotPaused onlyAdmin {
        _pause();
    }

    function unpause() external whenPaused onlyAdmin {
        _unpause();
    }

    //
    // IMPLEMENT ERC1155 RECEIVER
    //
    /* solhint-disable no-unused-vars */
    function onERC1155Received(
        address operator,
        address from,
        uint256 id,
        uint256 value,
        bytes calldata data
    ) external override returns (bytes4) {
        return this.onERC1155Received.selector;
    }

    function onERC1155BatchReceived(
        address operator,
        address from,
        uint256[] calldata ids,
        uint256[] calldata values,
        bytes calldata data
    ) external override returns (bytes4) {
        return this.onERC1155BatchReceived.selector;
    }
    /* solhint-disable no-unused-vars */
}

