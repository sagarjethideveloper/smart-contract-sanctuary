import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/token/ERC1155/utils/ERC1155Receiver.sol";
import "@openzeppelin/contracts/utils/Address.sol";
import "./IForestAssets.sol";
import "@openzeppelin/contracts/token/ERC20/IERC20.sol";

contract AssetsVault is Ownable, ERC1155Receiver {
    using Address for address payable;

    address public store;

    mapping(address => bool) public approvedForestAssetsContracts;

    modifier onlyOwnerOrStore() {
        require(owner() == _msgSender() || store == _msgSender(), "caller is not the owner and not store");
        _;
    }

    function transfer(IForestAssets forestassets, address to,
                            uint256 tokenid, uint256 amount) external onlyOwner {
        bytes memory _data = bytes("");
        forestassets.safeTransferFrom(address(this), to, tokenid, amount, _data);
    }

    function transferERC20(IERC20 token, address to, uint256 amount) external onlyOwner {
        token.transfer(to, amount);
    }

    function transferETH(address payable beneficiary, uint256 amount) public onlyOwner {
        beneficiary.sendValue(amount);
    }

    function onERC1155Received(
        address operator,
        address from,
        uint256 id,
        uint256 value,
        bytes memory data
    ) public virtual override returns (bytes4) {
        address sendingAddress;
        (sendingAddress) = abi.decode(data, (address));
        require(approvedForestAssetsContracts[_msgSender()],
            "ForestStore: unknow token received");
        require(sendingAddress == owner() || sendingAddress == store,
            "ForestStore: ERC1155 sender is not allowed");
        return this.onERC1155Received.selector;
    }

    function onERC1155BatchReceived(
        address operator,
        address from,
        uint256[] memory ids,
        uint256[] memory values,
        bytes memory data
    ) public virtual override returns (bytes4) {
        address sendingAddress;
        (sendingAddress) = abi.decode(data, (address));
        require(approvedForestAssetsContracts[_msgSender()],
            "ForestStore: unknow token received");
        require(sendingAddress == owner() || sendingAddress == store,
            "ForestStore: ERC1155 sender is not allowed");
        return this.onERC1155BatchReceived.selector;
    }

    function approveForestAssetsContract(address forestassets, bool approved) public onlyOwnerOrStore {
        approvedForestAssetsContracts[forestassets] = approved;
        if(approved)
            IForestAssets(forestassets).setApprovalForAll(owner(), true);
    }

    function setStoreAddress(address store_) public onlyOwner {
        store = store_;
    }
}

