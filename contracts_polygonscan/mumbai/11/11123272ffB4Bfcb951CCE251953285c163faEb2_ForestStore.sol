 //hold token for a period after purchasing
 //conditional id holding date
 //safemath

 //withdraw unsold tokens

/**
 * @dev _Available since v3.1._
 */
contract ForestStore is Ownable, ERC1155Receiver {
    using SafeMath for uint256;
    using Address for address payable;

    AssetsVault public assetsVault;

    uint8 version = 1;

    IERC20 public paymentToken;

    struct SaleData {
        uint256 price;
        uint256 specialPrice;
        uint256 discountStartTimeStamp;
        uint256 discountEndTimeStamp;
        uint256 withdrawUnlockDate;
        uint256 saleStartDate;
    }

    mapping (uint256 => SaleData) public saleData;

    mapping(address => mapping(uint256 => mapping(address => uint256)))
                public vaultBalances;

    mapping(address => bool) public approvedForestAssetsContracts;

    event Purchase(address owner, address forestassets, uint256 id,
                uint256 units, uint256 price);

    event AddedToVault(address forestassets, uint256 _id, uint256 amount);

    event Withdrawn(address _msgSender, address beneficiary,
            address forestassets, uint256 id_, uint256 amount);

    event ApprovedContract(address contract_, bool approved);

    constructor (address paymentToken_, AssetsVault assetsVault_) {
        paymentToken = IERC20(paymentToken_);
        assetsVault = assetsVault_;
    }

    function onERC1155Received(
        address operator,
        address from,
        uint256 id,
        uint256 value,
        bytes memory data
    ) public virtual override returns (bytes4) {
        address sendingAddress;
        (sendingAddress) = abi.decode(data, (address));
        require(approvedForestAssetsContracts[_msgSender()],
            "ForestStore: unknow token received");
        require(sendingAddress == owner(),
            "ForestStore: ERC1155 sender is not allowed");
        return this.onERC1155Received.selector;
    }

    function onERC1155BatchReceived(
        address operator,
        address from,
        uint256[] memory ids,
        uint256[] memory values,
        bytes memory data
    ) public virtual override returns (bytes4) {
        address sendingAddress;
        (sendingAddress) = abi.decode(data, (address));
        require(approvedForestAssetsContracts[_msgSender()],
            "ForestStore: unknow token received");
        require(sendingAddress == owner(),
            "ForestStore: ERC1155 sender is not allowed");
        return this.onERC1155BatchReceived.selector;
    }

    function setPaymentToken(address newAddress) public onlyOwner {
        paymentToken = IERC20(newAddress);
    }

    function setUnlockDate(uint256 id, uint256 unlockTimeStamp) public onlyOwner {
        saleData[id].withdrawUnlockDate = unlockTimeStamp;
    }

    function setPrice(uint256 id_, uint256 price_) public onlyOwner {
        saleData[id_].price = price_;
    }

    function setSaleStartDate(uint256 id_, uint256 saleStartDate_) public onlyOwner {
        saleData[id_].saleStartDate = saleStartDate_;
    }

    function setSpecialPrice(uint256 id_, uint256 startDateTime, uint256 endDateTime, uint256 price_) public onlyOwner {
        saleData[id_].specialPrice = price_;
        saleData[id_].discountStartTimeStamp = startDateTime;
        saleData[id_].discountEndTimeStamp = endDateTime;
    }

    function approveForestAssetsContract(address forestassets, bool approved) public onlyOwner {
        require(IForestAssets(forestassets).isForestAsset(),
            "ForestStore: unknow token received");
        emit ApprovedContract(forestassets, approved);
        approvedForestAssetsContracts[forestassets] = approved;
        
        assetsVault.approveForestAssetsContract(forestassets, approved);
    }

    function unstockForestassets(IForestAssets forestassets, uint256 id_, uint256 amount_, address to) public {
        require(owner() == _msgSender(),
            "ForestStore: caller is not allowed");
        bytes memory data_ = bytes("");
        IForestAssets(forestassets).safeTransferFrom(address(this), to, id_, amount_, data_);
    }

    function transferERC20(IERC20 token, address to, uint256 amount) external onlyOwner {
        token.transfer(to, amount);
    }

    function transferETH(address payable beneficiary, uint256 amount) public onlyOwner {
        beneficiary.sendValue(amount);
    }

    function withdrawPayment(uint256 amount) external onlyOwner {
        paymentToken.transfer(owner(), amount);
    }

    function paymentTokenBalance() external view returns (uint256) {
        return paymentToken.balanceOf(address(this));
    }

    function mint(IForestAssets forestassets, uint256 id_, uint256 amount_, bytes memory data_) public onlyOwner {
        bytes memory callingAddress = abi.encode(_msgSender());
        IForestAssets(forestassets).mint(address(this), id_, amount_, callingAddress);
    }

    //if paymentToken is 0 then eth
    function buy(IForestAssets forestassets, uint id_) external payable {
        uint256 price = saleData[id_].price;

        if(block.timestamp >= saleData[id_].discountStartTimeStamp &&
            block.timestamp <= saleData[id_].discountEndTimeStamp) {
                price = saleData[id_].specialPrice;
            }

        _validate(forestassets, id_, price); //check req. for trade
        _trade(forestassets, id_, price); //swap nft for eth
        
        emit Purchase(_msgSender(), address(forestassets), id_, 1, price);
    }

    function _validate(IForestAssets forestassets, uint _id, uint256 price) internal {
        require(block.timestamp >= saleData[_id].saleStartDate, "Sale hasn't started yet");
        require(approvedForestAssetsContracts[address(forestassets)] &&
            forestassets.totalSupply(_id) > 0, "Error, wrong Token id"); //not exists
        require(forestassets.balanceOf(address(this), _id) > 0, "Error, Token is sold out");
        require(paymentToken.balanceOf(_msgSender()) >= price, "Error, user doesn't have enough balance!");
    }

    function _trade(IForestAssets forestassets, uint _id, uint256 price) internal {
        bytes memory _data = bytes("");
        paymentToken.transferFrom(_msgSender(), address(this), price);
        if(block.timestamp >= saleData[_id].withdrawUnlockDate) {
            forestassets.safeTransferFrom(address(this), _msgSender(),
                    _id, 1, _data); //nft to user
        }
        else {
            vaultBalances[address(forestassets)][_id][_msgSender()] = vaultBalances[address(forestassets)][_id][_msgSender()].add(1);
            forestassets.safeTransferFrom(address(this), address(assetsVault),
                    _id, 1, _data); //nft to vault
            emit AddedToVault(address(forestassets), _id, 1);
        }
    }

    function withdraw(address forestassets, uint256 id_, uint256 amount)
                    external {
        _withdrawForAddress(forestassets, id_, _msgSender(), amount);
    }

    function withdrawForAddress(address forestassets, uint id_,
                        address beneficiary, uint256 amount) external onlyOwner {
        _withdrawForAddress(forestassets, id_, beneficiary, amount);
    }

    function _withdrawForAddress(address forestassets, uint id_,
                        address beneficiary, uint256 amount) internal {
        require(vaultBalances[forestassets][id_][beneficiary] >= amount && amount > 0,
                "Trying to withdraw more than balance or amount is 0");
        require(IForestAssets(forestassets).balanceOf(address(assetsVault), id_) >= amount, "vault balance insufficient");
        require(block.timestamp >= saleData[id_].withdrawUnlockDate, "unlock date is ahead");
        
        vaultBalances[forestassets][id_][beneficiary] =
            vaultBalances[forestassets][id_][beneficiary].sub(amount);

        bytes memory _data = bytes("");
        IForestAssets(forestassets).safeTransferFrom(address(assetsVault),
                    beneficiary, id_, amount, _data); //nft to user

        emit Withdrawn(_msgSender(), beneficiary, forestassets, id_, amount);
    }

    function getVaultBalance(address forestassets, address account,
                uint256 id_) public view returns (uint256) {
        return vaultBalances[forestassets][id_][account];
    }

    function destroy() public onlyOwner {
        selfdestruct(payable(_msgSender()));
    }
}

