import "../pool/CardPool.sol";
import "../Constants.sol";

interface ITOWERChest {
    function transferFrom(address sender, address recipient, uint256 amount) external returns (bool);

    function decimals() external view returns (uint8);
}

abstract contract Chest is ChestOperator, EIP712MetaTransaction {
    using ECDSA for bytes32;

    uint8 constant public NUMBER_OF_OPENER_CARDS = 3;
    uint8 constant public NUMBER_OF_POOLS = 4;
    uint8 constant public NUMBER_OF_RARITY = 4;
    uint256 constant public DECIMALS = 10 ** 18;

    CardPool public equipmentPool;
    CardPool public heroPool;
    CardPool public spellPool;
    CardPool public towerPool;

    ITOWERChest towerChest;
    address public randomNumberSender;
    mapping(address => uint256) public seedNonce;

    address public blackHoleContract;

    event SetRandomNumberSenderAddress(address oldSender, address newSender);
    event SetBlackHoleContract(address blackHoleContract);
    event ChestOpened(address indexed sender, uint256 quantity, uint256[] indexed cards);

    constructor(string memory _name,
        string memory _version,
        address _chest,
        address _randomNumberSender,
        address _inventory,
        address _equipmentPool,
        address _heroPool,
        address _spellPool,
        address _towerPool,
        address _blackHoleContract)
    ChestOperator(_inventory)
    EIP712MetaTransaction(_name, _version) {
        require(address(_chest) != address(0), "Invalid Chest Address");
        require(_randomNumberSender != address(0), "Invalid Random Number Sender");

        towerChest = ITOWERChest(_chest);
        randomNumberSender = _randomNumberSender;
        equipmentPool = CardPool(_equipmentPool);
        heroPool = CardPool(_heroPool);
        spellPool = CardPool(_spellPool);
        towerPool = CardPool(_towerPool);
        blackHoleContract = _blackHoleContract;
    }

    function setRandomNumberSender(address _newSender) public onlyOwner {
        require(_newSender != address(0), "Invalid Random Number Sender");

        emit SetRandomNumberSenderAddress(randomNumberSender, _newSender);
        randomNumberSender = _newSender;
    }

    function setBlackHoleContract(address _blackHoleContract) public onlyOwner {
        require(_blackHoleContract != address(0), "Invalid Token Lock Contract");

        emit SetBlackHoleContract(_blackHoleContract);
        blackHoleContract = _blackHoleContract;
    }

    function _generateBaseSeed(address sender, uint256 _quantity, bytes memory _sig) internal returns (bytes32) {
        uint256 nonce = seedNonce[sender];
        bytes32 hash = keccak256(abi.encodePacked(sender, address(this), _quantity, nonce));
        require(hash.toEthSignedMessageHash().recover(_sig) == randomNumberSender, "Chest: invalid signature");
        seedNonce[sender]++;
        return keccak256(abi.encodePacked(block.timestamp, _sig));
    }

    function _getProbabilisticRarity(uint256 rarityProb, uint256 index) internal pure virtual returns (bytes1) {

    }

    function _getPool(bytes1 category) internal view returns (address) {
        if (category == Constants.EQUIPMENT_POOL_IDENTIFIER) return address(equipmentPool);
        else if (category == Constants.HERO_POOL_IDENTIFIER) return address(heroPool);
        else if (category == Constants.SPELL_POOL_IDENTIFIER) return address(spellPool);
        else if (category == Constants.TOWER_POOL_IDENTIFIER) return address(towerPool);
        else return address(0);
    }

    function open(uint256 _quantity, bytes memory _sig) public {
        require(_quantity > 0, "Quantity must be greater than zero");
        address sender = msgSender();

        require(sender != address(0), "Invalid Sender");
        uint256 amount = _quantity * DECIMALS;
        towerChest.transferFrom(msgSender(), blackHoleContract, amount);

        bytes32 baseSeed = _generateBaseSeed(sender, _quantity, _sig);
        uint256[] memory idBatch = new uint256[](_quantity * NUMBER_OF_OPENER_CARDS);
        uint256[] memory amountBatch = new uint256[](_quantity * NUMBER_OF_OPENER_CARDS);
        uint256 inner = 0;
        //inner loop counter
        uint256 outer = 0;
        // outer loop counter

        for (uint256 i = 1; i <= _quantity; i++) {
            for (uint256 counter = 1; counter <= NUMBER_OF_OPENER_CARDS; counter++) {
                bytes32 poolSeed = keccak256(abi.encodePacked("POOL", baseSeed, i, counter));
                bytes1 poolId = bytes1(bytes32((uint256(poolSeed) % NUMBER_OF_POOLS + 1) << 248));
                CardPool pool = CardPool(_getPool(poolId));

                bytes32 raritySeed = keccak256(abi.encodePacked("RARITY", poolSeed));
                uint256 rarityProb = uint256(raritySeed) % 100 + 1;
                bytes1 rarity = _getProbabilisticRarity(rarityProb, counter);

                uint256 totalCardsByRarity = pool.numberOfCardsByRarity(rarity);
                uint256 cardIndex = uint256(keccak256(abi.encodePacked("CARD", raritySeed))) % totalCardsByRarity;
                uint256 cardId = pool.getCardIdByRarity(rarity, cardIndex);

                idBatch[inner + outer] = cardId;
                amountBatch[inner + outer] = 1;
                inner++;
            }
            inner--;
            outer++;
        }
        _open(sender, idBatch, amountBatch, "0x00");
        emit ChestOpened(sender, _quantity, idBatch);
    }
}

