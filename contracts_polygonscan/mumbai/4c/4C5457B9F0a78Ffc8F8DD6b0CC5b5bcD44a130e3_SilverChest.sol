import "./Chest.sol";

contract SilverChest is Chest {

    constructor(
        string memory _name,
        string memory _version,
        address _silverChestToken,
        address _randomNumberSender,
        address _inventory,
        address _equipmentPool,
        address _heroPool,
        address _spellPool,
        address _towerPool,
        address _blackHoleContract
    ) Chest(_name, _version, _silverChestToken, _randomNumberSender, _inventory,
        _equipmentPool, _heroPool, _spellPool, _towerPool, _blackHoleContract) {

    }

    function _getProbabilisticRarity(uint256 rarityProb, uint256 counter) internal override pure returns (bytes1) {
        if (counter == 1) {
            if (rarityProb <= 60) {
                return Constants.RARITY_COMMON;
            } else if (rarityProb > 60 && rarityProb <= 100) {
                return Constants.RARITY_RARE;
            }
        } else if (counter == 2) {
            if (rarityProb <= 40) {
                return Constants.RARITY_COMMON;
            } else if (rarityProb > 40 && rarityProb <= 86) {
                return Constants.RARITY_RARE;
            } else if (rarityProb > 86 && rarityProb <= 100) {
                return Constants.RARITY_EPIC;
            }
        } else if (counter == 3) {
            if (rarityProb <= 38) {
                return Constants.RARITY_RARE;
            } else if (rarityProb > 38 && rarityProb <= 90) {
                return Constants.RARITY_EPIC;
            } else if (rarityProb > 90 && rarityProb <= 100) {
                return Constants.RARITY_LEGENDARY;
            }
        }
        return Constants.RARITY_UNKNOWN;
    }
}

