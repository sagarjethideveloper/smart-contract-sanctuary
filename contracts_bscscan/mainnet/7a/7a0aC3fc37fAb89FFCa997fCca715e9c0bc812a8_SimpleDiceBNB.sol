pragma solidity ^0.8.4;

import "@openzeppelin/contracts/access/AccessControlEnumerable.sol";
import "./Base/GambleBase.sol";

contract SimpleDiceBNB is GambleBase, AccessControlEnumerable {
    bytes32 public constant COUPIER_ROLE = keccak256("COUPIER_ROLE");

    mapping(address => BetResult) public lastResult;

    uint256 public minBet = 100000000000000;
    uint256 public maxPercWin = 100; // Percentage points

    uint256 public houseEdge = 200; // Percentage points

    mapping(bytes32 => uint256) public unfinishedBetHashToTimestamp;

    event BetStarted(bytes32 indexed betHash, Bet bet);
    event Roll(bytes32 indexed betHash, Bet bet, uint256 result, uint256 payout);
    event BetExpired(bytes32 indexed betHash, address user, uint256 betAmount);

    struct Bet
    {
        address gambler;
        bytes32 commit;
        bytes32 userSeed;
        uint256 blockNumber;
        uint256[4] rollIntegerVariables;
    }

    struct BetResult {
        uint256 roll;
        uint256 reward;
    }

    modifier onlyCoupier() {
        require(hasRole(COUPIER_ROLE, _msgSender()), "Must have COUPIER role");
        _;
    }

    modifier onlyAdmin() {
        require(hasRole(DEFAULT_ADMIN_ROLE, _msgSender()), "Must have Admin role");
        _;
    }

    constructor() {
        _setupRole(DEFAULT_ADMIN_ROLE, _msgSender());
        _setupRole(COUPIER_ROLE, _msgSender());
    }

    // Fallback function. It just accepts incoming BNB
    receive () external payable
    {
    }

    function maxWin() public view returns(uint256) {
        return budget() * maxPercWin / 10000;
    }

    function budget() public view returns(uint256) {
        return address(this).balance;
    }

    function getWinAmount(uint256 amount, uint256 modulo, uint256 odds) public view returns (uint256 winAmount) {
        require (0 < odds && odds <= modulo, "Win probability out of range.");
        uint256 houseEdgeFee = amount * houseEdge / 10000;
        winAmount = (amount - houseEdgeFee) * modulo / odds;
    }

    function setMaxPercWin(uint256 _perc) external onlyAdmin {
        require(_perc <= 10000, "use percentage points");
        maxPercWin = _perc;
    }

    function setHouseEdgePerc(uint256 _perc) external onlyAdmin {
        require(_perc <= 10000, "use percentage points");
        houseEdge = _perc;
    }

    function setMinBet(uint256 _value) external onlyAdmin {
        minBet = _value;
    }

    function withdraw(uint256 _amount) external onlyAdmin {
        require(budget() >= _amount, "Insufficient funds");
        payable(msg.sender).transfer(_amount);
    }

    function _roll(bytes32 seed, uint256 modulo) internal pure returns (uint256) {
        return rand(seed) % modulo;
    }


    /**
    * uint256[] _rollIntegerVariables array contains:
    * _rollIntegerVariables[0] = _predictionNUmber;
    * _rollIntegerVariables[1] = _rollUnderOrOver;    // 0 = roll under, 1 = roll over
    * _rollIntegerVariables[2] = _amount;
    * _rollIntegerVariables[3] = _modulo;
    *
    **/
    function startBet(uint256[4] memory _rollIntegerVariables, bytes32 _userSeed, bytes32 _houseCommit) external payable noContract {

        uint256 amount = msg.value;
        require(amount == _rollIntegerVariables[2], "Amount missmatch");

        // The main bet must be at least the minimum main bet
        require(_rollIntegerVariables[2] >= minBet, "Main bet amount too low");

        // Ensure that:
        // _rollIntegerVariables[0] >= 0 && _rollIntegerVariables[0] < 100
        // _rollIntegerVariables[1] == 0 || _rollIntegerVariables[1] == 1
        // require(_rollIntegerVariables[0] >= 0 && _rollIntegerVariables[0] < 100, "Invalid prediction number");
        require(_rollIntegerVariables[1] == 0 || _rollIntegerVariables[1] == 1, "Invalid roll under or roll over number");
        require(_rollIntegerVariables[3] > 1, "Invalid modulo");
        
        uint256 payout = 0;
        if (_rollIntegerVariables[1] == 0) {
            payout = getWinAmount(_rollIntegerVariables[2], _rollIntegerVariables[3], _rollIntegerVariables[0]);
        } else {
            payout = getWinAmount(_rollIntegerVariables[2], _rollIntegerVariables[3], _rollIntegerVariables[3] - 1 - _rollIntegerVariables[0]);
        }
        uint256 profit = payout - _rollIntegerVariables[2];
        require (profit <= maxWin(), "Profit exceeds max win amount");

        // if(_rollIntegerVariables[1] == 0) require(_rollIntegerVariables[0] > 0 && _rollIntegerVariables[0] < 97 , "Invalid prediction number");
        // if(_rollIntegerVariables[1] == 1) require(_rollIntegerVariables[0] > 2 && _rollIntegerVariables[0] < 99 , "Invalid prediction number");

        Bet memory betObject = createBetObject(msg.sender, _houseCommit, _userSeed, block.number, _rollIntegerVariables);
        bytes32 betHash = calculateBetHash(betObject);

        require(unfinishedBetHashToTimestamp[betHash] == 0, "Bet hash already exists");

        // Store the bet hash
        /* solium-disable-next-line */
        unfinishedBetHashToTimestamp[betHash] = block.timestamp;

        emit BetStarted(betHash, betObject);
    }

    function finishBet(address _gambler,uint256 _blockNumber, uint256[4] memory _rollIntegerVariables, bytes32 _userSeed, bytes32 _houseReveal) external onlyCoupier {

        bytes32 houseCommit = hashBytes(_houseReveal);
        Bet memory betObject = createBetObject(_gambler, houseCommit, _userSeed, _blockNumber, _rollIntegerVariables);
        bytes32 betHash = calculateBetHash(betObject);

        uint256 betTimestamp = unfinishedBetHashToTimestamp[betHash];
        
        // If the bet has already been finished, do nothing
        require(betTimestamp != 0, "Bet not found");

        // If the bet has expired...
        if (betObject.blockNumber < block.number-256)
        {
            // Mark bet as finished
            unfinishedBetHashToTimestamp[betHash] = 0;
            emit BetExpired(betHash, betObject.gambler, betObject.rollIntegerVariables[2]);
            payable(betObject.gambler).transfer(betObject.rollIntegerVariables[2]);
            return;
        }

        uint256 roll = _roll(keccak256(abi.encodePacked(_houseReveal, betHash, blockhash(betObject.blockNumber))), _rollIntegerVariables[3]);
        bool rollUnder = betObject.rollIntegerVariables[1] == 0;
        uint256 payout = 0;

        if (rollUnder && roll < betObject.rollIntegerVariables[0]) {
            payout = getWinAmount(betObject.rollIntegerVariables[2], betObject.rollIntegerVariables[3], betObject.rollIntegerVariables[0]);
        }
        else if (!rollUnder && roll > betObject.rollIntegerVariables[0]) {
            payout = getWinAmount(betObject.rollIntegerVariables[2], betObject.rollIntegerVariables[3], betObject.rollIntegerVariables[3] - 1 - betObject.rollIntegerVariables[0]);
        }

        // Mark bet as finished
        unfinishedBetHashToTimestamp[betHash] = 0;

        if (payout > betObject.rollIntegerVariables[2]) {
            uint256 profit = payout - betObject.rollIntegerVariables[2];
            if (profit >= maxWin()) payable(betObject.gambler).transfer(betObject.rollIntegerVariables[2]);
            else payable(betObject.gambler).transfer(payout);
        }

        lastResult[msg.sender] = BetResult({
            roll: roll,
            reward: payout
        });

        emit Roll(betHash, betObject, roll, payout);
    }

    function createBetObject(
        address _gambler,
        bytes32 _commit,
        bytes32 _userSeed,
        uint256 _blockNumber,
        uint256[4] memory _rollIntegerVariables) private pure returns (Bet memory bet)
    {
        return Bet({
            gambler: _gambler,
            commit: _commit,
            userSeed: _userSeed,
            blockNumber: _blockNumber,
            rollIntegerVariables: _rollIntegerVariables
        });
    }

    function calculateBetHash(Bet memory _bet) public pure returns (bytes32)
    {
        return keccak256(abi.encode(_bet));
    }

    function hashBytes(bytes32 _toHash) public pure returns (bytes32)
    {
        return keccak256(abi.encode(_toHash));
    }

    function hashPacked(bytes32 _toHash) public pure returns (bytes32)
    {
        return keccak256(abi.encodePacked(_toHash));
    }
}

