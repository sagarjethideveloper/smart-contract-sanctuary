contract Arbitrage is Ownable {
  address public cheapFactory;
  uint constant deadline = 10 days;
  IUniswapV2Router02 public sellRouter;

  address public profitReceiver;


  constructor(address _cheapFactory, address _sellRouter, address _profitReceiver) public {
      cheapFactory = _cheapFactory;  
      sellRouter = IUniswapV2Router02(_sellRouter);
      profitReceiver = _profitReceiver;
  }

  function setProfitReceiver(address _profitReceiver) external onlyOwner {
    profitReceiver = _profitReceiver;
  }

  function arbSwap(
    address _cheapFactory,
    address _sellRouter,
    address token0, 
    address token1, 
    uint amount0, 
    uint amount1
  ) external {
     cheapFactory = _cheapFactory;
     sellRouter = IUniswapV2Router02(_sellRouter);
    _startArbitrage(token0, token1, amount0, amount1);
  }

  function arb(
    address token0, 
    address token1, 
    uint amount0, 
    uint amount1
  ) external  {
    _startArbitrage(token0, token1, amount0, amount1);
  }

  function getPair(address token0, address token1) external view returns(address) {
    return IUniswapV2Factory(cheapFactory).getPair(token0, token1);
  }

  function getPairFor(address token0, address token1) external view returns(address) {
    return UniswapV2Library.pairFor(cheapFactory, token0, token1);
  }

  function _startArbitrage(
    address token0, 
    address token1, 
    uint amount0, 
    uint amount1
  ) private {
    address pairAddress = IUniswapV2Factory(cheapFactory).getPair(token0, token1);
    require(pairAddress != address(0), 'This pool does not exist');
    //On a cheap Xchange, borrow loan by swapping 0 tokenA to (x > 0) token B directly from the token pair contract
    IUniswapV2Pair(pairAddress).swap(
      amount0, 
      amount1, 
      address(this), 
      bytes('not empty')
    );
  }

  //The lender Xchange above then call this function with the amount that has been lent to this contract
  function pancakeCall(
    address _sender, 
    uint _amount0, 
    uint _amount1, 
    bytes calldata _data
  ) external {
    _onLendCall(_sender, _amount0, _amount1, _data);
  }
  function uniswapV2Call(
    address _sender, 
    uint _amount0, 
    uint _amount1, 
    bytes calldata _data
  ) external {
    _onLendCall(_sender, _amount0, _amount1, _data);
  }

  function _onLendCall(
    address _sender, 
    uint _amount0, 
    uint _amount1, 
    bytes calldata _data
  ) private {
    address[] memory path = new address[](2);
    //Get the token that we borrowed(token B)
    uint amountToken = _amount0 == 0 ? _amount1 : _amount0;
    
    address token0 = IUniswapV2Pair(msg.sender).token0();
    address token1 = IUniswapV2Pair(msg.sender).token1();

    //Make sure it is the token pair that is running the function
    require(
      msg.sender == UniswapV2Library.pairFor(cheapFactory, token0, token1), 
      'Unauthorized'
    ); 
    //Make sure that one of the amount is 0
    require(_amount0 == 0 || _amount1 == 0);

    //Create the swap path. The borrowed token(token B) must be at the index zero since 
    // we will be swapping it on the costly/sell Xchange to token A for profit
    path[0] = _amount0 == 0 ? token1 : token0;
    path[1] = _amount0 == 0 ? token0 : token1;

    //Initialise the token interface of the borrowd token
    IERC20 token = IERC20(_amount0 == 0 ? token1 : token0);

    //approve the sell Xchange to spend the borrowed token
    token.approve(address(sellRouter), amountToken);

    //Get the amount the borrowed token will give us for the zero tokens on the lender/cheap Xchange
    // This is the amount of the zero tokens we owe the xheap xchange
    uint amountRequired = UniswapV2Library.getAmountsIn(
      cheapFactory, 
      amountToken, 
      path
    )[0];
    //swap the borrowed token for the zero tokens
    uint amountReceived = sellRouter.swapExactTokensForTokens(
      amountToken, 
      amountRequired, 
      path, 
      msg.sender, 
      deadline
    )[1];

    //Initialise the zero tokens interface
    IERC20 otherToken = IERC20(_amount0 == 0 ? token0 : token1);
    //transfer back the zero tokens we owe the cheap Xchange
    otherToken.transfer(msg.sender, amountRequired);
    //Transfer the profit to the profit receiver
    otherToken.transfer(profitReceiver, amountReceived - amountRequired);
  }
}

