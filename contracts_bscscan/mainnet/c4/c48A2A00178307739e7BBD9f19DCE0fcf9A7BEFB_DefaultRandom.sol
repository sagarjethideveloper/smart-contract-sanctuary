import "../../../../3rdParty/@openzeppelin/contracts/access/Ownable.sol";
import "../../interfaces/IRandomAmount.sol";
import "../../../../3rdParty/@openzeppelin/contracts/utils/math/SafeMath.sol";
import "../../interfaces/IRandomNumberGenerator.sol";
import "../../interfaces/IPredictionOracle.sol";

contract DefaultRandom is Ownable,IRandomAmount{
    using SafeMath for uint256;
    uint256 constant BASE_DIVIDER = 10000;
    constructor(address rndGenerator,address predictOracle) Ownable(){
        randomGenerator = IRandomNumberGenerator(rndGenerator);
        predictionOracle = IPredictionOracle(predictOracle);
    }
    IRandomNumberGenerator public randomGenerator;
    IPredictionOracle public predictionOracle;
    event NewRandomGenerator(address indexed randomGenerator);
    
    function getRandomAmount(address account,uint256 remainAmount,uint256 remainUser,uint256 mini) override
        external view returns(uint256){
        if (remainUser==1){
            return remainAmount;
        }
        if (remainAmount <= remainUser.mul(mini)){
            return mini;
        }   
        uint256 sum = predictionOracle.latestTimestamp();
        sum = sum.add(uint256(uint160(address(account))));
        bytes32 computedHash = keccak256(abi.encodePacked(sum));
        sum = uint256(computedHash);

        sum = sum.add(block.number);
        computedHash = keccak256(abi.encodePacked(sum));
        sum = uint256(computedHash);
        sum = sum.add(randomGenerator.viewRandomResult());
        
        sum = sum.mod(BASE_DIVIDER);
        uint256 avg = remainAmount.mul(2).div(remainUser);
        avg = avg.mul(sum).div(BASE_DIVIDER);
        if (avg<mini) return mini;
        return avg;
    }

    function changePredictionOracle(address _predictionOracle)public onlyOwner{
        IPredictionOracle(_predictionOracle).latestTimestamp();
        predictionOracle = IPredictionOracle(_predictionOracle);
    }
    /**
     * @notice Change the random generator
     * @dev The calls to functions are used to verify the new generator implements them properly.
     * It is necessary to wait for the VRF response before starting a round.
     * Callable only by the contract owner
     * @param _randomGeneratorAddress: address of the random generator
     */
    function changeRandomGenerator(address _randomGeneratorAddress) public onlyOwner {
        // // require(_lotteries[currentLotteryId].status == Status.Claimable, "Lottery not in claimable");

        // // Request a random number from the generator based on a seed
        // //uint256(keccak256(abi.encodePacked(currentLotteryId, currentTicketId)))
        // IRandomNumberGenerator(_randomGeneratorAddress).getRandomNumber(
        //     uint256(keccak256(abi.encodePacked('0', '1')))
        // );
        // Calculate the finalNumber based on the randomResult generated by ChainLink's fallback
        IRandomNumberGenerator(_randomGeneratorAddress).viewRandomResult();
        randomGenerator = IRandomNumberGenerator(_randomGeneratorAddress);
        emit NewRandomGenerator(_randomGeneratorAddress);
    }
}

