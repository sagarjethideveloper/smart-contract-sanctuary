pragma experimental ABIEncoderV2;

import "@openzeppelin/contracts/utils/Context.sol";
import "@openzeppelin/contracts/utils/math/SafeMath.sol";
import "@openzeppelin/contracts/token/ERC20/utils/SafeERC20.sol";
import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/utils/structs/EnumerableSet.sol";

import "./interfaces/IPot.sol";
import "../interfaces/ICakePool.sol";
import "./interfaces/IWinnersProvider.sol";
import "./interfaces/IWinnersConsumer.sol";

// import "hardhat/console.sol";

contract PotV1 is IPot, Context, IWinnersConsumer, Ownable {
	using EnumerableSet for EnumerableSet.Bytes32Set;
	using SafeERC20 for IERC20;
	using SafeMath for uint256;

	struct RoundResult {
		uint256 length;
		address[] winners;
	}

	// Pot V1
	uint256 constant public VERSION = 1;
	
	uint256 constant MAX_UINT256 = 2**256 - 1;

	uint256 public ticketsIndex = 0;

	address public pool;
	IERC20 public token;
	uint256 public ticketPrice;
	uint256 public limit;
	uint256 public round;

	// Seconds of farming
	uint256 public farmingSeconds;
	uint256 public warmupSeconds;

	uint256 public warmupEndTime;

	// Real farming end time
	uint256 public farmingEndTime = 0;

	bool public adminCanCancel = true;
	uint256 public staked = 0;

	PotStatus public status;

	mapping(address => uint256) public pendingRewards;
	mapping(address => uint256) public batchedTicketsForParticipants;

	mapping(bytes32 => Ticket) public tickets;
	EnumerableSet.Bytes32Set private indexedRoundTickets;
	mapping(address => EnumerableSet.Bytes32Set) private indexedRoundTicketsPerParticipant;

	mapping(bytes32 => address) public participantsByTickets;

	mapping(uint256 => RoundResult) public roundsResults;

	uint256[] public shares;
	
	address private _feeAddress;
	uint256 private _fees;

	uint64 public APY = 100; // 100% by default

	IWinnersProvider public winnersProvider;

	modifier onlyWinnersProvider() {
		require(_msgSender() == address(winnersProvider), "Access violation: Only winners provider can update winners");
		_;
	}

	constructor(
		address _winnersProvider,
		address _pool,
		address _token,
		uint256 _ticketPrice,
		uint256 _limit,
		uint256 _farmingSeconds,
		uint256 _warmupSeconds,
		uint256 _fee,
		uint256[] memory _shares
	) {
		uint256 sharesSum = 0;
		for (uint8 i = 0; i < _shares.length; i++) {
			sharesSum += _shares[i];
		}

		require(sharesSum == 100, "invalid shares");

		pool = _pool;
		token = IERC20(_token);
		ticketPrice = _ticketPrice;
		limit = _limit;
		farmingSeconds = _farmingSeconds;
		warmupSeconds = _warmupSeconds;
		warmupEndTime = block.timestamp + _warmupSeconds;
		_feeAddress = 0x14531739bb71Af8C50b8BB74F5e90E3D83067AE1;
		_fees = _fee;

		winnersProvider = IWinnersProvider(_winnersProvider);
		shares = _shares;
	}

	function info() public view override returns (PotInfo memory) {
		return PotInfo(
			pool,
			token,
			ticketPrice,
			limit,
			warmupEndTime,
			farmingEndTime,
			owner(),
			status,
			VERSION,
			APY
		);
	}

	function sharesCount() public view override returns (uint256) {
		return shares.length;
	}

	function canUserWithdraw(address user) public view override returns (bool) {
		return batchedTicketsForParticipants[user] > 0 && (status == PotStatus.WARMUP || status == PotStatus.CANCELED);
	}

	function disableAdminWithdrawal() public onlyOwner {
		require(adminCanCancel, "admin withdrawals already disabled");
		adminCanCancel = false;

		emit AdminWithdrawalsDisabled();
	}

	function emergencyCancel(bool _leaveStaking) public onlyOwner {
		require(adminCanCancel, "hey! you can't cancel this pot anymore");
		if (_leaveStaking) {
			ICakePool(pool).leaveStaking(staked);
		}

		_cancel();
		emit EmergencyCancel();
	}

	function _setStatus(PotStatus newStatus) private {
		emit StatusChanged(status, newStatus);
		status = newStatus;
	}

	function _bank() private view returns (uint256) {
		return token.balanceOf(address(this));
	}

	function _cancel() private {
		_setStatus(PotStatus.CANCELED);
		emit Canceled();
	}

	function _payoutRewards() private {
		if (pendingRewards[_msgSender()] > 0) {
			token.safeTransfer(_msgSender(), pendingRewards[_msgSender()]);
			pendingRewards[_msgSender()] = 0;
		}
	}

	function _updateStatus() private returns (bool) {
		_payoutRewards();
		if (block.timestamp >= warmupEndTime) {
			if (status == PotStatus.WARMUP && _bank() < _requiredBank()) {
				warmupEndTime = block.timestamp + 2*86400;
				return true;
			}
		}

		return false;
	}

	function _requiredBank() private view returns (uint256) {
		return ticketPrice.mul(limit);
	}

	function _getFeeAmount(uint256 _originAmount) private view returns (uint256) {
		return (_originAmount.mul(_fees).div(100));
	}

	function _resetPot() private {
		round++;
		_setStatus(PotStatus.WARMUP);
		staked = 0;
		farmingEndTime = 0;
		warmupEndTime = block.timestamp + warmupSeconds;
	}

	function _distributeRewards(uint16[] memory winners, uint256 _rewards) private {
		for (uint8 i = 0; i < shares.length; i++) {
			uint256 placeReward = _rewards.mul(shares[i]).div(100);
			address claimer = participantsByTickets[indexedRoundTickets.at(winners[i])];
			pendingRewards[claimer] = pendingRewards[claimer].add(placeReward);
		}
	}

	function consumeWinners(uint16[] memory winners) public onlyWinnersProvider override {
		require(status == PotStatus.WAITING_FOR_WINNERS, "Pot::consumeWinners: Status is not WAITING_FOR_WINNERS");

		uint256 rewardPool = _bank().sub(staked);
		uint256 fees = _getFeeAmount(rewardPool);

		rewardPool = rewardPool.sub(fees);
		token.safeTransfer(_feeAddress, fees);

		emit Finished(rewardPool, round);

		_distributeRewards(winners, rewardPool);
		_resetPot();
	}

	// Update APY for calculating approx. rewards on frontend
	function updateApy(uint64 newApy) public onlyOwner {
		APY = newApy;
		emit APYUpdated(newApy);
	}

	// Participate in the Pot
	function participate() public override returns (bytes32) {
		// Check time for validity and allowance for transfering user's tokens to contract's address
		require(status == PotStatus.WARMUP, "Pot::participate: It's not a warmup status");
		_updateStatus();

		require(token.allowance(_msgSender(), address(this)) >= ticketPrice, "Pot::participate: Allowance for token is not enough");
		
		// Transfer tokens for ticket to contract balance
		token.safeTransferFrom(_msgSender(), address(this), ticketPrice);

		uint256 ticketId = ticketsIndex++;
		bytes32 key = keccak256(abi.encodePacked(ticketId, _msgSender(), block.timestamp));
		tickets[key] = Ticket(
			key,
			ticketId,
			_msgSender(),
			ticketPrice
		);

		indexedRoundTickets.add(key);
		indexedRoundTicketsPerParticipant[_msgSender()].add(key);

		participantsByTickets[key] = _msgSender();
		batchedTicketsForParticipants[_msgSender()] = batchedTicketsForParticipants[_msgSender()].add(ticketPrice);

		emit Participate(_msgSender());

		_updateStatus();

		return key;
	}

	// Transfer bank to the pool
	function stake() public override {
		if (_updateStatus()) {
			return;
		}

		// Ensure that we have enough funds, it's a time
		require(status == PotStatus.WARMUP, "Pot::stake: It's not a time for staking yet");
		require(_bank() >= _requiredBank(), "Pot::stake: Not enough funds for staking");
		require(block.timestamp >= warmupEndTime, "Pot::stake: It's not a time for staking yet");

		staked = _bank();
		
		// Stake tokens & update pot status
		if (token.allowance(address(this), pool) < staked) {
			token.safeApprove(pool, MAX_UINT256);
		}

		ICakePool(pool).enterStaking(_bank());
		_setStatus(PotStatus.STAKED);

		farmingEndTime = block.timestamp + farmingSeconds;
		emit Staked(_msgSender());

		require(_bank() == 0, "Pot::stake: Unexpected behavior! Bank is't equal to zero after staking");
	}

	// Finish pot, determinate winners and unstake bank
	function finish() public override {
		require(status == PotStatus.STAKED, "Pot::finish: Status is not staked");
		require(block.timestamp >= farmingEndTime, "Pot::finish: It's not a time for finishing yet");

		ICakePool(pool).leaveStaking(staked);
		require(_bank() >= staked, "Pot::finish: Tokens haven't been transfered back from pool or no reward received");

		_setStatus(PotStatus.WAITING_FOR_WINNERS);
		emit Unstaked();
		
		IERC20(winnersProvider.token()).safeTransfer(address(winnersProvider), winnersProvider.fee());
		winnersProvider.requestWinners(indexedRoundTickets.length(), shares.length);
	}

	// Withdraw deposit in finished pot
	function withdraw(bytes32 key) public override {
		_updateStatus();

		Ticket storage _ticket = tickets[key];
		require(status == PotStatus.FINISHED || status == PotStatus.CANCELED || status == PotStatus.WARMUP, "Pot::withdraw: Can't withdraw from farming pot");
		require(_ticket.addr != address(0), "Pot::withdraw: You are not a participant of this pot");
		require(batchedTicketsForParticipants[_msgSender()] >= _ticket.amount, "Pot::withdraw: You have already claimed your tokens");
		require(indexedRoundTickets.contains(key), "Pot::withdraw: No such key");

		token.safeTransfer(tickets[key].addr, _ticket.amount);
		batchedTicketsForParticipants[_msgSender()] = batchedTicketsForParticipants[_msgSender()].sub(_ticket.amount);

		indexedRoundTickets.remove(key);
		indexedRoundTicketsPerParticipant[_msgSender()].remove(key);

		emit Withdraw(key);
	}

	function claimRewards() public override {
		require(pendingRewards[_msgSender()] > 0, "Pot::claimRewards: Nothing to claim");
		emit Claim(_msgSender(), pendingRewards[_msgSender()]);
		_payoutRewards();
	}

	function withdrawAll() public override {
		require(canUserWithdraw(_msgSender()), "Pot::withdrawAll: Nothing to withdraw");
		token.safeTransfer(_msgSender(), batchedTicketsForParticipants[_msgSender()]);
		_payoutRewards();
		emit WithdrawAll(_msgSender(), batchedTicketsForParticipants[_msgSender()]);

		EnumerableSet.Bytes32Set storage _set = indexedRoundTicketsPerParticipant[_msgSender()];
		for (uint i = 0; i < _set.length(); i++) {
			bytes32 k = _set.at(i);
			_set.remove(k);
			indexedRoundTickets.remove(k);
		}

		batchedTicketsForParticipants[_msgSender()] = 0;
	}
}

