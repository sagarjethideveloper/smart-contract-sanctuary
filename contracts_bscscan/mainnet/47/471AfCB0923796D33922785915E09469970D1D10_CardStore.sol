pragma solidity ^0.8.0;

import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/security/ReentrancyGuard.sol";
import "@openzeppelin/contracts/token/ERC20/utils/SafeERC20.sol";
import "@openzeppelin/contracts/token/ERC721/IERC721.sol";
import "@openzeppelin/contracts/token/ERC721/extensions/IERC721Enumerable.sol";

interface IPoker {
    function create(address to, uint8 rank, uint8 suit, uint8 level, uint32 hashRate) external returns (uint256 tokenId);
}

interface ISlotStore {
    function opening() external view returns (uint256);
    function round() external view returns (uint256);
    function roundSales(uint256 numberOfRound) external view returns (uint256);
}

contract CardStore is Ownable, ReentrancyGuard {
    using SafeERC20 for IERC20;

    address public immutable poker;

    address private _receiveToken;
    address private _fundReceiver;

    ISlotStore private _slotStore;

    bool private _drawClosed = false;

    uint256 private _randomNonce = 0;

    uint256 private _countSuits = 2;
    uint256 private _invateNum = 100000;

    uint256 private _totalSales = 0;

    mapping(uint256 => uint256) private _dailySales;
    mapping(uint256 => uint256) private _roundSales;

    mapping(address => address) private _referrers;
    mapping(address => uint256) private _referrerDraws;

    mapping(uint256 => uint256[5]) private _percentOfRanks;

    event Purchased(address indexed account, address indexed referrer, uint256 tokenId);
    event Drawn(address indexed account, uint256 tokenId);

    constructor(address poker_) {
        poker = poker_;

        _fundReceiver = _msgSender();

        _percentOfRanks[1] = [70, 10, 10, 9, 1];
        _percentOfRanks[2] = [70, 5, 5, 15, 5];
        _percentOfRanks[3] = [77, 8, 1, 8, 6];
        _percentOfRanks[4] = [75, 15, 3, 3, 4];
        _percentOfRanks[5] = [1, 30, 30, 19, 20];
        _percentOfRanks[6] = [53, 14, 14, 1, 18];
        _percentOfRanks[7] = [47, 17, 18, 17, 1];
        _percentOfRanks[8] = [28, 1, 13, 23, 35];
        _percentOfRanks[9] = [1, 37, 3, 55, 4];
        _percentOfRanks[10] = [35, 12, 35, 18, 0];
    }

    function receiveToken() public view returns (address) {
        return _receiveToken;
    }

    function setReceiveToken(address value) external onlyOwner {
        _receiveToken = value;
    }

    function fundReceiver() public view returns (address) {
        return _fundReceiver;
    }

    function setFundReceiver(address value) external onlyOwner {
        _fundReceiver = value;
    }

    function slotStore() public view returns (ISlotStore) {
        return _slotStore;
    }

    function setSlotStore(address value) external onlyOwner {
        _slotStore = ISlotStore(value);
    }

    function countSuits() public view returns (uint256) {
        return _countSuits;
    }

    function setCountSuits(uint256 value) external onlyOwner {
        require(value <= 4, "Invalid parameters");
        _countSuits = value;
    }

    function drawClosed() public view returns (bool) {
        return _drawClosed;
    }

    function closeDraw() external onlyOwner {
        _drawClosed = true;
    }

    function totalSales() public view returns (uint256) {
        return _totalSales;
    }

    function dailySales(uint256 numberOfDays) public view returns (uint256) {
        return _dailySales[numberOfDays];
    }

    function referrers(address account) public view returns (address) {
        return _referrers[account];
    }

    function referrerDraws(address account) public view returns (uint256) {
        return _referrerDraws[account];
    }

    function today() public view returns (uint256) {
        return ((block.timestamp - (_slotStore.opening())) / 1 days) + 1;
    }

    function period() public view returns (uint256) {
        uint256 tempPeriod = today() % 10;
        return tempPeriod > 0 ? tempPeriod : 10;
    }

    function todaySupply() public view returns (uint256) {
        if (_slotStore.round() == 0) {
            return 0;
        }

        uint256 round = _slotStore.round() % 2 == 0 ? 2 : 1;
        uint256 lastRound = _slotStore.round() - round;
        uint256 totalSupply = 5 * _slotStore.roundSales(lastRound);
        if (totalSupply < 1) {
            uint256 temp;
            uint256 usedCard;
            for (uint256 i = _slotStore.round() - 1; i >= 0; i--) {
                if (_slotStore.roundSales(i) > 0) {
                    temp = 5 * _slotStore.roundSales(i);
                    break;
                }
                usedCard += _roundSales[i];
            }
            totalSupply = temp > usedCard ? temp - usedCard : 0;
        }

        if (totalSupply < 30) {
            return totalSupply;
        }

        uint256 numberOfPeriod = period();
        if (numberOfPeriod % 5 == 0) {
            return totalSupply / 30;
        }

        return (totalSupply * (6 - (numberOfPeriod % 5))) / 30;
    }

    function price() public view returns (uint256) {
        return 30 ether + period() * 10 ether;
    }

    function purchase(address referrer) external nonReentrant {
        require(_slotStore.round() > 0, "Not yet on sale");

        uint256 numberOfDays = today();
        require(_dailySales[numberOfDays] < todaySupply(), "Insufficient supply");

        address account = _msgSender();
        require(account != referrer, "Can't invitation myself");

        if (_referrers[account] == address(0)) {
            _referrers[account] = referrer;
        }

        if (referrer != address(0) && _referrers[account] == referrer && IERC721(poker).balanceOf(referrer) >= 1 && _invateNum > 0) {
            if (_drawClosed == false) {
                _referrerDraws[referrer]++;
                _invateNum--;
            }
        }

        (uint8 rank, uint8 suit, uint32 hashRate) = _generateCardProperties();
        uint256 tokenId = IPoker(poker).create(account, rank, suit, 0, hashRate);

        _dailySales[numberOfDays]++;

        _roundSales[_slotStore.round()]++;

        _totalSales++;

        uint256 payment = price();
        IERC20(_receiveToken).safeTransferFrom(account, address(this), payment);
        IERC20(_receiveToken).safeTransfer(_fundReceiver, payment);

        emit Purchased(account, referrer, tokenId);
    }

    function draw() external nonReentrant {
        address account = _msgSender();
        require(_referrerDraws[account] > 0, "Insufficient draws");

        _referrerDraws[account]--;

        uint256 tokenId = 0;

        uint256 random = _random(100);
        if (random >= 80) {
            uint8 rank;
            if (random >= 80) {
                rank = 5;
            } else {
                rank = 3;
            }
            uint8 suit = uint8(_random(_countSuits));

            tokenId = IPoker(poker).create(account, rank, suit, 0, 10 * rank);
        }

        emit Drawn(account, tokenId);
    }

    function _generateCardProperties() internal returns (uint8 rank, uint8 suit, uint32 hashRate) {
        uint256 totalSupply = IERC721Enumerable(poker).totalSupply();
        if (totalSupply > 0 && (totalSupply % 1000) == 0) {
            return (0, 1, 200);
        } else if (totalSupply > 0 && (totalSupply % 500) == 0) {
            return (0, 0, 100);
        }

        uint256 numberOfPeriod = period();
        uint256 random = _random(100);

        uint8[5] memory ranks = [1, 2, 3, 4, 5];

        uint256 percentage = 0;
        for (uint256 i = 0; i < ranks.length; i++) {
            uint256 tempRank = (uint256(ranks[i]) + numberOfPeriod) % 14;
            if (tempRank == 0) {
                ranks[i] = 1;
            } else {
                ranks[i] = uint8(tempRank);
            }

            percentage += _percentOfRanks[numberOfPeriod][i];
            if (random <= percentage) {
                rank = ranks[i];
                break;
            }
        }

        suit = uint8(random % _countSuits);

        if (rank == 1) {
            hashRate = 150;
        } else {
            hashRate = 10 * rank;
        }
    }

    function _random(uint256 modulus) internal returns (uint256) {
        _randomNonce++;
        return uint256(keccak256(abi.encodePacked(_randomNonce, block.difficulty, _msgSender()))) % modulus;
    }
}

