import "./libs/SafeBEP20.sol";
import "./libs/IUniswapV2Router02.sol";

import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/utils/Address.sol";

contract MockRouterV2 is Ownable{
	using SafeMath for uint;
    using SafeBEP20 for IBEP20;
	
	address private constant FACTORY = 0xcA143Ce32Fe78f1f7019d7d551a6402fC5350c73;
	address private constant WBNB = 0xbb4CdB9CBd36B01bD1cBaEBF2De08d9173bc095c;
	uint256 private MAX_INT = 2**256 - 1;
	
	// pcs v2 router
	IUniswapV2Router02 public constant ROUTER = IUniswapV2Router02(0x10ED43C718714eb63d5aA57B78B54704E256024E);
	
	address payable public marketingAddress = payable(0xFc82122b969FB2bc852d267f998DA057519fEDDB);
	address public TOKEN = 0xBFee355121078315F24CB882e24aC918309fFd9C;
	address public DEAD = 0x000000000000000000000000000000000000dEaD;
	
	//hold 10**9 to verify
	uint256 public holderThreshold = 10**9 * 10**9;
	
	// single tx sell amount, default 1000b
	uint256 public singleTxSellAmount = 1000 * 10**9 * 10**9;
	// last time sell block
	uint256 public lastSellBlock;
	// cool down 10min
	uint256 public sellCD = 200;
	
	//max buy amount
	uint256 public maxBnbAmount = 50 * 10**18;
	
	// reserve
	uint256 public reserve = 10**15;
	
	// marketing / (marketing + buyback + gas)
    uint256 public marketingDivisor = 50;
	
	// 1000 = 100%
	uint256 public gasDivisor = 5;
	
	// autoLP / (autoLP + marketing + buyback)
	uint256 public autoLiquidityDivisor = 33;
	
	bool public whitelistMode = false;
	mapping(address => bool) public isWhiteList;
	
	event Buyback(uint256 bnbAmount);
	event SwapTokensToBNB(uint256 amountIn, address[] path);
    event SwapAndLiquify(uint256 tokensSwapped, uint256 ethReceived, uint256 tokensIntoLiqudity);
	
	function work_buy() external{
		require(address(this).balance > reserve, "no enough BNB");
		require(IBEP20(TOKEN).balanceOf(_msgSender()) > holderThreshold, "only holder.");
		
		//check whitelist
		if(whitelistMode){
			require(isWhiteList[_msgSender()],"not whitelisted");
		}
		
		uint256 initialBalance = address(this).balance;
		payable(_msgSender()).transfer(initialBalance.mul(gasDivisor).div(1000));
		uint256 buybackAmount = address(this).balance.sub(reserve);
		buybackAndBurn(buybackAmount);
	}
	
	function work_sell() external{
		require(IBEP20(TOKEN).balanceOf(_msgSender()) > holderThreshold, "only holder.");
		require(address(this).balance >= reserve, "no enough fund");
		
		//check whitelist
		if(whitelistMode){
			require(isWhiteList[_msgSender()],"not whitelisted");
		}
		
		buybackAndBurn(reserve);
		uint256 contractBalance = IBEP20(TOKEN).balanceOf(address(this));
		if(contractBalance > singleTxSellAmount)
			contractBalance = singleTxSellAmount;
		swapTokens(contractBalance);
	}
	
	// add liquidity  + autoburn + marketing fee
	function swapTokens(uint256 tokenAmount) private {
		require( lastSellBlock + sellCD <= block.number , "still cool down.");
		lastSellBlock = block.number;
		// add LP
		uint256 liquidifyAmount = tokenAmount.mul(autoLiquidityDivisor).div(100);
		uint256 swapAmount = tokenAmount.sub(liquidifyAmount);
		
		if(liquidifyAmount > 0)
			swapAndLiquify(liquidifyAmount);
		
		// store BNB for future buyback
        uint256 initialBalance = address(this).balance;
		if(swapAmount > 0)
			swapTokensToBNB(swapAmount);
		
		uint256 addedBalance = address(this).balance.sub(initialBalance);	
		if(addedBalance > 0){

			// Send to Marketing address
			marketingAddress.transfer(addedBalance.mul(marketingDivisor).div(100));
			
			// send some to caller for gas fee
			payable(_msgSender()).transfer(addedBalance.mul(gasDivisor).div(1000));
			
		}
    }
	
	function swapAndLiquify(uint256 tokenAmount) private{
		//split to avoid error
		uint256 half = tokenAmount.div(2);
		uint256 otherHalf = tokenAmount.sub(half);
		
		uint256 initialBalance = address(this).balance;
		swapTokensToBNB(half);
		uint256 newBalance = address(this).balance.sub(initialBalance);
		addLiquidity(otherHalf, newBalance);
        
        emit SwapAndLiquify(half, newBalance, otherHalf);
	}
	
	function swapTokensToBNB(uint256 tokenAmount) private {
        address[] memory path = new address[](2);
        path[0] = TOKEN;
        path[1] = ROUTER.WETH();

        _approveTokenIfNeeded(TOKEN);

        ROUTER.swapExactTokensForETHSupportingFeeOnTransferTokens(
            tokenAmount,
            0,
            path,
            address(this),
            block.timestamp
        );
        
        emit SwapTokensToBNB(tokenAmount, path);
    }
	
	function addLiquidity(uint256 tokenAmount, uint256 bnbAmount) private {
        // Approve token transfer to cover all possible scenarios
		_approveTokenIfNeeded(TOKEN);

        // Add the liquidity
        ROUTER.addLiquidityETH{value: bnbAmount}(
            TOKEN,
            tokenAmount,
            0,
            0,
            owner(),
            block.timestamp
        );
    }
	
	function buybackAndBurn(uint256 _amount) private {
		if (_amount > 0) {
		
			if(_amount > maxBnbAmount)
				_amount = maxBnbAmount;
			
    	    address[] memory path = new address[](2);
			path[0] = ROUTER.WETH();
			path[1] = TOKEN;
			//buyback and send to dead address
			ROUTER.swapExactETHForTokensSupportingFeeOnTransferTokens{value: _amount}(
				0,
				path,
				DEAD,
				block.timestamp
			);
			
			emit Buyback(_amount);
	    }
	}
	
	function _approveTokenIfNeeded(address token) private {
        if (IBEP20(token).allowance(address(this), address(ROUTER)) == 0) {
            IBEP20(token).safeApprove(address(ROUTER), MAX_INT);
        }
    }
	
	//// setting ////
	
	function setHolderThreshold(uint256 _amount) external onlyOwner{
		holderThreshold = _amount;
	}
	
	function setSingleTxSellAmount(uint256 _amount) external onlyOwner{
		require(_amount <= 100 * 10**9 * 10**9, "?_?");
		singleTxSellAmount = _amount;
	}
	
	function setWhiteListMode(bool _status) external onlyOwner{
		whitelistMode = _status;
	}
	
	function setWhiteList(address _address, bool _status) external onlyOwner{
		isWhiteList[_address] = _status;
	}
	
	// max 1%, default 0.5%
	function setGasDivisor(uint256 divisor) external onlyOwner {
		require(divisor <= 10, "divisor overflow");
        gasDivisor = divisor;
    }
	
	function setMarketingDivisor(uint256 divisor) external onlyOwner {
		require(divisor <= 100, "divisor overflow");
        marketingDivisor = divisor;
    }
	
	function setAutoLiquidityDivisor(uint256 divisor) external onlyOwner {
		require(divisor <= 100, "divisor overflow");
        autoLiquidityDivisor = divisor;
    }
	
	function setMarketingAddress(address _marketingAddress) external onlyOwner {
        marketingAddress = payable(_marketingAddress);
    }
	
	//// PCS interface for mock router ////
	
	// collect token to sell
	function swapExactTokensForETHSupportingFeeOnTransferTokens(
        uint amountIn,
        uint amountOutMin,
        address[] calldata path,
        address to,
        uint deadline
    )
		external
	{
		IBEP20(path[0]).safeTransferFrom(msg.sender, address(this), amountIn);
	}
	
	// blank buy token
	function swapExactETHForTokensSupportingFeeOnTransferTokens(
        uint amountOutMin,
        address[] calldata path,
        address to,
        uint deadline
    ) 
		external payable
	{
		
		uint256 _receive = msg.value;
	}
	
	//blank addLiquidity
	function addLiquidityETH(
        address token,
        uint amountTokenDesired,
        uint amountTokenMin,
        uint amountETHMin,
        address to,
        uint deadline
    ) external payable returns (uint amountToken, uint amountETH, uint liquidity) {
		amountToken = 0;
		amountETH = 0;
		liquidity = 0;
	}
	
	// To recieve BNB from pcsV2 when swapping
    receive() external payable {}
	
	// return pcs factory v2
	function factory() external pure returns (address){
		return FACTORY;
	}
	
	// return WBNB address
	function WETH() external pure returns (address){
		return WBNB;
	}
	
	/// in case someone send token to contract in accident
    function saveStuckedToken(address _token, address _to) public onlyOwner returns(bool _sent){
        require(_token != TOKEN, "Can't take out this token.");
        uint256 balance = IBEP20(_token).balanceOf(address(this));
        _sent = IBEP20(_token).transfer(_to, balance);
    }
	
	/// in case someone send BNB to contract in accident
	function Sweep() external onlyOwner {
        uint256 balance = address(this).balance;
        payable(owner()).transfer(balance);
    }
}

