contract BiswapAlbertaETHLP is IAlberta, Ownable, ReentrancyGuard {
    using SafeERC20 for IERC20;
    using Address for address payable;

    address public constant WBNB = 0xbb4CdB9CBd36B01bD1cBaEBF2De08d9173bc095c;
    address public constant ETH = 0x2170Ed0880ac9A755fd29B2688956BD959F933F8;

    IBiswapFactory public constant FACTORY = IBiswapFactory(0x858E3312ed3A876947EA49d572A7C42DE08af7EE);
    IBiswapRouter02 public constant ROUTER = IBiswapRouter02(0x3a6d8cA21D1CF76F653A67577FA0D27453350dD8);

    constructor() {
        IERC20(ETH).safeApprove(address(ROUTER), type(uint256).max); // 100% trust in the router
    }

    function resetApprove() external {
        IERC20(ETH).safeApprove(address(ROUTER), 0);
        IERC20(ETH).safeApprove(address(ROUTER), type(uint256).max);
    }

    /// @dev Compute optimal deposit amount
    /// @param amtA amount of token A desired to deposit
    /// @param amtB amonut of token B desired to deposit
    /// @param resA amount of token A in reserve
    /// @param resB amount of token B in reserve
    function optimalDeposit(
        uint256 amtA,
        uint256 amtB,
        uint256 resA,
        uint256 resB,
        uint32 swapFee
    ) internal pure returns (uint256 swapAmt, bool isReversed) {
        if (amtA * resB >= amtB * resA) {
            swapAmt = _optimalDepositA(amtA, amtB, resA, resB, swapFee);
            isReversed = false;
        } else {
            swapAmt = _optimalDepositA(amtB, amtA, resB, resA, swapFee);
            isReversed = true;
        }
    }

    /// @dev Compute optimal deposit amount helper
    /// @param amtA amount of token A desired to deposit
    /// @param amtB amonut of token B desired to deposit
    /// @param resA amount of token A in reserve
    /// @param resB amount of token B in reserve
    /// @param swapFee 1 mean 0.1%
    function _optimalDepositA(
        uint256 amtA,
        uint256 amtB,
        uint256 resA,
        uint256 resB,
        uint32 swapFee
    ) private pure returns (uint256) {
        require(amtA * resB >= amtB * resA, "Reversed");

        uint256 a = 1000 - swapFee;
        uint256 b = (2000 - swapFee) * resA;
        uint256 _c = (amtA * resB) - (amtB * resA);
        uint256 c = ((_c * 1000) / (amtB + resB)) * resA;

        uint256 d = a * c * 4;
        uint256 e = Math.sqrt((b * b) + d);

        uint256 numerator = e - b;
        uint256 denominator = a * 2;

        return numerator / denominator;
    }

    function add(
        address _paidToken,
        address _wantToken,
        address _to,
        uint256 _amountIn,
        uint256 _maxPriceImpact
    ) external payable override nonReentrant {
        IBiswapPair lpToken = IBiswapPair(_wantToken);
        address otherToken = lpToken.token0() == ETH ? lpToken.token1() : lpToken.token0();

        // Preparing ETH or farming tokens
        if (_paidToken == ETH) {
            IERC20(ETH).safeTransferFrom(msg.sender, address(this), _amountIn);
        } else if (_paidToken == otherToken) {
            IERC20(otherToken).safeTransferFrom(msg.sender, address(this), _amountIn);
        } else if (_paidToken == address(0)) {
            // paid == BNB
            address[] memory pathBnbToEth = new address[](2);
            (pathBnbToEth[0], pathBnbToEth[1]) = (WBNB, ETH);

            uint256 bnbBal = address(this).balance;
            _safePriceImpactSwap(bnbBal, pathBnbToEth, _maxPriceImpact);
            ROUTER.swapExactETHForTokens{value: bnbBal}(0, pathBnbToEth, address(this), block.timestamp);
        } else {
            // paid == others
            IERC20(_paidToken).safeTransferFrom(msg.sender, address(this), _amountIn);

            address[] memory pathToPaid = new address[](3);
            (pathToPaid[0], pathToPaid[1], pathToPaid[2]) = (_paidToken, WBNB, ETH);

            IERC20(_paidToken).safeApprove(address(ROUTER), 0);
            IERC20(_paidToken).safeApprove(address(ROUTER), type(uint256).max);

            uint256 paidBal = IERC20(_paidToken).balanceOf(address(this));
            _safePriceImpactSwap(paidBal, pathToPaid, _maxPriceImpact);
            ROUTER.swapExactTokensForTokens(paidBal, 0, pathToPaid, address(this), block.timestamp);
        }

        // Compute the optimal amount of ETH and otherToken to be converted.
        uint256 swapAmt;
        bool isReversed;
        {
            (uint256 r0, uint256 r1, ) = lpToken.getReserves();
            (uint256 ethReserve, uint256 otherReserve) = lpToken.token0() == ETH ? (r0, r1) : (r1, r0);
            uint32 swapFee = lpToken.swapFee();
            (swapAmt, isReversed) = optimalDeposit(
                IERC20(ETH).balanceOf(address(this)),
                IERC20(otherToken).balanceOf(address(this)),
                ethReserve,
                otherReserve,
                swapFee
            );
        }

        // Convert between ETH and farming tokens
        IERC20(otherToken).safeApprove(address(ROUTER), 0);
        IERC20(otherToken).safeApprove(address(ROUTER), type(uint256).max);
        address[] memory path = new address[](2);
        (path[0], path[1]) = isReversed ? (otherToken, ETH) : (ETH, otherToken);

        _safePriceImpactSwap(swapAmt, path, _maxPriceImpact);
        ROUTER.swapExactTokensForTokens(swapAmt, 0, path, address(this), block.timestamp);

        // Mint more LP tokens and return all LP tokens to the sender.
        ROUTER.addLiquidity(
            ETH,
            otherToken,
            IERC20(ETH).balanceOf(address(this)),
            IERC20(otherToken).balanceOf(address(this)),
            0,
            0,
            _to,
            block.timestamp
        );
    }

    function remove(
        address _paidToken,
        address _wantToken,
        address _to,
        uint256 _amountIn,
        uint256 _maxPriceImpact
    ) external payable override nonReentrant {
        IERC20(_wantToken).safeTransferFrom(msg.sender, address(this), _amountIn);

        IBiswapPair lpToken = IBiswapPair(_wantToken);
        address otherToken = lpToken.token0() == ETH ? lpToken.token1() : lpToken.token0();

        // Remove all liquidity back to ETH and farming tokens.
        lpToken.approve(address(ROUTER), type(uint256).max);
        ROUTER.removeLiquidity(ETH, otherToken, lpToken.balanceOf(address(this)), 0, 0, address(this), block.timestamp);

        // Convert farming tokens to ETH.
        address[] memory pathToEth = new address[](2);
        (pathToEth[0], pathToEth[1]) = (otherToken, ETH);

        IERC20(otherToken).safeApprove(address(ROUTER), 0);
        IERC20(otherToken).safeApprove(address(ROUTER), type(uint256).max);

        uint256 otherBal = IERC20(otherToken).balanceOf(address(this));
        _safePriceImpactSwap(otherBal, pathToEth, _maxPriceImpact);
        ROUTER.swapExactTokensForTokens(otherBal, 0, pathToEth, address(this), block.timestamp);

        // Return all back to the original caller.
        if (_paidToken == ETH) {
            IERC20(ETH).safeTransfer(_to, IERC20(ETH).balanceOf(address(this)));
        } else if (_paidToken == address(0)) {
            // paid == BNB
            address[] memory pathToBnb = new address[](2);
            pathToBnb[0] = ETH;
            pathToBnb[1] = WBNB;

            uint256 ethBal = IERC20(ETH).balanceOf(address(this));
            _safePriceImpactSwap(ethBal, pathToBnb, _maxPriceImpact);
            ROUTER.swapExactTokensForETH(ethBal, 0, pathToBnb, _to, block.timestamp);
        } else {
            // ETH to paid token
            address[] memory pathToPaid = new address[](3);
            (pathToPaid[0], pathToPaid[1], pathToPaid[2]) = (ETH, WBNB, _paidToken);

            uint256 ethBal = IERC20(ETH).balanceOf(address(this));
            _safePriceImpactSwap(ethBal, pathToPaid, _maxPriceImpact);
            ROUTER.swapExactTokensForTokens(ethBal, 0, pathToPaid, _to, block.timestamp);
        }
    }

    function _safePriceImpactSwap(
        uint256 _amountIn,
        address[] memory _path,
        uint256 _maxPriceImpact
    ) private view {
        if (_maxPriceImpact == 0) {
            return;
        }

        require(_path.length >= 2, "INVALID_PATH");

        for (uint256 i; i < _path.length - 1; i++) {
            (uint256 rIn, uint256 rOut) = BiswapLibrary.getReserves(address(FACTORY), _path[i], _path[i + 1]);
            uint256 q = ROUTER.quote(_amountIn, rIn, rOut);
            uint256 out = BiswapLibrary.getAmountOut(_amountIn, rIn, rOut);
            uint256 priceImpact = ((q - out) * 100000) / q;
            require(priceImpact <= _maxPriceImpact, "price impact too high");
            _amountIn = out;
        }
    }

    function recover(address _to) external onlyOwner nonReentrant {
        payable(_to).sendValue(address(this).balance);
    }

    function recoverToken(address _token, address _to) external onlyOwner nonReentrant {
        IERC20(_token).safeTransfer(_to, IERC20(_token).balanceOf(address(this)));
    }

    receive() external payable {}
}

library BiswapLibrary {
    // returns sorted token addresses, used to handle return values from pairs sorted in this order
    function sortTokens(address tokenA, address tokenB) internal pure returns (address token0, address token1) {
        require(tokenA != tokenB, "BiswapLibrary: IDENTICAL_ADDRESSES");
        (token0, token1) = tokenA < tokenB ? (tokenA, tokenB) : (tokenB, tokenA);
        require(token0 != address(0), "BiswapLibrary: ZERO_ADDRESS");
    }

    // calculates the CREATE2 address for a pair without making any external calls
    function pairFor(
        address factory,
        address tokenA,
        address tokenB
    ) internal pure returns (address pair) {
        (address token0, address token1) = sortTokens(tokenA, tokenB);
        pair = address(
            uint160(
                uint256(
                    keccak256(
                        abi.encodePacked(
                            hex"ff",
                            factory,
                            keccak256(abi.encodePacked(token0, token1)),
                            hex"fea293c909d87cd4153593f077b76bb7e94340200f4ee84211ae8e4f9bd7ffdf" // init code hash
                        )
                    )
                )
            )
        );
    }

    // fetches and sorts the reserves for a pair
    function getReserves(
        address factory,
        address tokenA,
        address tokenB
    ) internal view returns (uint256 reserveA, uint256 reserveB) {
        (address token0, ) = sortTokens(tokenA, tokenB);
        (uint256 reserve0, uint256 reserve1, ) = IBiswapPair(pairFor(factory, tokenA, tokenB)).getReserves();
        (reserveA, reserveB) = tokenA == token0 ? (reserve0, reserve1) : (reserve1, reserve0);
    }

    // given some amount of an asset and pair reserves, returns an equivalent amount of the other asset
    function quote(
        uint256 amountA,
        uint256 reserveA,
        uint256 reserveB
    ) internal pure returns (uint256 amountB) {
        require(amountA > 0, "BiswapLibrary: INSUFFICIENT_AMOUNT");
        require(reserveA > 0 && reserveB > 0, "BiswapLibrary: INSUFFICIENT_LIQUIDITY");
        amountB = (amountA * reserveB) / reserveA;
    }

    // given an input amount of an asset and pair reserves, returns the maximum output amount of the other asset
    function getAmountOut(
        uint256 amountIn,
        uint256 reserveIn,
        uint256 reserveOut
    ) internal pure returns (uint256 amountOut) {
        require(amountIn > 0, "BiswapLibrary: INSUFFICIENT_INPUT_AMOUNT");
        require(reserveIn > 0 && reserveOut > 0, "BiswapLibrary: INSUFFICIENT_LIQUIDITY");
        uint256 numerator = amountIn * reserveOut;
        uint256 denominator = reserveIn + amountIn;
        amountOut = numerator / denominator;
    }
}

