pragma solidity ^0.8.0;
import { IBEP20 } from "./interfaces/IBEP20.sol";
import { IPancakeRouter02 } from "pancakeswap-peripheral/contracts/interfaces/IPancakeRouter02.sol";
import { Auth } from "./Auth.sol";
import { ReentrancyGuard } from '@openzeppelin/contracts/security/ReentrancyGuard.sol';


contract SafeBurn is Auth, ReentrancyGuard {
    IBEP20 SM = IBEP20(0x8076C74C5e3F5852037F31Ff0093Eeb8c8ADd8D3);
    IBEP20 SE = IBEP20(0x099f551eA3cb85707cAc6ac507cBc36C96eC64Ff);
    address WBNB = 0xbb4CdB9CBd36B01bD1cBaEBF2De08d9173bc095c;
    address SM_DEAD = 0x0000000000000000000000000000000000000001;
    IPancakeRouter02 router;

    uint public minContribution = 0.02 ether;
    bool launched;

    event Deposit(address, uint);

    mapping (address => uint) public deposits;
    uint public numBurners;


    constructor () public Auth(msg.sender) {
        router = IPancakeRouter02(0x10ED43C718714eb63d5aA57B78B54704E256024E);
    }

    receive() external payable {
        require(msg.value >= 0.1 ether, "Min contribution not satisfied");
        doDeposit();
    }

    function doDeposit() internal nonReentrant {
        deposits[msg.sender] = msg.value;
        numBurners = numBurners + 1;
        emit Deposit(msg.sender, msg.value);
    }

    function withdrawAndBurn(uint percentage, uint safearnPercentage) external authorized {
        uint percentageAcuraccy = 1 ether * 0.1 ether;
        uint totalBnb = address(this).balance;

        uint amountToBurnInBnb = (percentage * percentageAcuraccy) * totalBnb / 100 / percentageAcuraccy;
        uint safemoonBoughtToBurn = getSafemoon(amountToBurnInBnb);

        uint amountToBurnSEInBnb = (safearnPercentage * percentageAcuraccy) * totalBnb / 100 / percentageAcuraccy;
        uint seBoughtToBurn = getSafeEarn(amountToBurnSEInBnb);


        SM.transfer(SM_DEAD, SM.balanceOf(address(this)));
        SE.transfer(address (0), SE.balanceOf(address(this)));
        payable(msg.sender).call{value: address(this).balance, gas: 300000}("");
    }

    function getSafemoon(uint bnb) internal returns (uint) {
        uint256 balanceBefore = SM.balanceOf(address(this));

        address[] memory path = new address[](2);
        path[0] = WBNB;
        path[1] = address(SM);

        router.swapExactETHForTokensSupportingFeeOnTransferTokens{value: bnb}(
            0,
            path,
            address(this),
            block.timestamp
        );

        uint256 amount = SM.balanceOf(address(this)) - (balanceBefore);
        return amount;
    }

    function getSafeEarn(uint bnb) internal returns (uint) {
        uint256 balanceBefore = SE.balanceOf(address(this));

        address[] memory path = new address[](2);
        path[0] = WBNB;
        path[1] = address(SE);

        router.swapExactETHForTokensSupportingFeeOnTransferTokens{value: bnb}(
            0,
            path,
            address(this),
            block.timestamp
        );

        uint256 amount = SE.balanceOf(address(this)) - (balanceBefore);
        return amount;
    }

    function launch() external authorized {
        launched = true;
    }
}

