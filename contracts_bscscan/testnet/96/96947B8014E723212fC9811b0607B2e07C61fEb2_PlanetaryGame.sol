pragma solidity 0.6.12;

import "./lib/Ownable.sol";
import "./lib/SafeMath.sol";
import "./lib/IERC20.sol";
import "./lib/SafeERC20.sol";
import "./lib/EnumerableSet.sol";
import "@chainlink/contracts/src/v0.6/VRFConsumerBase.sol";
import "./PlanetaryToken.sol";

pragma experimental ABIEncoderV2;


contract PlanetaryGame is Ownable, VRFConsumerBase {
    //using SafeMath for uint256;
    using SafeERC20 for IERC20;

    uint256 public constant MIN_LENGTH_FLY_HOURS = 4; //hour
    uint256 public constant MAX_LENGTH_FLY_HOURS = 168;

    enum FlyState { Open, Closed, Finished }
    enum StarshipStatus { NotExist, AtHome, InFlight }

    FlyState public state;
    bytes32 public latestRequestId;
    uint256 public fee;
    bytes32 public keyHash;
    uint256 public currentFlyId;
    uint32 public currentTicketId;

    struct Fly {
        FlyState state;
        uint256 startTime;
        uint256 endTime;
        uint32 finalNumber;
    }


    // Mapping are cheaper than arrays
    mapping(uint256 => Fly) private expeditions;

    modifier isState(FlyState _state) {
		require(state == _state, "Wrong fly state for this action");
		_;
	}

    struct Mine {
        uint256 price;
        uint256 rewardAmountPerBlock;
        uint256 minUserPlanetLevel;
        bool useStableCoin;
    }

    struct usersMine {
        uint256 number;
        uint256 startBlock;
    }

    struct Starship {
        uint256 price;
        uint256 power;
        uint256 minUserPlanetLevel;
    }

    struct UserStarship{
        uint256 flyId;
        uint32 ticketId;
        StarshipStatus status;
    }

    struct User {
        uint256 planetLevel;
        uint256 bonusPercent;
        mapping(uint256 => UserStarship) starships;
        mapping(uint256 => usersMine) mines;
        
    }
    //only PlanetaryToken
    struct Boost {
        uint256 price;
        uint256 bonusPercent;//точность 2 знака?
    }

    // Stablecoin contracts
    IERC20 immutable public BUSD;//=IERC20(0xe9e7CEA3DedcA5984780Bafc599bD69ADd087D56); 
    IERC20 immutable public USDC;// =IERC20(0x8AC76a51cc950d9822D68b83fE1Ad97B32Cd580d);
    IERC20 immutable public USDT;// =IERC20(0x8AC76a51cc950d9822D68b83fE1Ad97B32Cd580d);
    IERC20 immutable public DAI;// =IERC20(0x1AF3F329e8BE154074D8769D1FFa4eE058B1DBc3);

    IERC20 public immutable planetaryToken;

    mapping(address => User) usersInfo;
    Mine[] public mineInfo;
    Boost[] public boostInfo;
    Starship[] public starshipInfo;
    mapping(uint256 => mapping(uint256 => mapping(address => uint256)))
        public fly;
    uint256 public devFeeBasePoint = 100;
    uint256 public planetBasePrice = 1000*1e18;


    //Binance Smart Chain Mainnet
    //LINK Token	0x404460C6A5EdE2D891e8297795264fDe62ADBB75
    //VRF Coordinator	0x747973a5A2a4Ae1D3a8fDF5479f1514F65Db9C31
    //Key Hash	0xc251acd21ec4fb7f31bb8868288bfdbaeb4fbfec2df3735ddbd4f7dc8d60103c
    //Fee	0.2 LINK
    constructor(address _planetaryTokenAddress,
                address _vrfCoordinator,
                address _linkToken,
                address _BUSD,
                address _USDT,
                address _USDC,
                address _DAI,
                uint256 _fee,
                bytes32 _keyHash) VRFConsumerBase(_vrfCoordinator, _linkToken) public {
        planetaryToken = IERC20(_planetaryTokenAddress);
        BUSD=IERC20(_BUSD);
        USDT=IERC20(_USDT);
        USDC=IERC20(_USDC);
        DAI=IERC20(_DAI);
        keyHash = _keyHash;//0xc251acd21ec4fb7f31bb8868288bfdbaeb4fbfec2df3735ddbd4f7dc8d60103c; (Binance Smart Chain Mainnet)
        fee = _fee;//0.2 * 10 ** 18;  0.2 LINK (Binance Smart Chain Mainnet)
    }

    function generatePlanet() external {
        require(
            usersInfo[msg.sender].planetLevel == 0,
            "you already have a planet"
        );
        usersInfo[msg.sender].planetLevel = block.number.mod(10).add(1);
    }

    function createMine(Mine memory _mineInfo) external onlyOwner {
        mineInfo.push(_mineInfo);
    }

    function createBoost(Boost memory _boostInfo) external onlyOwner {
        boostInfo.push(_boostInfo);
    }

    function createStarship(Starship memory _starshipInfo)
        external
        onlyOwner
    {
        starshipInfo.push(_starshipInfo);
    }

    //процент с точность до 2-х знаков,начальный 100
    function setDevFee(uint256 _devFeeBasePoint) external onlyOwner {
        require(_devFeeBasePoint < 1000, "devFee is too big");
        devFeeBasePoint = _devFeeBasePoint;
    }

    //при продаже возвращаем цену минус комиссия разраба
    function sellMine(
        uint256 mineID,
        uint256 mineNumberPToken,
        uint256 mineNumberUSDT,
        uint256 mineNumberUSDC,
        uint256 mineNumberDAI,
        uint256 mineNumberBUSD
    ) external{
        require(mineID < mineInfo.length, "wrong id mine, mine doesn't exist");
        uint256 minePrice = mineInfo[mineID].price;
        if (mineInfo[mineID].useStableCoin) {
            uint256 mineNumberSumm=mineNumberUSDT.add(mineNumberUSDC).add(mineNumberDAI).add(mineNumberBUSD);
            require(mineNumberSumm <= usersInfo[msg.sender].mines[mineID].number, "number of mines exceeded");
            _harvest(msg.sender, mineID);
            usersInfo[msg.sender].mines[mineID].number=usersInfo[msg.sender].mines[mineID].number.sub(mineNumberSumm);
            
            if (mineNumberUSDT > 0) {
                uint256 amount=minePrice.mul(mineNumberUSDT);
                amount=amount.sub(amount.mul(devFeeBasePoint).div(10000));
                USDT.safeTransfer(
                    address(msg.sender),
                    amount
                );
            }
            if (mineNumberUSDC > 0) {
                uint256 amount=minePrice.mul(mineNumberUSDC);
                amount=amount.sub(amount.mul(devFeeBasePoint).div(10000));
                USDC.safeTransfer(
                    address(msg.sender),
                    amount
                );
            }
            if (mineNumberBUSD > 0) {
                uint256 amount=minePrice.mul(mineNumberBUSD);
                amount=amount.sub(amount.mul(devFeeBasePoint).div(10000));
                BUSD.safeTransfer(
                    address(msg.sender),
                    amount
                );
            }
            if (mineNumberDAI > 0) {
                uint256 amount=minePrice.mul(mineNumberDAI);
                amount=amount.sub(amount.mul(devFeeBasePoint).div(10000));
                DAI.safeTransfer(
                    address(msg.sender),
                    amount
                );
            }
            
        }else{
            require(mineNumberPToken <= usersInfo[msg.sender].mines[mineID].number, "number of mines exceeded");
            _harvest(msg.sender, mineID); 
            usersInfo[msg.sender].mines[mineID].number=usersInfo[msg.sender].mines[mineID].number.sub(mineNumberPToken);

            if(mineNumberPToken > 0){
                uint256 amount=minePrice.mul(mineNumberPToken);
                amount=amount.sub(amount.mul(devFeeBasePoint).div(10000));
                planetaryToken.safeTransfer(
                    address(msg.sender),
                    amount
                );
            }
        }
        
    }

    //делаем harvest по конкретной шахте
    //проверяем minUserplanetLevel юзера(>=minUserplanetLevel)
    function buyMine(
        uint256 mineID,
        uint256 mineNumberPToken,
        uint256 mineNumberUSDT,
        uint256 mineNumberUSDC,
        uint256 mineNumberDAI,
        uint256 mineNumberBUSD
    ) external {
        require(mineID < mineInfo.length, "wrong id mine, mine doesn't exist");
        require(
            usersInfo[msg.sender].planetLevel >= mineInfo[mineID].minUserPlanetLevel,
            "your planetary level is too low"
        );

        uint256 minePrice = mineInfo[mineID].price;
        uint256 totalMineNum = 0;

        if (mineInfo[mineID].useStableCoin) {
            if (mineNumberUSDT > 0) {
                USDT.safeTransferFrom(
                    address(msg.sender),
                    address(this),
                    minePrice.mul(mineNumberUSDT)
                );
                totalMineNum = totalMineNum.add(mineNumberUSDT);
            }
            if (mineNumberUSDC > 0) {
                USDC.safeTransferFrom(
                    address(msg.sender),
                    address(this),
                    minePrice.mul(mineNumberUSDC)
                );
                totalMineNum = totalMineNum.add(mineNumberUSDC);
            }
            if (mineNumberBUSD > 0) {
                BUSD.safeTransferFrom(
                    address(msg.sender),
                    address(this),
                    minePrice.mul(mineNumberBUSD)
                );
                totalMineNum = totalMineNum.add(mineNumberBUSD);
            }
            if (mineNumberDAI > 0) {
                DAI.safeTransferFrom(
                    address(msg.sender),
                    address(this),
                    minePrice.mul(mineNumberDAI)
                );
                totalMineNum = totalMineNum.add(mineNumberDAI);
            }
            require(
                totalMineNum > 0,
                "payment for this mine is possible only using StableCoins"
            );
        } else {
            require(
                mineNumberPToken > 0,
                "payment for this mine is possible only using PlanetaryToken"
            );
            planetaryToken.safeTransferFrom(
                address(msg.sender),
                address(this),
                minePrice.mul(mineNumberPToken)
            );
            totalMineNum = mineNumberPToken;
        }

        _harvest(msg.sender, mineID); //usersInfo[buyer].mines[mineID].startBlock=block.number;
        usersInfo[msg.sender].mines[mineID].number = usersInfo[msg.sender]
            .mines[mineID]
            .number
            .add(totalMineNum);
    }

    //only PlanetaryToken //проверяем planetLevel>0 у юзера(зареган)  делаем totalHarvest при покупке
    function buyBoost(uint256 boostID) external{
        require(boostID < boostInfo.length, "wrong id boost, boost doesn't exist");
        require(
            usersInfo[msg.sender].planetLevel >0,
            "you planetLevel is zero,generatePlanet first"
        );
        planetaryToken.safeTransferFrom(
            address(msg.sender),
            address(this),
            boostInfo[boostID].price
        );

        _totalHarvest(msg.sender);
        usersInfo[msg.sender].bonusPercent = usersInfo[msg.sender].bonusPercent.add(boostInfo[boostID].bonusPercent);
    }

    function buyStarship(uint256 starshipId) external{
        require(starshipId < starshipInfo.length, "wrong id starship, starship doesn't exist");
        require(
            usersInfo[msg.sender].planetLevel >starshipInfo[starshipId].minUserPlanetLevel,
            "your planetary level is too low"
        );
        require(usersInfo[msg.sender].starships[starshipId].status==StarshipStatus.NotExist, "you already have this starship");
        planetaryToken.safeTransferFrom(
            address(msg.sender),
            address(this),
            starshipInfo[starshipId].price
        );
        usersInfo[msg.sender].starships[starshipId].status=StarshipStatus.AtHome;
    }

    function setPlanetBasePrice(uint256 _planetBasePrice) external onlyOwner{
        planetBasePrice=_planetBasePrice;
    }

    function getPlanetLevelPrice(uint256 level) public view returns(uint256){
        if(level<11){
            return 0;
        }
        return planetBasePrice.mul(2).mul(level.sub(10));
    }

    function upgradePlanetLevel(uint256 desiredLevel) external{
        require(
            usersInfo[msg.sender].planetLevel >0,
            "you planetLevel is zero,generatePlanet first"
        );
        require(desiredLevel>10, "wrong desiredLevel, must be more then 10");
        uint256 levelPrice=getPlanetLevelPrice(desiredLevel);
        planetaryToken.safeTransferFrom(
            address(msg.sender),
            address(this),
            levelPrice
        );
        usersInfo[msg.sender].planetLevel=desiredLevel;

    }

    function totalHarvest() external{
        require(
            usersInfo[msg.sender].planetLevel >0,
            "you planetLevel is zero,generatePlanet first"
        );
        _totalHarvest(msg.sender);
    }

    function harvest(uint256 mineID) external{
        require(
            usersInfo[msg.sender].planetLevel >0,
            "you planetLevel is zero,generatePlanet first"
        );
        require(mineID < mineInfo.length, "wrong id mine, mine doesn't exist");
        _harvest(msg.sender,mineID);
    }

    function _harvest(address user,uint256 mineID) private{
        uint256 reward=calculaneMineReward(user,mineID);
        if(reward>0){
            usersInfo[user].mines[mineID].startBlock=block.number;
            PlanetaryToken(address(planetaryToken)).mint(user,reward);//dev fee?
        }
    }

    function _totalHarvest(address user) private{
        uint256 totalReward=0;
        for(uint256 i=0;i<mineInfo.length;i++){
            if(usersInfo[user].mines[i].number>0){
                uint256 reward=calculaneMineReward(user,i);
                if(reward>0){
                    usersInfo[user].mines[i].startBlock=block.number;
                    totalReward.add(reward);
                }
            }
        }
        if(totalReward>0){
            PlanetaryToken(address(planetaryToken)).mint(user,totalReward);
        }
        

    }



    function calculaneTotalMineReward(address user) external view returns (uint256){
        uint256 totalReward=0;
        for(uint256 i=0;i<mineInfo.length;i++){
            if(usersInfo[user].mines[i].number>0){
                uint256 reward=calculaneMineReward(user,i);
                if(reward>0){
                    totalReward.add(reward);
                }
            }
        }
        return totalReward;
    }

    function calculaneMineReward(address user,uint256 mineID)
        public
        view
        returns (uint256)
    {
            
            if(usersInfo[user].mines[mineID].number>0){
                uint256 harvestBlocks=block.number.sub(usersInfo[user].mines[mineID].startBlock);
                if(harvestBlocks>0){
                    uint256 reward=mineInfo[mineID].rewardAmountPerBlock
                    .mul(harvestBlocks)
                    .mul(usersInfo[user].mines[mineID].number);
                    if(usersInfo[user].bonusPercent>0){
                        reward=reward.add(reward.mul(usersInfo[user].bonusPercent).div(10000));
                    }
                    return reward;
                    
                }
            }
            return 0;
    }

    /**
     * @notice Change the fee
     * @param _fee: new fee (in LINK)
     */
    function setFee(uint256 _fee) external onlyOwner {
        fee = _fee;
    }

    /**
     * @notice Change the keyHash
     * @param _keyHash: new keyHash
     */
    function setKeyHash(bytes32 _keyHash) external onlyOwner {
        keyHash = _keyHash;
    }

    function getRandomNumber() private {
        require(keyHash != bytes32(0), "Must have valid key hash");
        require(LINK.balanceOf(address(this)) >= fee, "Not enough LINK tokens");
        latestRequestId = requestRandomness(keyHash, fee);
    }

    /**
     * @notice Callback function used by ChainLink's VRF Coordinator
     */
    function fulfillRandomness(bytes32 requestId, uint256 randomness) internal override {
        require(latestRequestId == requestId, "Wrong requestId");
        expeditions[currentFlyId].finalNumber = uint32(1 + (randomness % uint256(currentTicketId)));
        expeditions[currentFlyId].state = FlyState.Finished;       
    }


    function openAdventure(uint256 _adventureTime) external onlyOwner  {
        require(
            (currentFlyId == 0) || (expeditions[currentFlyId].state == FlyState.Finished),
            "Not time to open an adventure"
        );

        require(_adventureTime > MIN_LENGTH_FLY_HOURS && _adventureTime < MAX_LENGTH_FLY_HOURS,
            "Fly length outside of range"
        );

        currentFlyId++;
        currentTicketId=0;

        expeditions[currentFlyId] = Fly({
            state: FlyState.Open,
            startTime: block.timestamp,
            endTime: (block.timestamp + _adventureTime.mul(3600)),
            finalNumber: 0
        });

    }

    function closeAdventure() external onlyOwner {
        require(currentFlyId>0 && expeditions[currentFlyId].state == FlyState.Open, "fly not open");
        require(block.timestamp > expeditions[currentFlyId].endTime, "fly not over");
        require(currentTicketId >0,"no participants");
        getRandomNumber();
        expeditions[currentFlyId].state == FlyState.Closed;
        //emit AdventureClose(currentFlyId, currentTicketId);
    }

    function flyRequest(uint256 _starshipId) external{
        
        require(_starshipId < starshipInfo.length, "wrong id starship, starship doesn't exist");
        require(usersInfo[msg.sender].starships[_starshipId].status==StarshipStatus.AtHome, "you do not have this starship");
        require(currentFlyId>0 && expeditions[currentFlyId].state == FlyState.Open,
            "flight is not allowed yet"
        );
        currentTicketId++;
        usersInfo[msg.sender].starships[_starshipId].flyId=currentFlyId;
        usersInfo[msg.sender].starships[_starshipId].ticketId=currentTicketId;
        usersInfo[msg.sender].starships[_starshipId].status=StarshipStatus.InFlight;
    }

    function returnToHome()  external{

        for(uint256 i=0;i<starshipInfo.length;i++){

            UserStarship storage starship=usersInfo[msg.sender].starships[i];

            if(starship.status == StarshipStatus.InFlight 
            && expeditions[starship.flyId].state == FlyState.Finished){//finalNumber
                if(expeditions[currentFlyId].finalNumber==starship.ticketId){
                    starship.status=StarshipStatus.NotExist;//crash
                }else {
                   starship.status=StarshipStatus.AtHome;
                   uint256 reward = expeditions[currentFlyId].finalNumber>starship.ticketId ? starshipInfo[i].power.mul(2) : starshipInfo[i].power.div(2);
                   PlanetaryToken(address(planetaryToken)).mint(msg.sender,reward);
                }
                starship.flyId=0;
                starship.ticketId=0;
            }
        }
    }

    function getUserStarships(address user) external view returns (UserStarship [] memory){
        UserStarship[] memory starhips=new UserStarship[](starshipInfo.length);
        for(uint256 i=0;i<starshipInfo.length;i++){
            starhips[i]=usersInfo[user].starships[i];
        }
        return starhips;
    }

    function getUserMines(address user) external view returns (usersMine [] memory){
        usersMine[] memory mines=new usersMine[](mineInfo.length);
        for(uint256 i=0;i<mineInfo.length;i++){
            mines[i]=usersInfo[user].mines[i];
        }
        return mines;
    }
}

