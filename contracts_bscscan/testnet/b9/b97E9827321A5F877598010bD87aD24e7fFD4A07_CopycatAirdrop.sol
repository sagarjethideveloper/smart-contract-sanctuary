pragma solidity 0.8.7;

import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/utils/Address.sol";
import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@openzeppelin/contracts/token/ERC20/utils/SafeERC20.sol";
import "./interfaces/ICopycatReferral.sol";

contract CopycatPresale is Ownable {
	using SafeERC20 for IERC20;
	using Address for address;

	IERC20 public token;
	uint256 public startTimestamp;
	uint256 public endTimestamp;
	uint256 public tokenPerLP;
	uint256 public maxBnb;
	ICopycatReferral public refContract;

	// rate limit, allow only 1 tx per address per block
	mapping(address => uint256) public buyAmount;
	mapping(address => mapping (uint256 => bool)) private _rateLimit;

  uint256 public refPercent = 20; // 20 / 1000

	// price is token receive per 1 lp (1e18)
  constructor(
		IERC20 token_, 
		uint256 startTimestamp_, 
		uint256 endTimestamp_, 
		uint256 tokenPerLP_, 
		uint256 maxBnb_, 
		ICopycatReferral refContract_
	) {
		token = token_;
		startTimestamp = startTimestamp_;
		endTimestamp = endTimestamp_;
		tokenPerLP = tokenPerLP_;
		maxBnb = maxBnb_;
		refContract = refContract_;
  }

	// buyCPC
  event BuyCPC(address indexed buyer, address indexed ref, uint256 amount);
	function buyCPC(address _ref) payable external {
		require(block.timestamp >= startTimestamp, "not start");
		require(block.timestamp < endTimestamp, "end");
		require(!_msgSender().isContract(), "nope");
		require(!_rateLimit[_msgSender()][block.number], "rate limited");

		_ref = refContract.assignRef(msg.sender, _ref);

    uint256 amount_ = msg.value;

		require(amount_ > 0, "zero amount");
		uint256 rec = calculateReceive(amount_);
		require(rec > 0, "zero receive");

		buyAmount[msg.sender] += msg.value;

    uint256 refRec = rec * refPercent / 1000;

		_rateLimit[_msgSender()][block.number] = true;
		token.safeTransfer(_msgSender(), rec);

    if (_ref != address(0)) {
      token.safeTransfer(_ref, refRec);
			refContract.increaseRefCpc(msg.sender, _ref, refRec);
    } else {
      token.safeTransfer(owner(), refRec);
    }

		payable(owner()).transfer(address(this).balance);

    emit BuyCPC(msg.sender, _ref, amount_);
	}

	function withdrawAll() external onlyOwner {
		require(block.timestamp >= endTimestamp, "not end");

		payable(owner()).transfer(address(this).balance);

		uint256 available = token.balanceOf(address(this));
		if (available > 0) {
			token.safeTransfer(_msgSender(), available);
		}
	}

	function calculateReceive(uint256 amount_) view public returns (uint256) {
		require(amount_ >= 0.3 ether && buyAmount[msg.sender] + amount_ <= maxBnb, "exceed allow");
		return (amount_ * tokenPerLP) / 1 ether;
	}

	function availableTokens() view public returns (uint256) {
		return token.balanceOf(address(this));
	}
}

