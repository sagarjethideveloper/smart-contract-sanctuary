pragma solidity 0.8.7;

import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/token/ERC20/ERC20.sol";
import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "./CopycatPresale.sol";

interface IMintableERC20 is IERC20 {
  function mint(address _to, uint256 _amount) external;
  function burn(uint256 _amount) external;
}

contract CopycatAirdrop is Ownable {
  CopycatPresale public immutable presale1;
  CopycatPresale public immutable presale2;
  IMintableERC20 public immutable copycat;

  mapping(address => bool) claimed;

  constructor(IMintableERC20 _copycat, CopycatPresale _p1, CopycatPresale _p2) {
    presale1 = _p1;
    presale2 = _p2;
    copycat = _copycat;
  }

  function getTotalBuy() public view returns(uint256) {
    return presale1.buyAmount(msg.sender) + presale2.buyAmount(msg.sender);
  }

  event ClaimAirdrop(address indexed claimer, uint256 amount);
  function claimAirdrop() external {
    require(!claimed[msg.sender], "Claimed");
    uint256 totalBuy = getTotalBuy();
    require(totalBuy > 0, "Not buy");
    uint256 amount = totalBuy * 15 / 1000;
    copycat.mint(msg.sender, amount);
    claimed[msg.sender] = true;
    emit ClaimAirdrop(msg.sender, amount);

  }
}

