import "./interfaces/IWETH.sol";
import "./interfaces/IPancakeRouter02.sol";
import "./interfaces/IERC20Burnable.sol";

contract BuyAndBurn {
    address[] private path;

    function buyAndBurnTokenETH(address _burnToken) public payable returns (uint256) {
        IWETH(0xDfb1211E2694193df5765d54350e1145FD2404A1).deposit{value: msg.value}();

        return _buyAndBurn(msg.value, _burnToken);
    }

    function buyAndBurnToken(uint256 _amount, address _burnToken) public returns (uint256) {
        IERC20(0xDfb1211E2694193df5765d54350e1145FD2404A1).transferFrom(address(msg.sender), address(this), _amount);
        
        return _buyAndBurn(_amount, _burnToken);
    }

    function _buyAndBurn(uint256 _amount, address _burnToken) private returns (uint256) {
        IERC20(0xDfb1211E2694193df5765d54350e1145FD2404A1).approve(0x367633909278A3C91f4cB130D8e56382F00D1071, _amount);

        path = [0xDfb1211E2694193df5765d54350e1145FD2404A1, _burnToken];

        IPancakeRouter02(0x367633909278A3C91f4cB130D8e56382F00D1071).swapExactTokensForTokens(
            _amount, 
            0, 
            path, 
            address(this), 
            block.timestamp + 20
        );

        uint256 burnAmt = IERC20(_burnToken).balanceOf(address(this));
        IERC20Burnable(_burnToken).burn(uint96(burnAmt)); 

        return burnAmt;
    }
}

