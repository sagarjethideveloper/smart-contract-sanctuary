pragma solidity 0.6.6;
pragma experimental ABIEncoderV2; 

import "@openzeppelin/contracts/math/SafeMath.sol";
import "./libraries/IBEP20.sol";
import "./libraries/SafeBEP20.sol";
import "./DCBToken.sol";
import "@openzeppelin/contracts/access/Ownable.sol";

contract DecubateStaking is Ownable {
    using SafeMath for uint256;
    using SafeBEP20 for IBEP20;

    /**
     *
     * @dev UserInfo reflects the info of each user
     *
     * Basically, any point in time, the amount of DCB entitled to a user but is pending to be distributed is:
     * pending reward = (user.amount * pool.accDCBPerShare) - user.rewardDebt
     * Here is the workflow of when user deposits or withdraw tokens to a pool :
     * 1. The pool's `accDCBPerShare` (and `lastRewardBlock`) gets updated.
     * 2. User receives the pending reward sent to his/her address.
     * 3. User's `amount` gets updated.
     * 4. User's `rewardDebt` gets updated.
     *
     * @param {amount} how many tokens the user provided
     * @param {rewardDebt} reward debt
     * @param {startTime} when did user staked
     *
     */
    struct UserInfo {
        uint256 amount;
        uint256 rewardDebt;
        uint256 startTime;
        bool isStaker;
    }

    /**
     *
     * @dev PoolInfo reflects the info of each pools
     *
     * @param {allocPoint} how many allocation points assigned to this pool, DCBs to distribute per block
     * @param {lastRewardBlock} last block number that DCB distributtion occurs
     * @param {accDCBPerShare} accumulated DCBs per share, times 1e12
     * @param {depositFeeBP} deposit fee in basis points
     * @param {harvestLockPeriod} stake interval in seconds
     * @param {totalDeposit} Total amount of token in the pool
     * @param {minContrib} Minimum amount to be staked
     * @param {maxContrib} Maximum amount to be staked
     * @param {canStake} If pool is accepting stakers
     *
     */
    struct PoolInfo {
        uint256 allocPoint;
        uint256 lastRewardBlock;
        uint256 accDCBPerShare;
        uint256 harvestLockPeriod;
        uint256 totalDeposit;
        uint256 minContrib;
        uint256 maxContrib;
        bool canStake;
    }

    DCBToken private _decubateToken;

    uint256 public dcbPerBlock;

    address public dcbReserveWallet;

    address public feeWallet;

    address[] public stakeUsers;

    uint256 public feePercent;

    PoolInfo[] public poolInfo;

    mapping(uint256 => mapping(address => UserInfo)) public userInfo;

    uint256 public totalAllocPoint = 0;

    uint256 public startBlock;

    uint256 public totalLockedUpRewards;

    event Stake(address indexed user, uint256 indexed pid, uint256 amount);
    event UnStake(address indexed user, uint256 indexed pid, uint256 amount);
    event EmergencyUnstake(
        address indexed user,
        uint256 indexed pid,
        uint256 amount
    );
    event EmissionRateUpdated(
        address indexed caller,
        uint256 previousAmount,
        uint256 newAmount
    );

    constructor(
        DCBToken _dcb,
        uint256 _startBlock,
        uint256 _dcbPerBlock,
        address _dcbReserveWallet
    ) public {
        _decubateToken = _dcb;
        startBlock = _startBlock;
        dcbPerBlock = _dcbPerBlock;
        dcbReserveWallet =_dcbReserveWallet;
        feeWallet = msg.sender;
        feePercent = 5;

    }

    /**
     *
     * @dev get length of the pools
     *
     * @return {uint256} length of the pools
     *
     */
    function poolLength() external view returns (uint256) {
        return poolInfo.length;
    }

    /**
     *
     * @dev get users of the pools
     *
     * @return {address[]} users of the pools
     *
     */
    function poolUsers() external view returns (address[] memory) {
        return stakeUsers;
    }

    /**
     *
     * @dev get users in a pool with a minimum amount of deposit
     *
     * @param {uint256} id of the pool
     * @param {uint256} minimum amount required
     *
     * @return {uint256} users which pass the minimum amount criteria
     *
     */
    function poolUsersWithMin(uint256 _pid, uint256 amount) external view returns (address[] memory) {
        uint256 len = stakeUsers.length;
        address[] memory userArray = new address[](len);
        uint256 count;
        for(uint i = 0; i < len; i++){
            address temp = stakeUsers[i];
            UserInfo storage user = userInfo[_pid][temp];
            if(user.amount >= amount && user.isStaker){
                userArray[count++] = temp;
            }
        }

        return userArray;
    }

    /**
     *
     * @dev get info of all pools
     *
     * @return {PoolInfo[]} Pool info struct
     *
     */
    function getPools() public view returns(PoolInfo[] memory) {
        return poolInfo;
    }


    /**
     *
     * @dev add new period to the pool, only available for owner
     *
     */
    function add(
        uint256 _allocPoint,
        uint256 _harvestLockPeriod,
        uint256 _minContrib,
        uint256 _maxContrib,
        bool _withUpdate
    ) public onlyOwner {
        if (_withUpdate) {
            massUpdatePools();
        }
        uint256 lastRewardBlock =
            block.number > startBlock ? block.number : startBlock;
        totalAllocPoint = totalAllocPoint.add(_allocPoint);
        poolInfo.push(
            PoolInfo({
                allocPoint: _allocPoint,
                lastRewardBlock: lastRewardBlock,
                accDCBPerShare: 0,
                harvestLockPeriod: _harvestLockPeriod,
                totalDeposit: 0,
                minContrib: _minContrib,
                maxContrib: _maxContrib,
                canStake: true
            })
        );
    }

    /**
     *
     * @dev update the given pool's Info
     *
     */
    function set(
        uint256 _pid,
        uint256 _allocPoint,
        uint256 _harvestLockPeriod,
        uint256 _minContrib,
        uint256 _maxContrib,
        bool _canStake,
        bool _withUpdate
    ) public onlyOwner {
        if (_withUpdate) {
            massUpdatePools();
        }
        totalAllocPoint = totalAllocPoint.sub(poolInfo[_pid].allocPoint).add(
            _allocPoint
        );
        poolInfo[_pid].allocPoint = _allocPoint;
        poolInfo[_pid].harvestLockPeriod = _harvestLockPeriod;
        poolInfo[_pid].minContrib = _minContrib;
        poolInfo[_pid].maxContrib = _maxContrib;
        poolInfo[_pid].canStake = _canStake;
    }


    // View function to see pending DCBs on frontend.
    /**
     *
     * @dev get function to check pending DCBs
     *
     *
     * @param {_pid} pool identifier
     * @param {_user} address of the user
     *
     * @return {uint256} amount of the pending DCB
     *
     */
    function pendingDCB(uint256 _pid, address _user)
        external
        view
        returns (uint256)
    {
        PoolInfo storage pool = poolInfo[_pid];
        UserInfo storage user = userInfo[_pid][_user];
        uint256 accDCBPerShare = pool.accDCBPerShare;
        uint256 lpSupply = pool.totalDeposit;
        if (block.number > pool.lastRewardBlock && lpSupply != 0) {
            uint256 dcbReward = dcbPerBlock.mul(pool.allocPoint).div(totalAllocPoint);
            accDCBPerShare = accDCBPerShare.add(dcbReward.mul(1e12).div(lpSupply));
        }
        uint256 pending =
            user.amount.mul(accDCBPerShare).div(1e12).sub(user.rewardDebt);
        return pending;
    }

    /**
     *
     * @dev get function to check if user can harvest DCBs
     *
     * @param {_pid} pool identifier
     * @param {_user} address of the user
     *
     * @return {bool} status of harvest
     *
     */
    function canHarvest(uint256 _pid, address _user)
        public
        view
        returns (bool)
    {
        UserInfo storage user = userInfo[_pid][_user];
        PoolInfo storage pool = poolInfo[_pid];
        return block.timestamp >= user.startTime + pool.harvestLockPeriod;
    }

    /**
     *
     * @dev update reward variables for all pools
     *
     */
    function massUpdatePools() public {
        uint256 length = poolInfo.length;
        for (uint256 pid = 0; pid < length; ++pid) {
            updatePool(pid);
        }
    }

    /**
     *
     * @dev update reward variable of the specific pool
     *
     */
    function updatePool(uint256 _pid) public {
        PoolInfo storage pool = poolInfo[_pid];
        if (block.number <= pool.lastRewardBlock) {
            return;
        }
        uint256 lpSupply = pool.totalDeposit;
        if (lpSupply == 0 || pool.allocPoint == 0) {
            pool.lastRewardBlock = block.number;
            return;
        }
        uint256 dcbReward = dcbPerBlock.mul(pool.allocPoint).div(totalAllocPoint);
        _decubateToken.transferFrom(dcbReserveWallet, address(this), dcbReward);
        pool.accDCBPerShare = pool.accDCBPerShare.add(
            dcbReward.mul(1e12).div(lpSupply)
        );
        pool.lastRewardBlock = block.number;
    }

    /**
     *
     * @dev depsoit tokens to staking for DCB allocation
     *
     */
    function stake(uint256 _pid, uint256 _amount) public {
        PoolInfo storage pool = poolInfo[_pid];
        UserInfo storage user = userInfo[_pid][msg.sender];

        require(pool.canStake,"Pool is not accepting stakers");
        require(_amount >= pool.minContrib && _amount <= pool.maxContrib,"Invalid amount");
        require(canHarvest(_pid, msg.sender),"Unstake previously staked tokens");

        updatePool(_pid);
        payPendingDCB(_pid,msg.sender);

        _decubateToken.transferFrom(
            address(msg.sender),
            address(this),
            _amount
        );
        uint256 _newAmount = takeFee(_amount);
        user.amount = user.amount.add(_newAmount);
        user.rewardDebt = user.amount.mul(pool.accDCBPerShare).div(1e12);
        user.startTime = block.timestamp;
        pool.totalDeposit = pool.totalDeposit.add(_newAmount);
        stakeUsers.push(msg.sender);
        user.isStaker = true;
        
        emit Stake(msg.sender, _pid, _amount);
    }

    /**
     *
     * @dev withdraw tokens from Staking
     *
     */
    function unStake(uint256 _pid, uint256 _amount) public {
        PoolInfo storage pool = poolInfo[_pid];
        UserInfo storage user = userInfo[_pid][msg.sender];

        require(user.amount >= _amount, "withdraw: not good");
        require(canHarvest(_pid, msg.sender),"Reward still in locked state");

        updatePool(_pid);
        payPendingDCB(_pid,msg.sender);

        if (_amount > 0) {
            user.amount = user.amount.sub(_amount);
            uint256 _newAmount = takeFee(_amount);
            safeDCBTransfer(msg.sender, _newAmount);
        }
        user.rewardDebt = user.amount.mul(pool.accDCBPerShare).div(1e12);
        pool.totalDeposit = pool.totalDeposit.sub(_amount);
        if(user.amount <= 0){
            user.isStaker = false;
        }

        emit UnStake(msg.sender, _pid, _amount);
    }

    /**
     *
     * @dev emergency unstake without caring aboout the rewards
     * Rewards will be sent to reserve wallet
     *
     */
    function emergencyUnstake(uint256 _pid) public {
        PoolInfo storage pool = poolInfo[_pid];
        UserInfo storage user = userInfo[_pid][msg.sender];
        uint256 amount = user.amount;

        updatePool(_pid);
        payPendingDCB(_pid,dcbReserveWallet);

        user.amount = 0;
        user.rewardDebt = 0;
        user.startTime = 0;
        _decubateToken.transfer(address(msg.sender), amount);
        pool.totalDeposit = pool.totalDeposit.sub(amount);
        user.isStaker = false;
        emit EmergencyUnstake(msg.sender, _pid, amount);
    }

    /**
     *
     * @dev pay pending DCBs
     *
     */
    function payPendingDCB(uint256 _pid, address _addr) internal {
        PoolInfo storage pool = poolInfo[_pid];
        UserInfo storage user = userInfo[_pid][tx.origin];
        
        uint256 pending =
            user.amount.mul(pool.accDCBPerShare).div(1e12).sub(user.rewardDebt);
        if (pending > 0) {
            /** send rewards */
            uint256 newPending = takeFee(pending);
            safeDCBTransfer(_addr, newPending);
        }
    }

    /**
     *
     * @dev Take fee from stake/unstake/claim
     *
     */
    function takeFee(uint256 _amount) internal returns (uint256){
        uint256 feeValue = _amount.mul(feePercent).div(1000);
        safeDCBTransfer(feeWallet, feeValue);
        return (_amount.sub(feeValue));
    }

    /**
    *
    * @dev claim accumulated DCB reward for a single pool
    * 
    * @param {_pid} pool identifier
    *
    * @return {bool} status of claim
    */
    function claim(uint256 _pid) public returns (bool) {
        PoolInfo storage pool = poolInfo[_pid];
        UserInfo storage user = userInfo[_pid][msg.sender];

        require(canHarvest(_pid, msg.sender),"Reward still in locked state");

        updatePool(_pid);
        payPendingDCB(_pid,msg.sender);

        user.rewardDebt = user.amount.mul(pool.accDCBPerShare).div(1e12);

        return true;
    } 

    /**
    *
    * @dev claim accumulated DCB reward from all pools
    * 
    * Beware of gas fee!
    *
    */
    function claimAll() public returns (bool) {

        uint256 length = poolInfo.length;
        for (uint256 pid = 0; pid < length; ++pid) {
            claim(pid);
        }

        return true;
    }

    /**
     *
     * @dev safe DCB transfer function, require to have enough DCB to transfer
     *
     */
    function safeDCBTransfer(address _to, uint256 _amount) internal {
        uint256 dcbBal = _decubateToken.balanceOf(address(this));
        if (_amount > dcbBal) {
            _decubateToken.transfer(_to, dcbBal);
        } else {
            _decubateToken.transfer(_to, _amount);
        }
    }

    /**
     *
     * @dev update new emission rate
     *
     */
    function updateEmissionRate(uint256 _dcbPerBlock) public onlyOwner {
        massUpdatePools();
        emit EmissionRateUpdated(msg.sender, dcbPerBlock, _dcbPerBlock);
        dcbPerBlock = _dcbPerBlock;
    }

    /**
     *
     * @dev update fee values
     *
     */
    function updateFeeValues(uint256 _feePercent, address _feeWallet) public onlyOwner {
        massUpdatePools();
        feePercent = _feePercent;
        feeWallet = _feeWallet;
    }
}

