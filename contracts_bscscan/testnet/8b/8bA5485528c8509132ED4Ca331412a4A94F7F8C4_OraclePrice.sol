pragma solidity 0.8.6;

import "@openzeppelin/contracts/utils/math/SafeMath.sol";

interface IStdReference {
    
    struct ReferenceData {
        uint256 rate; // base/quote exchange rate, multiplied by 1e18.
        uint256 lastUpdatedBase; // UNIX epoch of the last time when base price gets updated.
        uint256 lastUpdatedQuote; // UNIX epoch of the last time when quote price gets updated.
    }

    function getReferenceData(string calldata _base, string calldata _quote)
        external
        view
        returns (ReferenceData memory);
}

interface IPancakeRouter {
    function getAmountsOut(uint256 amountIn, address[] calldata path)
        external
        view
        returns (uint256[] memory amounts);
}

contract OraclePrice {
    using SafeMath for uint256;
    address public routerAddress;
    address public token0;
    address public token1;
    IStdReference public ref;
    

    constructor(
        address _routerAddress,
        address _token0,
        address _token1,
        IStdReference _ref
    ) {
        routerAddress = _routerAddress;
        token0 = _token0;
        token1 = _token1;
        ref = _ref;
    }

    function setToken0(address _token0Address) external {
        token0 = _token0Address;
    }

    function setToken1(address _token1Address) external {
        token1 = _token1Address;
    }

    function setRouterAddress(address _routerAddress) external {
        routerAddress = _routerAddress;
    }
    
    function getPrice(string calldata ref1, string calldata ref2) public view returns (uint256 amount) {
        IStdReference.ReferenceData memory data = ref.getReferenceData(ref1, ref2);
        return data.rate;
    }
    
    function getAmountToken(string calldata string0, string calldata string1, address t0, address t1, uint256 _amountIn) public view returns (uint256 tokenAmount) {
        uint256 amount = _amountIn.mul(getPrice(string0, string1)).div(10 ** 18);
        
        address[] memory pairToken = new address[](2);
        pairToken[0] = t0;
        pairToken[1] = t1;
        
        uint256[] memory results =  getAmountsOut(amount, pairToken);
        return results[1];
    }

    function getAmountsOut(uint256 _amountIn)
        public
        view
        returns (uint256[] memory results)
    {
        address[] memory pairToken = new address[](2);
        pairToken[0] = token0;
        pairToken[1] = token1;
        results = IPancakeRouter(routerAddress).getAmountsOut(
            _amountIn,
            pairToken
        );
    }
    
    function getAmountsOut(uint256 _amountIn, address[] memory pairToken) public view returns (uint256[] memory results) {
        return IPancakeRouter(routerAddress).getAmountsOut(_amountIn, pairToken);
    }
}

