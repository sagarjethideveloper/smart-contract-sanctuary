pragma solidity ^0.6.12;

import "@openzeppelin/contracts/math/SafeMath.sol";
import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@openzeppelin/contracts/token/ERC20/SafeERC20.sol";
import "@openzeppelin/contracts/token/ERC1155/IERC1155.sol";
import "@openzeppelin/contracts/token/ERC1155/ERC1155Holder.sol";
import "./Manager.sol";

interface IERC721 {
	function createNFT(string memory uri, address _receiveAddress) external returns (uint256);
}

contract SotaDropNFT is Manager, ERC1155Holder {
    using SafeMath for uint256;
    using SafeERC20 for IERC20;
    uint256 public totalDropNFTId = 0;
    bytes4 private constant _INTERFACE_ID_ERC1155 = 0xd9b67a26;
    bytes4 private constant _INTERFACE_ID_ERC721 = 0x80ac58cd;

    // mapping(uint256 => address) public AddressDrop;
    mapping(bytes32 => AddressClaimed) private AddressClaimable;
    mapping(uint256 => DropNFT) public dropNFTs;
    mapping(uint256 => address) private ownerToken;
    // mapping(uint256 => mapping(address => bool)) public ClaimableAddress;

    event DropNFTCreated(uint256 _dropId);
    event CancelDropNFT(uint256 _dropId);
    event UpdateDropNFT(uint256 _dropId);
    event NFTClaimed(
        uint256 _dropId,
        uint256 _quatity
    );

    struct DropNFT {
        address owner;
        address tokenAddress;
        uint256 tokenId;
        uint256 quantity;
        string uri;
        uint256 price; // price of 1 NFT in paymentToken
        uint256 maxClaimPerAddress;
        address[] claimableAddress;
        uint256 startTime;
        uint256 endTime;
        uint256 delayClaimTime;
        bool isERC1155;
        bool status; // true: can claim, false: drop cancel
    }

    struct AddressClaimed {
        uint256 totalClaimed;
        uint256 lastTimeClaim;
        bool canClaim;
    }

    constructor(address _usdt) public Manager(_usdt) {}

    function createDropNFT(
        string calldata _uri,
        uint256 _dropPrice,
        uint256 _maxClaimPerAddress,
        address[] calldata _claimableAddress,
        uint256 _startTime,
        uint256 _endTime,
        uint256 _delayClaimTime,
        address _tokenAddress,
        uint256 _tokenId,
        uint256 _quantity
    ) external whenNotPaused {
        require(_endTime > _startTime && _endTime > now, "Invalid-time");
        bool isERC1155 = IERC1155(_tokenAddress).supportsInterface(
            _INTERFACE_ID_ERC1155
        );
        if (isERC1155) {
            uint256 balance;
            balance = IERC1155(_tokenAddress).balanceOf(msg.sender, _tokenId);
            require(balance >= _quantity, "Insufficient-token-balance");
            IERC1155(_tokenAddress).safeTransferFrom(
                msg.sender,
                address(this),
                _tokenId,
                _quantity,
                "0x"
            );
        } else {
            _quantity = 0;
        }
        // uint256 newDropNftId= _getNextTokenId();
        DropNFT memory newDropNFT;
        newDropNFT.owner = msg.sender;
        if (!isERC1155) {
            newDropNFT.uri = _uri;
        }
        // newDropNFT.uri = IERC1155(_tokenAddress).tokenURI(_tokenId);
        newDropNFT.tokenId = _tokenId;
        newDropNFT.tokenAddress = _tokenAddress;
        newDropNFT.price = _dropPrice;
        newDropNFT.quantity = _quantity;
        newDropNFT.claimableAddress = _claimableAddress;
        newDropNFT.startTime = _startTime > now ? _startTime : now;
        newDropNFT.endTime = _endTime;
        newDropNFT.delayClaimTime = _delayClaimTime;
        newDropNFT.maxClaimPerAddress = _maxClaimPerAddress;
        newDropNFT.isERC1155 = isERC1155;
        newDropNFT.status = true;
        dropNFTs[totalDropNFTId] = newDropNFT;
        // AddressDrop[totalDropNFTId] = msg.sender;
        for (uint256 index = 0; index < _claimableAddress.length; index++) {
            address claimableAddress = _claimableAddress[index];
            AddressClaimable[keccak256(abi.encodePacked(totalDropNFTId, claimableAddress))].canClaim = true;
        }
        emit DropNFTCreated(totalDropNFTId);
        _incrementDropNftId();
    }

    function claimAirDrop(uint256 _dropId, uint256 _quantity)
        external
        whenNotPaused
    {
        DropNFT memory dropItem = dropNFTs[_dropId];
        bytes32 _id = keccak256(abi.encodePacked(_dropId, msg.sender));
        validateDropId(_dropId);
        require(AddressClaimable[_id].canClaim, "only-whitelist");
        require(
            _quantity > 0 &&
                (!dropItem.isERC1155 ||
                    (dropItem.isERC1155 && _quantity <= dropItem.quantity)),
            "Invalid-quantity"
        );
        //validate maxclaimable
        require(
            (dropItem.maxClaimPerAddress > 0 &&
                _quantity <=
                dropItem.maxClaimPerAddress -
                    AddressClaimable[_id].totalClaimed) ||
                dropItem.maxClaimPerAddress == 0,
            "limit-claim"
        );
        require(
            now - AddressClaimable[_id].lastTimeClaim >=
                dropItem.delayClaimTime,
            "Claim-delay"
        );
        if (!dropItem.isERC1155) {
            //process mint NFT
            _quantity = 1;
            mint(dropItem.uri, dropItem.tokenAddress, msg.sender);
            // ownerToken[tokenID] = msg.sender;
        } else {
            IERC1155(dropItem.tokenAddress).safeTransferFrom(
                address(this),
                msg.sender,
                dropItem.tokenId,
                _quantity,
                "0x"
            );
        }
        if (dropItem.price > 0) {
            IERC20(usdt).safeTransferFrom(
                msg.sender,
                address(this),
                dropItem.price
            );
        }
        AddressClaimable[_id].totalClaimed += _quantity;
        AddressClaimable[_id].lastTimeClaim = now;
        if (dropItem.isERC1155) {
            dropNFTs[_dropId].quantity = dropItem.quantity.sub(_quantity);
        }
        emit NFTClaimed(
            _dropId,
            _quantity
        );
    }

    function validateDropId(uint256 _dropId) private view {
        require(_dropId < totalDropNFTId, "Invalid-drop-ID");
        require(dropNFTs[_dropId].owner == msg.sender, "owner-only");
    }

    function addressCanClaim(uint256 _dropId, address _address) public view returns (bool) {
        return AddressClaimable[keccak256(abi.encodePacked(_dropId, _address))].canClaim;
    }

    function cancelDropNFT(uint256 _dropId) external {
        validateDropId(_dropId);
        dropNFTs[_dropId].status = false;
        emit CancelDropNFT(_dropId);
    }

    function addAddressClaimable(uint256 _dropId, address _claimableAddress) external {
        validateDropId(_dropId);
        AddressClaimable[keccak256(abi.encodePacked(_dropId, _claimableAddress))].canClaim = true;
        emit UpdateDropNFT(_dropId);
    }

    /**
     * @dev increments the value of totalDropNFTId
     */
    function _incrementDropNftId() private {
        totalDropNFTId++;
    }

    function getCreatorDropNFT(uint256 _dropId) public view returns (address) {
        return dropNFTs[_dropId].owner;
    }

    function getAddressClaimable(uint256 _dropId)
        public
        view
        returns (address[] memory)
    {
        return dropNFTs[_dropId].claimableAddress;
    }

    function getLastTimeClaim(uint256 _dropId, address _address) public view returns (uint256) {
        return AddressClaimable[keccak256(abi.encodePacked(_dropId, _address))].lastTimeClaim;
    }

    function getTotalClaimed(uint256 _dropId, address _address) public view returns (uint256) {
        return AddressClaimable[keccak256(abi.encodePacked(_dropId, _address))].totalClaimed;
    }

    function mint(string memory uri, address _contract, address _receiveAddress) private returns (uint256 _tokenId) {
        IERC721(_contract).createNFT(uri, _receiveAddress);
    }
}

