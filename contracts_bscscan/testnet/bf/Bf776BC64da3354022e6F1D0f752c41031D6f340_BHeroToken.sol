library Utils {
  function randomSeed(uint256 seed) internal view returns (uint256) {
    return uint256(keccak256(abi.encodePacked(block.timestamp, blockhash(block.number - 1), block.difficulty, seed)));
  }

  /// Random [0, modulus)
  function random(uint256 seed, uint256 modulus) internal view returns (uint256 result, uint256 nextSeed) {
    nextSeed = randomSeed(seed);
    result = nextSeed % modulus;
  }

  /// Random [from, to)
  function randomBetween(
    uint256 seed,
    uint256 from,
    uint256 to
  ) internal view returns (uint256 result, uint256 nextSeed) {
    require(from < to, "Invalid random range");
    (result, nextSeed) = random(seed, to - from);
    result += from;
  }

  /// Random [from, to]
  function randomBetweenInclude(
    uint256 seed,
    uint256 from,
    uint256 to
  ) internal view returns (uint256 result, uint256 nextSeed) {
    return randomBetween(seed, from, to + 1);
  }

  /// Random by weights.
  function randomByWeights(uint256 seed, uint256[] memory weights)
    internal
    view
    returns (uint256 index, uint256 nextSeed)
  {
    require(weights.length > 0, "Array must not empty");
    uint256 totalWeight = 0;
    for (uint256 i = 0; i < weights.length; ++i) {
      totalWeight += weights[i];
    }
    uint256 randMod;
    (randMod, nextSeed) = randomBetween(seed, 0, totalWeight);
    uint256 total = 0;
    for (uint256 i = 0; i < weights.length; i++) {
      total += weights[i];
      if (randMod < total) {
        return (i, nextSeed);
      }
    }
    require(false);
    return (0, nextSeed);
  }

  /// Shuffle an array (clone).
  function shuffle(uint256[] memory arr) internal view returns (uint256[] memory) {
    for (uint256 i = 0; i < arr.length; i++) {
      (uint256 n, ) = randomBetween(i, i, arr.length);
      // TODO: i + (uint256(keccak256(abi.encodePacked(block.timestamp, i))) % (arr.length - i));
      uint256 temp = arr[n];
      arr[n] = arr[i];
      arr[i] = temp;
    }
    return arr;
  }

  /// Reservoir sampling.
  function randomSampling(uint256[] storage arr, uint256 size) internal view returns (uint256[] memory result) {
    require(arr.length >= size, "Invalid sampling size");
    result = new uint256[](size);
    for (uint256 i = 0; i < size; ++i) {
      result[i] = arr[i];
    }
    for (uint256 i = size; i < arr.length; ++i) {
      (uint256 j, ) = randomBetweenInclude(i, 0, i - 1);
      if (j < size) {
        result[j] = arr[i];
      }
    }
  }
}

