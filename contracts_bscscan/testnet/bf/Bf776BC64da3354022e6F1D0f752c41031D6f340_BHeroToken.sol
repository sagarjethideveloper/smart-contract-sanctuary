contract BHeroToken is ERC721Upgradeable, AccessControlUpgradeable, PausableUpgradeable, UUPSUpgradeable {
  struct StatsRange {
    uint256 min;
    uint256 max;
  }

  struct Stats {
    StatsRange stamina;
    StatsRange speed;
    uint256 bombCount;
    StatsRange bombPower;
    uint256 bombRange;
    uint256 ability;
  }

  using Counters for Counters.Counter;
  using BHeroDetails for BHeroDetails.Details;

  bytes32 public constant MINTER_ROLE = keccak256("MINTER_ROLE");
  bytes32 public constant PAUSER_ROLE = keccak256("PAUSER_ROLE");
  bytes32 public constant UPGRADER_ROLE = keccak256("UPGRADER_ROLE");
  bytes32 public constant DESIGN_ROLE = keccak256("DESIGN_ROLE");
  bytes32 public constant CLAIM_ROLE = keccak256("CLAIM_ROLE");

  uint256 private constant COMMON = 0;
  uint256 private constant RARE = 1;
  uint256 private constant SUPER_RARE = 2;
  uint256 private constant EPIC = 3;
  uint256 private constant LEGEND = 4;
  uint256 private constant SUPER_LEGEND = 5;

  uint256 private constant COLOR_COUNT = 5;
  uint256 private constant SKIN_COUNT = 5;
  uint256 private constant BOMB_SKIN_COUNT = 20;

  IBEP20 public coinToken;
  Counters.Counter public tokenIdCounter;

  // Mapping from owner address to token ID.
  mapping(address => uint256[]) public tokens;

  // Mapping from token ID to token details.
  mapping(uint256 => uint256) public tokenDetails;

  // Mapping from token ID to owner address.
  mapping(uint256 => address) public tokenOwners;

  // Mapping from rarity to stats.
  mapping(uint256 => Stats) public rarityStats;

  uint256[] public abilityIds;
  uint256 public tokenLimit;
  uint256[] public dropRate;
  uint256 public mintCost;
  uint256[] public upgradeCost;

  function initialize(IBEP20 coinToken_) public initializer {
    __ERC721_init("Bomber Hero", "BHERO");
    __AccessControl_init();
    __Pausable_init();
    __UUPSUpgradeable_init();
    coinToken = coinToken_;

    _setupRole(DEFAULT_ADMIN_ROLE, msg.sender);
    _setupRole(PAUSER_ROLE, msg.sender);
    _setupRole(MINTER_ROLE, msg.sender);
    _setupRole(UPGRADER_ROLE, msg.sender);
    _setupRole(DESIGN_ROLE, msg.sender);

    rarityStats[COMMON] = Stats(
      StatsRange(1, 3), //
      StatsRange(1, 3),
      1,
      StatsRange(1, 3),
      1,
      1
    );
    rarityStats[RARE] = Stats(
      StatsRange(3, 6), //
      StatsRange(3, 6),
      2,
      StatsRange(3, 6),
      2,
      2
    );
    rarityStats[SUPER_RARE] = Stats(
      StatsRange(6, 9), //
      StatsRange(6, 9),
      3,
      StatsRange(6, 9),
      3,
      3
    );
    rarityStats[EPIC] = Stats(
      StatsRange(9, 12), //
      StatsRange(9, 12),
      4,
      StatsRange(9, 12),
      4,
      4
    );
    rarityStats[LEGEND] = Stats(
      StatsRange(12, 15), //
      StatsRange(12, 15),
      5,
      StatsRange(12, 15),
      5,
      5
    );
    rarityStats[SUPER_LEGEND] = Stats(
      StatsRange(15, 18), //
      StatsRange(15, 18),
      6,
      StatsRange(15, 18),
      6,
      6
    );
    abilityIds = [1, 2, 3, 4, 5, 6, 7];
    tokenLimit = 50;
    dropRate = [8287, 1036, 518, 104, 52, 4];
    mintCost = 10 ether;
    upgradeCost = [
      2 ether, //
      4 ether,
      8 ether,
      16 ether,
      32 ether,
      64 ether,
      128 ether,
      256 ether,
      512 ether
    ];
  }

  function pause() public onlyRole(PAUSER_ROLE) {
    _pause();
  }

  function unpause() public onlyRole(PAUSER_ROLE) {
    _unpause();
  }

  function _authorizeUpgrade(address newImplementation) internal override onlyRole(UPGRADER_ROLE) {}

  function supportsInterface(bytes4 interfaceId)
    public
    view
    override(ERC721Upgradeable, AccessControlUpgradeable)
    returns (bool)
  {
    return super.supportsInterface(interfaceId);
  }

  /** Sets the token limit. */
  function setTokenLimit(uint256 value) external onlyRole(DESIGN_ROLE) {
    tokenLimit = value;
  }

  /** Sets the drop rate. */
  function setDropRate(uint256[] memory value) external onlyRole(DESIGN_ROLE) {
    dropRate = value;
  }

  /** Sets the minting fee. */
  function setMintCost(uint256 value) external onlyRole(DESIGN_ROLE) {
    mintCost = value;
  }

  /** Sets the current upgrade cost. */
  function setUpgradeCost(uint256[] memory value) external onlyRole(DESIGN_ROLE) {
    upgradeCost = value;
  }

  function getDropRate() external view returns (uint256[] memory) {
    return dropRate;
  }

  function getUpgradeCost() external view returns (uint256[] memory) {
    return upgradeCost;
  }

  /** Gets token count for the specified owner. */
  function balanceOwnerOf(address ownerAddress) external view returns (uint256) {
    return tokens[ownerAddress].length;
  }

  /** Gets token IDs for the specified owner. */
  function getTokenIdsByOwner(address ownerAddress) external view returns (uint256[] memory) {
    return tokens[ownerAddress];
  }

  /** Gets token details for the specified token ID. */
  function getTokenDetails(uint256 id) external view returns (uint256) {
    return tokenDetails[id];
  }

  /** Gets owner address of the specified token ID. */
  function getTokenOwner(uint256 tokenId) public view returns (address) {
    return tokenOwners[tokenId];
  }

  /** Gets token details for the specified owner. */
  function getTokenDetailsByOwner(address ownerAddress) external view returns (uint256[] memory) {
    uint256 size = balanceOf(ownerAddress);
    uint256[] memory result = new uint256[](size);
    uint256[] storage ownedTokens = tokens[ownerAddress];
    for (uint256 i = 0; i < size; ++i) {
      uint256 id = ownedTokens[i];
      result[i] = tokenDetails[id];
    }
    return result;
  }

  /** Claims multiple tokens. */
  function claimMultiple(address to, uint256 count) public onlyRole(CLAIM_ROLE) returns (uint256) {
    uint256 size = tokens[to].length;
    require(tokenLimit < size, "Cannot claim anymore token");
    uint256 mintCount = Math.min(count, tokenLimit - size);
    _claimMultiple(to, mintCount);
    return mintCount;
  }

  /** Mints a token. */
  function mint() external {
    mintMultiple(1);
  }

  /** Mints multiple tokens. */
  function mintMultiple(uint256 count) public {
    address to = msg.sender;
    uint256 size = tokens[to].length;
    require(size + count <= tokenLimit, "Cannot mint anymore token");

    coinToken.transferFrom(to, address(this), mintCost * count);
    _claimMultiple(to, count);
  }

  function _claimMultiple(address to, uint256 count) internal {
    for (uint256 i = 0; i < count; ++i) {
      uint256 id = tokenIdCounter.current();
      createRandomToken(id);
      tokenIdCounter.increment();
      _safeMint(to, id);
    }
  }

  /** Adds a token. */
  function addToken(BHeroDetails.Details memory details) internal {
    address ownerAddress = msg.sender;
    uint256[] storage ownedTokens = tokens[ownerAddress];
    details.index = ownedTokens.length;
    ownedTokens.push(details.id);
    tokenDetails[details.id] = details.encode();
    tokenOwners[details.id] = ownerAddress;
  }

  /** Creates a random token. */
  function createRandomToken(uint256 id) internal {
    BHeroDetails.Details memory details;
    details.id = id;

    uint256 seed = Utils.randomSeed(id);
    (details.rarity, seed) = Utils.randomByWeights(seed, dropRate);
    details.level = 1;

    Stats storage stats = rarityStats[details.rarity];
    details.bombCount = stats.bombCount;
    details.bombRange = stats.bombRange;

    (details.color, seed) = Utils.randomBetweenInclude(seed, 1, COLOR_COUNT);
    (details.skin, seed) = Utils.randomBetweenInclude(seed, 1, SKIN_COUNT);
    (details.stamina, seed) = Utils.randomBetweenInclude(seed, stats.stamina.min, stats.stamina.max);
    (details.speed, seed) = Utils.randomBetweenInclude(seed, stats.speed.min, stats.speed.max);
    (details.bombSkin, seed) = Utils.randomBetweenInclude(seed, 1, BOMB_SKIN_COUNT);
    (details.bombPower, seed) = Utils.randomBetweenInclude(seed, stats.bombPower.min, stats.bombPower.max);
    details.abilities = Utils.randomSampling(abilityIds, stats.ability);

    addToken(details);
  }

  /** Removes the specified token ID. */
  function removeToken(uint256 id) internal {
    address ownerAddress = msg.sender;
    require(getTokenOwner(id) == ownerAddress, "Can only remove owned token");

    uint256 details = tokenDetails[id];
    delete tokenDetails[id];
    delete tokenOwners[id];
    _burn(id);

    // Swap and pop.
    uint256[] storage ownedTokens = tokens[ownerAddress];
    uint256 size = ownedTokens.length;
    uint256 index = BHeroDetails.decodeIndex(details);
    uint256 lastId = ownedTokens[size - 1];
    ownedTokens[index] = lastId;
    ownedTokens.pop();

    // Update index.
    uint256 lastDetails = tokenDetails[lastId];
    tokenDetails[lastId] = BHeroDetails.setIndex(lastDetails, index);
  }

  /** Upgrades the specified token. */
  function upgrade(uint256 baseId, uint256 materialId) external {
    require(baseId != materialId, "Can only upgrade two different tokens");

    address ownerAddress = msg.sender;
    require(getTokenOwner(baseId) == ownerAddress, "Can only upgrade owned token");
    require(getTokenOwner(materialId) == ownerAddress, "Can only upgrade owned token");

    uint256 baseDetails = tokenDetails[baseId];
    uint256 materialDetails = tokenDetails[materialId];
    uint256 baseLevel = BHeroDetails.decodeLevel(baseDetails);
    uint256 materialLevel = BHeroDetails.decodeLevel(materialDetails);
    require(baseLevel == materialLevel, "Can only upgrade tokens with the same level");
    require(baseLevel < 10, "Cannot upgrade token with max level");

    uint256 cost = upgradeCost[baseLevel - 1];
    address to = address(this);
    coinToken.transferFrom(ownerAddress, to, cost);

    tokenDetails[baseId] = BHeroDetails.increaseLevel(baseDetails);
    removeToken(materialId);
  }
}

