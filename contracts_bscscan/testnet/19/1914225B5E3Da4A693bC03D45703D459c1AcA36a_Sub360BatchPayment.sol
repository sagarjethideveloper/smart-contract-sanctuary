import "@openzeppelin/contracts/utils/Address.sol";
import "@openzeppelin/contracts/utils/math/SafeMath.sol";
import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/token/ERC20/IERC20.sol";

// 批量支付
contract Sub360BatchPayment is Ownable {

    // 冷钱包
    address payable public coolAddr;

    // 原生代币的小数位
    uint8 public coinDecimals;

    // 存款地址
    mapping(address => uint256) depositedAddrs;

    // 免手续费白名单, 值是额度, 当小于手续费时，则需要收取相应手续费
    mapping(address => uint256) feeCoinWhitelistAddrs;

    // 免手续费白名单, 值是额度, 当小于手续费时，则需要收取相应手续费
    mapping(address => uint256) feeTokenWhitelistAddrs;

    // 原生手续费比例, 默认不收取
    uint256 public coinFee = 0;

    // token手续费, 0-100
    mapping(address => uint256) tokenFees;

    // token合约地址
    mapping(bytes32 => address) tokenAddrs;

    // 事件
    event Received(address indexed, uint256);
    event Withdraw(address indexed, uint256);

    event PayCoin(address indexed, address indexed, uint256);
    event PayToken(address indexed, address indexed, uint256, address indexed);
    event BatchPayCoin(address indexed, uint256);
    event BatchPayToken(address indexed, uint256, address indexed);

    // 扣除手续费事件
    event BatchPayCoinFee(address indexed, address indexed, uint256);
    event BatchPayTokenFee(address indexed, address indexed, uint256, address);

    // 构造函数
    constructor(address _coolAddr, uint8 _coinDecimals) {
        coolAddr = payable(_coolAddr);
        coinDecimals = _coinDecimals;
    }

    fallback() external payable {

    }

    // 当作存款
    receive() external payable {

        // 记录存款信息
        depositedAddrs[_msgSender()] = depositedAddrs[_msgSender()] + msg.value;

        // custom function code
        emit Received(_msgSender(), msg.value);
    }

    // 设置冷钱包
    function setCoolAddr(address newCoolAddr) public onlyOwner {
        coolAddr = payable(newCoolAddr);
    }

    // coin手续费
    function setCoinFee(uint256 fee) public onlyOwner {
        coinFee = fee;
    }

    // 查看地址存款额度
    function getDepositedAmount(address addr) public view returns(uint256) {
        return depositedAddrs[addr];
    }

    // 获取合约地址
    function getTokenAddr(string calldata token) public view returns(address) {
        return tokenAddrs[keccak256(abi.encode(token))];
    }

    // 设置合约地址
    function setTokenAddr(string calldata token, address addr) public onlyOwner {
        tokenAddrs[keccak256(abi.encode(token))] = addr;
    }

    // 获取合约手续费
    function getTokenFee(string calldata token) public view returns(uint256) {
        return tokenFees[getTokenAddr(token)];
    }

    // 设置合约手续费, 固定
    function setTokenFee(string calldata token, uint256 fee) public onlyOwner {
        tokenFees[getTokenAddr(token)] = fee;
    }

    // 提现
    function withdraw(address toAddr) public onlyOwner {
        uint256 balance = address(this).balance;

        Address.sendValue(payable(toAddr), balance);
        emit Withdraw(toAddr, balance);
    }

    // 批量支付Coin
    function batchPayCoin(address[] calldata toAddrs, uint256[] calldata amounts) public {
        require(toAddrs.length > 0, "To addrs is empty.");
        require(amounts.length > 0, "Amounts is emtpy.");
        require(toAddrs.length == amounts.length, "Payment data is invalid");

        // 存款大于0
        require(depositedAddrs[_msgSender()] > 0, "Deposited amount is 0");

        // 是否溢出
        bool overflow = false;

        // 本次需要的转帐数量
        uint256 totalPayAmount = 0;
        for (uint256 i = 0; i < amounts.length; i++) {
            (overflow, totalPayAmount) = SafeMath.tryAdd(totalPayAmount, amounts[i]);
            require(overflow, "Payment amount is too big.");
        }

        // 增加手续费
        if (coinFee > 0) {
            (overflow, totalPayAmount) = SafeMath.tryAdd(totalPayAmount, coinFee);
            require(overflow, "Payment amount is too big with fee.");
        }

        // 本次转帐数量不能大于存款数量
        require(depositedAddrs[_msgSender()] > totalPayAmount, "Deposited amount is not enough.");

        // 减去存款
        (overflow, depositedAddrs[_msgSender()]) = SafeMath.trySub(depositedAddrs[_msgSender()], totalPayAmount);
        require(overflow, "Payment amount trySub owerflow.");

        // 批量打款
        for (uint256 i = 0; i < toAddrs.length; i++) {
            Address.sendValue(payable(toAddrs[i]), amounts[i]);

            emit PayCoin(_msgSender(), toAddrs[i], amounts[i]);
        }

        // 扣除手续费
        if (coinFee > 0) {
            Address.sendValue(coolAddr, coinFee);
            emit BatchPayCoinFee(_msgSender(), coolAddr, coinFee);
        }

        emit BatchPayCoin(_msgSender(), toAddrs.length);
    }

    // 批量支付Token
    function batchPayToken(address[] memory toAddrs, uint256[] calldata amounts, IERC20 token) public {
        require(toAddrs.length > 0, "To addrs is empty.");
        require(amounts.length > 0, "Amounts is emtpy.");
        require(toAddrs.length == amounts.length, "Payment data is invalid");

        // 批量打款
        for (uint256 i = 0; i < toAddrs.length; i++) {
            token.transferFrom(_msgSender(), toAddrs[i], amounts[i]);
            emit PayToken(_msgSender(), toAddrs[i], amounts[i], address(token));
        }

        // 手续费
        uint256 tokenFee = tokenFees[address(token)];
        if (tokenFee > 0) {
            token.transferFrom(_msgSender(), coolAddr, tokenFee);
            emit BatchPayTokenFee(_msgSender(), coolAddr, tokenFee, address(token));
        }

        emit BatchPayToken(_msgSender(), toAddrs.length, address(token));
    }
}

