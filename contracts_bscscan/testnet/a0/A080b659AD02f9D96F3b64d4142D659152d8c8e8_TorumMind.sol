    function renounceRole(bytes32 role, address account)
        public
        virtual
        override
    {
        require(
            account == _msgSender(),
            "AccessControl: can only renounce roles for self"
        );

        _revokeRole(role, account);
    }

    /**
     * @dev Grants `role` to `account`.
     *
     * If `account` had not been already granted `role`, emits a {RoleGranted}
     * event. Note that unlike {grantRole}, this function doesn't perform any
     * checks on the calling account.
     *
     * [WARNING]
     * ====
     * This function should only be called from the constructor when setting
     * up the initial roles for the system.
     *
     * Using this function in any other way is effectively circumventing the admin
     * system imposed by {AccessControl}.
     * ====
     */
    function _setupRole(bytes32 role, address account) internal virtual {
        _grantRole(role, account);
    }

    /**
     * @dev Sets `adminRole` as ``role``'s admin role.
     *
     * Emits a {RoleAdminChanged} event.
     */
    function _setRoleAdmin(bytes32 role, bytes32 adminRole) internal virtual {
        emit RoleAdminChanged(role, getRoleAdmin(role), adminRole);
        _roles[role].adminRole = adminRole;
    }

    function _grantRole(bytes32 role, address account) private {
        if (!hasRole(role, account)) {
            _roles[role].members[account] = true;
            emit RoleGranted(role, account, _msgSender());
        }
    }

    function _revokeRole(bytes32 role, address account) private {
        if (hasRole(role, account)) {
            _roles[role].members[account] = false;
            emit RoleRevoked(role, account, _msgSender());
        }
    }
}

pragma solidity ^0.6.12;

// TorumMind is the master of XTM. He can make XTM and he is a fair guy.
//

// Note that it's ownable and the owner wields tremendous power. The ownership
// will be transferred to a governance smart contract once XTM is sufficiently
// distributed and the community can show to govern itself.

contract TorumMind is Ownable {
    using SafeMath for uint256;
    using SafeERC20 for IERC20;
    // Info of each user.
    struct UserInfo {
        uint256 amount; // How many LP tokens the user has provided.
        uint256 rewardDebt; // Reward debt. See explanation below.
        //
        // We do some fancy math here. Basically, any point in time, the amount of XTM
        // entitled to a user but is pending to be distributed is:
        //
        //   pending reward = (user.amount * pool.accUSDTPerShare) - user.rewardDebt
        //
        // Whenever a user deposits or withdraws LP tokens to a pool. Here's what happens:
        //   1. The pool's `accUSDTPerShare` (and `lastRewardBlock`) gets updated.
        //   2. User receives the pending reward sent to his/her address.
        //   3. User's `amount` gets updated.
        //   4. User's `rewardDebt` gets updated.
    }
    // Info of each pool.
    struct PoolInfo {
        IERC20 lpToken; // Address of LP token contract.
        uint256 allocPoint; // How many allocation points assigned to this pool. XTM to distribute per block.
        uint256 lastRewardBlock; // Last block number that XTM distribution occurs.
        uint256 accUSDTPerShare; // Accumulated USDT per share, times 1e12. See below.
    }
    // The XTM TOKEN!
    IERC20 public xtm;

    // Block number when bonus XTM period ends.
    uint256 public bonusEndBlock;

    //Block number when stake ends
    uint256 public stakeEndBlock;

    //XTM Cost based on USDT
    uint256 public xtmUSDTPrice;

    //Enable / Disable Deposits
    bool private isDepositEnabled; 

    //Enable / Disable Deposits
    bool private isWithdrawEnabled; 

    // XTM tokens created per block.
    uint256 public usdtPerBlock;
    // Bonus muliplier for early XTM makers.
    uint256 public BONUS_MULTIPLIER = 1;
    // Info of each pool.
    PoolInfo[] public poolInfo;
    // Info of each user that stakes LP tokens.
    mapping(uint256 => mapping(address => UserInfo)) public userInfo;
    // Total allocation poitns. Must be the sum of all allocation points in all pools.
    uint256 public totalAllocPoint = 0;
    // The block number when xtm mining starts.
    uint256 public startBlock;
    event Deposit(address indexed user, uint256 indexed pid, uint256 amount);
    event Withdraw(address indexed user, uint256 indexed pid, uint256 amount);
    event EmergencyWithdraw(
        address indexed user,
        uint256 indexed pid,
        uint256 amount
    );

    constructor(
        IERC20 _xtm,
        uint256 _usdtPerBlock,
        uint256 _startBlock,
        uint256 _bonusEndBlock,
        uint256 _stakeEndBlock
    ) public {
        xtm = _xtm;
        usdtPerBlock = _usdtPerBlock;
        bonusEndBlock = _bonusEndBlock;
        startBlock = _startBlock;
        stakeEndBlock = _stakeEndBlock;
        isDepositEnabled = true;
        isWithdrawEnabled = true;
    }

    function poolLength() external view returns (uint256) {
        return poolInfo.length;
    }

    function setUSDTPerBlock(uint256 _usdtPerBlock) public onlyOwner {
        usdtPerBlock = _usdtPerBlock;
    }

    function setXTMUSDTPrice(uint256 _tokenPrice) public onlyOwner {
        xtmUSDTPrice = _tokenPrice;
    }

    // Add a new lp to the pool. Can only be called by the owner.
    // XXX DO NOT add the same LP token more than once. Rewards will be messed up if you do.
    function add(
        uint256 _allocPoint,
        IERC20 _lpToken,
        bool _withUpdate
    ) public onlyOwner {
        if (_withUpdate) {
            massUpdatePools();
        }
        uint256 lastRewardBlock = block.number > startBlock
            ? block.number
            : startBlock;
        totalAllocPoint = totalAllocPoint.add(_allocPoint);
        poolInfo.push(
            PoolInfo({
                lpToken: _lpToken,
                allocPoint: _allocPoint,
                lastRewardBlock: lastRewardBlock,
                accUSDTPerShare: 0
            })
        );
    }

    // Update the given pool's XTM allocation point. Can only be called by the owner.
    function set(
        uint256 _pid,
        uint256 _allocPoint,
        bool _withUpdate
    ) public onlyOwner {
        if (_withUpdate) {
            massUpdatePools();
        }
        totalAllocPoint = totalAllocPoint.sub(poolInfo[_pid].allocPoint).add(
            _allocPoint
        );
        poolInfo[_pid].allocPoint = _allocPoint;
    }

    function setBonus(uint256 _bonusEndBlock, uint256 _bonusMultiplier)
        public
        onlyOwner
    {
        BONUS_MULTIPLIER = _bonusMultiplier;
        bonusEndBlock = _bonusEndBlock;
    }

    function setStakeEndBlock(uint256 _stakeEndBlock) public onlyOwner {
        stakeEndBlock = _stakeEndBlock;
    }

    function setAdminControls(bool _deposit, bool _withdraw) public onlyOwner {
        isDepositEnabled = _deposit;
        isWithdrawEnabled = _withdraw;
    }

    // Return reward multiplier over the given _from to _to block.
    function getMultiplier(uint256 _from, uint256 _to)
        public
        view
        returns (uint256)
    {
        if (_to <= bonusEndBlock) {
            return _to.sub(_from).mul(BONUS_MULTIPLIER);
        } else if (_from >= bonusEndBlock) {
            return _to.sub(_from);
        } else {
            return
                bonusEndBlock.sub(_from).mul(BONUS_MULTIPLIER).add(
                    _to.sub(bonusEndBlock)
                );
        }
    }

    // View function to see pending XTM on frontend.
    function pendingUSDT(uint256 _pid, address _user)
        external
        view
        returns (uint256)
    {
        PoolInfo storage pool = poolInfo[_pid];
        UserInfo storage user = userInfo[_pid][_user];
        uint256 blockNumber = block.number > stakeEndBlock
            ? stakeEndBlock
            : block.number;
        
        uint256 accUSDTPerShare = pool.accUSDTPerShare;
        uint256 lpSupply = pool.lpToken.balanceOf(address(this));
        if (blockNumber > pool.lastRewardBlock && lpSupply != 0) {
            uint256 multiplier = getMultiplier(
                pool.lastRewardBlock,
                blockNumber
            );
            uint256 usdtReward = multiplier
                .mul(usdtPerBlock)
                .mul(pool.allocPoint)
                .div(totalAllocPoint);
            accUSDTPerShare = accUSDTPerShare.add(
                usdtReward.mul(1e12).div(lpSupply)
            );
        }
        return user.amount.mul(accUSDTPerShare).div(1e12).sub(user.rewardDebt);
    }

    // Update reward vairables for all pools. Be careful of gas spending!
    function massUpdatePools() public {
        uint256 length = poolInfo.length;
        for (uint256 pid = 0; pid < length; ++pid) {
            updatePool(pid);
        }
    }

    // Update reward variables of the given pool to be up-to-date.
    function updatePool(uint256 _pid) public {
        PoolInfo storage pool = poolInfo[_pid];
         uint256 blockNumber = block.number > stakeEndBlock
            ? stakeEndBlock
            : block.number;
        if (blockNumber <= pool.lastRewardBlock) {
            return;
        }
        uint256 lpSupply = pool.lpToken.balanceOf(address(this));
        if (lpSupply == 0) {
            pool.lastRewardBlock = blockNumber;
            return;
        }
        uint256 multiplier = getMultiplier(pool.lastRewardBlock, blockNumber);
        uint256 usdtReward = multiplier
            .mul(usdtPerBlock)
            .mul(pool.allocPoint)
            .div(totalAllocPoint);
        //Remove Minting of tokens
        //xtm.mint(address(this), xtmReward);
        pool.accUSDTPerShare = pool.accUSDTPerShare.add(
            usdtReward.mul(1e12).div(lpSupply)
        );
        pool.lastRewardBlock = blockNumber;
    }

    // Deposit LP tokens to TorumMind for xtm allocation.
    function deposit(uint256 _pid, uint256 _amount) public {
        require(!isDepositEnabled, "deposit: temporarily disabled");
        PoolInfo storage pool = poolInfo[_pid];
        UserInfo storage user = userInfo[_pid][msg.sender];
        updatePool(_pid);
        pool.lpToken.safeTransferFrom(
            address(msg.sender),
            address(this),
            _amount
        );
        user.rewardDebt = block.number > stakeEndBlock
            ? user.rewardDebt.add(_amount.mul(pool.accUSDTPerShare).div(1e12))
            : user.amount.mul(pool.accUSDTPerShare).div(1e12);
        user.amount = user.amount.add(_amount);
        emit Deposit(msg.sender, _pid, _amount);
    }

    // Withdraw LP tokens from TorumMind.
    function withdraw(uint256 _pid, uint256 _amount) public {
        require(!isWithdrawEnabled, "withdraw: temporarily disabled");
        PoolInfo storage pool = poolInfo[_pid];
        UserInfo storage user = userInfo[_pid][msg.sender];
        require(user.amount >= _amount, "withdraw: not good");
        updatePool(_pid);
        uint256 pendingUSDTReward = user
            .amount
            .mul(pool.accUSDTPerShare)
            .div(1e12)
            .sub(user.rewardDebt);
        if (block.number > stakeEndBlock) {
            uint256 pendingXTM = pendingUSDTReward.mul(xtmUSDTPrice);
            safeXTMTransfer(msg.sender, pendingXTM.mul(97).div(100));
            safeXTMTransfer(address(0x000000000000000000000000000000000000dEaD), pendingXTM.mul(3).div(100));
        }
        user.amount = user.amount.sub(_amount);
        user.rewardDebt = user.amount.mul(pool.accUSDTPerShare).div(1e12);
        pool.lpToken.safeTransfer(address(msg.sender), _amount);
        emit Withdraw(msg.sender, _pid, _amount);
    }

    // Withdraw without caring about rewards. EMERGENCY ONLY.
    function emergencyWithdraw(uint256 _pid) public {
        PoolInfo storage pool = poolInfo[_pid];
        UserInfo storage user = userInfo[_pid][msg.sender];
        pool.lpToken.safeTransfer(address(msg.sender), user.amount);
        emit EmergencyWithdraw(msg.sender, _pid, user.amount);
        user.amount = 0;
        user.rewardDebt = 0;
    }

    // Safe xtm transfer function, just in case if rounding error causes pool to not have enough xtms.
    function safeXTMTransfer(address _to, uint256 _amount) internal {
        uint256 xtmBal = xtm.balanceOf(address(this));
        if (_amount > xtmBal) {
            xtm.transfer(_to, xtmBal);
        } else {
            xtm.transfer(_to, _amount);
        }
    }
}

