pragma solidity ^0.8.0;

import "@openzeppelin/contracts/token/ERC1155/utils/ERC1155Holder.sol";
import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/utils/math/SafeMath.sol";
import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@openzeppelin/contracts/token/ERC20/utils/SafeERC20.sol";
import "@openzeppelin/contracts/utils/Context.sol";
import "../interface/Ikaka1155.sol";
import "../interface/Irepo1155.sol";







contract Repurchaser1155 is ERC1155Holder, Ownable {
    using SafeERC20 for IERC20;


    IKTN public KTN;
    IERC20 public U;
    IRepo1155Proxy public proxy;
    
    Meta public meta;
    struct Meta {
        bool repoStage;
        uint repoAmount;
        uint repoMoney; 
        bool saleStage;
        uint saleAmount;
        uint saleMoney;
    }

    mapping(uint => RepoPool) public repoPool;
    struct RepoPool {
        bool isOpen;     // 是否开启回购
        uint basePrice;
        uint amount;
        uint money;
    }

    mapping(uint => SalePool) public salePool;  // 销售池
    struct SalePool {
        bool isClose;
        uint amount;
        uint money;
    }

    event Repurchase(address indexed user, uint indexed cid, uint amount, uint price);
    event Sale(address indexed user, uint indexed cid, uint amount, uint price);
    constructor(address KTN_, address U_, address proxy_) {
        KTN = IKTN(KTN_);
        proxy = IRepo1155Proxy(proxy_);
        U = IERC20(U_);

        meta.repoStage = true;

        
        repoPool[10001].isOpen = true;
        repoPool[10001].isOpen = true;
        repoPool[10001].basePrice = 10 ether;
        
        repoPool[10012].isOpen = true;
        repoPool[10012].basePrice = 20 ether;
        
        repoPool[10024].isOpen = true;
        repoPool[10024].basePrice = 30 ether;
        
        repoPool[10048].isOpen = true;
        repoPool[10048].basePrice = 40 ether;
        
    }

    modifier isRepoActive {
        require(meta.repoStage, "repurchase not active");
        _;
    }

    modifier isSaleActive {
        require(meta.saleStage, "repurchase not active");
        _;
    }
    
    function setStage(bool repoStage_, bool saleSatge_) public onlyOwner {
        meta.repoStage = repoStage_;
        meta.saleStage = saleSatge_;
    }

    function setU(address com) public onlyOwner {
        U = IERC20(com);
    }

    function setProxy(address proxy_) public onlyOwner {
        proxy = IRepo1155Proxy(proxy_);
    }

    function setKTN(address com_) public onlyOwner {
        KTN = IKTN(com_);
    }

    function setApprovalForAll(address account) public onlyOwner {
        KTN.setApprovalForAll(account, true);
    }

    function safePull(address account) public onlyOwner {
        uint amounts = U.balanceOf(address(this));
        U.safeTransfer(account, amounts);
    }

    // 新增一类回购的牌 
    function setCidOpen(uint[] calldata cids_, uint[] calldata basePrices_) public onlyOwner{
        require(cids_.length == basePrices_.length, "unequal length");
        for (uint i = 0; i < cids_.length; i++) {
            uint cid = cids_[i];
            require(!repoPool[cid].isOpen, "already open");
            repoPool[cid].isOpen = true;
            repoPool[cid].basePrice = basePrices_[i];
        }
    }

    // 设置是否开启回购 
    function setCidRepoStage(uint[] calldata cids_, bool[] calldata isOpens_) public onlyOwner {
        require(cids_.length == isOpens_.length, "unequal length");
        for (uint i = 0; i < cids_.length; i++) {
            repoPool[cids_[i]].isOpen = isOpens_[i];
        }
    }
    // 设置是否关闭二次售卖 
    function setCidSaleStage(uint[] calldata cids_, bool[] calldata isOpens_) public onlyOwner {
        require(cids_.length == isOpens_.length, "unequal length");
        for (uint i = 0; i < cids_.length; i++) {
            salePool[cids_[i]].isClose = isOpens_[i];
        }
    }

    // 设置原价 
    function setCidBasePrice(uint[] calldata cids_, uint[] calldata prices_) public onlyOwner {
        require(cids_.length == prices_.length, "unequal length");
        for (uint i = 0; i < cids_.length; i++) {
            repoPool[cids_[i]].basePrice = prices_[i];
        }
    }

    // 获取流通量
    function getCardCirculation(uint cid_) public view isRepoActive returns (uint) {
        require(repoPool[cid_].isOpen, "not open yet");
        uint cur = proxy.getCardCirculation(cid_);
        return cur;
    }

    // 获取销售额
    function getCardSaleMoney(uint cid_) public view isRepoActive returns (uint) {
        require(repoPool[cid_].isOpen, "not open yet");
        uint sales = proxy.getCardSaleMoney(cid_);
        return sales;
    }

    // 获取回购价格
    function getCardRepoPrice(uint cid_) public view isRepoActive returns (uint) {
        require(repoPool[cid_].isOpen, "not open yet");
        uint price = proxy.getCardRepoPrice(cid_);
        return price;
    }
    // 获取二次销售价格, 默认false
    function getCardSalePrice(uint cid_) public view isSaleActive returns (uint) {
        require(!salePool[cid_].isClose, "not open yet");
        uint price = proxy.getCardSalePrice(cid_);
        return price;
    }

    
    function repurchase(uint cid_, uint amounts_) external isRepoActive {
        require(repoPool[cid_].isOpen, "not open yet");
        require(KTN.balanceOf(_msgSender(), cid_) >= amounts_, "not enough card");
        
        uint price = getCardRepoPrice(cid_) * amounts_;
        U.safeTransfer(_msgSender(), price);
        KTN.safeTransferFrom(_msgSender(), address(this), cid_, amounts_, "");

        repoPool[cid_].money += price;
        repoPool[cid_].amount += amounts_;
        meta.repoMoney += price;
        meta.repoAmount += amounts_;
        
        emit Repurchase(_msgSender(),  cid_, amounts_, price);
    }


    function sale(uint cid_, uint amounts_) external isSaleActive {
        require(!salePool[cid_].isClose, "not open yet");
        require(KTN.balanceOf(address(this), cid_) >= amounts_, "not enough card");

        uint price = getCardSalePrice(cid_) * amounts_;
        U.safeTransferFrom(_msgSender(), address(this), price);
        KTN.safeTransferFrom(address(this), _msgSender(), cid_, amounts_, "");

        salePool[cid_].money += price;
        salePool[cid_].amount += amounts_;
        meta.saleMoney += price;
        meta.saleAmount += amounts_;

        emit Sale(_msgSender(),  cid_, amounts_, price);
    }

}

