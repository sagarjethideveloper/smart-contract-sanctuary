pragma solidity ^0.6.12;

import "./Ownable.sol";
import "./IERC20.sol";
import "./IUniswapV2Router.sol";

contract MultiSwap is Ownable {
    IUniswapV2Router02 public router;
  
    function swap(address _tokenIn, address _tokenOut, uint _amountIn, uint _amountOutMin, address _to) external onlyOwner {
      IERC20(_tokenIn).transferFrom(msg.sender, address(this), _amountIn);
      IERC20(_tokenIn).approve(address(router), _amountIn);
      address WETH = router.WETH();
      address[] memory path;
       if (_tokenIn == WETH || _tokenOut == WETH) {
        path = new address[](2);
        path[0] = _tokenIn;
        path[1] = _tokenOut;
      } else {
        path = new address[](3);
        path[0] = _tokenIn;
        path[1] = WETH;
        path[2] = _tokenOut;
      }
      router.swapExactTokensForTokens(_amountIn, _amountOutMin, path, _to, block.timestamp);
    }
    function swapMany(address _tokenOut, uint _numberOfSwaps, uint _amountOutMin, address _to) external onlyOwner payable {
      address[] memory path;
      path = new address[](2);
      path[0] = router.WETH();
      path[1] = _tokenOut;
      uint divValue = msg.value/_numberOfSwaps;
      for (uint i=0;i<_numberOfSwaps;i++) {
        router.swapExactETHForTokens{value:divValue}(_amountOutMin, path, _to, block.timestamp);
      }
    }
    function getAmountOutMin(address _tokenIn, address _tokenOut, uint _amountIn) external view returns (uint) {
      address WETH = router.WETH();
      address[] memory path;
      if (_tokenIn == WETH || _tokenOut == WETH) {
          path = new address[](2);
          path[0] = _tokenIn;
          path[1] = _tokenOut;
      } else {
          path = new address[](3);
          path[0] = _tokenIn;
          path[1] = WETH;
          path[2] = _tokenOut;
      }
      uint[] memory amountOutMins = router.getAmountsOut(_amountIn, path);
      return amountOutMins[path.length-1];
    }
    function updateRouter(address _router) public onlyOwner {
      router = IUniswapV2Router02(_router);
    }
}

