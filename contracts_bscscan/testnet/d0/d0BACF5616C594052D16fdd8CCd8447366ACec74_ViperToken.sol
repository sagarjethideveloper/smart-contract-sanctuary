import "@openzeppelin/contracts-upgradeable/proxy/utils/Initializable.sol";
import "@openzeppelin/contracts-upgradeable/token/ERC20/ERC20Upgradeable.sol";
import "@openzeppelin/contracts-upgradeable/token/ERC20/extensions/IERC20MetadataUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/proxy/utils/UUPSUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/access/OwnableUpgradeable.sol";
import "./ViperStorage.sol";

contract ViperToken is Initializable, OwnableUpgradeable, ERC20Upgradeable, UUPSUpgradeable {

    string private _name;
    string private _symbol;
    uint8 private _decimals;
    uint256 private _tTotal;

    ViperStorage private _viperStorage;

    function initialize() public initializer {
        _name = "ViperToken";
        _symbol = "VIPER";
        _decimals = 18;

        __Ownable_init();
        __ERC20_init(_name, _symbol);
        __UUPSUpgradeable_init();

        _tTotal = 5000000000 * 10 ** 18;

        emit Transfer(address(0), _msgSender(), _tTotal);
    }

    function name() public view override returns (string memory) {
        return _name;
    }

    function symbol() public view override returns (string memory) {
        return _symbol;
    }

    function decimals() public view override returns (uint8) {
        return _decimals;
    }

    function totalSupply() public view override returns (uint256) {
        return _tTotal;
    }

    function balanceOf(address account) public view override returns (uint256) {
        return _viperStorage.balanceOf(account);
    }

    function transfer(address recipient, uint256 amount) public override returns (bool) {
        return _viperStorage.transfer(recipient, amount);
    }

    function allowance(address owner, address spender) public view override returns (uint256) {
        return _viperStorage.allowance(owner, spender);
    }

    function approve(address spender, uint256 amount) public override returns (bool) {
        return _viperStorage.approve(spender, amount);
    }

    function transferFrom(address sender, address recipient, uint256 amount) public override returns (bool) {
        return _viperStorage.transferFrom(sender, recipient, amount);
    }

    function increaseAllowance(address spender, uint256 addedValue) public virtual override returns (bool) {
        return _viperStorage.increaseAllowance(spender, addedValue);
    }

    function decreaseAllowance(address spender, uint256 subtractedValue) public virtual override returns (bool) {
        return _viperStorage.decreaseAllowance(spender, subtractedValue);
    }

    function setStorage(address storageAddress) public onlyOwner {
        _viperStorage = ViperStorage(storageAddress);
    }

    function _authorizeUpgrade(address) internal override onlyOwner {}

    //to receive ETH from uniswapV2Router when swapping
    receive() external payable {}
}

