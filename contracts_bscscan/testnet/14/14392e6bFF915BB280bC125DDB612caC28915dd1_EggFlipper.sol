pragma solidity ^0.8.0;

import "@openzeppelin/contracts/utils/Context.sol";
import "@openzeppelin/contracts/token/ERC721/IERC721.sol";

import "./TransferHelper.sol";

contract EggFlipper is Context {
  address public constant ZOO_TOKEN_ADDRESS = 0x19263F2b4693da0991c4Df046E4bAA5386F5735E;
  address public constant ANML_TOKEN_ADDRESS = 0x91109c6e2AaF421456aafAb4ba3a122A95b46B28;

  struct Listing {
    uint256 tokenId;
    address seller;
    uint256 ethPrice;
  }

  event ListingCreated(uint256 indexed tokendId, address indexed seller, uint256 ethPrice);

  event ListingDeleted(uint256 indexed tokendId, address indexed seller, uint256 ethPrice);

  event ListingSold(uint256 indexed tokendId, address indexed seller, uint256 ethPrice, address indexed buyer);

  IERC721 public anmlToken;

  mapping(uint256 => Listing) public listings;

  constructor() {
    anmlToken = IERC721(ANML_TOKEN_ADDRESS);
  }

  function _listingExists(uint256 tokenId) internal view returns (bool) {
    return listings[tokenId].seller != address(0);
  }

  function unlistAnml(uint256 tokenId) external {
    require(_listingExists(tokenId), "tokenId is not listed");

    Listing memory listing = listings[tokenId];

    require(listing.seller == _msgSender(), "msg.sender is not seller");
    anmlToken.safeTransferFrom(address(this), _msgSender(), tokenId);

    emit ListingCreated(tokenId, listing.seller, listing.ethPrice);

    delete listings[tokenId];
  }

  function listAnml(uint256 tokenId, uint256 ethPrice) external {
    require(!_listingExists(tokenId), "tokenId is already listed");
    require(anmlToken.ownerOf(tokenId) == _msgSender(), "msg.sender does not own token");

    anmlToken.safeTransferFrom(_msgSender(), address(this), tokenId);
    listings[tokenId] = Listing({ tokenId: tokenId, seller: _msgSender(), ethPrice: ethPrice });

    emit ListingCreated(tokenId, _msgSender(), ethPrice);
  }

  function buyAnml(uint256 tokenId) external payable {
    require(_listingExists(tokenId), "tokenId is not listed");

    Listing memory listing = listings[tokenId];

    require(listing.seller != _msgSender(), "seller can not buy own listing");
    require(msg.value == listing.ethPrice, "exact amount required");

    TransferHelper.safeTransferETH(listing.seller, listing.ethPrice);
    anmlToken.safeTransferFrom(address(this), _msgSender(), tokenId);

    emit ListingSold(tokenId, listing.seller, listing.ethPrice, _msgSender());
    delete listings[tokenId];
  }
}

