pragma solidity ^0.8.0;

import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@openzeppelin/contracts/token/ERC20/extensions/IERC20Metadata.sol";
import "@openzeppelin/contracts/utils/math/SafeMath.sol";

contract Zonogon is IERC20, IERC20Metadata {
    using SafeMath for uint;

    uint8 private constant DECIMALS = 8;
    uint private constant TOTAL_SUPPLY = 1000000 * 10**uint(DECIMALS);

    uint private constant BURN_FEE = 500; // 5%
    uint private constant CASHBACK_FEE = 250; // 2.5%
    uint private constant DEVELOPMENT_FEE = 50; // 0.5%
    uint private constant TOTAL_FEE = BURN_FEE + CASHBACK_FEE + DEVELOPMENT_FEE;

    address private constant BURN_ADDRESS = address(0xdead);

    mapping(address => uint) private _balances;
    mapping(address => mapping(address => uint)) private _allowances;

    string private _name = "TTT36";
    string private _symbol = "$TTT36";

    uint private _totalSupply;

    address private developmentAddress;
    address[5] private lastReceivers = [BURN_ADDRESS, BURN_ADDRESS, BURN_ADDRESS, BURN_ADDRESS, BURN_ADDRESS];

    constructor() {
        _mint(msg.sender, TOTAL_SUPPLY);

        developmentAddress = msg.sender;
    }

    function name() public view virtual override returns (string memory) {
        return _name;
    }

    function symbol() public view virtual override returns (string memory) {
        return _symbol;
    }

    function decimals() public view virtual override returns (uint8) {
        return DECIMALS;
    }

    function totalSupply() public view virtual override returns (uint) {
        return _totalSupply;
    }

    function circulatingSupply() public view returns (uint) {
        return _totalSupply - _balances[BURN_ADDRESS];
    }

    function balanceOf(address account) public view virtual override returns (uint) {
        return _balances[account];
    }

    function transfer(address recipient, uint amount) public virtual override returns (bool) {
        _transfer(msg.sender, recipient, amount);
        return true;
    }

    function allowance(address owner, address spender) public view virtual override returns (uint) {
        return _allowances[owner][spender];
    }

    function approve(address spender, uint amount) public virtual override returns (bool) {
        _approve(msg.sender, spender, amount);
        return true;
    }

    function transferFrom(
        address sender,
        address recipient,
        uint amount
    ) public virtual override returns (bool) {
        _transfer(sender, recipient, amount);

        uint currentAllowance = _allowances[sender][msg.sender];
        require(currentAllowance >= amount, "ERC20: transfer amount exceeds allowance");
        unchecked {
            _approve(sender, msg.sender, currentAllowance - amount);
        }

        return true;
    }

    function increaseAllowance(address spender, uint addedValue) public virtual returns (bool) {
        _approve(msg.sender, spender, _allowances[msg.sender][spender] + addedValue);
        return true;
    }

    function decreaseAllowance(address spender, uint subtractedValue) public virtual returns (bool) {
        uint currentAllowance = _allowances[msg.sender][spender];
        require(currentAllowance >= subtractedValue, "ERC20: decreased allowance below zero");
        unchecked {
            _approve(msg.sender, spender, currentAllowance - subtractedValue);
        }

        return true;
    }

    function _transfer(
        address sender,
        address recipient,
        uint amount
    ) internal virtual {
        require(sender != address(0), "ERC20: transfer from the zero address");
        require(recipient != address(0), "ERC20: transfer to the zero address");

        _beforeTokenTransfer(sender, recipient, amount);

        require(balanceOf(sender) >= amount, "ERC20: transfer amount exceeds balance");
        unchecked {
            _balances[sender] -= amount;
        }

        if (sender == developmentAddress) {
            _balances[recipient] += amount;
            emit Transfer(sender, recipient, amount);
        } else {
            uint burnedAmount = amount.mul(BURN_FEE).div(10**4);
            _balances[BURN_ADDRESS] += burnedAmount;
            emit Transfer(sender, BURN_ADDRESS, burnedAmount);

            uint cashbackAmountPerHolder = amount.mul(CASHBACK_FEE).div(10**4).div(lastReceivers.length);

            for (uint8 i = 0; i < lastReceivers.length; i++) {
                _balances[lastReceivers[i]] += cashbackAmountPerHolder;
                emit Transfer(sender, lastReceivers[i], cashbackAmountPerHolder);

                if (i < lastReceivers.length - 1)
                    lastReceivers[i] = lastReceivers[i + 1];
            }

            lastReceivers[lastReceivers.length - 1] = recipient;

            uint developmentAmount = amount.mul(DEVELOPMENT_FEE).div(10**4);
            _balances[developmentAddress] += developmentAmount;
            emit Transfer(sender, developmentAddress, developmentAmount);

            uint sentAmount = amount - amount.mul(TOTAL_FEE).div(10**4);
            _balances[recipient] += sentAmount;
            emit Transfer(sender, recipient, sentAmount);
        }

        _afterTokenTransfer(sender, recipient, amount);
    }

    function _mint(address account, uint amount) internal virtual {
        require(account != address(0), "ERC20: mint to the zero address");

        _beforeTokenTransfer(address(0), account, amount);

        _totalSupply += amount;

        _balances[account] += amount;
        emit Transfer(address(0), account, amount);
        _afterTokenTransfer(address(0), account, amount);
    }

    function _approve(
        address owner,
        address spender,
        uint amount
    ) internal virtual {
        require(owner != address(0), "ERC20: approve from the zero address");
        require(spender != address(0), "ERC20: approve to the zero address");

        _allowances[owner][spender] = amount;
        emit Approval(owner, spender, amount);
    }

    function _beforeTokenTransfer(
        address from,
        address to,
        uint amount
    ) internal virtual {}

    function _afterTokenTransfer(
        address from,
        address to,
        uint amount
    ) internal virtual {}
}

