pragma solidity ^0.8.0;

interface IBetting {

    /**
     * @notice Odds are in 18 decimal format
     *
     * 1.0 -> 1000000000000000000
     * 0.5 -> 500000000000000000
     * 3.14 -> 3140000000000000000
     */
    struct BettingPair {
        uint256 eventId;
        uint256 betForecast;
        uint256 odd;
    }


    event NewBet(uint256 bettingSlipId, address player, uint256 amount, BettingPair[] bettingPairs);
    event RewardClaimed(uint256 bettingSlipId, uint256 cashOutAmount);
    event LostBet(uint256 bettingSlipId);
    event EventCanceled(bool isCanceled);
    event WinningOptionAdded(uint256 eventId, uint256 winningOption);
    event BetStableTokenUpdated(address betStableTokenAddress);
    event CashOutMaximumUpdated(uint256 amount);


    /**
     * Function for the User to place a new bet
     *
     * @param _bettingPairs - Array of BettingPair structures which user wants to include in a bet; contains eventId, betForecast and the odd for that betForecast
     * @param _amount - Amount of tokens user bets on
     * @param _digest - Digest of the signature which is need as a confirmation that odds and eventId are accurate
     * @param _signature - ECDSA signature
     *
     * @return bettingSlipId - Uniquely generated betting slip id
     */
    function placeBet(BettingPair[] memory _bettingPairs, uint256 _amount, bytes32 _digest, bytes calldata _signature) external returns(uint256 bettingSlipId);

    /**
     * Function for the User to claim rewards if the bet is won
     *
     * @param _bettingSlipId - Betting Slip Id of a bet which rewards needs to be claimed
     *
     * No return, reverts on error
     */
    function claimRewards(uint256 _bettingSlipId) external;

    /**
     * Checks is bet is lost
     * @notice Only Admin can call
     *
     * @param _bettingSlipId - Betting slip id of a bet which needs to be checked
     *
     * @return true or false
     */
    function checkIsLost(uint256 _bettingSlipId) external returns(bool);

    /**
     * Cancels Event and odd for winning becames 1
     * @notice Only Admin can call
     *
     * @param _eventId - Id of the event which needs to be canceled
     * @param _isCanceled - Is event canceled
     *
     * No return, reverts on error
     */
    function cancelEvent(uint256 _eventId, bool _isCanceled) external;

    /**
     * Adds winning market option to a set of winning options
     * @notice Only Admin can call
     *
     * @param _eventId - Id of the event
     * @param _winningOption - Code of market option which is the winning one
     *
     * No return, reverts on error
     */
    function addWinningOptionToSet(uint256 _eventId, uint256 _winningOption) external;

    /**
     * Sets the address of the token which platform accepts for betting
     * @notice Only Admin can call
     *
     * @param _betStableTokenAddress - Token address
     *
     * No return, reverts on error
     */
    function setBetStableToken(address _betStableTokenAddress) external;

    /**
     * Sets the amount limit for cash out
     * @notice Only Admin can call
     *
     * @param _amount - Maximum amount that User can cash out as a reward for a single bet
     *
     * No return, reverts on error
     */
    function setCashOutMaximum(uint256 _amount) external;

    /**
     * Deposits amount of token for betting into smart contract
     * @notice Needs approval for spending from token smart contract
     * @notice Only Admin can call
     *
     * @param _amount - Amount to deposit
     *
     * No return, reverts on error
     */
    function depositFunds(uint256 _amount) external;

    /**
     * Withdraws amount of earned tokens
     * @notice Only Admin can call
     *
     * @param _amount - Amount to withdraw; Cannot be greather than adminWithdrawalMaximum
     *
     * No return, reverts on error
     */
    function withdrawEarnings(uint256 _amount) external;
}

