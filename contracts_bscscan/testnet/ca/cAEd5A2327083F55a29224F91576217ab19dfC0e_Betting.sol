pragma solidity ^0.8.0;

import { IBetting } from "./interfaces/IBetting.sol";

import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@openzeppelin/contracts/token/ERC20/utils/SafeERC20.sol";
import "@openzeppelin/contracts/security/ReentrancyGuard.sol";
import "@openzeppelin/contracts/utils/Counters.sol";
import "@openzeppelin/contracts/utils/structs/EnumerableSet.sol";
import "@openzeppelin/contracts/utils/cryptography/ECDSA.sol";


contract Betting is IBetting, Ownable, ReentrancyGuard {
    using SafeERC20 for IERC20;
    using Counters for Counters.Counter;
    using EnumerableSet for EnumerableSet.UintSet;

    struct Event {
        bool isCanceled;
        EnumerableSet.UintSet winningOptions;
    }

    struct BettingSlip {
        bool isWinClaimed;
        bool isLostChecked;
        address player;
        uint256 amount;
        uint256 totalOdd;
        BettingPair[] bets;
    }

    mapping(uint256 => Event) events;  // eventId => concrete event
    mapping(uint256 => BettingSlip) public bettingSlips;

    uint256 public cashOutMaximum;
    uint256 public withdrawalMaximum;  // this is to prevent exit scams
    uint256 constant ONE = 1000000000000000000;

    // Betting slips ids increase monotonically, with the first value being 1. An id of 0 is invalid.
    Counters.Counter private _currentBettingSlipId;
    IERC20 public betStableToken;

    error InvalidAddress();
    
    modifier validAddress(address _address) {
        if(_address == address(0)) 
            revert InvalidAddress();
            _;
    }


    constructor(address _betStableTokenAddress, uint256 _cashOutMaximum) {
        setBetStableToken(_betStableTokenAddress);
        setCashOutMaximum(_cashOutMaximum);
        withdrawalMaximum = 0;
    }


    /// @inheritdoc IBetting
    function placeBet(BettingPair[] memory _bettingPairs, uint256 _amount, bytes32 _digest, bytes calldata _signature) public override returns(uint256 bettingSlipId) {
        require(owner() == ECDSA.recover(_digest, _signature), "Betting::placeBet: Invalid signature");

        _currentBettingSlipId.increment();

        bettingSlipId = _getCurrentBettingSlipId();
        require(bettingSlipId <= type(uint256).max, "Betting::placeBet: Betting slips id exceeds maximum");

        uint256 totalOdd = ONE;

        uint256 loopLength = _bettingPairs.length;
        for(uint i = 0; i < loopLength; i++) {
            bettingSlips[bettingSlipId].bets.push(_bettingPairs[i]);
            totalOdd = totalOdd * _bettingPairs[i].odd / ONE;
        }

        betStableToken.safeTransferFrom(msg.sender, address(this), _amount);

        bettingSlips[bettingSlipId].player = msg.sender;
        bettingSlips[bettingSlipId].amount = _amount;
        bettingSlips[bettingSlipId].totalOdd = totalOdd;

        withdrawalMaximum -= (_amount * (totalOdd - ONE)) / ONE;

        emit NewBet(bettingSlipId, msg.sender, _amount, _bettingPairs);
    }


    /// @inheritdoc IBetting
    function claimRewards(uint256 _bettingSlipId) public override nonReentrant {
        BettingSlip storage currentSlip = bettingSlips[_bettingSlipId];

        require(msg.sender == currentSlip.player);
        require(!currentSlip.isWinClaimed);

        uint256 cashOutAmount = currentSlip.amount;
        uint256 totalOdd = ONE;

        uint256 loopLength = currentSlip.bets.length;
        for(uint i = 0; i < loopLength; i++) {
            BettingPair memory currentPair = currentSlip.bets[i];
            require(events[currentPair.eventId].winningOptions.contains(currentPair.betForecast), "Betting::placeBet: Claim unavailable");

            if(events[currentPair.eventId].isCanceled) {
                cashOutAmount = cashOutAmount * 1;
            } else {
                cashOutAmount = cashOutAmount * currentPair.odd / ONE;
                totalOdd = totalOdd * currentPair.odd / ONE;
            }
        }

        if(cashOutAmount > cashOutMaximum) {
            cashOutAmount = cashOutMaximum;
        }

        bettingSlips[_bettingSlipId].isWinClaimed = true;

        if(totalOdd < currentSlip.totalOdd) {
            withdrawalMaximum += (currentSlip.amount * (currentSlip.totalOdd - ONE) - currentSlip.amount * (totalOdd - ONE)) / ONE;
        }

        betStableToken.safeTransfer(msg.sender, cashOutAmount);

        emit RewardClaimed(_bettingSlipId, cashOutAmount);
    }


    /// @inheritdoc IBetting
    function checkIsLost(uint256 _bettingSlipId) public override onlyOwner returns(bool) {
        BettingSlip memory currentBettingSlip = bettingSlips[_bettingSlipId];

        require(!currentBettingSlip.isLostChecked, "Betting::checkIsLost: Already checked");

        bettingSlips[_bettingSlipId].isLostChecked = true;

        uint256 loopLength = currentBettingSlip.bets.length;
        for(uint i = 0; i < loopLength; i++) {
            BettingPair memory currentPair = currentBettingSlip.bets[i];

            if (!events[currentPair.eventId].winningOptions.contains(currentPair.betForecast)) {
                withdrawalMaximum += (currentBettingSlip.amount * (currentBettingSlip.totalOdd - ONE)) / ONE;
                
                emit LostBet(_bettingSlipId);

                return true;
            }
        }

        return false;
    }


    /// @inheritdoc IBetting
    function cancelEvent(uint256 _eventId, bool _isCanceled) public override onlyOwner {
        events[_eventId].isCanceled = _isCanceled;

        emit EventCanceled(_isCanceled);
    }


    /// @inheritdoc IBetting
    function addWinningOptionToSet(uint256 _eventId, uint256 _winningOption) public override onlyOwner {
        events[_eventId].winningOptions.add(_winningOption);

        emit WinningOptionAdded(_eventId, _winningOption);
    }


    /// @inheritdoc IBetting
    function setBetStableToken(address _betStableTokenAddress) public override onlyOwner validAddress(_betStableTokenAddress) {
        betStableToken = IERC20(_betStableTokenAddress);

        emit BetStableTokenUpdated(_betStableTokenAddress);
    }


    /// @inheritdoc IBetting
    function setCashOutMaximum(uint256 _amount) public override onlyOwner {
        require(_amount > 0, "Betting::setCashOutMaximum: Amount must be greater than zero");

        cashOutMaximum = _amount;

        emit CashOutMaximumUpdated(_amount);
    }


    /// @inheritdoc IBetting
    function depositFunds(uint256 _amount) public override onlyOwner {
        require(_amount > 0, "Betting::depositFunds: Amount must be greater than zero");

        betStableToken.safeTransferFrom(owner(), address(this), _amount);

        withdrawalMaximum += _amount;
    }


    /// @inheritdoc IBetting
    function withdrawEarnings(uint256 _amount) public override onlyOwner nonReentrant {
        require(_amount > 0, "Betting::withdrawEarnings: Amount must be greater than zero");
        require(_amount <= withdrawalMaximum, "Betting::withdrawEarnings: Amount exceeds withdrawal maximum");

        betStableToken.safeTransfer(owner(), _amount);

        withdrawalMaximum -= _amount;
    }


    /**
     * @dev Get the current Betting Slip Id
     */
    function _getCurrentBettingSlipId() internal view returns (uint256) {
        return _currentBettingSlipId.current();
    }
}

