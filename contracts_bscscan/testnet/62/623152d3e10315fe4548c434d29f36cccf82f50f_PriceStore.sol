import "../interfaces/ISyntheticToken.sol";

contract PriceStore is Initializable, OwnableUpgradeable, IPriceStore {
	IAddressStore public addressStore;

	function initialize(
		address _addressStore
	) initializer public {
		addressStore = IAddressStore(_addressStore);
		__Ownable_init();
	}

	function setAddressStore(address _addressStore) public onlyOwner {
		addressStore = IAddressStore(_addressStore);
	}

	function getAggregator(address base) override public view returns (AggregatorV2V3Interface) {
		return AggregatorV2V3Interface(ISyntheticToken(base).aggregator());
	}

	function getDecimals(address base) override public view returns (uint8) {
		if(base == addressStore.opsAddr()) {
			return 18;
		}
		return getAggregator(base).decimals();
	}

	function getPrice(address base) override public view returns (int, uint8) {
		if(base == addressStore.opsAddr()) {
			return (int(getOpsPrice()), 18);
		}
		(
			,// uint80 roundId,
			int price,
			,//uint startedAt,
			,//uint timeStamp,
			//uint80 answeredInRound
		) = getAggregator(base).latestRoundData();
		uint8 decimals = getAggregator(base).decimals();

		return (price, decimals);
	}

	function getHistoricalPrice(address base, uint80 roundId) override public view returns (int, uint8) {
		(
			,// uint80 roundId,
			int price,
			,//uint startedAt,
			,//uint timeStamp,
			//uint80 answeredInRound
		) = getAggregator(base).getRoundData(roundId);
		uint8 decimals = getAggregator(base).decimals();

		return (price, decimals);
	}

	function getOpsPrice() override public view returns (uint) {
		uint chainId;
		assembly {
			chainId:= chainid()
		}
		if(chainId == 97) {
			// On BSC Testnet, return $0.2 OPS price
			return 10**18 / 5;
		} else {
			(int price,) = getPrice(addressStore.opsAddr());
			return uint(price);
		}
	}
}

