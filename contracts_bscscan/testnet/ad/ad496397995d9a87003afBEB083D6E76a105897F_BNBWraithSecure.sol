pragma solidity ^0.8.7;

import "./WraithSecure.sol";
import "./Initializable.sol";

contract BNBWraithSecure is WraithSecure {
  function initialize(
    IVerifier _verifier,
    uint256 _denomination,
    uint32 _merkleTreeHeight,
    address _operator
  ) public override initializer {
    WraithSecure.initialize(_verifier, _denomination, _merkleTreeHeight, _operator);
  }

  function _processDeposit() internal override {
    if(msg.value != denomination)
      revert("Invalid BNB amount sent");
  }

  function _processWithdraw(
    address payable _recipient,
    address payable _relayer,
    uint256 _fee,
    uint256 _refund
  ) internal override {
    // sanity checks
    if(msg.value != 0)
      revert("Message value is supposed to be zero for BNB instance");
    if(_refund != 0)
      revert("Refund value is supposed to be zero for BNB instance");

    uint256 providerFee = super.calculateFee(denomination);

    (bool success, ) = _recipient.call{value: (denomination - _fee - providerFee)}("");
    if(!success)
      revert("Payment to _recipient failed");
    if (_fee > 0) {
      (success, ) = _relayer.call{value: _fee}("");
      if(!success)
        revert("Payment to _relayer failed");
    }

    if (providerFee > 0) {
      (success, ) = super.getProviderWallet().call{value: providerFee}("");
      if(!success)
        revert("Payment to provider failed");
    }
  }
}

