import "@openzeppelin/contracts/access/Ownable.sol";
import "./interfaces/IStakingPoolRewarder.sol";
import "../interfaces/IERC20.sol";
import "../libraries/TransferHelper.sol";

contract StakingPoolRewarder is Ownable, IStakingPoolRewarder {
    address public immutable stakingPool;
    address public immutable rewardToken;

    modifier onlyStakingPool() {
        require(
            stakingPool == msg.sender,
            "StakingPoolRewarder: only stakingPool can call"
        );
        _;
    }

    constructor(address _stakingPool, address _rewardToken) public {
        stakingPool = _stakingPool;
        rewardToken = _rewardToken;
    }

    function onReward(
        uint256 poolId,
        address user,
        uint256 amount
    ) external override onlyStakingPool() {
        require(amount > 0, "StakingPoolRewarder: Zero amount to rewarder");
        TransferHelper.safeTransfer(rewardToken, user, amount);
    }

    function emergencyTransfer(address to, uint256 amount) external onlyOwner {
        require(to != address(0), "StakingPoolRewarder: ZERO_ADDRESS");
        require(
            amount > 0,
            "StakingPoolRewarder: Zero amount to emergencyTransfer"
        );
        require(
            amount <= IERC20(rewardToken).balanceOf(address(this)),
            "StakingPoolRewarder: emergency transfer amount more than locked amount"
        );
        TransferHelper.safeTransfer(rewardToken, to, amount);
    }
}

