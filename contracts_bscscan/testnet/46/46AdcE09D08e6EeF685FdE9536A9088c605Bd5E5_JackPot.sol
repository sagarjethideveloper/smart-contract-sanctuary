pragma solidity 0.8.0;

import '@openzeppelin/contracts/utils/math/SafeMath.sol';
import './interfaces/IGDPGameNFT.sol';
import './libs/zeppelin/token/ERC20/IGDP.sol';
import './libs/dice/Auth.sol';
import './libs/dice/Math.sol';

contract JackPot is Auth {
  using SafeMath for uint;
  using SafeMath for uint32;

  IGDP public gdpToken;
  IGDPGameNFT public nftToken;
  mapping(address => bool) public gameContracts;
  uint public round;
  uint[] public prizes;

  mapping (uint => address[]) private tickets;
  string private seed;

  modifier onlyGameContracts() {
    require(gameContracts[msg.sender], 'onlyGameContracts');
    _;
  }

  event Drew(uint round, address winner, uint tokenId);
  event TicketAdded(uint indexed round, address user, uint number, string game, bool isWin);

  function initialize(address _admin, address _nftToken, string memory _seed) public initializer {
    Auth.initialize(_admin);
    seed = _seed;
    gdpToken = IGDP(0x33eb4d829a9c5224E25Eb828E2a11550308c885E);
    nftToken = IGDPGameNFT(_nftToken);
    round = 1;
  }

  // ADMIN-FUNCTIONS

  function updateGameContract(address _game, bool status) onlyMainAdmin public {
    gameContracts[_game] = status;
  }

  function addTicket(address _user, string memory _game, bool _isWin) onlyGameContracts public {
    tickets[round].push(_user);
    emit TicketAdded(round, _user, 1000 + tickets[round].length, _game, _isWin);
  }

  function draw(string[] memory _prizeNames) onlyMainAdmin public {
    require(_prizeNames.length > 0, 'No prize, please call setPrizes first');
    for(uint i = 0; i < _prizeNames.length; i++) {
      require(nftToken.validNFTNames(_prizeNames[i]), 'Invalid NFT name');
      address winner = _pickWinner();
      if (winner != address(0)) {
        uint newTokenId = nftToken.mint(winner, _prizeNames[i]);
        emit Drew(round, winner, newTokenId);
      }
    }
    _resetGame();
  }

  function getTotalTicketsInCurrentRound() public view returns (uint) {
    return tickets[round].length;
  }

  // PRIVATE FUNCTIONS

  function _pickWinner() private view returns (address) {
    if (tickets[round].length == 0) {
      return address(0x0);
    }
    if (tickets[round].length == 1) {
      return tickets[round][0];
    }
    uint randomIndex = Math.genRandomNumberInRange(seed, 0, tickets[round].length - 1);
    return tickets[round][randomIndex];
  }

  function _resetGame() private {
    round += 1;
    delete prizes;
  }
}

