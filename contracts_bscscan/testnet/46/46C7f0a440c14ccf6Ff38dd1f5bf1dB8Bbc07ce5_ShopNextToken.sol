contract ShopNextToken is BEP20Detailed, BEP20 {
    using SafeMath for uint256;

    uint256 private totalTokens;
    mapping(address => uint256) lockedToken;
    mapping(address => bool) vipAddresses; 
    bool transfersEnabled;
    address transferRole;
    uint256 vipRequiredAmount;

    event TokenLocked(address indexed account, uint256 amount);
    event TokenUnlocked(address indexed account, uint256 amount);
    event TransferRoleAssigned(address transferRole);
    event TransfersEnabled(bool newStatus);
    event VIPRequiredAmountChanged(uint256 newAmount);
    
    modifier transfersAllowed() {
        require(transfersEnabled, "Transfers not available");
        _;
    }

    // modifier onlyAuthorized() {
    //     require(
    //         _msgSender() == owner() || _msgSender() == transferRole,
    //         "Not authorized"
    //     );
    //     _;
    // }

    constructor() BEP20Detailed("TESTNEXT4", "TESTNEXT4", 18) {
        totalTokens = 1000000000 * 10**uint256(decimals());
        _mint(owner(), totalTokens);
        vipRequiredAmount = 500 * 10 ** uint256(decimals());
    }

    function transfer(address _receiver, uint256 _amount)
        public
        override(BEP20, IBEP20)
        returns (bool success)
    {
        require(
            unlockedTokenOf(_msgSender()) >= _amount,
            "Not enough unlocked token balance"
        );
        require(_receiver != address(0));
        return BEP20.transfer(_receiver, _amount);
    }

    function transferFrom(
        address _from,
        address _receiver,
        uint256 _amount
    ) public override(BEP20, IBEP20) returns (bool) {
        require(
            unlockedTokenOf(_from) >= _amount,
            "Not enough unlocked token balance of sender"
        );
        require(_from != address(0));
        require(_receiver != address(0));
        require(_amount <= allowance(_from, msg.sender));
        return BEP20.transferFrom(_from, _receiver, _amount);
    }

    function vipAddress(address account) public view returns (bool) {
        return vipAddresses[account];
    }

    function unlockedTokenOf(address account) public view returns (uint256) {
        return balanceOf(account).sub(lockedToken[account]);
    }

    function lockedTokenOf(address account)public view returns (uint256) {
        return lockedToken[account];
    }

    function lock(uint256 amount) public returns (bool) {
        address account = _msgSender();
        require(
            unlockedTokenOf(account) >= amount,
            "Not enough unlocked tokens"
        );
        lockedToken[account] = lockedToken[account].add(amount);
        if (lockedToken[account] >= vipRequiredAmount) {
            vipAddresses[account] = true;
        }
        emit TokenLocked(account, amount);
        return true;
    }

    function unlock(uint256 amount) public returns (bool) {
        address account = _msgSender();
        require(lockedToken[account] >= amount, "Not enough locked tokens");
        lockedToken[account] = lockedToken[account].sub(amount);
         if (lockedToken[account] < vipRequiredAmount) {
            vipAddresses[account] = false;
        }
        emit TokenUnlocked(account, amount);
        return true;
    }

    /**
     * @dev Transfers tokens in batch
     * @param recipients an array of recipient addresses
     * @param values an array of specified amount of tokens to be transferred
     * @return success status of the batch transferring
     */
    function transfers(address[] memory recipients, uint256[] memory values)
        public
        transfersAllowed
        returns (bool)
    {
        require(
            recipients.length == values.length,
            "Input lengths do not match"
        );

        for (uint256 i = 0; i < recipients.length; i++) {
            transfer(recipients[i], values[i]);
        }
        return true;
    }

    /**
     * @dev Enables the method ``transfers()`` if ``enable=true``,
     * and disables ``transfers()`` otherwise
     * @param enable the expected new availability of the method ``transfers()``
     */
    function enableTransfers(bool enable) public onlyOwner returns (bool) {
        transfersEnabled = enable;
        emit TransfersEnabled(enable);
        return true;
    }

    /**
     * @dev update vip required locked amount of user by new `newAmount`
     * 
     * @param newAmount the expected new required locked amount that vip required
     */

     function changeVIPRequiredAmount(uint256 newAmount) public  onlyOwner returns (bool) {
         vipRequiredAmount = newAmount;
         emit VIPRequiredAmountChanged(newAmount);
         return true;
     }

    // /**
    //  * @dev Assigns `transferRole` to the specified address
    //  * @param account address to be assigned as the `transferRole`
    //  */
    // function assignNewTransferRole(address account) public onlyOwner {
    //     transferRole = account;
    //     emit TransferRoleAssigned(account);
    // }

    fallback() external payable {
        revert();
    }

    receive() external payable {
        // custom function code
