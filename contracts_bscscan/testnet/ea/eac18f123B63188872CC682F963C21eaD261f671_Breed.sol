import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/token/ERC721/IERC721.sol";
import "@openzeppelin/contracts/utils/math/SafeMath.sol";
import "@openzeppelin/contracts/utils/Address.sol";

import "./Interfaces/ICard.sol";
import "./Interfaces/IHero.sol";

contract Breed is Ownable {
    using Address for address;
    using SafeMath for uint256;

    // ========== CORE
    address public heroSmartContractAddress;
    address public cardSmartContractAddress;

    constructor (
        address _heroSmartContractAddress,
        address _cardSmartContractAddress
    ) {
        require(_heroSmartContractAddress.isContract(), "The hero contract address must be a deployed contract");
        heroSmartContractAddress = _heroSmartContractAddress;

        require(_cardSmartContractAddress.isContract(), "The card contract address must be a deployed contract");
        cardSmartContractAddress = _cardSmartContractAddress;
    }
    
    function breedFromCards(uint256 _maleCardId, uint256 _femaleCardId) 
        external        
        returns (uint256)
    {
        address _sender = _msgSender();

        IERC721 cardSmartContractERC721 = IERC721(cardSmartContractAddress);

        // Check owner of cards
        require(
            cardSmartContractERC721.ownerOf(_maleCardId) == _sender && 
            cardSmartContractERC721.ownerOf(_femaleCardId) == _sender,
            "Only the owner can breed"
        );

        ICard _cardSmartContract = ICard(cardSmartContractAddress);

        // Check gender of cards
        require(
            _getCardGender(_cardSmartContract, _maleCardId) == 1 &&
            _getCardGender(_cardSmartContract, _femaleCardId) == 0,
            "Cards are invalid gender"
        );

        // Transfer cards to owner' contract
        uint256[] memory cardIds = new uint256[](2);
        cardIds[0] = _maleCardId;
        cardIds[1] = _femaleCardId;
        _cardSmartContract.safeBatchTransferFrom(_sender, owner(), cardIds, "");

        try IHero(heroSmartContractAddress).breed(0, 0, _sender) returns (uint256 heroId) {
            return heroId;
        } catch {
            revert('Breed: failed to breed from the card');
        }
    }

    function _getCardGender(ICard _cardSmartContract, uint256 _cardId) internal view returns (uint8) {
        try _cardSmartContract.getCardGender(_cardId) returns (uint8 gender) {
            return gender;
        } catch {
            revert('Breed: failed to get information from the card');
        }
    }
}

