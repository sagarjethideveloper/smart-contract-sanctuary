	struct PotInfo {
		string name;
		address pool;
		IERC20 token;
		uint256 ticketPrice;
		uint256 limit;
		uint256 warmupEndTime;
		uint256 farmingEndTime;
		address creator;
		PotStatus status;
		uint256 version;
		uint64 apy;
	}

