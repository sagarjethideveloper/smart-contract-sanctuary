pragma experimental ABIEncoderV2;

import "@openzeppelin/contracts/utils/Context.sol";
import "@openzeppelin/contracts/utils/math/SafeMath.sol";
import "@openzeppelin/contracts/token/ERC20/utils/SafeERC20.sol";
	
import "./test/TestWinnersProvider.sol";

import "./interfaces/IPot.sol";
import "./interfaces/ICakePool.sol";
import "./interfaces/IWinnersProvider.sol";
import "./interfaces/IWinnersConsumer.sol";

//import "hardhat/console.sol";

contract PotV1 is IPot, Context, IWinnersConsumer {
	using SafeERC20 for IERC20;
	using SafeMath for uint256;

	// Pot V1
	uint256 constant public VERSION = 1;
	
	uint256 constant MAX_UINT256 = 2**256 - 1;

	uint256 public totalTickets = 0;

	string public name;
	address public pool;
	IERC20 public token;
	uint256 public ticketPrice;
	uint256 public limit;

	// Seconds of farming
	uint256 public farmingSeconds;
	uint256 public warmupEndTime;

	// Real farming end time
	uint256 public farmingEndTime = 0;

	bool public adminCanWithdraw = true;
	uint256 public staked = 0;

	PotStatus public status;

	mapping(address => mapping(bytes32 => Participant)) public participants;
	mapping(uint256 => address) public tickets;
	mapping(address => bytes32[]) public ticketsPerParticipants;

	uint256[] public shares;
	
	address public admin;
	address private _feeAddress;
	uint256 private _fees;

	uint64 public APY = 100; // 100% by default

	IWinnersProvider public winnersProvider;
	uint256[] private _winners;

	modifier onlyWinnersProvider() {
		require(_msgSender() == address(winnersProvider), "Access violation: Only winners provider can update winners");
		_;
	}

	modifier updateHook(bool shouldContinue) {
		if (_updateStatus()) {
			if (!shouldContinue) {
				return;
			}
		}
		_;
	}

	modifier onlyAdmin() {
		require(_msgSender() == admin, "only admin can perform this call");
		_;
	}

	modifier winnersProviderIsReady() {
		require(address(winnersProvider) != address(0), "winners provider is not ready");
		_;
	}

	constructor(
		string memory _name,
		address _pool,
		address _token,
		uint256 _ticketPrice,
		uint256 _limit,
		uint256 _farmingEndTime,
		uint256 _warmupEndTime,
		address _feesGetter,
		uint256 _fee,
		uint256[] memory _shares
	) {
		uint256 sharesSum = 0;
		for (uint8 i = 0; i < _shares.length; i++) {
			sharesSum += _shares[i];
		}

		require(sharesSum == 100, "invalid shares");

		name = _name;
		pool = _pool;
		token = IERC20(_token);
		ticketPrice = _ticketPrice;
		limit = _limit;
		farmingSeconds = _farmingEndTime;
		warmupEndTime = _warmupEndTime;
		_feeAddress = _feesGetter;
		_fees = _fee;

		admin = _msgSender();
		winnersProvider = IWinnersProvider(address(0));
		shares = _shares;
	}

	function info() public view override returns (PotInfo memory) {
		return PotInfo(
			name,
			pool,
			token,
			ticketPrice,
			limit,
			warmupEndTime,
			farmingEndTime,
			admin,
			status,
			VERSION,
			APY
		);
	}

	function sharesCount() public view override returns (uint256) {
		return shares.length;
	}

	function disableAdminWithdrawal() public onlyAdmin {
		require(adminCanWithdraw, "admin withdrawals already disabled");
		adminCanWithdraw = false;

		emit AdminWithdrawalsDisabled();
	}

	function emergencyCancel(bool _leaveStaking) public onlyAdmin {
		require(adminCanWithdraw, "hey! you can't cancel this pot anymore");
		if (_leaveStaking) {
			ICakePool(pool).leaveStaking(staked);
		}

		_cancel();
		emit EmergencyCancel();
	}

	function updateWinnersProvider(address newWinnersProvider) public override onlyAdmin {
		require(address(winnersProvider) == address(0), "Pot::updateWinnersProvider: Can't update winners provider after first update");
		winnersProvider = IWinnersProvider(newWinnersProvider);
	}

	function _bank() private view returns (uint256) {
		return token.balanceOf(address(this));
	}

	function _cancel() private {
		status = PotStatus.CANCELED;
		emit Canceled();
	}

	function _updateStatus() private returns (bool) {
		if (block.timestamp >= warmupEndTime) {
			if (status == PotStatus.WARMUP && _bank() >= _requiredBank()) {
				stake();
				return true;
			} else if (status == PotStatus.WARMUP && _bank() < _requiredBank()) {
				_cancel();
				return true;
			}
		}

		return false;
	}

	function _requiredBank() private view returns (uint256) {
		return ticketPrice.mul(limit);
	}

	function _getFeeAmount(uint256 _originAmount) private view returns (uint256) {
		return (_originAmount.mul(_fees).div(100));
	}

	function _distributeRewards(uint256 _rewards) private {
		for (uint8 i = 0; i < shares.length; i++) {
			uint256 placeReward = _rewards.mul(shares[i]).div(100);
			token.safeTransfer(tickets[_winners[i]], placeReward);
			emit Winner(tickets[_winners[0]], i, placeReward);
		}
	}

	function consumeWinners(uint16[] memory winners) public onlyWinnersProvider override {
		require(status == PotStatus.WAITING_FOR_WINNERS, "Pot::consumeWinners: Status is not WAITING_FOR_WINNERS");

		_winners = winners;
		uint256 rewardPool = _bank().sub(_requiredBank());
		uint256 fees = _getFeeAmount(rewardPool);

		rewardPool = rewardPool.sub(fees);
		token.safeTransfer(_feeAddress, fees);

		_distributeRewards(rewardPool);
		status = PotStatus.FINISHED;

		emit Finished(rewardPool);
	}

	// Update APY for calculating approx. rewards on frontend
	function updateApy(uint64 newApy) public onlyAdmin {
		APY = newApy;
		emit APYUpdated(newApy);
	}

	// Participate in the Pot
	function participate() public override winnersProviderIsReady returns (bytes32) {
		// Check time for validity and allowance for transfering user's tokens to contract's address
		require(status == PotStatus.WARMUP, "Pot::participate: It's not a warmup status");
		if (_updateStatus()) {
			return bytes32(0);
		}

		require(token.allowance(_msgSender(), address(this)) >= ticketPrice, "Pot::participate: Allowance for token is not enough");
		
		// Transfer tokens for ticket to contract balance
		token.safeTransferFrom(_msgSender(), address(this), ticketPrice);
		
		uint256 ticketId = totalTickets++;
		bytes32 key = keccak256(abi.encodePacked(ticketId, _msgSender(), ticketPrice));
		participants[_msgSender()][key] = Participant(
			key,
			ticketId,
			_msgSender(),
			ticketPrice,
			false
		);

		tickets[ticketId] = _msgSender();
		ticketsPerParticipants[_msgSender()].push(key);

		emit Participate(_msgSender());

		_updateStatus();

		return key;
	}

	// Transfer bank to the pool
	function stake() public override winnersProviderIsReady {
		// Ensure that we have enough funds, it's a time
		require(status == PotStatus.WARMUP, "Pot::stake: It's not a time for staking yet");
		require(_bank() >= _requiredBank(), "Pot::stake: Not enough funds for staking");
		require(block.timestamp >= warmupEndTime, "Pot::stake: It's not a time for staking yet");

		staked = _bank();
		
		// Stake tokens & update pot status
		token.safeApprove(pool, MAX_UINT256);
		ICakePool(pool).enterStaking(_bank());
		status = PotStatus.STAKED;

		farmingEndTime = block.timestamp + farmingSeconds;
		emit Staked(_msgSender());

		require(_bank() == 0, "Pot::stake: Unexpected behavior! Bank is't equal to zero after staking");
	}

	// Finish pot, determinate winners and unstake bank
	function finish() public override winnersProviderIsReady {
		require(status == PotStatus.STAKED, "Pot::finish: Status is not staked");
		require(block.timestamp >= farmingEndTime, "Pot::finish: It's not a time for finishing yet");

		ICakePool(pool).leaveStaking(staked);
		require(_bank() >= _requiredBank(), "Pot::finish: Tokens haven't been transfered back from pool or no reward received");

		status = PotStatus.WAITING_FOR_WINNERS;
		emit Unstaked();

		winnersProvider.requestWinners(totalTickets, shares.length);
	}

	// Withdraw deposit in finished pot
	function withdraw(bytes32 key) public updateHook(false) override winnersProviderIsReady {
		require(status == PotStatus.FINISHED || status == PotStatus.CANCELED, "Pot::withdraw: Can't withdraw from farming pot");
		require(participants[_msgSender()][key].addr != address(0), "Pot::withdraw: You are not a participant of this pot");
		require(!participants[_msgSender()][key].hasClaimed, "Pot::withdraw: You have already claimed your tokens");

		token.safeTransfer(_msgSender(), participants[_msgSender()][key].amount);
		participants[_msgSender()][key].hasClaimed = true;

		emit Withdraw(key);
	}

	function withdrawAll() public updateHook(false) override winnersProviderIsReady {
		for (uint i = 0; i < ticketsPerParticipants[_msgSender()].length; i++) {
			if (participants[_msgSender()][ticketsPerParticipants[_msgSender()][i]].hasClaimed) {
				continue;
			}

			withdraw(ticketsPerParticipants[_msgSender()][i]);
		}
	}
}

