	function stake() external;
	function participate() external returns (bytes32);
	function finish() external;
	function withdraw(bytes32 key) external;
	function withdrawAll() external;

	// Events
	event Participate(address indexed participant);
	event Winner(address indexed winner, uint8 place, uint256 reward);
	event Finished(uint256 totalReward);
	event Canceled();
	event Unstaked();
	event Staked(address indexed staker);
	event AdminWithdrawalsDisabled();
	event EmergencyCancel();
	event Withdraw(bytes32 indexed key);
	event APYUpdated(uint64 newApy);
}

