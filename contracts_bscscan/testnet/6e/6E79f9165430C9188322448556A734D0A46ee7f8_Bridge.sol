pragma solidity ^0.8.0;


import "@openzeppelin/contracts/token/ERC1155/utils/ERC1155Holder.sol";
import "@openzeppelin/contracts/token/ERC721/utils/ERC721Holder.sol";
import "@openzeppelin/contracts/access/Ownable.sol";

import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@openzeppelin/contracts/token/ERC20/utils/SafeERC20.sol";
import "@openzeppelin/contracts/utils/Context.sol";
import "../interface/Ikaka1155.sol";
import "../interface/Ikaka721.sol";


contract Bridge is ERC721Holder, ERC1155Holder, Ownable {
    struct Meta {
        bool In;
        bool Out;
        string Chain;
    }
    Meta public MetaInfo;

    mapping(uint => CardMeta) public KTAInfo;
    mapping(uint => CardMeta) public KTNInfo;
    struct CardMeta {
        bool isOpen;     // 是否开启回购
        uint price; 
        uint amount;    // 转化量
    }

    IKTA public KTA;
    IKTN public KTN;

    modifier isInOpen {
        require(MetaInfo.In, "not open yet");
        _;
    }

    modifier isOutOpen {
        require(MetaInfo.Out, "not open yet");
        _;
    }

    event ReceiveKTA(address indexed account, uint indexed cardId, uint indexed tokenId);
    event ReceiveKTN(address indexed account, uint indexed cardId, uint indexed amount);
    event SendKTN(address indexed account, uint indexed cardId, uint indexed amount);
    event SendKTA(address indexed account, uint indexed cardId, uint indexed tokenId);

    constructor() {
        KTA = IKTA(0x3D7bDcF5e0Bb389DE1c4D12Ee6a88B90E14c6486);
        KTN = IKTN(0x3D37d5118a78509c69D3e3F7d6c707F8979539d3);

        MetaInfo = Meta({
            In : true,
            Out : true,
            Chain : "eth"
        });

        KTAInfo[10001].isOpen = true;
        KTAInfo[10001].price = 1 ether / 100;
        KTNInfo[10001].isOpen = true;
        KTNInfo[10001].price = 1 ether / 100;
    }
    
    /************************************************************ onlyOwner end ************************************************************/
    function setKTA(address com_) public onlyOwner {
        KTA = IKTA(com_);
    }

    function setKTN(address com_) public onlyOwner {
        KTN = IKTN(com_);
    }
    
    function setSwitch(bool inStage_, bool outStage_) public onlyOwner {
        MetaInfo.In = inStage_;
        MetaInfo.Out = outStage_;
    }

    function setKTASwitch(uint[] calldata cids_, bool[] calldata isOpens_) public onlyOwner {
        require(cids_.length == isOpens_.length, "unequal length");
        for (uint i = 0; i < cids_.length; i++) {
            KTAInfo[cids_[i]].isOpen = isOpens_[i];
        }
    }

    function setKTNSwitch(uint[] calldata cids_, bool[] calldata isOpens_) public onlyOwner {
        require(cids_.length == isOpens_.length, "unequal length");
        for (uint i = 0; i < cids_.length; i++) {
            KTNInfo[cids_[i]].isOpen = isOpens_[i];
        }
    }
    
    function set721ApprovalForAll(address account_) public onlyOwner {
        KTA.setApprovalForAll(account_, true);
    }

    function set1155ApprovalForAll(address account_) public onlyOwner {
        KTN.setApprovalForAll(account_, true);
    }

    receive() external payable {}

    function safePull(address payable _account) public onlyOwner {
        payable(_account).transfer(getBalance());
    }

    function sendKTA(address account_, uint tid_) public isOutOpen onlyOwner {
        uint cid = KTA.cardIdMap(tid_);
        KTA.mintWithId(account_, cid, tid_, false);
        emit SendKTA(account_, cid, tid_);
    }

    function transferKTA(address account_, uint tid_) public isOutOpen onlyOwner {
        uint cid = KTA.cardIdMap(tid_);
        KTA.safeTransferFrom(address(this), account_, tid_);
        emit SendKTA(account_, cid, tid_);
    }

    function sendKTN(address account_, uint cid_, uint amounts_) public isOutOpen onlyOwner {
        uint balanceOf = KTN.balanceOf(address(this), cid_);
        if (balanceOf >= amounts_) {
            KTN.safeTransferFrom(address(this), account_, cid_, amounts_, "");
            emit SendKTN(account_, cid_, amounts_);
            return;
        }

        if (balanceOf != 0) {
            KTN.safeTransferFrom(address(this), account_, cid_, balanceOf, "");
        }
        KTN.mint(account_, cid_, amounts_ - balanceOf);
        
        emit SendKTN(account_, cid_, amounts_);
    }
    /************************************************************ onlyOwner end ************************************************************/

    function getBalance() public view returns (uint) {
        return address(this).balance;
    }

    function receiveKTA(uint tid_) public payable isInOpen {
        uint cid = KTA.cardIdMap(tid_);
        require(KTAInfo[cid].isOpen, "not open");
        require(KTA.getApproved(tid_) == address(this) || KTA.isApprovedForAll(KTA.ownerOf(tid_), address(this)), "approve first");
        uint price = KTAInfo[cid].price;
        require(msg.value == price, "wrong money");
        
        KTA.safeTransferFrom(_msgSender(), address(this), tid_);

        emit ReceiveKTA(_msgSender(), cid, tid_);
    } 

    function receiveKTN(uint cid_, uint amounts_) public payable isInOpen {
        require(KTNInfo[cid_].isOpen, "not open");
        require(KTN.balanceOf(_msgSender(), cid_) >= amounts_, "not enough card");
        require(KTN.isApprovedForAll(_msgSender(), address(this)), "not approved");
        uint price = KTNInfo[cid_].price * amounts_;
        require(msg.value == price, "wrong money");
        
        KTN.safeTransferFrom(_msgSender(), address(this), cid_, amounts_, "");

        emit ReceiveKTN(_msgSender(), cid_, amounts_);
    }  

    
}

