contract HTV2 is ERC20, ERC20Burnable, AccessControl {
    bytes32 public constant ADMIN_ROLE = keccak256("ADMIN_ROLE");
    uint256 public constant total = 50000000000 ether;

    uint256 public _eduFee = 3;
    uint256 public _liqFee = 3;
    uint256 public _refRevenueShareFee = 3;
    uint256 public _devFee = 1;

    address public _eduWallet = msg.sender;
    address public _liqWallet;
    address public _refRevenueShareWallet = msg.sender;
    address public _devWallet = msg.sender;

    mapping (address => bool) private _feeWhitelist;

    //TODO: add admin function
    mapping (address => bool) private _lockWhitelist;

    mapping (address => uint256) private startTimes;

    //TODO: add admin function
    //TODO: reduce lock period(for example 5 minutes) and test
    uint256 public lockPeriod = 5 minutes;

    
    //TODO: add admin function
    uint256 private minBuyLiq = 1000 ether;
    bool public liqEnabled = false;

    //TODO: add admin functions
    IUniswapV2Router02 public uniswapV2Router;
    address public uniswapV2Pair;

    bool inSwapAndLiquify;

    modifier onlyAdmin {
        require(hasRole(ADMIN_ROLE, msg.sender), "!admin");
        _;
    }

    modifier lockTheSwap {
        inSwapAndLiquify = true;
        _;
        inSwapAndLiquify = false;
    }

    constructor() ERC20("Hope Token V2", "HTV2") {
        _setupRole(DEFAULT_ADMIN_ROLE, msg.sender);
        _setupRole(ADMIN_ROLE, msg.sender);
        _mint(msg.sender, total);
        _feeWhitelist[msg.sender] = true;

        _liqWallet = address(this);

        //TODO: uncomment on mainnet or fix the address on testnet

        IUniswapV2Router02 _uniswapV2Router = IUniswapV2Router02(0xD99D1c33F9fC3444f8101754aBC46c52416550D1);
        uniswapV2Pair = IUniswapV2Factory(_uniswapV2Router.factory())
            .createPair(address(this), _uniswapV2Router.WETH());
    }

    function transfer(address recipient, uint256 amount) public override returns (bool) {
        _internalTransfer(msg.sender, recipient, amount);
        return true;
    }

    function transferFrom(address sender, address recipient, uint256 amount) public override returns (bool) {
        _internalTransfer(sender, recipient, amount);

        uint256 currentAllowance = allowance(sender, msg.sender);
        require(currentAllowance >= amount, "ERC20: transfer amount exceeds allowance");
        _approve(sender, msg.sender, currentAllowance - amount);

        return true;
    }

    function _internalTransfer(address sender, address recipient, 
        uint256 amount) private returns(bool){
        if(_feeWhitelist[sender] || _feeWhitelist[recipient]){
            _transfer(sender, recipient, amount);
            return true;
        }

        // lock for 10 days
        if(startTimes[recipient] == 0){
            startTimes[recipient] = block.timestamp;
        }
        require(_lockWhitelist[sender] ||
            startTimes[sender] == 0 ||
            (startTimes[sender] + lockPeriod) < block.timestamp , "locked");


        uint256 eduFeeAamount = amount * _eduFee / 100;
        uint256 liqFeeAmount = amount * _liqFee / 100;
        uint256 refRevenueShareAmount = amount * _liqFee / 100;
        uint256 devFeeAmount = amount * _devFee / 100;

        _transfer(sender, recipient, amount - eduFeeAamount - liqFeeAmount - 
            refRevenueShareAmount - devFeeAmount
        );

        if(eduFeeAamount > 0){
            _transfer(sender, _eduWallet, eduFeeAamount);
        }
        if(liqFeeAmount > 0){
            _transfer(sender, _liqWallet, liqFeeAmount);
        }
        if(refRevenueShareAmount > 0){
            _transfer(sender, _refRevenueShareWallet, refRevenueShareAmount);
        }
        if(devFeeAmount > 0){
            _transfer(sender, _devWallet, devFeeAmount);
        }

        // add liquidity if there is enough tokens on the liq wallet
        uint256 contractTokenBalance = balanceOf(address(this));
        
        if(contractTokenBalance >= minBuyLiq)
        {
            contractTokenBalance = minBuyLiq;
        }
        
        bool overMinTokenBalance = contractTokenBalance >= minBuyLiq;

        if (
            overMinTokenBalance &&
            !inSwapAndLiquify &&
            sender != uniswapV2Pair &&
            liqEnabled
        ) {
            swapAndLiquify(minBuyLiq);
        }

        return true;
    }

    function swapAndLiquify(uint256 contractTokenBalance) private lockTheSwap {
        // split the contract balance into halves
        uint256 half = contractTokenBalance / 2;
        uint256 otherHalf = contractTokenBalance / 2;

        uint256 initialBalance = address(this).balance;

        // swap tokens for ETH
        swapTokensForEth(half);

        // how much ETH did we just swap into?
        uint256 newBalance = address(this).balance- initialBalance;

        // add liquidity to uniswap
        addLiquidity(otherHalf, newBalance);
    }

    function addLiquidity(uint256 tokenAmount, uint256 ethAmount) private {
        // approve token transfer to cover all possible scenarios
        _approve(address(this), address(uniswapV2Router), tokenAmount);

        // add the liquidity
        uniswapV2Router.addLiquidityETH{value: ethAmount}(
            address(this),
            tokenAmount,
            0, // slippage is unavoidable
            0, // slippage is unavoidable
            address(this),
            block.timestamp
        );
    }

    function swapTokensForEth(uint256 tokenAmount) private {
        // generate the uniswap pair path of token -> weth
        address[] memory path = new address[](2);
        path[0] = address(this);
        path[1] = uniswapV2Router.WETH();

        _approve(address(this), address(uniswapV2Router), tokenAmount);

        // make the swap
        uniswapV2Router.swapExactTokensForETHSupportingFeeOnTransferTokens(
            tokenAmount,
            0, // accept any amount of ETH
            path,
            address(this),
            block.timestamp
        );
    }

    function setEduFee(uint256 newEduFee) public onlyAdmin {
        _eduFee = newEduFee;
    }

    function setLiqFee(uint256 newLiqFee) public onlyAdmin {
        _liqFee = newLiqFee;
    }

    function setRevenueShareFee(uint256 newRevenueShareFee) public onlyAdmin {
        _refRevenueShareFee = newRevenueShareFee;
    }

    function setDevFee(uint256 newDevFee) public onlyAdmin {
        _devFee = newDevFee;
    }

    function setEduWallet(address newEduWallet) public onlyAdmin {
        _eduWallet = newEduWallet;
    }

    function setLiqWallet(address newLiqWallet) public onlyAdmin {
        _liqWallet = newLiqWallet;
    }

    function setRevenueShareWallet(address newRevenueShareWallet) public onlyAdmin {
        _refRevenueShareWallet = newRevenueShareWallet;
    }

    function setDevWallet(address newDevWallet) public onlyAdmin {
        _devWallet = newDevWallet;
    }

    function updateWhiteList(address _address, bool activation) public onlyAdmin {
        _feeWhitelist[_address] = activation;
    }

    function updateLockWhiteList(address _address, bool isLock) public onlyAdmin {
        _lockWhitelist[_address] = isLock;
    }

    function updateLockPeriod(uint256 period) public onlyAdmin {
        lockPeriod = period;
    }

    function updateMinByLiq(uint256 min) public onlyAdmin {
        minBuyLiq = min;
    }

    function updateLiqEnabled(bool enabled) public onlyAdmin {
        liqEnabled = enabled;
    }

    function updateUniswapV2Router(address newAddress) public onlyAdmin {
        uniswapV2Router = IUniswapV2Router02(newAddress);
    }

    function withdrawToken(address _tokenAddr, address _to, uint _amount) public onlyAdmin{
        require(_to != address(0), "0x0");
        if(_tokenAddr == address(0)){
            payable(_to).transfer(_amount);    
        }else{
            IERC20(_tokenAddr).transfer(_to, _amount);    
        }
    }
