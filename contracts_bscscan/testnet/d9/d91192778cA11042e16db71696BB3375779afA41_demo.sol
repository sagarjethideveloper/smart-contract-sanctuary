		uint256 weightedAmount;		// user provided bnb with weight
		bool claimedRefund;  		// default false
		bool claimedToken;  		// default false
	}
	
	// The offering token
	IBEP20 public offeringToken;
	
	// bonus token
	IBEP20 public bonusToken;
	
	// The block number when fair ido starts
	uint256 public startBlock;
	// The block number when fair ido ends
	uint256 public endBlock;
	
	// total amount of raising BNB need to be raised
	uint256 public raisingAmount;
	// total amount of offeringToken that will offer
	uint256 public offeringAmount;
	
	// total amount of raising tokens that have already raised
	uint256 public totalAmount;
	// total amount of weight
	uint256 public totalWeightedAmount;
	
	// address => amount
	mapping (address => UserInfo) public userInfo;
	// participators
	address[] public addressList;
	// log current distributed/refund state
	uint256 public curDistributeIndex;
	uint256 public curRefundIndex;
	
	//minimun participate amount
	//minimum 0.1BNB in case dust attack
	uint256 public minAmount = 10**17;

	event Deposit(address indexed user, uint256 amount);
	event Claim(address indexed user, uint256 claimAmount);
	event Refund(address indexed user, uint256 refundAmount);
	

	constructor() {
		offeringToken = IBEP20(0xCDBF72d7F10454bBd01dd430Dd7455815011D530);
		
		// hold metamoon get bonus weight
		bonusToken = IBEP20(0xCDBF72d7F10454bBd01dd430Dd7455815011D530);
		
		startBlock = 9999116;
		endBlock = 10000316;
		
		// total 10**15 * 10**9, presale 48%
		offeringAmount = 48 * 10**13 * 10**9;
		// 1500 bnb
		raisingAmount = 1500 * 10**18;
		
		// init
		totalAmount = 0;
		totalWeightedAmount = 0;
	}
	
	receive() external payable{
		require(!Address.isContract(_msgSender()), "use your hand.");
		require(msg.value >= minAmount, "under minimum amount");
		require(block.number > startBlock && block.number < endBlock, "not fair ido time");
		if (userInfo[_msgSender()].amount == 0) {
			addressList.push(address(_msgSender()));
		}
		userInfo[_msgSender()].amount = userInfo[_msgSender()].amount.add(msg.value);
		totalAmount = totalAmount.add(msg.value);
		
		uint256 _weightedAmount = getUserWeightAmount(msg.value);
		userInfo[_msgSender()].weightedAmount = userInfo[_msgSender()].weightedAmount.add(_weightedAmount);
		totalWeightedAmount = totalWeightedAmount.add(_weightedAmount);
		
		emit Deposit(_msgSender(), msg.value);
	}
	
	function getUserWeightAmount(uint256 _amount) private view returns(uint256){
		uint256 holdAmount = bonusToken.balanceOf(_msgSender());
		//1T  1.15
		if(holdAmount >= 10**12 * 10**9)
			return _amount.mul(115).div(100);
		//300B  1.1
		if(holdAmount >= 300 * 10**9 * 10**9)
			return _amount.mul(110).div(100);
		//150B  1.07
		if(holdAmount >= 150 * 10**9 * 10**9)
			return _amount.mul(107).div(100);
		//10B  1.01
		if(holdAmount >= 10 * 10**9 * 10**9)
			return _amount.mul(101).div(100);
		return _amount;
	}
	
	function claim(address _address) private{
		uint256 offeringTokenAmount = getOfferingAmount(_address);
		userInfo[_address].claimedToken = true;
		if (offeringTokenAmount > 0) {
			offeringToken.safeTransfer(address(_address), offeringTokenAmount);
		}
		emit Claim(_address, offeringTokenAmount);
	}
	
	function refund(address _address) private{
		uint256 refundingTokenAmount = getRefundingAmount(_address);
		
		//in case precision problem occur
		if(refundingTokenAmount > address(this).balance){
			refundingTokenAmount = address(this).balance;
		}
		
		//refund
		userInfo[_address].claimedRefund = true;
		if (refundingTokenAmount > 0) {
			Address.sendValue(payable(_address), refundingTokenAmount);
		}
		emit Refund(_address, refundingTokenAmount);
	}

	function batchDistribute(uint batchAmount) external onlyOwner{
		require(block.number > endBlock, "fair ido not ended yet");
		uint256 i;
		for(i = 0; i < batchAmount; i++){
			uint256 index = curDistributeIndex + i;
			require(index < addressList.length, "out of array bound");
			address _address = addressList[index];
			if(userInfo[_address].amount > 0 && !userInfo[_address].claimedToken){
				claim(_address);
			}
		}
	}
	
	function batchRefund(uint batchAmount) external onlyOwner{
		require(block.number > endBlock, "fair ido not ended yet");
		uint256 i;
		for(i = 0; i < batchAmount; i++){
			uint256 index = curRefundIndex + i;
			require(index < addressList.length, "out of array bound");
			address _address = addressList[index];
			if(userInfo[_address].amount > 0 && !userInfo[_address].claimedRefund){
				refund(_address);
			}
		}
	}
	
	/// in case stuck during distribution
	function setCurDistributedIndex(uint256 _index) external onlyOwner{
		curDistributeIndex = _index;
	}
	
	/// in case stuck during refund
	function setcurRefundIndex(uint256 _index) external onlyOwner{
		curRefundIndex = _index;
	}
	
	/// allow user withdraw themself
	function harvestRefund() public nonReentrant {
		require(block.number > endBlock + 1200, "ido not ended 1hr, give some time for us to distribute :)");
		require(userInfo[_msgSender()].amount > 0, "have you participated?");
		require(!userInfo[_msgSender()].claimedRefund, "already refund");
		refund(_msgSender());
	}
	
	/// allow user withdraw themself
	function harvestToken() public nonReentrant {
		require(block.number > endBlock + 1200, "ido not ended 1hr, give some time for us to distribute :)");
		require(userInfo[_msgSender()].amount > 0, "have you participated?");
		require(!userInfo[_msgSender()].claimedToken, "already claimed");
		claim(_msgSender());
	}
	
	function getLatestUnclaimedAddress() external view returns(address){
		uint256 i;
		for(i = 0; i < addressList.length;i++){
			if(!userInfo[addressList[i]].claimedToken)
				return addressList[i];
		}
		return owner();
	}
	
	function getLatestUnrefundedAddress() external view returns(address){
		uint256 i;
		for(i = 0; i < addressList.length;i++){
			if(!userInfo[addressList[i]].claimedRefund)
				return addressList[i];
		}
		return owner();
	}
	
	// allocation 100000 means 0.1(10%), 1 means 0.000001(0.0001%), 1000000 means 1(100%)
	function getUserWeightedAllocation(address _user) public view returns(uint256) {
		return userInfo[_user].weightedAmount.mul(1e12).div(totalWeightedAmount).div(1e6);
	}

	// get the amount of Fair IDO token you will get
	function getOfferingAmount(address _user) public view returns(uint256) {
		return getActualPayment(_user).mul(offeringAmount).div(raisingAmount);
	}
	
	// get actual payment
	function getActualPayment(address _user) public view returns(uint256){
		uint256 allocation = getUserWeightedAllocation(_user);
		uint256 payAmount = raisingAmount.mul(allocation).div(1e6);
		
		//notice allocation > amount case
		if( payAmount >= userInfo[_user].amount || totalAmount <= raisingAmount){
			return userInfo[_user].amount;
		}
		
		return payAmount;
	}

	// get the amount of BNB will be refunded
	function getRefundingAmount(address _user) public view returns(uint256) {
		return userInfo[_user].amount.sub(getActualPayment(_user));
	}
	
	function hasHarvestToken(address _user) external view returns(bool) {
		return userInfo[_user].claimedToken;
	}
	
	function hasHarvestRefund(address _user) external view returns(bool) {
		return userInfo[_user].claimedRefund;
	}

	// participated address amount
	function getAddressListLength() external view returns(uint256) {
		return addressList.length;
	}
	
	function settle() external onlyOwner{
		require(block.number > endBlock, "fair ido not ended yet");
		
		uint256 raisedAmount = raisingAmount;
		
		// burn unsold token
		if(totalAmount < raisingAmount){
			address burnAddress = 0x000000000000000000000000000000000000dEaD;
			uint256 soldAmount = totalAmount.mul(offeringAmount).div(raisingAmount);
			uint256 unsoldAmount = offeringAmount.sub(soldAmount);
			offeringToken.safeTransfer(burnAddress, unsoldAmount);
			raisedAmount = totalAmount;
		}
		
		//withdraw IDO income to add liquidity
		Address.sendValue(payable(owner()), raisedAmount);
	}

	// withdraw unclaimed fund after one day
	function withdrawLeftFund(uint256 _bnbAmount, uint256 _tokenAmount) public onlyOwner {
		require(block.number > endBlock + 28800, "can only trigger after IDO end one day");
		require(_bnbAmount <= address(this).balance, "no enough bnb");
		require(_tokenAmount <= offeringToken.balanceOf(address(this)), "no enough token");
		if(_tokenAmount > 0) {
			offeringToken.safeTransfer(owner(), _tokenAmount);
		}
		if(_bnbAmount > 0) {
			Address.sendValue(payable(owner()), _bnbAmount);
		}
	}

	//in case someone transfer fund in accident
	function inCaseTokensGetStuck(IBEP20 _token, uint256 _amount) public onlyOwner{
		require(_token != offeringToken, "?_?");
		IBEP20(_token).safeTransfer(_msgSender(), _amount);
	}
  
}

